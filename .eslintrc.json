{
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "warn",
    "no-debugger": "error",
    "no-undef": "error"
  },
  "overrides": [
    {
      "files": ["scripts/**/*.ts", "scripts/**/*.js"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["*.astro"],
      "rules": {
        "no-undef": "off"
      }
    }
  ],
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    ".astro/**",
    "public/**",
    "src/templates/**",
    "src/env.d.ts"
  ]
}