{
  "name": "gacha-wiki",
  "version": "3.1.0",
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^9.2.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.5.0",
    "@astrojs/svelte": "^7.2.0",
    "astro": "^5.13.2",
    "chart.js": "^4.5.0",
    "sharp": "^0.34.3",
    "svelte": "^5.39.10",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.2.21",
  "scripts": {
    "dev": "astro dev",
    "dev:setup": "bun run scripts/dev-setup.js && bun run dev",
    "build": "astro check && astro build",
    "build:prod": "bun run scripts/prod-setup.js && astro check && astro build && bun run scripts/compress.ts",
    "build:cloudflare": "bun run scripts/prod-setup.js && astro build",
    "compress": "bun run scripts/compress.ts",
    "preview": "astro preview",
    "start": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "sync": "astro sync",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write . --ignore-path .gitignore",
    "format:check": "prettier --check . --ignore-path .gitignore",
    "validate": "bun run scripts/validate-data.ts",
    "hooks:install": "git config core.hooksPath .githooks",
    "version:patch": "node scripts/version-manager.js patch",
    "version:minor": "node scripts/version-manager.js minor",
    "version:major": "node scripts/version-manager.js major",
    "version:tag": "node scripts/version-manager.js --tag-only",
    "version:check-tags": "node scripts/version-manager.js --check-missing",
    "prepare": "husky || exit 0",
    "pre-commit": "lint-staged"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write"
    ],
    "*.{json,md,css,astro}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "tsx": "^4.20.5"
  }
}
