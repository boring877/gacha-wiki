---
import HomeLayout from '../layouts/HomeLayout.astro';
import { SITE_TITLE } from '../consts';
import { changelog, getBuildInfo } from '../data/changelog.js';

// Import dedicated CSS for about page
import '../styles/pages/about.css';

// Get build and version information
const buildInfo = getBuildInfo();

// Format dates for display
const formatDate = (dateString) => {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long', 
    day: 'numeric'
  });
};

// Get change type emoji
const getChangeTypeEmoji = (type) => {
  const emojis = {
    'added': 'âœ¨',
    'changed': 'ðŸ”„', 
    'fixed': 'ðŸ›',
    'removed': 'ðŸ—‘ï¸',
    'security': 'ðŸ”’'
  };
  return emojis[type] || 'ðŸ“';
};

// Get version type badge color
const getVersionTypeBadge = (type) => {
  const badges = {
    'major': 'version-badge-major',
    'minor': 'version-badge-minor', 
    'patch': 'version-badge-patch',
    'hotfix': 'version-badge-hotfix'
  };
  return badges[type] || 'version-badge-minor';
};
---

<HomeLayout
  title={`${SITE_TITLE} - Version History`}
  description="Version history, changelog, and build information for GachaWiki"
>
  <!-- Main Content Area -->
  <main class="main-content">
    <!-- Build Info Header -->
    <header class="build-info">
      <h1 class="page-title">Version History</h1>
      <div class="build-stats">
        <div class="stat-item">
          <span class="stat-label">Current Version</span>
          <span class="stat-value">{buildInfo.version}</span>
        </div>
        <div class="stat-item">
          <span class="stat-label">Last Updated</span>
          <span class="stat-value">{formatDate(buildInfo.buildDate)}</span>
        </div>
        <div class="stat-item">
          <span class="stat-label">Total Releases</span>
          <span class="stat-value">{buildInfo.totalVersions}</span>
        </div>
      </div>
    </header>

    <!-- Changelog Timeline -->
    <section class="changelog-timeline">
      {changelog.map((version, index) => (
        <article class="version-entry">
          <div class="version-header">
            <div class="version-info">
              <h2 class="version-number">
                v{version.version}
                <span class={`version-badge ${getVersionTypeBadge(version.type)}`}>
                  {version.type}
                </span>
              </h2>
              <time class="version-date">{formatDate(version.date)}</time>
            </div>
            <h3 class="version-title">{version.title}</h3>
            <p class="version-description">{version.description}</p>
          </div>

          <div class="changes-list">
            {version.changes.map((change) => (
              <div class="change-item">
                <span class="change-emoji">{getChangeTypeEmoji(change.type)}</span>
                <div class="change-content">
                  <span class="change-type">{change.type}</span>
                  <span class="change-category">{change.category}</span>
                  <p class="change-description">{change.description}</p>
                </div>
              </div>
            ))}
          </div>
        </article>
      ))}
    </section>

    <!-- Footer Info -->
    <footer class="about-footer">
      <div class="disclaimer">
        <strong>Note:</strong>
        <span>This is a fan-made, open-source wiki. All content is based on community knowledge and personal experience.</span>
      </div>
      <div class="links">
        <a href="https://github.com/boring877/gacha-wiki" target="_blank" rel="noopener noreferrer" class="github-link">
          <span>ðŸ“š</span> View Source Code
        </a>
      </div>
    </footer>
  </main>
</HomeLayout>
