---
import HomeLayout from '../layouts/HomeLayout.astro';
import { SITE_TITLE } from '../consts';
import { aboutData, getPageMetadata } from '../data/about.js';

// Import dedicated CSS for about page
import '../styles/pages/about.css';

// Get page metadata
const pageData = getPageMetadata();
---

<HomeLayout
  title={`${SITE_TITLE} - About`}
  description={pageData.description}
>
  <!-- Main Content Area -->
  <main class="main-content">
    <!-- About Header -->
    <header class="build-info">
      <h1 class="page-title">{pageData.title}</h1>
      <p class="page-subtitle">{pageData.subtitle}</p>
    </header>

    <!-- About Content -->
    <section class="about-content">
      {aboutData.sections.map(section => (
        <div class="about-section">
          <h2>{section.title}</h2>
          
          {section.type === 'list' ? (
            <ul class="features-list">
              {section.items.map(item => (
                <li set:html={item}></li>
              ))}
            </ul>
          ) : (
            section.content.map(paragraph => (
              <p set:html={paragraph}></p>
            ))
          )}
        </div>
      ))}
    </section>

    <!-- Footer Info -->
    <footer class="about-footer">
      <div class="disclaimer">
        <strong>Note:</strong>
        <span>{aboutData.disclaimer.text}</span>
      </div>
      <div class="links">
        {aboutData.links.map(link => (
          <a
            href={link.href}
            target={link.target}
            rel={link.rel}
            class={link.className}
          >
            <span>{link.icon}</span> {link.text}
          </a>
        ))}
      </div>
    </footer>
  </main>
</HomeLayout>
