---
import HorizonWalkerClockLayout from '../../layouts/clock/HorizonWalker.astro';
import { horizonWalkerConfig } from '../../data/clock/horizon-walker.js';

// Page metadata
const title = 'Horizon Walker Clock - Server Reset Timer | GachaWiki';
const description =
  'Horizon Walker server reset timer - Track Horizon Walker server resets and maintenance with real-time countdown timers. Never miss daily resets, weekly events, or farming sessions with our precise KST server time clock. Server resets at 10:00 KST daily.';

// Pass game data to layout
const games = [horizonWalkerConfig];
---

<HorizonWalkerClockLayout title={title} description={description} games={games}>
  <!-- Structured data for better SEO -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": "Horizon Walker Server Reset Clock",
      "description": "Real-time server reset timer for Horizon Walker gacha game. Daily reset at 10:00 KST. Server reset countdown for Horizon Walker dailies and events.",
      "url": "https://gachawiki.info/clock/horizon-walker",
      "mainEntity": {
        "@type": "WebApplication",
        "name": "Horizon Walker Reset Clock",
        "description": "Track Horizon Walker server reset times and events. Daily server reset at 10:00 KST (Korea Standard Time). Never miss Horizon Walker daily quests, energy refills, and farming cycles.",
        "applicationCategory": "GameApplication",
        "operatingSystem": "Web Browser",
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "USD"
        }
      },
      "publisher": {
        "@type": "Organization",
        "name": "GachaWiki",
        "url": "https://gachawiki.info"
      }
    }
  </script>
</HorizonWalkerClockLayout>
