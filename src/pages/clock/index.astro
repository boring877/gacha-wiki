---
// Clock Landing Page - Hub for all game clocks
import ClockLandingLayout from '../../layouts/clock/Landing.astro';
import { getActiveLandingGames } from '../../data/clock/landing.js';
import { Image } from 'astro:assets';
import gameIcon from '../../assets/images/games/horizon-walker/gameimg/gameicon.jpg';
import stellaSoraIcon from '../../assets/images/games/stella-sora/gameimg/Icon.jpg';
import bustyBurstIcon from '../../assets/images/games/Busty_Burst/BG/Icon.png';
import taimaninSquadIcon from '../../assets/images/games/taimanin-squad/gameimg/heroimage.jpg';

// Get all active games for the landing page
let games = getActiveLandingGames();

// Update the Horizon Walker and Stella Sora game entries to use the imported images
games = games.map(game => {
  if (game.id === 'horizon-walker') {
    return {
      ...game,
      image: gameIcon,
    };
  }
  if (game.id === 'stella-sora') {
    return {
      ...game,
      image: stellaSoraIcon,
    };
  }
  if (game.id === 'busty-burst') {
    return {
      ...game,
      image: bustyBurstIcon,
    };
  }
  if (game.id === 'taimanin-squad') {
    return {
      ...game,
      image: taimaninSquadIcon,
    };
  }
  return game;
});

// Page metadata
const title = 'Gacha Clocks | Game Reset Timers | GachaWiki';
const description =
  'Track daily reset times and important events for all your favorite gacha games. Never miss dailies, energy refills, or limited-time events with our real-time timers.';
---

<ClockLandingLayout title={title} description={description} games={games}>
  <!-- Structured data for better SEO -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": "Gacha Game Clocks",
      "description": "Real-time reset timers and event trackers for popular gacha games",
      "url": "https://gachawiki.info/clock",
      "mainEntity": {
        "@type": "WebApplication",
        "name": "Gacha Clock Hub",
        "description": "Track reset times for multiple gacha games in one place",
        "applicationCategory": "GameApplication",
        "operatingSystem": "Web Browser",
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "USD"
        }
      },
      "publisher": {
        "@type": "Organization",
        "name": "GachaWiki",
        "url": "https://gachawiki.info"
      },
      "breadcrumb": {
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://gachawiki.info"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Clocks",
            "item": "https://gachawiki.info/clock"
          }
        ]
      }
    }
  </script>
</ClockLandingLayout>
