    color: var(--ss-text-primary);
  }

  .total-value {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--ss-bg-primary);
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    border: 1px solid var(--ss-primary);
  }

  .total-value img {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  .total-amount {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--ss-primary);
  }

  /* Quest Rewards Section */
  .quest-rewards-section {
    margin-top: 2rem;
  }

  .quest-summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    background: var(--ss-bg-card);
    border: 1px solid var(--ss-primary);
