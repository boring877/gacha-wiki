    padding: 1rem;
    margin-bottom: 1rem;
  }

  .quest-completion-label {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--ss-text-primary);
    margin: 0 0 0.5rem 0;
  }

  .quest-rewards-text {
    font-size: 0.85rem;
    color: var(--ss-text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  .quest-table-container {
    overflow-x: auto;
  }

  .quest-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.9rem;
  }

  .quest-table th {
    background: var(--ss-bg-primary);
    color: var(--ss-text-primary);
    font-weight: 600;
    text-align: left;
    padding: 0.75rem;
    border-bottom: 2px solid var(--ss-border);
  }

  .quest-table td {
    color: var(--ss-text-secondary);
    padding: 0.6rem 0.75rem;
    border-bottom: 1px solid var(--ss-border);
  }

  .quest-table tr:last-child td {
    border-bottom: none;
  }

  .quest-category-total {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
    padding-top: 0.75rem;
    border-top: 1px solid var(--ss-border);
    font-size: 0.95rem;
    color: var(--ss-text-secondary);
  }

  .quest-category-total strong {
    color: var(--ss-primary);
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    .quest-summary {
      flex-direction: column;
      text-align: center;
    }

    .quest-table {
      font-size: 0.8rem;
    }

    .quest-table th,
    .quest-table td {
      padding: 0.5rem;
    }
  }
</style>
