  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Event',
      name: event.title,
      description: event.description,
      startDate: event.startDate,
      endDate: event.endDate,
      url: `https://gachawiki.info/guides/stella-sora/events/${event.id}/`,
      image: event.featuredImage,
      location: {
        '@type': 'VirtualLocation',
        url: 'https://stellasora.global/',
      },
      organizer: {
        '@type': 'Organization',
        name: 'Yostar Limited',
        url: 'https://yo-star.com',
      },
      about: {
        '@type': 'VideoGame',
        name: 'Stella Sora',
      },
    })}
  />

  <section class="event-hero-section">
    <div class="event-hero-image">
      {
        currentEvent.id === 'version-1-4-radiant-messenger-holy-night-spirit' ? (
          <div />
