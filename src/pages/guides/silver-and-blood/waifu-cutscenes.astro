---
import WaifuCutSceneLayout from '../../../layouts/silver-and-blood/WaifuCutSceneLayout.astro';
import { cutscenes } from '../../../data/silver-and-blood/cutscenes.js';
---

<WaifuCutSceneLayout 
	title="Waifu CutScenes - Silver and Blood - GachaWiki" 
	description="Explore beautiful character cutscenes and interactions from Silver and Blood's most beloved waifu characters"
	gameTitle="Waifu CutScenes"
>
	<Fragment slot="head">
		<style>
			/* Newspaper-style Layout - Top Down */
			.waifu-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 300px));
				gap: 1.5rem;
				margin: 2rem 0;
				padding: 0 1rem;
				justify-content: center;
			}
			
			.waifu-hero-card {
				background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
				border-radius: 8px;
				overflow: hidden;
				box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
				transition: all 0.3s ease;
				border: 1px solid #444;
				display: flex;
				flex-direction: column;
			}
			
			.waifu-hero-card:hover {
				transform: translateY(-4px);
				box-shadow: 0 8px 25px rgba(220, 53, 69, 0.4);
				border-color: #dc3545;
			}
			
			.hero-image {
				width: 100%;
				height: 200px;
				overflow: hidden;
				position: relative;
			}
			
			.hero-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				object-position: center top;
				transition: all 0.3s ease;
			}
			
			.waifu-hero-card:hover .hero-image img {
				transform: scale(1.05);
			}
			
			.hero-content {
				padding: 1rem;
				display: flex;
				flex-direction: column;
				gap: 0.8rem;
				background: linear-gradient(135deg, #2a2a2a 0%, #1f1f1f 100%);
			}
			
			.hero-name {
				color: #dc3545;
				font-size: 1.2rem;
				font-weight: 700;
				margin: 0;
				line-height: 1.2;
				text-align: center;
				text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
			}
			
			
			.video-preview {
				width: 100%;
				aspect-ratio: 16/9;
				border-radius: 4px;
				overflow: hidden;
				box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
			}
			
			.video-preview iframe {
				width: 100%;
				height: 100%;
				border: none;
			}
			
			/* Alternative visible info design */
			.hero-info-bottom {
				background: #fff;
				padding: 1rem;
				border-top: 1px solid #f0f0f0;
				display: flex;
				justify-content: space-between;
				align-items: center;
				min-height: 60px;
			}
			
			.hero-name-bottom {
				color: #333;
				font-size: 1.1rem;
				font-weight: 600;
				margin: 0;
			}
			
			.video-button-small {
				background: #dc3545;
				color: white;
				padding: 0.4rem 0.8rem;
				border-radius: 15px;
				text-decoration: none;
				font-size: 0.8rem;
				font-weight: 500;
				transition: all 0.2s ease;
			}
			
			.video-button-small:hover {
				background: #c82333;
				transform: scale(1.05);
			}
			
			/* Mobile responsiveness */
			@media (max-width: 768px) {
				.waifu-grid {
					grid-template-columns: repeat(auto-fit, minmax(250px, 250px));
					gap: 1rem;
					padding: 0 0.5rem;
				}
				
				.hero-image {
					height: 180px;
				}
				
				.hero-content {
					padding: 0.8rem;
				}
				
				.hero-name {
					font-size: 1.1rem;
				}
			}
			
			@media (max-width: 480px) {
				.waifu-grid {
					grid-template-columns: 1fr;
					gap: 1rem;
				}
				
				.hero-image {
					height: 200px;
				}
				
				.hero-content {
					padding: 1rem;
					gap: 0.8rem;
				}
				
				.hero-name {
					font-size: 1.2rem;
				}
				
			}
		</style>
	</Fragment>
	
	
	
	<!-- Waifu Gallery -->
	<div class="waifu-gallery">
		<h3 class="subsection-title">Waifu Gallery</h3>
		
		<div class="waifu-grid">
			{cutscenes.map(waifu => (
				<div class="waifu-hero-card">
					<div class="hero-image">
						<img src={waifu.image} alt={waifu.character} />
					</div>
					<div class="hero-content">
						<div class="hero-name">
							{waifu.character}
						</div>
						<div class="video-preview">
							<iframe 
								src={`https://www.youtube.com/embed/${waifu.videoLink.split('v=')[1]?.split('&')[0]}`}
								title={`${waifu.character} Cutscene`}
								frameborder="0"
								allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
								allowfullscreen
							></iframe>
						</div>
					</div>
				</div>
			))}
		</div>
	</div>
	
</WaifuCutSceneLayout>

<style>
	/* Page-specific styles */
	.intro-text {
		color: #b3b3b3;
		font-size: 1.1rem;
		line-height: 1.7;
		text-align: center;
		margin-bottom: 3rem;
		padding: 0 1rem;
	}
	
	.subsection-title {
		color: #c0c0c0;
		font-size: 1.75rem;
		font-weight: 600;
		margin: 3rem 0 1.5rem 0;
		padding-bottom: 0.5rem;
		border-bottom: 2px solid #dc3545;
		display: inline-block;
	}
	
	.character-badge-list {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		margin: 1rem 0;
	}
	
	.character-tag {
		padding: 0.5rem 1rem;
		background: linear-gradient(135deg, #dc3545, #b22222);
		color: white;
		border-radius: 25px;
		font-size: 0.9rem;
		font-weight: 500;
		border: 1px solid #dc3545;
		transition: all 0.3s ease;
		cursor: pointer;
	}
	
	.character-tag:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
		background: linear-gradient(135deg, #ff4757, #dc3545);
	}
	
	.category-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
		margin: 2rem 0;
	}
	
	.category-card {
		background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 100%);
		padding: 2rem;
		border-radius: 12px;
		border: 1px solid #3a3a3a;
		transition: all 0.3s ease;
		text-align: center;
	}
	
	.category-card:hover {
		transform: translateY(-3px);
		box-shadow: 0 8px 20px rgba(220, 53, 69, 0.15);
		border-color: rgba(192, 192, 192, 0.3);
	}
	
	.category-card h4 {
		color: #dc3545;
		font-size: 1.2rem;
		margin: 0 0 1rem 0;
	}
	
	.category-card p {
		color: #b3b3b3;
		margin: 0;
		line-height: 1.6;
	}
	
	@media (max-width: 768px) {
		.character-badge-list {
			justify-content: center;
		}
		
		.category-grid {
			grid-template-columns: 1fr;
			gap: 1rem;
		}
		
		.category-card {
			padding: 1.5rem;
		}
	}
</style>