    'Typhoeus': 'Typhoeus',
    'Ezareth': 'Ezareth',
    'Paimile': 'Paimile',
    'Gini': 'Gini',
    'Clive': 'Clive',
    'Albert': 'Albert',
    'Henry': 'Henry',
    'James': 'James',
