---
import EventsLayout from '../../../layouts/silver-and-blood/EventsLayout.astro';
import { silverAndBloodEvents } from '../../../data/silver-and-blood/events.js';
---

<EventsLayout 
  title="Silver and Blood Events - GachaWiki" 
  description="Latest in-game events and special occasions for Silver and Blood"
  gameTitle="Events"
>
  <section class="sab-content-section">
    <h2 class="sab-section-title">Latest Events</h2>
    <p class="sab-section-description">
      Discover the latest in-game events, festivals, and special occasions in Silver and Blood
    </p>

    <div class="sab-events-list">
      {silverAndBloodEvents.length === 0 ? (
        <div class="sab-no-events">
          <p>No events currently available. Check back soon for new events!</p>
        </div>
      ) : (
        silverAndBloodEvents
          .sort((a, b) => new Date(b.date) - new Date(a.date))
          .map((event) => (
            <a href={event.url} class="sab-event-card">
              <div class="sab-event-header">
                <div class="sab-event-meta">
                  <span class="sab-event-date">{event.date}</span>
                </div>
                <h3 class="sab-event-title">{event.title}</h3>
              </div>
              <div class="sab-event-body">
                <p class="sab-event-summary">{event.summary}</p>
              </div>
            </a>
          ))
      )}
    </div>
  </section>

  <style>
    .sab-content-section {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem 1rem;
    }

    .sab-section-title {
      font-size: 2rem;
      font-weight: 700;
      color: #e8e8e8;
      margin-bottom: 1rem;
      text-align: center;
    }

    .sab-section-description {
      color: #b0b0b0;
      text-align: center;
      margin-bottom: 2rem;
      font-size: 1.1rem;
      line-height: 1.6;
    }

    .sab-events-list {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .sab-no-events {
      text-align: center;
      padding: 3rem 1rem;
      color: #b0b0b0;
      font-style: italic;
    }

    .sab-event-card {
      display: block;
      background: rgba(40, 40, 40, 0.8);
      border: 2px solid rgba(220, 20, 60, 0.3);
      border-radius: 12px;
      padding: 1.5rem;
      text-decoration: none;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .sab-event-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 4px;
      height: 100%;
      background: #dc143c;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .sab-event-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(220, 20, 60, 0.2);
      border-color: #dc143c;
    }

    .sab-event-card:hover::before {
      opacity: 1;
    }

    .sab-event-header {
      margin-bottom: 1rem;
    }

    .sab-event-meta {
      display: flex;
      justify-content: flex-end;
      align-items: center;
      margin-bottom: 0.75rem;
    }

    .sab-event-date {
      color: #888;
      font-size: 0.9rem;
      font-style: italic;
    }

    .sab-event-title {
      font-size: 1.4rem;
      font-weight: 600;
      color: #e8e8e8;
      margin: 0;
      line-height: 1.3;
    }

    .sab-event-body {
      color: #b0b0b0;
    }

    .sab-event-summary {
      margin: 0;
      line-height: 1.6;
      font-size: 1rem;
    }

    /* Mobile responsive */
    @media (max-width: 768px) {
      .sab-content-section {
        padding: 1rem 0.5rem;
      }

      .sab-section-title {
        font-size: 1.75rem;
      }

      .sab-event-card {
        padding: 1.25rem;
      }

      .sab-event-title {
        font-size: 1.2rem;
      }
    }
  </style>
</EventsLayout>