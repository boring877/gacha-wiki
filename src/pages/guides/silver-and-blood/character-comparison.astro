---
import CharacterComparisonLayout from '../../../layouts/silver-and-blood/CharacterComparisonLayout.astro';
import CharacterGrid from '../../../components/silver-and-blood/CharacterGrid.astro';
import { characters } from '../../../data/silver-and-blood/characters.js';

const title = 'Character Comparison Tool - Silver and Blood';
const description =
  'Compare multiple Silver and Blood characters side by side. Click characters to select them and view their basic information and stats.';
---

<CharacterComparisonLayout title={title} description={description}>
  <div class="comparison-page-intro">
    <h3>Silver & Blood Character Comparison</h3>
    <p>
      Click on any character to select them for comparison. You can select up to <strong
        >4 characters</strong
      >
      to compare their <strong>stats</strong> and <strong>basic information</strong> side by side. Use
      the filters to narrow down your search and click the sort buttons to order characters.
    </p>
  </div>

  <div class="character-grid-container">
    <CharacterGrid characters={characters} />
  </div>
</CharacterComparisonLayout>
