---
import WaifuGalleryLayout from '../../../layouts/silver-and-blood/WaifuGalleryLayout.astro';
import { getAllGalleryCharactersForDisplay } from '../../../data/silver-and-blood/gallery-database.js';
import GalleryDatabaseLayout from '../../../layouts/silver-and-blood/GalleryDatabaseLayout.astro';

// Get character data for the gallery database
const characters = getAllGalleryCharactersForDisplay();
---

<GalleryDatabaseLayout
  title="Waifu Gallery - Silver and Blood - GachaWiki"
  description="Explore waifu character galleries featuring exclusive videos and promotional content from Silver and Blood"
  gameTitle="Waifu Gallery"
>
  <!-- Character Selection Grid -->
  <div class="character-selection">
    <h3 class="subsection-title">Choose Your Character</h3>
    <p class="resource-attribution">
      All content and assets are sourced from the official Silver and Blood game
    </p>

    <div class="character-grid">
      {
        characters.length > 0 ? (
          characters.map(character => (
            <a
              href={`/guides/silver-and-blood/waifu-gallery/${character.id}/`}
              class="character-card"
            >
              <div class="character-image">
                <img src={character.image} alt={character.name} />
              </div>
              <div class="character-info">
                <h4 class="character-name">{character.name}</h4>
              </div>
            </a>
          ))
        ) : (
          <div class="empty-state">
            <h3>Gallery Coming Soon</h3>
            <p>Character galleries are being curated. Stay tuned for exclusive content!</p>
          </div>
        )
      }
    </div>
  </div>
</GalleryDatabaseLayout>
