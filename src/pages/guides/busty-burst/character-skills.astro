---
// Busty Burst Character Skills Page
// Displays all character skills with rotation, basic attack, skills, ultimate, and passives

import CharacterSkillsLayout from '../../../layouts/busty-burst/CharacterSkillsLayout.astro';
import PaladinImage from '../../../components/busty-burst/PaladinImage.astro';
import ElementImage from '../../../components/busty-burst/ElementImage.astro';
import PositionImage from '../../../components/busty-burst/PositionImage.astro';
import RarityImage from '../../../components/busty-burst/RarityImage.astro';
import SkillIcon from '../../../components/busty-burst/SkillIcon.astro';
import WeaponIcon from '../../../components/busty-burst/WeaponIcon.astro';
import { BUSTY_BURST_SKILLS_DATA, SPEED_LABELS, STATUS_EFFECTS, BUFF_LEVELS } from '../../../data/busty-burst/character-skills-full.js';
import { getSupportDataById } from '../../../data/busty-burst/support-data.js';
import { getCharacterBySlug, getAllCharacterSlugs } from '../../../data/busty-burst/character-info.js';

// Helper to get weapon type from support data
const getWeaponType = (charId: number) => {
  const supportData = getSupportDataById(charId);
  return supportData?.weapon || null;
};

// Helper to get character position from character-info by slug
const getCharacterPosition = (slug: string) => {
  const charInfo = getCharacterBySlug(slug);
  return charInfo?.position?.number || 1;
};

// Map position number to filename
const getPositionFileName = (pos: number) => {
  const posMap: Record<number, string> = {
    1: 'Front.png',
    2: 'Mid.png',
    3: 'Back.png',
  };
  return posMap[pos] || 'Front.png';
};

const getPositionName = (pos: number) => {
  const posMap: Record<number, string> = {
    1: 'Front',
    2: 'Mid',
    3: 'Back',
  };
  return posMap[pos] || 'Front';
};

// Get valid character slugs from character-info (source of truth for which characters exist in game)
const validCharacterSlugs = new Set(getAllCharacterSlugs());

// Sort characters by rarity: SSR -> SR -> R, and filter out characters not in character-info
const rarityOrder: Record<string, number> = { 'SSR': 0, 'SR': 1, 'R': 2 };
const characterSkills = [...BUSTY_BURST_SKILLS_DATA]
  .filter(c => validCharacterSlugs.has(c.slug))
  .sort((a, b) => {
    return (rarityOrder[a.rarity] ?? 99) - (rarityOrder[b.rarity] ?? 99);
  });

// Status effect descriptions for inline display
const STATUS_EFFECT_INFO: Record<string, string> = {
  'petrify': 'Cannot act, Block=0',
  'stun': 'Cannot act',
  'freeze': 'Cannot act + DoT',
  'sleep': 'Cannot act, wakes on hit (CRIT)',
  'silence': 'No skills/ult',
  'confusion': 'Attacks random targets',
  'charm': 'Attacks allies',
  'taunt': 'Must attack taunter',
  'poison': 'DoT',
  'burn': 'DoT, stackable',
  'bleed': 'DoT (-1% HP)',
  'paralysis': 'Speed -50%, ATK -50%',
  'curse': 'No recovery, Speed -50%, Crit=0',
  'blind': 'Block=0, Acc -50%',
  'fear': 'MP drain',
};

// Helper function to highlight values and add status effect explanations
const highlightValues = (text: string) => {
  if (!text) return '';

  let result = text;

  // Add inline explanations for status effects
  // Match effect names that haven't been processed yet (not followed by a description in parentheses)
  for (const [effect, desc] of Object.entries(STATUS_EFFECT_INFO)) {
    // Match "Effect for Xs" or standalone "Effect" - but not if already has (desc) after it
    const regex = new RegExp(`\\b(${effect})\\b(?!\\s*<span|\\s*\\(${desc.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
    result = result.replace(regex, `<span class="bb-status-effect">$1</span> <span class="bb-status-desc">(${desc})</span>`);
  }

  // Highlight percentages and numbers
  result = result
    .replace(/(\d+%)/g, '<span class="bb-value-highlight">$1</span>')
    .replace(/(\+\s*)(\d+)(\s+(?:magic|physical|damage|HP))/gi, '$1<span class="bb-value-highlight">$2</span>$3')
    .replace(/(ATK\s*\+\s*)(\d+)/gi, '$1<span class="bb-value-highlight">$2</span>');

  return result;
};

const title = 'Busty Burst Character Skills Guide';
const description = `Complete skill guide for all ${characterSkills.length} Busty Burst characters. View skill rotations, basic attacks, damage formulas, ultimate scaling (R1-R5), and passive abilities.`;
const gameTitle = 'Character Skills Guide';

// Get unique elements, roles, rarities for filters
const elements = [...new Set(characterSkills.map(c => c.element))].sort();
const roles = [...new Set(characterSkills.map(c => c.role))].sort();
const rarities = ['SSR', 'SR', 'R'];
---

<CharacterSkillsLayout title={title} description={description} gameTitle={gameTitle}>
  <div class="bb-skills-page">
    <!-- Filter Controls -->
    <div class="bb-skills-controls">
      <div class="bb-skills-filter-row">
        <input
          type="text"
          id="skills-search"
          class="bb-skills-search-input"
          placeholder="Search by character or skill name..."
        />
        <select id="rarity-filter" class="bb-skills-filter-select">
          <option value="">All Rarities</option>
          {rarities.map(r => <option value={r}>{r}</option>)}
        </select>
        <select id="element-filter" class="bb-skills-filter-select">
          <option value="">All Elements</option>
          {elements.map(el => <option value={el}>{el}</option>)}
        </select>
        <select id="role-filter" class="bb-skills-filter-select">
          <option value="">All Roles</option>
          {roles.map(role => <option value={role}>{role}</option>)}
        </select>
        <button type="button" id="clear-filters" class="bb-skills-clear-btn">Clear All</button>
      </div>
    </div>

    <!-- Translation Note -->
    <div class="bb-crit-note">
      <strong>Note:</strong> The game incorrectly displays "Crit Damage" in skill descriptions - this actually affects <strong>Crit Rate</strong> (chance to crit). Formula: Value รท 20 = Crit %
    </div>

    <!-- Results Count -->
    <div class="bb-skills-results-count" id="results-count">
      Showing <span>{characterSkills.length}</span> characters
    </div>

    <!-- Character Skills Grid -->
    <div class="bb-skills-grid" id="skills-grid">
      {characterSkills.map(char => (
        <div
          class="bb-skills-card"
          data-name={char.name.toLowerCase()}
          data-element={char.element.toLowerCase()}
          data-role={char.role.toLowerCase()}
          data-rarity={char.rarity.toLowerCase()}
        >
          <!-- Card Header -->
          <div class="bb-skills-card-header">
            <div class="bb-skills-card-avatar">
              <PaladinImage
                characterId={char.id}
                alt={char.name}
                width={100}
                height={100}
                quality={95}
              />
            </div>
            <div class="bb-skills-card-info">
              <h3 class="bb-skills-card-name">{char.name}</h3>
              <div class="bb-skills-card-meta">
                <div class="bb-skills-rarity">
                  <RarityImage rarity={char.rarity} width={48} height={48} />
                </div>
                <div class="bb-skills-info-row">
                  <div class="bb-skills-info-item">
                    <ElementImage element={char.element} width={20} height={20} />
                    <span>{char.element}</span>
                  </div>
                  <div class="bb-skills-info-item">
                    <span>{char.role}</span>
                  </div>
                  <div class="bb-skills-info-item">
                    <PositionImage
                      fileName={getPositionFileName(getCharacterPosition(char.slug))}
                      alt={getPositionName(getCharacterPosition(char.slug))}
                      width={22}
                      height={22}
                    />
                  </div>
                  {getWeaponType(char.id) && (
                    <div class="bb-skills-info-item">
                      <WeaponIcon weapon={getWeaponType(char.id)} width={20} height={20} />
                      <span>{getWeaponType(char.id)}</span>
                    </div>
                  )}
                </div>
              </div>
              {char.tags && char.tags.length > 0 && (
                <div class="bb-skills-card-tags">
                  {char.tags.map(tag => <span class="bb-tag">{tag}</span>)}
                </div>
              )}
            </div>
          </div>

          <!-- Skill Rotation -->
          <div class="bb-skills-rotation">
            <div class="bb-rotation-title">Skill Rotation</div>
            <div class="bb-rotation-content">
              <div class="bb-rotation-row">
                <span class="bb-rotation-label">Opening:</span>
                <span class="bb-rotation-sequence">{char.skillRotation.opening}</span>
              </div>
              <div class="bb-rotation-row">
                <span class="bb-rotation-label">Loop:</span>
                <span class="bb-rotation-sequence">{char.skillRotation.loop}</span>
              </div>
            </div>
          </div>

          <!-- Card Body -->
          <div class="bb-skills-card-body">
            <!-- Basic Attack -->
            <div class="bb-skill-section basic-attack">
              <div class="bb-skill-header">
                <SkillIcon skillId={char.basicAttack.icon} alt="Basic Attack" width={40} height={40} />
                <div class="bb-skill-header-info">
                  <span class="bb-skill-label">Basic Attack</span>
                  <span class="bb-skill-type" data-type={char.basicAttack.type.toLowerCase()}>{char.basicAttack.type}</span>
                </div>
              </div>
              <div class="bb-skill-details">
                <div class="bb-skill-stat"><span>Scaling:</span> {char.basicAttack.scaling}</div>
                <div class="bb-skill-stat">
                  <span>Speed:</span> {char.basicAttack.speedLabel}
                  {SPEED_LABELS[char.basicAttack.speedLabel] && (
                    <span class="speed-details">({SPEED_LABELS[char.basicAttack.speedLabel].freezeTime})</span>
                  )}
                </div>
              </div>
            </div>

            <!-- Action Skills -->
            {char.skills.map(skill => {
              // Parse description to replace flat damage with dynamic span
              const baseValue = parseInt((skill.baseDamage || skill.baseValue || '0').replace('+', ''), 10) || 0;
              const growth = parseInt((skill.levelGrowth || '0').replace('+', ''), 10) || 0;
              const lvl90Value = baseValue + (90 - 1) * growth;

              // Check if this is a buff skill (has descriptionLv1/Lv90 but no damage scaling)
              const isBuffSkill = skill.descriptionLv1 && skill.descriptionLv90 && !skill.damageScaling;

              // Replace the flat damage/heal number in description with dynamic span, then highlight other values
              let descriptionHtml = skill.descriptionLv90 || skill.description || '';
              if (descriptionHtml) {
                // First replace the dynamic damage/heal value (matches "ATK + 70" or "ATK + 652")
                if (baseValue > 0) {
                  descriptionHtml = descriptionHtml.replace(
                    /(ATK\s*\+\s*)\d+/gi,
                    `$1<span class="bb-desc-damage-value">${lvl90Value}</span>`
                  );
                }
                // Then highlight percentages
                descriptionHtml = descriptionHtml.replace(/(\d+)%/g, '<span class="bb-value-highlight">$1%</span>');
              }

              return (
                <div class="bb-skill-section action-skill"
                  data-scaling={skill.damageScaling}
                  data-base={skill.baseDamage || skill.baseValue || '0'}
                  data-growth={skill.levelGrowth || '0'}
                  data-desc-lv1={skill.descriptionLv1 || ''}
                  data-desc-lv90={skill.descriptionLv90 || ''}
                  data-is-buff={isBuffSkill ? 'true' : 'false'}
                >
                  <div class="bb-skill-header">
                    <SkillIcon skillId={skill.icon} alt={skill.name} width={40} height={40} />
                    <div class="bb-skill-header-info">
                      <span class="bb-skill-label">Skill {skill.slot}</span>
                      <span class="bb-skill-name">{skill.name}</span>
                    </div>
                  </div>
                  <div class="bb-skill-details">
                    {descriptionHtml ? (
                      <div class="bb-skill-description" set:html={descriptionHtml} />
                    ) : null}
                    {skill.target && <div class="bb-skill-stat"><span>Target:</span> {skill.target}</div>}
                    {skill.castTime && <div class="bb-skill-stat"><span>Cast Time:</span> {skill.castTime}</div>}
                    {skill.duration && <div class="bb-skill-stat"><span>Duration:</span> {skill.duration}s</div>}
                    {skill.damageScaling && <div class="bb-skill-stat"><span>Damage:</span> {skill.damageScaling}</div>}
                    {skill.effect && <div class="bb-skill-effect" set:html={highlightValues(skill.effect)} />}
                    {/* Show buff effects if present */}
                    {skill.buffEffects && skill.buffEffects.length > 0 && (
                      <div class="bb-buff-effects">
                        {skill.buffEffects.map(buff => (
                          <div class="bb-buff-effect-item">
                            <span class="bb-buff-name">{buff.name}</span>
                            {buff.value > 0 && <span class="bb-buff-value">+{buff.value}{buff.type === 'percent' ? '%' : ''}</span>}
                            {buff.duration && <span class="bb-buff-duration">({buff.duration}s)</span>}
                          </div>
                        ))}
                      </div>
                    )}
                  </div>
                  {/* Level calc for damage skills */}
                  {(skill.baseDamage || skill.baseValue || skill.levelGrowth) && (
                    <div class="bb-skill-level-calc">
                      <div class="bb-skill-level-input">
                        <label>Lv</label>
                        <input type="number" class="skill-level-input" min="1" max="90" value="90" />
                      </div>
                      <div class="bb-skill-level-result">
                        <span class="bb-skill-scaling-text">{skill.damageScaling}</span>
                        <span class="bb-skill-plus">+</span>
                        <span class="bb-skill-calc-value">{lvl90Value}</span>
                      </div>
                    </div>
                  )}
                  {/* Level selector for buff skills */}
                  {isBuffSkill && skill.descriptionLv1 && (
                    <div class="bb-skill-level-calc buff-skill-calc">
                      <div class="bb-skill-level-input">
                        <label>Lv</label>
                        <input type="number" class="buff-level-input" min="1" max="90" value="90" />
                      </div>
                      <div class="bb-buff-level-note">Lv1: {skill.descriptionLv1.substring(0, 60)}...</div>
                    </div>
                  )}
                </div>
              );
            })}

            <!-- Ultimate -->
            {char.ultimate && char.ultimate.length > 0 && (
              <div class="bb-skill-section ultimate-skill">
                <div class="bb-skill-header">
                  <SkillIcon skillId={char.ultimate[0].icon} alt={char.ultimate[0].name} width={40} height={40} />
                  <div class="bb-skill-header-info">
                    <span class="bb-skill-label">Ultimate</span>
                    <span class="bb-skill-name">{char.ultimate[0].name}</span>
                  </div>
                </div>
                {char.ultimate[0].description && (
                  <div class="bb-skill-description" set:html={highlightValues(char.ultimate[0].description)} />
                )}
                <div class="bb-ultimate-ranks">
                  {char.ultimate.map(ult => (
                    <div class="bb-ultimate-rank">
                      <span class="bb-ult-rank-label">R{ult.rank}:</span>
                      <span class="bb-ult-rank-effect" set:html={highlightValues(ult.effect)} />
                    </div>
                  ))}
                </div>
              </div>
            )}

            <!-- Passives -->
            {char.passives && char.passives.length > 0 && (
              <div class="bb-passives-section">
                <div class="bb-passives-title">Passive Skills</div>
                <div class="bb-passives-list">
                  {char.passives.map(passive => (
                    <div class="bb-passive-item">
                      <SkillIcon skillId={passive.icon} alt={passive.name} width={32} height={32} />
                      <div class="bb-passive-info">
                        <span class="bb-passive-name">{passive.name}</span>
                        <span class="bb-passive-effect">{passive.effect}</span>
                        {passive.effect2 && <span class="bb-passive-effect">{passive.effect2}</span>}
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>
      ))}
    </div>

    <!-- No Results -->
    <div class="bb-skills-no-results" id="no-results">
      <h3>No characters found</h3>
      <p>Try adjusting your search or filter criteria.</p>
    </div>
  </div>
</CharacterSkillsLayout>

<script>
  function initFilters() {
    const searchInput = document.getElementById('skills-search') as HTMLInputElement;
    const rarityFilter = document.getElementById('rarity-filter') as HTMLSelectElement;
    const elementFilter = document.getElementById('element-filter') as HTMLSelectElement;
    const roleFilter = document.getElementById('role-filter') as HTMLSelectElement;
    const clearBtn = document.getElementById('clear-filters');
    const grid = document.getElementById('skills-grid');
    const noResults = document.getElementById('no-results');
    const resultsCount = document.getElementById('results-count');

    if (!grid) return;
    const cards = grid.querySelectorAll('.bb-skills-card');

    function filterCards() {
      const search = searchInput?.value.toLowerCase() || '';
      const rarity = rarityFilter?.value.toLowerCase() || '';
      const element = elementFilter?.value.toLowerCase() || '';
      const role = roleFilter?.value.toLowerCase() || '';

      let visibleCount = 0;

      cards.forEach(card => {
        const cardEl = card as HTMLElement;
        const matchName = !search || cardEl.dataset.name?.includes(search);
        const matchRarity = !rarity || cardEl.dataset.rarity === rarity;
        const matchElement = !element || cardEl.dataset.element === element;
        const matchRole = !role || cardEl.dataset.role === role;

        const isVisible = matchName && matchRarity && matchElement && matchRole;
        cardEl.classList.toggle('hidden', !isVisible);
        if (isVisible) visibleCount++;
      });

      if (noResults) {
        noResults.classList.toggle('visible', visibleCount === 0);
      }

      if (resultsCount) {
        const span = resultsCount.querySelector('span');
        if (span) span.textContent = visibleCount.toString();
      }
    }

    function clearFilters() {
      if (searchInput) searchInput.value = '';
      if (rarityFilter) rarityFilter.value = '';
      if (elementFilter) elementFilter.value = '';
      if (roleFilter) roleFilter.value = '';
      filterCards();
    }

    searchInput?.addEventListener('input', filterCards);
    rarityFilter?.addEventListener('change', filterCards);
    elementFilter?.addEventListener('change', filterCards);
    roleFilter?.addEventListener('change', filterCards);
    clearBtn?.addEventListener('click', clearFilters);
  }

  // Skill level calculator
  function initSkillLevelCalc() {
    const skillSections = document.querySelectorAll('.bb-skill-section.action-skill');

    skillSections.forEach(section => {
      const sectionEl = section as HTMLElement;
      const isBuffSkill = sectionEl.dataset.isBuff === 'true';

      // Handle damage skills
      const damageInput = section.querySelector('.skill-level-input') as HTMLInputElement;
      const resultEl = section.querySelector('.bb-skill-calc-value');
      const descValueEl = section.querySelector('.bb-desc-damage-value');

      if (damageInput && resultEl) {
        const baseStr = sectionEl.dataset.base || '0';
        const growthStr = sectionEl.dataset.growth || '0';

        // Parse base value (remove + sign if present)
        const base = parseInt(baseStr.replace('+', ''), 10) || 0;
        // Parse growth value (remove + sign if present)
        const growth = parseInt(growthStr.replace('+', ''), 10) || 0;

        function calculateValue(level: number) {
          // Formula: base + (level - 1) * growth
          return base + (level - 1) * growth;
        }

        function updateDamageDisplay() {
          let level = parseInt(damageInput.value, 10) || 1;
          // Clamp level between 1 and 90
          level = Math.max(1, Math.min(90, level));
          damageInput.value = level.toString();

          const value = calculateValue(level);
          resultEl.textContent = value.toString();

          // Also update description damage value if exists
          if (descValueEl) {
            descValueEl.textContent = value.toString();
          }
        }

        // Initial calculation
        updateDamageDisplay();

        // Listen for input changes
        damageInput.addEventListener('input', updateDamageDisplay);
        damageInput.addEventListener('change', updateDamageDisplay);
      }

      // Handle buff skills - update description based on level
      const buffInput = section.querySelector('.buff-level-input') as HTMLInputElement;
      const descEl = section.querySelector('.bb-skill-description');

      if (buffInput && descEl && isBuffSkill) {
        const descLv1 = sectionEl.dataset.descLv1 || '';
        const descLv90 = sectionEl.dataset.descLv90 || '';

        function updateBuffDisplay() {
          let level = parseInt(buffInput.value, 10) || 1;
          level = Math.max(1, Math.min(90, level));
          buffInput.value = level.toString();

          // Interpolate description based on level
          // For simplicity, show Lv1 desc for level 1, Lv90 for others (or interpolate)
          if (level === 1 && descLv1) {
            descEl.innerHTML = descLv1.replace(/(\d+)%/g, '<span class="bb-value-highlight">$1%</span>');
          } else if (descLv90) {
            descEl.innerHTML = descLv90.replace(/(\d+)%/g, '<span class="bb-value-highlight">$1%</span>');
          }
        }

        buffInput.addEventListener('input', updateBuffDisplay);
        buffInput.addEventListener('change', updateBuffDisplay);
      }
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      initFilters();
      initSkillLevelCalc();
    });
  } else {
    initFilters();
    initSkillLevelCalc();
  }
</script>

<style>
