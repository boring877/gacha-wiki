  .bb-skills-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 1rem;
  }

  /* Filter Controls */
  .bb-skills-controls {
    background: var(--bb-bg-secondary, #1e1e2e);
    border-radius: 12px;
    padding: 1rem;
    margin-bottom: 1rem;
  }

  .bb-skills-filter-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
  }

  .bb-skills-search-input {
    flex: 1;
    min-width: 200px;
    padding: 0.6rem 1rem;
    background: var(--bb-bg-primary, #16161e);
    border: 1px solid var(--bb-border-light, #333);
    border-radius: 8px;
    color: var(--bb-text-primary, #fff);
    font-size: 0.95rem;
  }

  .bb-skills-filter-select {
    padding: 0.6rem 1rem;
    background: var(--bb-bg-primary, #16161e);
    border: 1px solid var(--bb-border-light, #333);
    border-radius: 8px;
    color: var(--bb-text-primary, #fff);
    font-size: 0.9rem;
    min-width: 130px;
  }

  .bb-skills-clear-btn {
    padding: 0.6rem 1.25rem;
    background: rgba(239, 68, 68, 0.2);
    border: 1px solid rgba(239, 68, 68, 0.4);
    border-radius: 8px;
    color: #ef4444;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
  }

  .bb-skills-clear-btn:hover {
    background: rgba(239, 68, 68, 0.3);
  }

  /* Results Count */
  .bb-skills-results-count {
    margin-bottom: 1rem;
    font-size: 0.9rem;
    color: var(--bb-text-secondary, #888);
  }

  .bb-skills-results-count span {
    font-weight: 700;
    color: var(--bb-accent, #a855f7);
  }

  /* Skills Grid */
  .bb-skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
    gap: 1.5rem;
  }

  /* Character Card */
  .bb-skills-card {
    background: var(--bb-bg-secondary, #1e1e2e);
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid var(--bb-border-light, #333);
  }

  .bb-skills-card.hidden {
    display: none;
  }

  /* Card Header */
  .bb-skills-card-header {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(168, 85, 247, 0.05));
    border-bottom: 1px solid var(--bb-border-light, #333);
  }

  .bb-skills-card-avatar {
    width: 100px;
    height: 100px;
    border-radius: 12px;
    overflow: hidden;
    flex-shrink: 0;
  }

  .bb-skills-card-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .bb-skills-card-name {
