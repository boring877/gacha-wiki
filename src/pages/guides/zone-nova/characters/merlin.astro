---
import ZoneNovaLayout1 from '../../../../layouts/ZoneNovaLayout1.astro';
import FormattedDate from '../../../../components/FormattedDate.astro';
---

<ZoneNovaLayout1 
	title="Merlin Character Guide - Zone Nova - GachaWiki" 
	description="Complete guide for Merlin, the Critical Burst DPS in Zone Nova"
	gameTitle="Merlin Character Guide"
	showBreadcrumb={true}
	breadcrumbText="Characters"
>
	<Fragment slot="head">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
		<style>
			.back-button {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				background: var(--bg-primary);
				color: var(--text-primary);
				text-decoration: none;
				padding: 1rem 1.5rem;
				border-radius: 12px;
				border: 1px solid var(--amber-glow);
				font-family: 'Space Grotesk', sans-serif;
				font-weight: 600;
				font-size: 1rem;
				margin-bottom: 2rem;
				transition: all 0.3s ease;
				box-shadow: 0 4px 12px rgba(164, 120, 100, 0.2);
			}

			.back-button:hover {
				background: var(--amber-glow);
				color: var(--text-inverse);
				transform: translateY(-2px);
				box-shadow: 0 8px 20px rgba(164, 120, 100, 0.3);
			}

			.back-button:hover .back-arrow {
				transform: translateX(-3px);
			}

			.back-arrow {
				font-size: 1.2rem;
				transition: transform 0.3s ease;
			}

			.character-page {
				background: var(--bg-secondary);
				min-height: 100vh;
				padding: 2rem 0;
			}

			.character-container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			.character-header {
				background: linear-gradient(135deg, var(--bg-primary), var(--bg-secondary));
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 3rem;
				border: 1px solid var(--amber-glow);
				box-shadow: 0 12px 30px rgba(164, 120, 100, 0.1);
				text-align: center;
				transition: all 0.4s ease;
			}

			.character-header:hover {
				transform: translateY(-4px);
				box-shadow: 0 16px 40px rgba(164, 120, 100, 0.15);
			}

			.character-image {
				width: 300px;
				height: 300px;
				border-radius: 20px;
				object-fit: cover;
				margin: 0 auto 2rem auto;
				display: block;
				box-shadow: 0 12px 30px rgba(0, 172, 193, 0.3);
				transition: all 0.3s ease;
			}

			.character-image:hover {
				transform: scale(1.05);
				box-shadow: 0 16px 40px rgba(0, 172, 193, 0.4);
			}

			.character-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 3rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin: 0 0 1rem 0;
				animation: titleGlow 3s ease-in-out infinite alternate;
			}

			.character-subtitle {
				color: var(--text-secondary);
				font-size: 1.2rem;
				margin: 0;
				font-weight: 500;
			}

			.content-section {
				background: var(--bg-primary);
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 2rem;
				border: 1px solid var(--neutral-200);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.08);
				transition: all 0.4s ease;
				animation: sectionFadeIn 0.8s ease-out;
			}

			.content-section:hover {
				transform: translateY(-2px);
				box-shadow: 0 12px 35px rgba(164, 120, 100, 0.12);
				border-color: var(--teal-crystal);
			}

			.section-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 2rem;
				font-weight: 700;
				color: var(--text-primary);
				margin: 0 0 1.5rem 0;
				padding-bottom: 0.75rem;
				border-bottom: 2px solid var(--amber-glow);
				position: relative;
			}

			.section-title::after {
				content: '';
				position: absolute;
				bottom: -2px;
				left: 0;
				width: 60px;
				height: 2px;
				background: var(--teal-crystal);
			}

			.subsection-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.5rem;
				font-weight: 600;
				color: var(--text-primary);
				margin: 2rem 0 1rem 0;
				padding-left: 1rem;
				border-left: 4px solid var(--amber-glow);
			}

			.skill-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.08), rgba(0, 172, 193, 0.08));
				border: 1px solid var(--amber-glow);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
			}

			.skill-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.skill-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.3rem;
				font-weight: 600;
				color: var(--amber-glow);
				margin: 1.5rem 0 0.8rem 0;
			}

			.info-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.05), rgba(0, 172, 193, 0.05));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.info-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.info-card:hover::before {
				left: 100%;
			}

			.info-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.stats-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 1.5rem;
				margin: 1.5rem 0;
			}

			.stat-item {
				background: var(--bg-secondary);
				padding: 1.5rem;
				border-radius: 12px;
				border: 1px solid var(--neutral-200);
				transition: all 0.3s ease;
			}

			.stat-item:hover {
				border-color: var(--amber-glow);
				transform: translateY(-2px);
			}

			.stat-label {
				font-weight: 600;
				color: var(--amber-glow);
				margin-bottom: 0.5rem;
			}

			.stat-value {
				color: var(--text-primary);
				font-size: 1.1rem;
			}

			.awakening-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.1), rgba(0, 172, 193, 0.1));
				border: 1px solid var(--amber-glow);
				border-radius: 12px;
				padding: 1.5rem;
				margin: 1rem 0;
			}

			.critical-awakening {
				background: linear-gradient(135deg, rgba(220, 53, 69, 0.1), rgba(255, 183, 77, 0.1));
				border-color: #dc3545;
			}

			.priority-high {
				color: #fd7e14;
				font-weight: 600;
			}

			.priority-medium {
				color: #ffc107;
				font-weight: 600;
			}

			.priority-low {
				color: #28a745;
				font-weight: 600;
			}

			.class-showcase {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.1), rgba(0, 172, 193, 0.1));
				border: 1px solid var(--amber-glow);
				border-radius: 15px;
				padding: 2rem;
				margin-bottom: 2rem;
				display: flex;
				align-items: center;
				gap: 1.5rem;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.class-showcase::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.class-showcase:hover::before {
				left: 100%;
			}

			.class-showcase:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.class-image {
				width: 64px;
				height: 64px;
				border-radius: 12px;
				border: 2px solid var(--amber-glow);
				flex-shrink: 0;
				transition: all 0.3s ease;
			}

			.class-showcase:hover .class-image {
				transform: scale(1.05);
				box-shadow: 0 4px 15px rgba(164, 120, 100, 0.3);
			}

			.class-info h3 {
				color: var(--amber-glow);
				margin: 0 0 0.5rem 0;
				font-size: 1.4rem;
				font-weight: 600;
				font-family: 'Space Grotesk', sans-serif;
			}

			.class-info p {
				color: var(--text-secondary);
				margin: 0;
				font-size: 1rem;
				line-height: 1.5;
			}

			/* Memory Card mobile layout */
			@media (max-width: 768px) {
				.character-container {
					padding: 0 1rem;
				}

				.character-header,
				.content-section {
					padding: 2rem;
				}

				.character-title {
					font-size: 2.5rem;
				}

				.character-image {
					width: 250px;
					height: 250px;
				}

				.stats-grid {
					grid-template-columns: 1fr;
				}

				.content-section div[style*="display: flex; gap: 2rem; align-items: flex-start"] {
					flex-direction: column !important;
					align-items: center !important;
				}

				.content-section img[alt="Merlin Memory Card"] {
					width: 160px !important;
					height: 240px !important;
				}
			}

			@keyframes titleGlow {
				0% {
					text-shadow: 
						0 0 10px rgba(255, 183, 77, 0.3),
						0 0 20px rgba(255, 183, 77, 0.2);
				}
				100% {
					text-shadow: 
						0 0 20px rgba(255, 183, 77, 0.6),
						0 0 30px rgba(255, 183, 77, 0.4);
				}
			}

			@keyframes sectionFadeIn {
				0% {
					opacity: 0;
					transform: translateY(20px);
				}
				100% {
					opacity: 1;
					transform: translateY(0);
				}
			}

			.warning-box {
				background: linear-gradient(135deg, rgba(255, 193, 7, 0.1), rgba(255, 183, 77, 0.1));
				border: 1px solid #ffc107;
				border-radius: 12px;
				padding: 1.5rem;
				margin: 1.5rem 0;
			}

			.warning-box .warning-title {
				color: #ffc107;
				font-weight: 600;
				margin-bottom: 0.5rem;
			}
		</style>
	</Fragment>

	<div class="character-page">
		<div class="character-container">


			<!-- Character Header -->
			<header class="character-header">
				<!-- Character Image -->
				<img src="/images/characters/Merlin.jpg" alt="Merlin" class="character-image" loading="lazy" />
				
				<h1 class="character-title">Merlin</h1>
				<p class="character-subtitle">🌟 SSR • 🔥 Fire • 💥 Critical Burst DPS</p>
			</header>

			<!-- Character Overview -->
			<section class="content-section">
				<h2 class="section-title">Character Overview</h2>
				
				<!-- Class Showcase -->
				<div class="class-showcase">
					<img src="/images/characters/class/Guerrilla.jpg" alt="Guerrilla Class" class="class-image">
					<div class="class-info">
						<h3>游击使 (Guerrilla)</h3>
					</div>
				</div>
				
				<div class="stats-grid">
					<div class="stat-item">
						<div class="stat-label">Faction</div>
						<div class="stat-value"></div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Role</div>
						<div class="stat-value">Critical Burst DPS</div>
					</div>
				</div>

				<h3 class="subsection-title">Base Stats at Level 80</h3>
				<div class="stats-grid">
					<div class="stat-item">
						<div class="stat-label">HP</div>
						<div class="stat-value">8,033</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Attack</div>
						<div class="stat-value">1,305</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Defense</div>
						<div class="stat-value">530</div>
					</div>
				</div>

				<div class="info-card">
					<p style="color: var(--text-primary); font-size: 1.1rem; line-height: 1.6; margin: 0;">
						High-critical flame damage dealer who specializes in mark-based burst combos and strengthened ultimate mechanics. Her unique support mode system allows her to access enhanced versions of her ultimate ability, while her critical rate scaling makes her increasingly dangerous as her stats improve. She excels at single-target elimination with massive damage multipliers.
					</p>
				</div>
			</section>

			<!-- Skills Section -->
			<section class="content-section">
				<h2 class="section-title">Skills</h2>

				<div class="skill-card">
					<h3 class="skill-title">🔥 Normal Attack: Flame Slash (烈焰斩)</h3>
					<p><strong>Level:</strong> 14 | <strong>CD:</strong> 2.0s</p>
					<p>Deals fire damage equal to <strong>120% of Attack</strong> to designated enemy unit</p>
				</div>

				<div class="skill-card">
					<h3 class="skill-title">⚡ Auto Skill: Magic Swordplay: Molten Core Burst (魔法剑术：熔核爆裂)</h3>
					<p><strong>Level:</strong> 10+4 | <strong>CD:</strong> 5.0s</p>
					<ul>
						<li>Deals fire damage equal to <strong>780% of Attack</strong> to designated enemy unit and applies <strong>[Mark]</strong></li>
						<li>When Merlin uses must kill to attack targets with <strong>[Mark]</strong>, damage increases by <strong>20%</strong></li>
					</ul>
				</div>

				<div class="skill-card">
					<h3 class="skill-title">💥 Ultimate: Magic Swordplay: King's Sword (魔法剑术：王者之剑)</h3>
					<p><strong>Level:</strong> 10+4 | <strong>CD:</strong> 1.0s | <strong>Energy Cost:</strong> 6</p>
					<ul>
						<li><strong>Normal Version:</strong> Deals fire damage equal to <strong>1080% of Attack</strong> to designated enemy unit</li>
						<li><strong>[Strengthened Must Kill] Version (Available in Support Mode):</strong> Deals fire damage equal to <strong>1200% of Attack</strong> to designated enemy unit</li>
						<li>When target is the only enemy, damage multiplier increases by <strong>30%</strong> (total: <strong>1560% Attack</strong>)</li>
						<li><strong>Support Mode Access:</strong> Available within 5 seconds after using normal ultimate (requires Awakening 2)</li>
					</ul>
				</div>

				<div class="skill-card">
					<h3 class="skill-title">👑 Passive: Rune Oscillation (符文震荡)</h3>
					<p><strong>Level:</strong> 14</p>
					<p>Must kill hits additionally deal fire damage equal to <strong>120% of Attack</strong></p>
					<p>This effectively adds 120% damage to all ultimate attacks, making her base ultimate deal 1200% total damage (1080% + 120%) and strengthened ultimate deal 1320-1680% damage.</p>
				</div>
			</section>

			<!-- Team Composition Skill -->
			<section class="content-section">
				<h2 class="section-title">Team Composition Skill</h2>
				
				<div class="skill-card">
					<h3 class="skill-title">⚔️ Combination Skill</h3>
					<p><strong>Level:</strong> 1</p>
					
					<div class="warning-box">
						<div class="warning-title">⚔️ Activation Requirements</div>
						<p>Triggers when team contains <strong>2 [Avalon (亚瓦隆)] characters</strong> OR <strong>2 [Flame (焰炎)] characters</strong></p>
					</div>

					<div style="margin: 1rem 0;">
						<p><strong>Effects:</strong></p>
						<ul>
							<li><strong>Effect 1:</strong> Self critical rate increased by <strong>7.5%</strong></li>
							<li><strong>Effect 2:</strong> At battle start, every 15% critical rate can increase self critical damage by <strong>7.5%</strong>, maximum 6 times (up to <strong>45% critical damage</strong>)</li>
						</ul>
					</div>

					<div class="info-card">
						<p style="color: var(--text-primary); font-size: 1rem; line-height: 1.6; margin: 0;">
							<strong>Why This Matters:</strong> This team skill creates incredible critical scaling. With base 15% + Awakening 1 (15%) + team synergy (7.5%) = 37.5% critical rate, providing 15% critical damage from the scaling. Additional critical rate from runes can push this to the maximum 45% bonus, creating devastating critical strikes.
						</p>
					</div>
				</div>
			</section>

			<!-- Awakening Effects -->
			<section class="content-section">
				<h2 class="section-title">Awakening Effects</h2>

				<div class="awakening-card critical-awakening">
					<h3 class="skill-title">🌟 Awakening 1 (CRITICAL)</h3>
					<p>Critical rate increased by <strong>15%</strong></p>
					<p><strong>Impact:</strong> Essential for reaching critical rate thresholds for team synergy scaling</p>
				</div>

				<div class="awakening-card critical-awakening">
					<h3 class="skill-title">🌟 Awakening 2 (GAME-CHANGING)</h3>
					<p>In <strong>[Support]</strong> mode, can trigger <strong>[Strengthened Must Kill]</strong> within 5 seconds after using must kill</p>
					<p>When triggering <strong>[Strengthened Must Kill]</strong>, critical damage increased by <strong>20%</strong></p>
					<p><strong>Impact:</strong> Unlocks access to 1560% damage ultimate with enhanced critical damage</p>
				</div>

				<div class="awakening-card">
					<h3 class="skill-title">Awakening 3</h3>
					<p><strong>[Skills]</strong> and <strong>[Normal Attack]</strong> level and level cap +4</p>
				</div>

				<div class="awakening-card">
					<h3 class="skill-title">Awakening 4</h3>
					<p>Must kill damage increased by <strong>35%</strong></p>
				</div>

				<div class="awakening-card">
					<h3 class="skill-title">Awakening 5</h3>
					<p><strong>[Must Kill]</strong> and <strong>[Passive]</strong> level and level cap +4</p>
				</div>

				<div class="awakening-card critical-awakening">
					<h3 class="skill-title">🌟 Awakening 6 (CRITICAL)</h3>
					<p><strong>[Strengthened Must Kill]</strong> ignores target <strong>20% elemental resistance</strong></p>
					<p><strong>Impact:</strong> Ensures maximum damage against resistant enemies, crucial for endgame content</p>
				</div>
			</section>

			<!-- Recommended Builds -->
			<section class="content-section">
				<h2 class="section-title">Recommended Builds</h2>

				<h3 class="subsection-title">Rune Sets</h3>
				
				<div class="info-card">
					<h4 style="color: var(--amber-glow); margin: 0 0 1rem 0;">🌟 Primary Build (Critical Burst Focus)</h4>
					<p><strong>4-Piece Beth (贝丝):</strong> Critical Hit Rate +6%, When HP >80%: Critical Hit Damage +24%</p>
					<p><strong>2-Piece Alpha (阿尔法符):</strong> Attack Power +8%</p>
					<p style="color: var(--text-secondary); margin-top: 1rem; font-style: italic;">
						<strong>Perfect synergy:</strong> Maximizes critical hit scaling while maintaining high HP for Beth set bonus, ideal for her team synergy mechanics
					</p>
				</div>

				<div class="info-card">
					<h4 style="color: var(--teal-crystal); margin: 0 0 1rem 0;">🔄 Alternative Build (Pure Damage Focus)</h4>
					<p><strong>4-Piece Alpha (阿尔法符):</strong> Attack Power +8%, Basic Attack Damage +30%</p>
					<p><strong>2-Piece Beth (贝丝):</strong> Critical Hit Rate +6%</p>
					<p style="color: var(--text-secondary); margin-top: 1rem; font-style: italic;">
						<strong>Focus:</strong> Raw damage output for players who prefer straightforward attack scaling over conditional critical bonuses
					</p>
				</div>

				<h3 class="subsection-title">Main Stat Priorities</h3>
				<div class="stats-grid">
					<div class="stat-item">
						<div class="stat-label">Position 1</div>
						<div class="stat-value">HP (Fixed)</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 2</div>
						<div class="stat-value">ATK (Fixed)</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 3</div>
						<div class="stat-value">DEF (Fixed)</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 4</div>
						<div class="stat-value">CRIT DMG%</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 5</div>
						<div class="stat-value">🔥 Fire DMG% / ATK%</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 6</div>
						<div class="stat-value">ATK%</div>
					</div>
				</div>

				<h3 class="subsection-title">Substat Priorities</h3>
				<div class="info-card">
					<ol style="color: var(--text-primary); font-size: 1.1rem; line-height: 1.6;">
						<li>Critical Rate %</li>
						<li>Critical Damage %</li>
						<li>Attack %</li>
						<li>Penetration</li>
						<li>HP% / Defense%</li>
					</ol>
					<p style="color: var(--text-secondary); margin-top: 1rem; font-style: italic;">
						<strong>Note:</strong> Critical rate is the most important stat due to team synergy scaling. Every 15% critical rate grants 7.5% critical damage, making it extremely valuable for maximizing damage output.
					</p>
				</div>

				<div class="info-card">
					<h4 style="color: var(--teal-crystal); margin: 0 0 1rem 0;">Critical Rate Targets:</h4>
					<ul>
						<li><strong>60% Critical Rate</strong> = 30% critical damage from team synergy</li>
						<li><strong>75% Critical Rate</strong> = 37.5% critical damage from team synergy</li>
						<li><strong>90% Critical Rate</strong> = 45% critical damage from team synergy (maximum)</li>
					</ul>
				</div>
			</section>

			<!-- Memory Card -->
