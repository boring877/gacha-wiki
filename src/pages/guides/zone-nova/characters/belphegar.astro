---
import ZoneNovaLayout1 from '../../../../layouts/ZoneNovaLayout1.astro';
import FormattedDate from '../../../../components/FormattedDate.astro';
import OptimizedImage from '../../../../components/OptimizedImage.astro';
---

<ZoneNovaLayout1 
	title="Belphegar - Zone Nova Character Guide" 
	description="Complete guide for Belphegar (急侦-贝尔芬格), the SR Chaos debuffer specialist in Zone Nova"
	gameTitle="Belphegar Character Information"
	showBreadcrumb={true}
	breadcrumbText="Characters"
>	<Fragment slot="head">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
		<style>
			.character-page {
				background: var(--bg-secondary);
				min-height: 100vh;
				padding: 2rem 0;
			}

			.character-container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			.character-header {
				background: linear-gradient(135deg, var(--bg-primary), var(--bg-secondary));
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 3rem;
				border: 1px solid var(--amber-glow);
				box-shadow: 0 12px 30px rgba(164, 120, 100, 0.1);
				text-align: center;
				transition: all 0.4s ease;
			}

			.character-header:hover {
				transform: translateY(-4px);
				box-shadow: 0 16px 40px rgba(164, 120, 100, 0.15);
			}

			.character-image {
				width: 300px;
				height: 300px;
				border-radius: 20px;
				object-fit: cover;
				margin: 0 auto 2rem auto;
				display: block;
				box-shadow: 0 12px 30px rgba(139, 69, 193, 0.3);
				transition: all 0.3s ease;
			}

			.character-image:hover {
				transform: scale(1.05);
				box-shadow: 0 16px 40px rgba(139, 69, 193, 0.4);
			}

			.character-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 3rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin: 0 0 1rem 0;
				animation: titleGlow 3s ease-in-out infinite alternate;
			}

			.character-subtitle {
				color: var(--text-secondary);
				font-size: 1.2rem;
				margin: 0;
				font-weight: 500;
			}

			.content-section {
				background: var(--bg-primary);
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 2rem;
				border: 1px solid var(--neutral-200);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.08);
				transition: all 0.4s ease;
				animation: sectionFadeIn 0.8s ease-out;
			}

			.content-section:hover {
				transform: translateY(-2px);
				box-shadow: 0 12px 35px rgba(164, 120, 100, 0.12);
				border-color: var(--teal-crystal);
			}

			.section-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 2rem;
				font-weight: 700;
				color: var(--text-primary);
				margin: 0 0 1.5rem 0;
				padding-bottom: 0.75rem;
				border-bottom: 2px solid var(--amber-glow);
				position: relative;
			}

			.section-title::after {
				content: '';
				position: absolute;
				bottom: -2px;
				left: 0;
				width: 60px;
				height: 2px;
				background: var(--teal-crystal);
			}

			.subsection-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.5rem;
				font-weight: 600;
				color: var(--text-primary);
				margin: 2rem 0 1rem 0;
				padding-left: 1rem;
				border-left: 4px solid var(--amber-glow);
			}

			.skill-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.3rem;
				font-weight: 600;
				color: var(--amber-glow);
				margin: 1.5rem 0 0.8rem 0;
			}

			.info-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.05), rgba(0, 172, 193, 0.05));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.info-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.info-card:hover::before {
				left: 100%;
			}

			.info-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.skill-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.08), rgba(0, 172, 193, 0.08));
				border: 1px solid var(--amber-glow);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
			}

			.skill-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.class-showcase {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.1), rgba(0, 172, 193, 0.1));
				border: 1px solid var(--amber-glow);
				border-radius: 15px;
				padding: 2rem;
				margin-bottom: 2rem;
				display: flex;
				align-items: center;
				gap: 1.5rem;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.class-showcase::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.class-showcase:hover::before {
				left: 100%;
			}

			.class-showcase:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.class-image {
				width: 64px;
				height: 64px;
				border-radius: 12px;
				border: 2px solid var(--amber-glow);
				flex-shrink: 0;
				transition: all 0.3s ease;
			}

			.class-showcase:hover .class-image {
				transform: scale(1.05);
				box-shadow: 0 4px 15px rgba(164, 120, 100, 0.3);
			}

			.class-info h3 {
				color: var(--amber-glow);
				margin: 0 0 0.5rem 0;
				font-size: 1.4rem;
				font-weight: 600;
				font-family: 'Space Grotesk', sans-serif;
			}

			.class-info p {
				color: var(--text-secondary);
				margin: 0;
				font-size: 1rem;
				line-height: 1.5;
			}

			.stats-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 1.5rem;
				margin: 1.5rem 0;
			}

			.stat-item {
				background: var(--bg-secondary);
				padding: 1.5rem;
				border-radius: 12px;
				border: 1px solid var(--neutral-200);
				transition: all 0.3s ease;
			}

			.stat-item:hover {
				border-color: var(--amber-glow);
				transform: translateY(-2px);
			}

			.stat-label {
				font-weight: 600;
				color: var(--amber-glow);
				margin-bottom: 0.5rem;
			}

			.stat-value {
				color: var(--text-primary);
				font-size: 1.1rem;
			}

			.awakening-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.1), rgba(0, 172, 193, 0.1));
				border: 1px solid var(--amber-glow);
				border-radius: 12px;
				padding: 1.5rem;
				margin: 1rem 0;
			}

			.critical-awakening {
				background: linear-gradient(135deg, rgba(220, 53, 69, 0.1), rgba(255, 183, 77, 0.1));
				border-color: #dc3545;
			}

			.warning-box {
				background: linear-gradient(135deg, rgba(255, 193, 7, 0.1), rgba(255, 183, 77, 0.1));
				border: 1px solid #ffc107;
				border-radius: 12px;
				padding: 1.5rem;
				margin: 1.5rem 0;
			}

			.warning-box .warning-title {
				color: #ffc107;
				font-weight: 600;
				margin-bottom: 0.5rem;
			}

			.priority-high {
				color: #dc3545;
				font-weight: 600;
			}

			.priority-medium {
				color: #ffc107;
				font-weight: 600;
			}

			.priority-low {
				color: #28a745;
				font-weight: 600;
			}

			.game-changing {
				background: linear-gradient(135deg, #6c5ce7, #a29bfe);
				color: white;
				padding: 0.3rem 0.8rem;
				border-radius: 20px;
				font-size: 0.8rem;
				font-weight: 700;
				margin-left: 0.5rem;
			}

			.build-section {
				margin: 2rem 0;
			}

			.build-card {
				background: var(--bg-secondary);
				border: 1px solid var(--amber-glow);
				border-radius: 15px;
				padding: 1.5rem;
				margin: 1rem 0;
			}

			.build-title {
				font-size: 1.2rem;
				font-weight: 700;
				color: var(--text-primary);
				margin-bottom: 1rem;
			}

			/* Memory Card mobile layout */
			@media (max-width: 768px) {
				.memory-card-layout {
					flex-direction: column !important;
					align-items: center !important;
				}
				
				.memory-card-layout img {
					margin-bottom: 1rem;
				}
			}

			@keyframes sectionFadeIn {
				0% {
					opacity: 0;
					transform: translateY(20px);
				}
				100% {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@keyframes titleGlow {
				0% {
					filter: brightness(1);
				}
				100% {
					filter: brightness(1.2);
				}
			}

			@media (max-width: 768px) {
				.character-container {
					padding: 0 1rem;
				}
				
				.character-header {
					padding: 2rem;
				}
				
				.character-image {
					width: 250px;
					height: 250px;
				}
				
				.character-title {
					font-size: 2.5rem;
				}				
				.content-section {
					padding: 2rem;
				}
				
				.section-title {
					font-size: 1.8rem;
				}
			}			.character-badge {
				display: inline-block;
				padding: 0.38rem 1.1rem;
				border-radius: 14px;
				font-weight: 700;
				font-size: 1.05rem;
				letter-spacing: 0.5px;
				box-shadow: 0 2px 8px rgba(0,0,0,0.10);
				margin: 0 0.1rem;
				text-shadow: 0 1px 2px rgba(0,0,0,0.08);
				border: none;			}

			.role-badge, .element-badge, .rarity-badge {
				display: inline-block;
				padding: 0.25rem 0.85rem;
				border-radius: 14px;
				font-size: 1rem;
				font-weight: 700;
				margin: 0 0.1rem;
				box-shadow: 0 1px 4px rgba(0,0,0,0.07);
				letter-spacing: 0.02em;
			}

			.rarity-badge.sr { 
				background: #7ecfff; 
				color: #222; 
				border: 1.5px solid #4dbfff; 
			}

			.chaos-badge {
				background: #e1bee7;
				color: #4a148c;
				border: 1.5px solid #9c27b0;
			}

			.debuffer-badge {
				background: #d1c4e9;
				color: #4527a0;
				border: 1.5px solid #673ab7;
			}

			.skills-table-container {
				overflow-x: auto;
				border-radius: 16px;
				box-shadow: 0 4px 20px rgba(0,0,0,0.08);
				margin: 2rem 0;
			}			.skills-table {
				width: 100%;
				border-collapse: collapse;
				background: transparent;
			}.skills-table thead {
				background: var(--amber-glow);
			}

			.skills-table thead th {
				background: var(--amber-glow);
				color: #222;
				padding: 1rem;
				text-align: left;
				font-weight: 700;
				border-bottom: 2px solid var(--neutral-200);
			}			.skills-table td {
				padding: 1.2rem 1rem;
				border-bottom: 1px solid var(--neutral-200);
				vertical-align: top;
			}

			.skills-table tr:hover {
				background: rgba(255, 183, 77, 0.05);
			}

			.skills-table td:first-child {
				width: 150px;
				text-align: center;
			}

			.skills-table td:nth-child(2) {
				width: 250px;
			}

			.skills-table td:last-child {
				min-width: 400px;
			}

			.skills-table ul {
				margin: 0;
				padding-left: 1.5rem;
			}

			.skills-table li {
				margin-bottom: 0.5rem;
			}

			.skills-table strong {
				color: var(--amber-glow);
			}

			.skills-table small {
				color: var(--text-secondary);
				font-size: 0.85rem;
			}			.skill-type {
				display: inline-block;
				padding: 0.4rem 0.8rem;
				border-radius: 8px;
				font-weight: 600;
				font-size: 0.85rem;
				text-align: center;
			}

			.skill-type.normal-attack {
				background: #e3f2fd;
				color: #1565c0;
				border: 1px solid #90caf9;
			}

			.skill-type.auto-skill {
				background: #f3e5f5;
				color: #7b1fa2;
				border: 1px solid #ce93db;
			}

			.skill-type.ultimate {
				background: #fff3e0;
				color: #ef6c00;
				border: 1px solid #ffb74d;
			}

			.skill-type.passive {
				background: #e8f5e8;
				color: #388e3c;
				border: 1px solid #a5d6a7;
			}

			.skill-type.team-skill {
				background: #fce4ec;
				color: #c2185b;
				border: 1px solid #f8bbd9;
			}

			.stat-item {
				display: flex;
				flex-direction: column;
				align-items: center;
				text-align: center;
				padding: 0.5rem;
			}

			.stat-label {
				font-size: 0.9rem;
				font-weight: 600;
				margin-bottom: 0.3rem;
				text-transform: uppercase;
				letter-spacing: 0.5px;
			}

			.stat-value {
				font-size: 1.15rem;
				font-weight: 700;
				color: var(--text-primary);
			}

			.stats-grid {
				display: grid;
				gap: 1rem;
			}

			.badges-container {
				background: linear-gradient(135deg, #f8fafc 60%, #e0f7fa 100%);
				border-radius: 14px;
				box-shadow: 0 3px 15px rgba(0,0,0,0.08);
				padding: 1.2rem 1.8rem;
				border: 1px solid var(--neutral-200);
				width: 100%;
				position: relative;
				overflow: hidden;
			}

			.badges-container::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.badges-container:hover::before {
				left: 100%;
			}

			.badges-container:hover {
				transform: translateY(-2px);
				box-shadow: 0 6px 20px rgba(0,0,0,0.12);
			}

			.stat-item {
				display: flex;
				flex-direction: column;
				align-items: center;
				padding: 1.2rem 1rem;
				background: linear-gradient(135deg, #ffffff 60%, #f8fafc 100%);
				border-radius: 12px;
				border: 1px solid var(--neutral-200);
				box-shadow: 0 2px 8px rgba(0,0,0,0.04);
				transition: all 0.3s ease;
			}

			.stat-item:hover {
				transform: translateY(-2px);
				box-shadow: 0 4px 15px rgba(0,0,0,0.08);
				border-color: var(--amber-glow);
			}

			.stat-label {
				font-size: 0.9rem;
				font-weight: 600;
				color: var(--text-secondary);
				margin-bottom: 0.5rem;
				text-transform: uppercase;
				letter-spacing: 0.5px;
			}

			.stat-value {
				font-size: 1.1rem;
				font-weight: 700;
				color: var(--text-primary);
				text-align: center;
			}

			.stats-grid {
				display: grid;
				gap: 1rem;
				margin-bottom: 1.5rem;
			}
		</style>
	</Fragment>
	<div class="character-page">
		<div class="character-container">
			<!-- Character Header & Overview (merged) -->
			<section class="content-section">
				<h2 class="section-title" style="font-size:2.1rem; margin-bottom:2.5rem; text-align:center;">Character Overview</h2>
