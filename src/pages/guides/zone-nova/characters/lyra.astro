	<Fragment slot="head">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
		<style>
			.back-button {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				background: var(--bg-primary);
				color: var(--text-primary);
				text-decoration: none;
				padding: 1rem 1.5rem;
				border-radius: 12px;
				border: 1px solid var(--amber-glow);
				font-family: 'Space Grotesk', sans-serif;
				font-weight: 600;
				font-size: 1rem;
				margin-bottom: 2rem;
				transition: all 0.3s ease;
				box-shadow: 0 4px 12px rgba(164, 120, 100, 0.2);
			}

			.back-button:hover {
				background: var(--amber-glow);
				color: var(--text-inverse);
				transform: translateY(-2px);
				box-shadow: 0 8px 20px rgba(164, 120, 100, 0.3);
			}

			.back-button:hover .back-arrow {
				transform: translateX(-3px);
			}

			.back-arrow {
				font-size: 1.2rem;
				transition: transform 0.3s ease;
			}

			.character-page {
				background: var(--bg-secondary);
				min-height: 100vh;
				padding: 2rem 0;
			}

			.character-container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			.character-header {
				background: linear-gradient(135deg, var(--bg-primary), var(--bg-secondary));
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 3rem;
				border: 1px solid var(--amber-glow);
				box-shadow: 0 12px 30px rgba(164, 120, 100, 0.1);
				text-align: center;
				transition: all 0.4s ease;
			}

			.character-header:hover {
				transform: translateY(-4px);
				box-shadow: 0 16px 40px rgba(164, 120, 100, 0.15);
			}

			.character-image {
				width: 300px;
				height: 300px;
				border-radius: 20px;
				object-fit: cover;
				margin: 0 auto 2rem auto;
				display: block;
				box-shadow: 0 12px 30px rgba(0, 172, 193, 0.3);
				transition: all 0.3s ease;
			}

			.character-image:hover {
				transform: scale(1.05);
				box-shadow: 0 16px 40px rgba(0, 172, 193, 0.4);
			}

			.character-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 3rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin: 0 0 1rem 0;
				animation: titleGlow 3s ease-in-out infinite alternate;
			}

			.character-subtitle {
				color: var(--text-secondary);
				font-size: 1.2rem;
				margin: 0;
				font-weight: 500;
			}

			.content-section {
				background: var(--bg-primary);
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 2rem;
				border: 1px solid var(--neutral-200);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.08);
				transition: all 0.4s ease;
				animation: sectionFadeIn 0.8s ease-out;
			}

			.content-section:hover {
				transform: translateY(-2px);
				box-shadow: 0 12px 35px rgba(164, 120, 100, 0.12);
				border-color: var(--teal-crystal);
			}

			.section-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 2rem;
				font-weight: 700;
				color: var(--text-primary);
				margin: 0 0 1.5rem 0;
				padding-bottom: 0.75rem;
				border-bottom: 2px solid var(--amber-glow);
				position: relative;
			}

			.section-title::after {
				content: '';
				position: absolute;
				bottom: -2px;
				left: 0;
				width: 60px;
				height: 2px;
				background: var(--teal-crystal);
			}

			.subsection-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.5rem;
				font-weight: 600;
				color: var(--text-primary);
				margin: 2rem 0 1rem 0;
				padding-left: 1rem;
				border-left: 4px solid var(--amber-glow);
			}

			.skill-title {
