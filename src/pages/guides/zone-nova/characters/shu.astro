---
import ZoneNovaLayout1 from '../../../../layouts/ZoneNovaLayout1.astro';
import OptimizedImage from '../../../../components/OptimizedImage.astro';
---

<ZoneNovaLayout1 
	title="Shu Character Guide - Zone Nova - GachaWiki" 
	description="Complete guide for Shu, the SR Wind element Debuffer specialist from the Kaimiki faction in Zone Nova"
	gameTitle="Shu Character Information"
	showBreadcrumb={true}
	breadcrumbText="Characters"
>
	<Fragment slot="head">
		<style>
			.character-page {
				background: var(--bg-secondary);
				min-height: 100vh;
				padding: 2rem 0;
			}

			.character-container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			.character-header {
				background: linear-gradient(135deg, var(--bg-primary), var(--bg-secondary));
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 3rem;
				border: 1px solid var(--amber-glow);
				box-shadow: 0 12px 30px rgba(164, 120, 100, 0.1);
				text-align: center;
				transition: all 0.4s ease;
			}

			.character-header:hover {
				transform: translateY(-4px);
				box-shadow: 0 16px 40px rgba(164, 120, 100, 0.15);
			}

			.character-image {
				width: 300px;
				height: 300px;
				border-radius: 20px;
				object-fit: cover;
				margin: 0 auto 2rem auto;
				display: block;
				box-shadow: 0 12px 30px rgba(0, 172, 193, 0.3);
				transition: all 0.3s ease;
			}

			.character-image:hover {
				transform: scale(1.05);
				box-shadow: 0 16px 40px rgba(0, 172, 193, 0.4);
			}

			.character-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 3rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin: 0 0 1rem 0;
				animation: titleGlow 3s ease-in-out infinite alternate;
			}

			.animated-gradient {
				background: linear-gradient(90deg, #43e97b 0%, #38f9d7 50%, #43e97b 100%);
				background-size: 200% auto;
				color: transparent;
				background-clip: text;
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				animation: shine-move 2.5s linear infinite;
			}

			@keyframes shine-move {
				0% {
					background-position: 0% 50%;
				}
				100% {
					background-position: 200% 50%;
				}
			}

			.character-subtitle {
				color: var(--text-secondary);
				font-size: 1.2rem;
				margin: 0;
				font-weight: 500;
			}

			.content-section {
				background: var(--bg-primary);
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 2rem;
				border: 1px solid var(--neutral-200);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.08);
				transition: all 0.4s ease;
				animation: sectionFadeIn 0.8s ease-out;
			}

			.content-section:hover {
				transform: translateY(-2px);
				box-shadow: 0 12px 35px rgba(164, 120, 100, 0.12);
				border-color: var(--teal-crystal);
			}

			.section-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 2rem;
				font-weight: 700;
				color: var(--text-primary);
				margin: 0 0 1.5rem 0;
				padding-bottom: 0.75rem;
				border-bottom: 2px solid var(--amber-glow);
				position: relative;
			}

			.section-title::after {
				content: '';
				position: absolute;
				bottom: -2px;
				left: 0;
				width: 60px;
				height: 2px;
				background: var(--teal-crystal);
			}

			.stats-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: 1.5rem;
				margin-bottom: 2rem;
			}

			.stat-label {
				font-size: 0.9rem;
				color: var(--amber-glow);
				font-weight: 600;
				display: block;
				margin-bottom: 0.5rem;
			}

			.stat-value {
				font-size: 1.3rem;
				font-weight: 700;
				color: var(--text-primary);
			}

			.role-badge, .element-badge, .rarity-badge {
				display: inline-block;
				padding: 0.25rem 0.85rem;
				border-radius: 14px;
				font-size: 1rem;
				font-weight: 700;
				margin: 0 0.1rem;
				box-shadow: 0 1px 4px rgba(0,0,0,0.07);
				letter-spacing: 0.02em;
			}

			.rarity-badge.sr { 
				background: #7ecfff; 
				color: #222; 
				border: 1.5px solid #4dbfff; 
			}

			.element-badge.wind { 
				background: #4dffb8; 
				color: #222; 
				border: 1.5px solid #00e6a8; 
			}

			.role-badge.debuffer { 
				background: #b39ddb; 
				color: #222; 
				border: 1.5px solid #7b1fa2; 
			}

			.badges-container {
				background: linear-gradient(135deg, #f8fafc 60%, #e0f7fa 100%);
				border-radius: 14px;
				box-shadow: 0 3px 15px rgba(0,0,0,0.08);
				padding: 1.2rem 1.8rem;
				border: 1px solid var(--neutral-200);
				margin-top: 1rem;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.badges-container::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.badges-container:hover::before {
				left: 100%;
			}

			.badges-container:hover {
				transform: translateY(-2px);
				box-shadow: 0 6px 20px rgba(0,0,0,0.12);
				border-color: var(--amber-glow);
			}

			.skills-table, .awakening-table {
				width: 100%;
				border-collapse: collapse;
				background: transparent;
			}

			.skills-table th, .awakening-table th {
				background: var(--amber-glow);
				color: #222;
				padding: 1rem;
				text-align: left;
				font-weight: 700;
				border-bottom: 2px solid var(--neutral-200);
			}

			.skills-table td, .awakening-table td {
				padding: 1.2rem 1rem;
				border-bottom: 1px solid var(--neutral-200);
				vertical-align: top;
			}

			.skills-table tr:hover, .awakening-table tr:hover {
				background: rgba(255, 183, 77, 0.05);
			}

			.skills-table td:first-child {
				width: 150px;
				text-align: center;
			}

			.skills-table td:nth-child(2) {
				width: 250px;
			}

			.skills-table td:last-child {
				min-width: 400px;
			}

			.skills-table ul {
				margin: 0;
				padding-left: 1.5rem;
			}

			.skills-table li {
				margin-bottom: 0.5rem;
			}

			.skills-table strong {
				color: var(--amber-glow);
			}

			.skills-table small {
				color: var(--text-secondary);
				font-size: 0.85rem;
			}

			.skill-name, .awakening-name {
				font-weight: 600;
				color: var(--amber-glow);
				margin-bottom: 0.5rem;
			}

			.skill-description, .awakening-description {
				color: var(--text-secondary);
				line-height: 1.6;
			}

			.skills-table-container {
				background: var(--bg-primary);
				border-radius: 12px;
				padding: 1.5rem;
				box-shadow: 0 4px 15px rgba(164, 120, 100, 0.08);
				border: 1px solid var(--neutral-200);
			}

			.awakening-table-container {
				background: var(--bg-primary);
				border-radius: 12px;
				padding: 1.5rem;
				box-shadow: 0 4px 15px rgba(164, 120, 100, 0.08);
				border: 1px solid var(--neutral-200);
			}

			.awakening-table ul {
				margin: 0;
				padding-left: 1.2rem;
				list-style-type: disc;
			}

			.awakening-table li {
				margin-bottom: 0.3rem;
				line-height: 1.4;
			}

			.stat-item {
				background: linear-gradient(135deg, var(--bg-secondary), rgba(255, 183, 77, 0.05));
				border: 1px solid var(--neutral-200);
				border-radius: 12px;
				padding: 1.5rem;
				text-align: center;
				transition: all 0.3s ease;
			}

			.stat-item:hover {
				transform: translateY(-2px);
				box-shadow: 0 6px 20px rgba(164, 120, 100, 0.15);
				border-color: var(--amber-glow);
			}

			@keyframes titleGlow {
				0% {
					text-shadow: 
						0 0 10px rgba(255, 183, 77, 0.3),
						0 0 20px rgba(255, 183, 77, 0.2);
				}
				100% {
					text-shadow: 
						0 0 20px rgba(255, 183, 77, 0.6),
						0 0 30px rgba(255, 183, 77, 0.4);
				}
			}

			@keyframes sectionFadeIn {
				from {
					opacity: 0;
					transform: translateY(20px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@media (max-width: 768px) {
				.character-container {
					padding: 0 1rem;
				}

				.character-header,
				.content-section {
					padding: 2rem;
				}

				.character-title {
					font-size: 2.5rem;
				}

				.character-image {
					width: 250px;
					height: 250px;
				}

				.stats-grid {
					grid-template-columns: 1fr;
				}

				/* Memory Card mobile layout */
				.content-section div[style*="display: flex; gap: 2rem; align-items: flex-start"] {
					flex-direction: column !important;
					align-items: center !important;
				}

				.content-section img[alt="Shu Memory Card"] {
					width: 160px !important;
					height: 240px !important;
				}
			}

			.skill-type {
				display: inline-block;
				padding: 0.4rem 0.8rem;
				border-radius: 8px;
				font-weight: 600;
				font-size: 0.85rem;
				text-align: center;
			}

			.skill-type.normal-attack {
				background: #e3f2fd;
				color: #1976d2;
				border: 1px solid #bbdefb;
			}

			.skill-type.auto-skill {
				background: #f3e5f5;
				color: #7b1fa2;
				border: 1px solid #ce93d8;
			}

			.skill-type.ultimate {
				background: #fff3e0;
				color: #f57c00;
				border: 1px solid #ffcc02;
			}

			.skill-type.passive {
				background: #e8f5e8;
				color: #388e3c;
				border: 1px solid #a5d6a7;
			}

			.skill-type.team-skill {
				background: #fce4ec;
				color: #c2185b;
				border: 1px solid #f8bbd9;
			}
		</style>
	</Fragment>

	<div class="character-page">
		<div class="character-container">
			<!-- Character Header & Overview (merged) -->
			<section class="content-section">
				<h2 class="section-title" style="font-size:2.1rem; margin-bottom:2.5rem; text-align:center;">Character Overview</h2>
				<div style="display: flex; gap: 2.5rem; align-items: flex-start; flex-wrap: wrap;">
					<!-- Hero Card (Left) -->
					<div style="flex: 1.5; min-width: 340px; max-width: 520px; display: flex; flex-direction: column; align-items: center;">
						<div style="background: linear-gradient(135deg, #f8fafc 60%, #e0f7fa 100%); border-radius: 18px; box-shadow: 0 4px 18px rgba(0,0,0,0.08); padding: 2.5rem 1.5rem 1.5rem 1.5rem; border: 1.5px solid var(--amber-glow); display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 420px; width: 100%;">
							<OptimizedImage 
          src="/images/characters/shu.jpg" 
          alt="Shu" 
          width={340}
          height={340}
          class="character-image"
          priority={true}
        />
							<h1 class="character-title">Shu</h1>
						</div>
						<!-- Badges in separate box with better styling -->
						<div class="badges-container" style="margin-top: 1.8rem;">
							<div style="display: flex; justify-content: center; gap: 0.7rem; flex-wrap: wrap;">
								<span class="rarity-badge sr">SR</span>
								<span class="element-badge wind">Wind</span>
								<span class="role-badge debuffer">Debuffer</span>
							</div>
						</div>
					</div>
					<!-- Stats (Right) -->
					<div style="flex: 1; min-width: 260px; max-width: 400px;">
						<div style="background: linear-gradient(135deg, #fffde7 60%, #e0f2f1 100%); border-radius: 18px; box-shadow: 0 4px 18px rgba(0,0,0,0.06); padding: 2.2rem 1.5rem; border: 1px solid var(--neutral-200); width: 100%;">
							<div class="stats-grid" style="margin-bottom: 1.5rem; grid-template-columns: 1fr 1fr;">
								<div class="stat-item"><div class="stat-label">Faction</div><div class="stat-value">Kaimiki</div></div>
								<div class="stat-item"><div class="stat-label">Role</div><div class="stat-value" style="color:#7b1fa2; font-weight:700; letter-spacing:1px;">Debuffer</div></div>
							</div>
							<div class="stats-grid" style="grid-template-columns: 1fr 1fr; gap: 1.1rem;">
								<div class="stat-item"><div class="stat-label">HP</div><div class="stat-value">7,970</div></div>
								<div class="stat-item"><div class="stat-label">Attack</div><div class="stat-value">837</div></div>
								<div class="stat-item"><div class="stat-label">Defense</div><div class="stat-value">560</div></div>
								<div class="stat-item"><div class="stat-label">Energy Regen</div><div class="stat-value">0.25/s</div></div>
								<div class="stat-item"><div class="stat-label">Crit Rate</div><div class="stat-value">0%</div></div>
								<div class="stat-item"><div class="stat-label">Crit Damage</div><div class="stat-value">50%</div></div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Skills Section -->
			<section class="content-section">
				<h2 class="section-title">Skills</h2>
				<div class="skills-table-container">
					<table class="skills-table">
					<thead>
						<tr>
							<th style="width: 25%;">Skill Type</th>
							<th style="width: 25%;">Skill Name</th>
							<th>Description</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td><span class="skill-type normal-attack">Normal Attack</span></td>
							<td>
								<div class="skill-name">Wind Assault</div>
								<div style="font-size: 0.8rem; color: var(--text-secondary);">Level: 10+4 • CD: 2.0s</div>
							</td>
							<td>
								<div class="skill-description">
									Deals wind damage equal to <strong>120% of Attack</strong> to designated enemy unit
								</div>
							</td>
						</tr>
						<tr>
							<td><span class="skill-type auto-skill">Skill</span></td>
							<td>
								<div class="skill-name">Eye of the Storm</div>
								<div style="font-size: 0.8rem; color: var(--text-secondary);">Level: 10+4 • CD: 5.0s</div>
							</td>
							<td>
								<div class="skill-description">
									Deals wind damage equal to <strong>72% of Attack</strong> to enemy unit and surrounding enemies within <strong>4 meters</strong>
								</div>
							</td>
						</tr>
						<tr>
							<td><span class="skill-type ultimate">Ultimate</span></td>
							<td>
								<div class="skill-name">Sticky Bat Storm</div>
								<div style="font-size: 0.8rem; color: var(--text-secondary);">Level: 10+4 • CD: 1.0s • Energy: 3</div>
							</td>
							<td>
								<div class="skill-description">
									<ul style="margin: 0; padding-left: 1rem;">
										<li>Deals wind damage equal to <strong>120% of Attack</strong> to enemies within <strong>4 meters</strong></li>
										<li>Applies <strong>[Vulnerability]</strong>: Affected enemies take <strong>34% increased damage for 15 seconds</strong></li>
										<li><strong>With Awakening 6:</strong> Also applies <strong>[Weathering]</strong> debuff to affected enemies</li>
									</ul>
								</div>
							</td>
						</tr>
						<tr>
							<td><span class="skill-type passive">Passive</span></td>
							<td>
								<div class="skill-name">Fierce Wind Burst</div>
								<div style="font-size: 0.8rem; color: var(--text-secondary);">Level: 10+4</div>
							</td>
							<td>
								<div class="skill-description">
									<ul style="margin: 0; padding-left: 1rem;">
										<li>Can apply <strong>[Weathering]</strong> debuff to enemies</li>
										<li><strong>Weathering:</strong> Each stack causes <strong>14.4% of Attack</strong> as wind damage per second (maximum 5 stacks)</li>
										<li><strong>With Awakening 1:</strong> When dealing damage to targets with continuous damage effects, self attack power increases by <strong>20%</strong></li>
									</ul>
								</div>
							</td>
						</tr>
						<tr>
							<td><span class="skill-type team-skill">Team Skill</span></td>
							<td>
								<div class="skill-name">Combination Skill</div>
								<div style="font-size: 0.8rem; color: var(--text-secondary);">Level: 1</div>
								<div style="font-size: 0.8rem; color: var(--amber-glow);">Requires: 2 [Kaimiki] OR 2 [Wind] characters</div>
							</td>
							<td>
								<div class="skill-description">
									Self damage increased by <strong>20%</strong>
								</div>
							</td>
						</tr>
					</tbody>
					</table>
				</div>
			</section>

			<!-- Awakening Effects Section -->
			<section class="content-section">
				<h2 class="section-title">Awakening Effects</h2>
				<div class="awakening-table-container">
					<table class="awakening-table">
					<thead>
						<tr>
							<th style="width: 20%;">Awakening</th>
							<th>Effects</th>
						</tr>
					</thead>
					<tbody>						<tr>
							<td><strong>Awakening 1</strong></td>
							<td>
								<ul>
									<li><strong>When dealing damage to targets with continuous damage effects:</strong> Self attack power increases by <strong>20%</strong></li>
								</ul>
							</td>
						</tr>						<tr>
							<td><strong>Awakening 2</strong></td>
							<td>
								<ul>
									<li><strong>Continuous damage effects penetration rate increased by 10%</strong></li>
								</ul>
							</td>
						</tr>
						<tr>
							<td><strong>Awakening 3</strong></td>
							<td>
								<ul>
									<li><strong>[Skills] and [Normal Attack] level and level cap +4</strong></li>
								</ul>
							</td>
						</tr>						<tr>
							<td><strong>Awakening 4</strong></td>
							<td>
								<ul>
									<li><strong>Continuous damage effects damage increased by 25%</strong></li>
								</ul>
							</td>
						</tr>
						<tr>
							<td><strong>Awakening 5</strong></td>
							<td>
								<ul>
									<li><strong>[Ultimate Skill] and [Passive] level and level cap +4</strong></li>
								</ul>
							</td>
						</tr>						<tr>
							<td><strong>Awakening 6</strong></td>
							<td>
								<ul>
									<li><strong>Ultimate skill can also apply [Weathering] debuff</strong></li>
								</ul>
							</td>
						</tr>
					</tbody>
					</table>
				</div>
			</section>

			<!-- Memory Card Section -->
			<section class="content-section">
				<h2 class="section-title" style="font-size:2.1rem; margin-bottom:2.5rem; text-align:center;">Memory Card: Busy Officer (忙里偷闲)</h2>
				<div style="display: flex; gap: 2.5rem; align-items: flex-start; flex-wrap: wrap;">
					<!-- Memory Card Image (Left) -->
					<div style="flex: 1.5; min-width: 340px; max-width: 520px; display: flex; flex-direction: column; align-items: center;">
						<div style="background: linear-gradient(135deg, #f8fafc 60%, #e0f7fa 100%); border-radius: 18px; box-shadow: 0 4px 18px rgba(0,0,0,0.08); padding: 2.5rem 1.5rem; border: 1.5px solid var(--amber-glow); display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 420px; width: 100%;">
							<OptimizedImage 
          src="/images/characters/shucard.jpg" 
          alt="Shu Memory Card" 
          width={280}
          height={420}
        />
						</div>
					</div>
					<!-- Memory Card Stats (Right) -->
					<div style="flex: 1; min-width: 260px; max-width: 400px;">
						<div style="background: linear-gradient(135deg, #fffde7 60%, #e0f2f1 100%); border-radius: 18px; box-shadow: 0 4px 18px rgba(0,0,0,0.06); padding: 2.2rem 1.5rem; border: 1px solid var(--neutral-200); width: 100%;">
							<h4 style="color: var(--amber-glow); margin: 0 0 1.5rem 0; font-size: 1.3rem; text-align: center;">Level 80/80 Base Stats</h4>
							<div class="stats-grid" style="grid-template-columns: 1fr; gap: 1rem;">
								<div class="stat-item" style="text-align:center;"><div class="stat-label" style="color:#fbc02d; font-size:1.1rem;">HP</div><div class="stat-value" style="font-size:1.25rem; font-weight:600;">5,000</div></div>
								<div class="stat-item" style="text-align:center;"><div class="stat-label" style="color:#ff9800; font-size:1.1rem;">Attack</div><div class="stat-value" style="font-size:1.25rem; font-weight:600;">500</div></div>
								<div class="stat-item" style="text-align:center;"><div class="stat-label" style="color:#fbc02d; font-size:1.1rem;">Defense</div><div class="stat-value" style="font-size:1.25rem; font-weight:600;">500</div></div>
							</div>
						</div>
					</div>
