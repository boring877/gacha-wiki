---
import ZoneNovaLayout1 from '../../../../layouts/zone-nova/CharacterLayout.astro';
import CharacterNavigation from '../../../../components/zone-nova/CharacterNavigation.astro';
import CharacterPageTemplate from '../../../../templates/zone-nova/CharacterPageTemplate.astro';
import {
  zashikiWarashiData,
  zashikiWarashiSEO,
} from '../../../../data/zone-nova/characters/zashiki-warashi.js';

export const prerender = true;

// Import character data from zashiki-warashi.js
const characterData = zashikiWarashiData;

// SEO optimization using imported data
const title = zashikiWarashiSEO.title;
const description = zashikiWarashiSEO.description;
---

<ZoneNovaLayout1 title={title} description={description} gameTitle={characterData.name}>
  <!-- Character Navigation -->
  <CharacterNavigation currentCharacter={characterData} />

  <!-- Character Page Content -->
  <CharacterPageTemplate characterData={characterData} />
</ZoneNovaLayout1>
