---
import ZoneNovaLayout1 from '../../../../layouts/ZoneNovaLayout1.astro';
import FormattedDate from '../../../../components/FormattedDate.astro';
import OptimizedImage from '../../../../components/OptimizedImage.astro';
---

<ZoneNovaLayout1 	title="Zashiki-warashi Character Guide - Zone Nova - GachaWiki" 
	description="Complete guide for Zashiki-warashi, the fire element team support specialist in Zone Nova"
	gameTitle="Zashiki-warashi Character Information"
	showBreadcrumb={true}
	breadcrumbText="Characters"
>
	<Fragment slot="head">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
		<style>
			.back-button {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				background: var(--bg-primary);
				color: var(--text-primary);
				text-decoration: none;
				padding: 1rem 1.5rem;
				border-radius: 12px;
				border: 1px solid var(--amber-glow);
				font-family: 'Space Grotesk', sans-serif;
				font-weight: 600;
				font-size: 1rem;
				margin-bottom: 2rem;
				transition: all 0.3s ease;
				box-shadow: 0 4px 12px rgba(164, 120, 100, 0.2);
			}

			.back-button:hover {
				background: var(--amber-glow);
				color: var(--text-inverse);
				transform: translateY(-2px);
				box-shadow: 0 8px 20px rgba(164, 120, 100, 0.3);
			}

			.back-button:hover .back-arrow {
				transform: translateX(-3px);
			}

			.back-arrow {
				font-size: 1.2rem;
				transition: transform 0.3s ease;
			}

			.character-page {
				background: var(--bg-secondary);
				min-height: 100vh;
				padding: 2rem 0;
			}

			.character-container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			.character-header {
				background: linear-gradient(135deg, var(--bg-primary), var(--bg-secondary));
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 3rem;
				border: 1px solid var(--amber-glow);
				box-shadow: 0 12px 30px rgba(164, 120, 100, 0.1);
				text-align: center;
				transition: all 0.4s ease;
			}

			.character-header:hover {
				transform: translateY(-4px);
				box-shadow: 0 16px 40px rgba(164, 120, 100, 0.15);
			}

			.character-image {
				width: 300px;
				height: 300px;
				border-radius: 20px;
				object-fit: cover;
				margin: 0 auto 2rem auto;
				display: block;
				box-shadow: 0 12px 30px rgba(255, 87, 51, 0.3);
				transition: all 0.3s ease;
			}

			.character-image:hover {
				transform: scale(1.05);
				box-shadow: 0 16px 40px rgba(255, 87, 51, 0.4);
			}

			.character-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 3rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin: 0 0 1rem 0;
				animation: titleGlow 3s ease-in-out infinite alternate;
			}

			.character-subtitle {
				color: var(--text-secondary);
				font-size: 1.2rem;
				margin: 0;
				font-weight: 500;
			}

			.content-section {
				background: var(--bg-primary);
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 2rem;
				border: 1px solid var(--neutral-200);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.08);
				transition: all 0.4s ease;
				animation: sectionFadeIn 0.8s ease-out;
			}

			.content-section:hover {
				transform: translateY(-2px);
				box-shadow: 0 12px 35px rgba(164, 120, 100, 0.12);
				border-color: var(--teal-crystal);
			}

			.section-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 2rem;
				font-weight: 700;
				color: var(--text-primary);
				margin: 0 0 1.5rem 0;
				padding-bottom: 0.75rem;
				border-bottom: 2px solid var(--amber-glow);
				position: relative;
			}			.section-title::after {
				content: '';
				position: absolute;
				bottom: -2px;
				left: 0;
				width: 60px;
				height: 2px;
				background: var(--teal-crystal);
			}

			.stats-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: 1.5rem;
				margin-bottom: 2rem;
			}

			.stat-label {
				font-size: 0.9rem;
				color: var(--amber-glow);
				font-weight: 600;
				display: block;
				margin-bottom: 0.5rem;
			}

			.stat-value {
				font-size: 1.3rem;
				font-weight: 700;
				color: var(--text-primary);
			}

			.role-badge, .element-badge, .rarity-badge {
				display: inline-block;
				padding: 0.25rem 0.85rem;
				border-radius: 14px;
				font-size: 1rem;
				font-weight: 700;
				margin: 0 0.1rem;
				box-shadow: 0 1px 4px rgba(0,0,0,0.07);
				letter-spacing: 0.02em;
			}			.rarity-badge.sr { 
				background: #00bcd4; 
				color: #fff; 
				border: 1.5px solid #0097a7; 
			}

			.element-badge.fire { 
				background: #f44336; 
				color: #fff; 
				border: 1.5px solid #d32f2f; 
			}

			.role-badge.buffer { 
				background: #9c27b0; 
				color: #fff; 
				border: 1.5px solid #7b1fa2; 
			}

			.badges-container {
				background: linear-gradient(135deg, #f8fafc 60%, #e0f7fa 100%);
				border-radius: 14px;
				box-shadow: 0 3px 15px rgba(0,0,0,0.08);
				padding: 1.2rem 1.8rem;
				border: 1px solid var(--neutral-200);
				margin-top: 1rem;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.badges-container::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.badges-container:hover::before {
				left: 100%;
			}

			.badges-container:hover {
				transform: translateY(-2px);
				box-shadow: 0 6px 20px rgba(0,0,0,0.12);
				border-color: var(--amber-glow);
			}

			.skills-table, .awakening-table {
				width: 100%;
				border-collapse: separate;
				border-spacing: 0;
				border-radius: 12px;
				overflow: hidden;
			}			.skills-table th, .awakening-table th {
				background: var(--amber-glow);
				color: #222;
				padding: 1rem;
				text-align: left;
				font-weight: 700;
				border-bottom: 2px solid var(--neutral-200);
			}

			.skills-table td, .awakening-table td {
				padding: 1.2rem 1rem;
				border-bottom: 1px solid var(--neutral-200);
				vertical-align: top;
			}

			.skills-table tr:hover, .awakening-table tr:hover {
				background: rgba(164, 120, 100, 0.05);
			}

			.skills-table td:first-child {
				font-weight: 600;
				color: var(--text-primary);
			}

			.skills-table td:nth-child(2) {
				font-weight: 500;
			}

			.skills-table td:last-child {
				color: var(--text-secondary);
			}

			.skills-table ul {
				margin: 0;
				padding-left: 1.2rem;
			}

			.skills-table li {
				margin-bottom: 0.5rem;
			}

			.skills-table strong {
				color: var(--amber-glow);
			}

			.skills-table small {
				color: var(--text-secondary);
				font-size: 0.8rem;
			}

			.awakening-table td {
				font-size: 0.95rem;
			}

			.awakening-table strong {
				color: var(--amber-glow);
			}

			.awakening-table em {
				color: var(--teal-crystal);
				font-style: normal;
				font-weight: 600;
			}

			.skills-table-container {
				overflow-x: auto;
				border-radius: 12px;
				box-shadow: 0 4px 12px rgba(164, 120, 100, 0.1);
			}

			.awakening-table-container {
				overflow-x: auto;
				border-radius: 12px;
				box-shadow: 0 4px 12px rgba(164, 120, 100, 0.1);
			}

			.skill-type {
				display: inline-block;
				padding: 0.4rem 0.8rem;
				border-radius: 8px;
				font-weight: 600;
				font-size: 0.85rem;
				text-align: center;
			}

			.skill-type.normal-attack {
				background: #e3f2fd;
				color: #1976d2;
				border: 1px solid #bbdefb;
			}

			.skill-type.auto-skill {
				background: #f3e5f5;
				color: #7b1fa2;
				border: 1px solid #ce93d8;
			}

			.skill-type.ultimate {
				background: #fff3e0;
				color: #f57c00;
				border: 1px solid #ffcc02;
			}

			.skill-type.passive {
				background: #e8f5e8;
				color: #388e3c;
				border: 1px solid #a5d6a7;
			}

			.skill-type.team-skill {
				background: #fce4ec;
				color: #c2185b;
				border: 1px solid #f8bbd9;
			}

			.subsection-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.5rem;
				font-weight: 600;
				color: var(--text-primary);
				margin: 2rem 0 1rem 0;
				padding-left: 1rem;
				border-left: 4px solid var(--amber-glow);
			}

			.skill-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.3rem;
				font-weight: 600;
				color: var(--amber-glow);
				margin: 1.5rem 0 0.8rem 0;
			}

			.info-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.05), rgba(0, 172, 193, 0.05));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.info-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.info-card:hover::before {
				left: 100%;
			}

			.info-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.skill-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.08), rgba(0, 172, 193, 0.08));
				border: 1px solid var(--amber-glow);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
			}

			.skill-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.stats-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 1.5rem;
				margin: 1.5rem 0;
			}

			.stat-item {
				background: var(--bg-secondary);
				padding: 1.5rem;
				border-radius: 12px;
				border: 1px solid var(--neutral-200);
				transition: all 0.3s ease;
			}

			.stat-item:hover {
				border-color: var(--amber-glow);
				transform: translateY(-2px);
			}

			.stat-label {
				font-weight: 600;
				color: var(--amber-glow);
				margin-bottom: 0.5rem;
			}

			.stat-value {
				color: var(--text-primary);
				font-size: 1.1rem;
			}

			.awakening-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.1), rgba(0, 172, 193, 0.1));
				border: 1px solid var(--amber-glow);
				border-radius: 12px;
				padding: 1.5rem;
				margin: 1rem 0;
			}

			.critical-awakening {
				background: linear-gradient(135deg, rgba(220, 53, 69, 0.1), rgba(255, 183, 77, 0.1));
				border-color: #dc3545;
			}

			.game-changing-awakening {
				background: linear-gradient(135deg, rgba(138, 43, 226, 0.1), rgba(255, 183, 77, 0.1));
				border-color: #8a2be2;
			}

			.priority-high {
				color: #fd7e14;
				font-weight: 600;
			}

			.priority-medium {
				color: #ffc107;
				font-weight: 600;
			}

			.priority-low {
				color: #28a745;
				font-weight: 600;
			}

			.warning-box {
				background: linear-gradient(135deg, rgba(255, 193, 7, 0.1), rgba(255, 183, 77, 0.1));
				border: 1px solid #ffc107;
				border-radius: 12px;
				padding: 1.5rem;
				margin: 1.5rem 0;
			}

			.warning-box .warning-title {
				color: #ffc107;
				font-weight: 600;
				margin-bottom: 0.5rem;
			}

			.class-showcase {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.1), rgba(0, 172, 193, 0.1));
				border: 1px solid var(--amber-glow);
				border-radius: 15px;
				padding: 2rem;
				margin-bottom: 2rem;
				display: flex;
				align-items: center;
				gap: 1.5rem;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.class-showcase::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.class-showcase:hover::before {
				left: 100%;
			}

			.class-showcase:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.class-image {
				width: 64px;
				height: 64px;
				border-radius: 12px;
				border: 2px solid var(--amber-glow);
				flex-shrink: 0;
				transition: all 0.3s ease;
			}

			.class-showcase:hover .class-image {
				transform: scale(1.05);
				box-shadow: 0 4px 15px rgba(164, 120, 100, 0.3);
			}

			.class-info h3 {
				color: var(--amber-glow);
				margin: 0 0 0.5rem 0;
				font-size: 1.4rem;
				font-weight: 600;
				font-family: 'Space Grotesk', sans-serif;
			}

			.class-info p {
				color: var(--text-secondary);
				margin: 0;
				font-size: 1rem;
				line-height: 1.5;
			}

			@keyframes sectionFadeIn {
				0% {
					opacity: 0;
					transform: translateY(20px);
				}
				100% {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@keyframes titleGlow {
				0% {
					text-shadow: 
						0 0 10px rgba(255, 183, 77, 0.3),
						0 0 20px rgba(255, 183, 77, 0.2);
				}
				100% {
					text-shadow: 
						0 0 20px rgba(255, 183, 77, 0.6),
						0 0 30px rgba(255, 183, 77, 0.4);
				}
			}

			@media (max-width: 768px) {
				.character-container {
					padding: 0 1rem;
				}

				.character-header,
				.content-section {
					padding: 2rem;
				}

				.character-title {
					font-size: 2.5rem;
				}

				.character-image {
					width: 250px;
					height: 250px;
				}

				.stats-grid {
					grid-template-columns: 1fr;
				}

				/* Memory Card mobile layout */
				.content-section div[style*="display: flex; gap: 2rem; align-items: flex-start"] {
					flex-direction: column !important;
					align-items: center !important;
				}

				.content-section img[alt="Zashiki-warashi Memory Card"] {
					width: 160px !important;
					height: 240px !important;
				}
			}
		</style>
	</Fragment>
	<div class="character-page">
		<div class="character-container">
			<!-- Character Header & Overview -->
			<section class="content-section">
				<h2 class="section-title" style="font-size:2.1rem; margin-bottom:2.5rem; text-align:center;">Character Overview</h2>
				
				<div style="display: flex; gap: 2.5rem; align-items: flex-start; flex-wrap: wrap;">
					<!-- Hero Card (Left) -->
					<div style="flex: 1.5; min-width: 340px; max-width: 520px; display: flex; flex-direction: column; align-items: center;">
						<div style="background: linear-gradient(135deg, #f8fafc 60%, #e0f7fa 100%); border-radius: 18px; box-shadow: 0 4px 18px rgba(0,0,0,0.08); padding: 2.5rem 1.5rem 1.5rem 1.5rem; border: 1.5px solid var(--amber-glow); display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 420px; width: 100%;">
							<OptimizedImage 
          src="/images/characters/Zashiki-warashi.jpg" 
          alt="Zashiki-warashi" 
          width={340}
          height={340}
          class="character-image"
          priority={true}
        />
							<h1 class="character-title">Zashiki-warashi</h1>
						</div>
						<!-- Badges in separate box with better styling -->
						<div class="badges-container" style="margin-top: 1.8rem;">
						<div style="display: flex; justify-content: center; gap: 0.7rem; flex-wrap: wrap;">
							<span class="rarity-badge sr">SR</span>
							<span class="element-badge fire">Fire</span>
							<span class="role-badge buffer">Buffer</span>
						</div>
						</div>
					</div>

					<!-- Stats (Right) -->
					<div style="flex: 1; min-width: 260px; max-width: 400px;">
						<div style="background: linear-gradient(135deg, #fffde7 60%, #e0f2f1 100%); border-radius: 18px; box-shadow: 0 4px 18px rgba(0,0,0,0.06); padding: 2.2rem 1.5rem; border: 1px solid var(--neutral-200); width: 100%;">
						<div class="stats-grid" style="margin-bottom: 1.5rem; grid-template-columns: 1fr 1fr;">
							<div class="stat-item"><div class="stat-label">Faction</div><div class="stat-value">Heian-kyo</div></div>
							<div class="stat-item"><div class="stat-label">Role</div><div class="stat-value" style="color:#4caf50; font-weight:700; letter-spacing:1px;">Buffer</div></div>
						</div>
						<div class="stats-grid" style="grid-template-columns: 1fr 1fr; gap: 1.1rem;">
							<div class="stat-item"><div class="stat-label">HP</div><div class="stat-value">7,970</div></div>
							<div class="stat-item"><div class="stat-label">Attack</div><div class="stat-value">837</div></div>
							<div class="stat-item"><div class="stat-label">Defense</div><div class="stat-value">560</div></div>
							<div class="stat-item"><div class="stat-label">Energy Recovery</div><div class="stat-value">0.25/s</div></div>
							<div class="stat-item"><div class="stat-label">Crit Rate</div><div class="stat-value">0%</div></div>
							<div class="stat-item"><div class="stat-label">Crit Damage</div><div class="stat-value">50%</div></div>
						</div>
						</div>
					</div>
				</div>
			</section>			<!-- Skills Section -->
			<section class="content-section">
				<h2 class="section-title">Skills</h2>

				<div class="skills-table-container">
					<table class="skills-table">
					<thead>
						<tr>
							<th style="width: 25%;">Skill Type</th>
							<th style="width: 25%;">Skill Name</th>
							<th>Description</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td><span class="skill-type normal-attack">Normal Attack</span></td>
							<td>
								<div class="skill-name">Housekeeper Guidance</div>
								<div style="font-size: 0.8rem; color: var(--text-secondary);">Level: 10+4 • CD: 2.0s</div>
							</td>
							<td>
								<div class="skill-description">
									Deals fire damage equal to <strong>120% of Attack</strong> to designated enemy
								</div>
							</td>
						</tr>

						<tr>
							<td><span class="skill-type auto-skill">Skill</span></td>
							<td>
								<div class="skill-name">Five Grains Harvest</div>
								<div style="font-size: 0.8rem; color: var(--text-secondary);">Level: 10+4 • CD: 5.0s</div>
							</td>
							<td>
								<div class="skill-description">
									<ul style="margin: 0; padding-left: 1rem;">
										<li><strong>All allied units gain 36% attack power</strong></li>
										<li><strong>Attack power cap:</strong> Cannot exceed 36% of Zashiki-warashi's entry attack power</li>
										<li><strong>Maximum 1 layer</strong>, lasts 15 seconds</li>
									</ul>
								</div>
							</td>
						</tr>

						<tr>
							<td><span class="skill-type ultimate">Ultimate</span></td>
							<td>
								<div class="skill-name">Share Fortune! Share Hardship!</div>
								<div style="font-size: 0.8rem; color: var(--text-secondary);">Level: 10+4 • CD: 1.0s • Energy: 3</div>
							</td>
							<td>
								<div class="skill-description">
									<ul style="margin: 0; padding-left: 1rem;">
										<li><strong>All allied units receive 36% damage increase</strong> for 15 seconds</li>
										<li><strong>Low Energy Cost:</strong> Only 3 energy allows frequent usage</li>
									</ul>
