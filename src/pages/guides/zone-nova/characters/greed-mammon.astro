---
import ZoneNovaLayout1 from '../../../../layouts/ZoneNovaLayout1.astro';
import FormattedDate from '../../../../components/FormattedDate.astro';
import OptimizedImage from '../../../../components/OptimizedImage.astro';
---

<ZoneNovaLayout1 
	title="Greed Mammon Character Information - Zone Nova - GachaWiki" 
	description="Complete information for Greed Mammon, the chaos mage burst DPS in Zone Nova"
	gameTitle="Greed Mammon Character Information"
	showBreadcrumb={true}
	breadcrumbText="Characters"
>
	<Fragment slot="head">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">		<style>
			.character-page {
				background: var(--bg-secondary);
				min-height: 100vh;
				padding: 2rem 0;
			}

			.character-container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			.character-header {
				background: linear-gradient(135deg, var(--bg-primary), var(--bg-secondary));
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 3rem;
				border: 1px solid var(--amber-glow);
				box-shadow: 0 12px 30px rgba(164, 120, 100, 0.1);
				text-align: center;
				transition: all 0.4s ease;
			}

			.character-header:hover {
				transform: translateY(-4px);
				box-shadow: 0 16px 40px rgba(164, 120, 100, 0.15);
			}

			.character-image {
				width: 300px;
				height: 300px;
				border-radius: 20px;
				object-fit: cover;
				margin: 0 auto 2rem auto;
				display: block;
				box-shadow: 0 12px 30px rgba(0, 172, 193, 0.3);
				transition: all 0.3s ease;
			}

			.character-image:hover {
				transform: scale(1.05);
				box-shadow: 0 16px 40px rgba(0, 172, 193, 0.4);
			}

			.character-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 3rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin: 0 0 1rem 0;
				animation: titleGlow 3s ease-in-out infinite alternate;
			}

			.character-subtitle {
				color: var(--text-secondary);
				font-size: 1.2rem;
				margin: 0;
				font-weight: 500;
			}

			.content-section {
				background: var(--bg-primary);
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 2rem;
				border: 1px solid var(--neutral-200);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.08);
				transition: all 0.4s ease;
				animation: sectionFadeIn 0.8s ease-out;
			}

			.content-section:hover {
				transform: translateY(-2px);
				box-shadow: 0 12px 35px rgba(164, 120, 100, 0.12);
				border-color: var(--teal-crystal);
			}

			.section-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 2rem;
				font-weight: 700;
				color: var(--text-primary);
				margin: 0 0 1.5rem 0;
				padding-bottom: 0.75rem;
				border-bottom: 2px solid var(--amber-glow);
				position: relative;
			}

			.section-title::after {
				content: '';
				position: absolute;
				bottom: -2px;
				left: 0;
				width: 60px;
				height: 2px;
				background: var(--teal-crystal);
			}

			.subsection-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.5rem;
				font-weight: 600;
				color: var(--text-primary);
				margin: 2rem 0 1rem 0;
				padding-left: 1rem;
				border-left: 4px solid var(--amber-glow);
			}

			.skill-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.3rem;
				font-weight: 600;
				color: var(--amber-glow);
				margin: 1.5rem 0 0.8rem 0;
			}

			.info-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.05), rgba(0, 172, 193, 0.05));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.info-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.info-card:hover::before {
				left: 100%;
			}

			.info-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.skill-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.08), rgba(0, 172, 193, 0.08));
				border: 1px solid var(--amber-glow);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
			}

			.skill-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.stats-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 1.5rem;
				margin: 1.5rem 0;
			}

			.stat-item {
				display: flex;
				flex-direction: column;
				align-items: center;
				padding: 1.2rem 1rem;
				background: linear-gradient(135deg, #ffffff 60%, #f8fafc 100%);
				border-radius: 12px;
				border: 1px solid var(--neutral-200);
				box-shadow: 0 2px 8px rgba(0,0,0,0.04);
				transition: all 0.3s ease;
			}

			.stat-item:hover {
				transform: translateY(-2px);
				box-shadow: 0 4px 15px rgba(0,0,0,0.08);
				border-color: var(--amber-glow);
			}

			.stat-label {
				font-size: 0.9rem;
				font-weight: 600;
				color: var(--text-secondary);
				margin-bottom: 0.5rem;
				text-transform: uppercase;
				letter-spacing: 0.5px;
			}

			.stat-value {
				font-size: 1.1rem;
				font-weight: 700;
				color: var(--text-primary);
				text-align: center;
			}

			.priority-high {
				color: #dc3545;
				font-weight: 600;
			}

			.priority-medium {
				color: #ffc107;
				font-weight: 600;
			}

			.priority-low {
				color: #28a745;
				font-weight: 600;
			}

			.awakening-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.1), rgba(0, 172, 193, 0.1));
				border: 1px solid var(--amber-glow);
				border-radius: 12px;
				padding: 1.5rem;
				margin: 1rem 0;
			}

			.critical-awakening {
				background: linear-gradient(135deg, rgba(220, 53, 69, 0.1), rgba(255, 183, 77, 0.1));
				border-color: #dc3545;
			}

			.warning-box {
				background: linear-gradient(135deg, rgba(255, 193, 7, 0.1), rgba(255, 183, 77, 0.1));
				border: 1px solid #ffc107;
				border-radius: 12px;
				padding: 1.5rem;
				margin: 1.5rem 0;
			}

			.warning-box .warning-title {
				color: #ffc107;
				font-weight: 600;
				margin-bottom: 0.5rem;
			}

			.character-images {
				display: flex;
				gap: 2rem;
				align-items: flex-start;
				margin: 1.5rem 0;
				flex-wrap: wrap;
			}

			.character-art {
				flex: 1;
				min-width: 300px;
			}

			.character-card-art {
				flex: 1;
				min-width: 250px;
			}

			.character-art img,
			.character-card-art img {
				width: 100%;
				height: auto;
				border-radius: 12px;
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.3);
				transition: all 0.3s ease;
			}

			.character-art img:hover,
			.character-card-art img:hover {
				transform: scale(1.02);
				box-shadow: 0 12px 35px rgba(164, 120, 100, 0.4);
			}

			@keyframes titleGlow {
				0% {
					text-shadow: 0 0 10px rgba(255, 183, 77, 0.3);
				}
				100% {
					text-shadow: 0 0 20px rgba(255, 183, 77, 0.6);
				}
			}

			.video-container {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.05), rgba(0, 172, 193, 0.05));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
			}

			.video-wrapper {
				position: relative;
				padding-bottom: 56.25%;
				height: 0;
				overflow: hidden;
				border-radius: 12px;
			}

			.video-wrapper iframe {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
			}

			@keyframes sectionFadeIn {
				0% {
					opacity: 0;
					transform: translateY(20px);
				}
				100% {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@media (max-width: 768px) {
				.character-container {
					padding: 0 1rem;
				}

				.character-header,
				.content-section {
					padding: 2rem;
				}

				.character-title {
					font-size: 2.5rem;
				}

				.character-image {
					width: 250px;
					height: 250px;
				}

				.stats-grid {
					grid-template-columns: 1fr;
				}

				/* Memory Card mobile layout */
				.content-section div[style*="display: flex; gap: 2rem; align-items: flex-start"] {
					flex-direction: column !important;
					align-items: center !important;
				}

				.content-section img[alt="Greed Mammon Memory Card"] {
					width: 160px !important;
					height: 240px !important;
				}			}

			.character-badge {
				display: inline-block;
				padding: 0.38rem 1.1rem;
				border-radius: 14px;
				font-weight: 700;
				font-size: 1.05rem;
				letter-spacing: 0.5px;
				box-shadow: 0 2px 8px rgba(0,0,0,0.10);
				margin: 0 0.1rem;
				text-shadow: 0 1px 2px rgba(0,0,0,0.08);
				border: none;
			}			.ssr-badge {
				background: #ffe066;
				color: #222;
				border: 1.5px solid #eecb4d;
			}			.sr-badge { 
				background: #7ecfff; 
				color: #222; 
				border: 1.5px solid #4dbfff; 
			}

			.role-badge, .element-badge, .rarity-badge {
				display: inline-block;
				padding: 0.25rem 0.85rem;
				border-radius: 14px;
				font-size: 1rem;
				font-weight: 700;
				margin: 0 0.1rem;
				box-shadow: 0 1px 4px rgba(0,0,0,0.07);
				letter-spacing: 0.02em;
			}

			.rarity-badge.sr { 
				background: #7ecfff; 
				color: #222; 
				border: 1.5px solid #4dbfff; 
			}

			.element-badge.chaos { 
				background: #8E24AA; 
				color: white; 
				border: 1.5px solid #6A1B9A; 
			}

			.role-badge.dps { 
				background: #ffb347; 
				color: #222; 
				border: 1.5px solid #ff9800; 
			}

			.chaos-badge {
				background: #e1bee7;
				color: #4a148c;
				border: 1.5px solid #9c27b0;
			}

			.dps-badge {
				background: #ffb347;
				color: #222;
				border: 1.5px solid #ff9800;
			}

			.badges-container {
				background: linear-gradient(135deg, #f8fafc 60%, #e0f7fa 100%);
				border-radius: 14px;
				box-shadow: 0 3px 15px rgba(0,0,0,0.08);
				padding: 1.2rem 1.8rem;
				border: 1px solid var(--neutral-200);
				width: 100%;
				position: relative;
				overflow: hidden;
			}

			.badges-container::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.badges-container:hover::before {
				left: 100%;
			}

			.badges-container:hover {
				transform: translateY(-2px);
				box-shadow: 0 6px 20px rgba(0,0,0,0.12);
			}

			.skills-table-container {
				overflow-x: auto;
				border-radius: 16px;
				box-shadow: 0 4px 20px rgba(0,0,0,0.08);
				margin: 2rem 0;
			}

			.skills-table {
				width: 100%;
				border-collapse: collapse;
				background: transparent;
			}

			.skills-table thead {
				background: var(--amber-glow);
			}

			.skills-table thead th {
				background: var(--amber-glow);
				color: #222;
				padding: 1rem;
				text-align: left;
				font-weight: 700;
				border-bottom: 2px solid var(--neutral-200);
			}			.skills-table td {
				padding: 1.2rem 1rem;
				border-bottom: 1px solid var(--neutral-200);
				vertical-align: top;
				color: var(--text-primary);
			}

			.skills-table tr:hover {
				background: rgba(255, 183, 77, 0.05);
			}

			.skills-table td:first-child {
				width: 150px;
				text-align: center;
			}

			.skills-table td:nth-child(2) {
				width: 250px;
				color: var(--text-primary);
			}

			.skills-table td:last-child {
				min-width: 400px;
				color: var(--text-primary);
			}

			.skill-type {
				display: inline-block;
				padding: 0.4rem 0.8rem;
				border-radius: 12px;
				font-size: 0.85rem;
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 0.5px;
				border: 1px solid;
			}			.skill-type.normal-attack {
				background: #e3f2fd;
				color: #1976d2;
				border: 1px solid #bbdefb;
			}

			.skill-type.auto-skill {
				background: #f3e5f5;
				color: #7b1fa2;
				border: 1px solid #ce93d8;
			}

			.skill-type.ultimate {
				background: #fff3e0;
				color: #f57c00;
				border: 1px solid #ffcc02;
			}

			.skill-type.passive {
				background: #e8f5e8;
				color: #388e3c;
				border: 1px solid #a5d6a7;
			}

			.skill-type.team-skill {
				background: #fce4ec;
				color: #c2185b;
				border: 1px solid #f8bbd9;
			}

			.skill-name, .awakening-name {
				font-weight: 600;
				color: var(--amber-glow);
				margin-bottom: 0.5rem;
			}

			.skill-description, .awakening-description {
				color: var(--text-secondary);
				line-height: 1.6;
			}

			@keyframes titleGlow {
				0% {
					text-shadow: 0 0 10px rgba(255, 183, 77, 0.3);
				}
				100% {
					text-shadow: 0 0 20px rgba(255, 183, 77, 0.6);
				}
			}

			.video-container {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.05), rgba(0, 172, 193, 0.05));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
			}

			.video-wrapper {
				position: relative;
				padding-bottom: 56.25%;
				height: 0;
				overflow: hidden;
				border-radius: 12px;
			}

			.video-wrapper iframe {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
			}

			@keyframes sectionFadeIn {
				0% {
					opacity: 0;
					transform: translateY(20px);
				}
				100% {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@media (max-width: 768px) {
				.character-container {
					padding: 0 1rem;
				}

				.character-header,
				.content-section {
					padding: 2rem;
				}

				.character-title {
					font-size: 2.5rem;
				}

				.character-image {
					width: 250px;
					height: 250px;
				}

				.stats-grid {
					grid-template-columns: 1fr;
				}

				/* Memory Card mobile layout */
				.content-section div[style*="display: flex; gap: 2rem; align-items: flex-start"] {
					flex-direction: column !important;
					align-items: center !important;
				}				.content-section img[alt="Greed Mammon Memory Card"] {
					width: 160px !important;
					height: 240px !important;
				}
			}
		</style>
	</Fragment>
	<div class="character-page">
		<div class="character-container">		<!-- Character Header & Overview (merged) -->
		<section class="content-section">
			<h2 class="section-title" style="font-size:2.1rem; margin-bottom:2.5rem; text-align:center;">Character Overview</h2>
			<div style="display: flex; gap: 2.5rem; align-items: flex-start; flex-wrap: wrap;">
				<!-- Hero Card (Left) -->
				<div style="flex: 1.5; min-width: 340px; max-width: 520px; display: flex; flex-direction: column; align-items: center;">
					<div style="background: linear-gradient(135deg, #f8fafc 60%, #e0f7fa 100%); border-radius: 18px; box-shadow: 0 4px 18px rgba(0,0,0,0.08); padding: 2.5rem 1.5rem 1.5rem 1.5rem; border: 1.5px solid var(--amber-glow); display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 420px; width: 100%;">
						<OptimizedImage 
          src="/images/characters/Greed-Mammon.jpg" 
          alt="Greed Mammon" 
          width={340}
          height={340}
          class="character-image"
          priority={true}
        />
						<h1 class="character-title" style="margin: 0; font-size: 2.8rem; text-align:center; font-weight: 700; background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; animation: titleGlow 3s ease-in-out infinite alternate;">Greed Mammon</h1>
					</div>					<!-- Badges in separate box with better styling -->
					<div class="badges-container" style="margin-top: 1.8rem;">
						<div style="display: flex; justify-content: center; gap: 0.7rem; flex-wrap: wrap;">
							<span class="rarity-badge sr">SR</span>
							<span class="element-badge chaos">Chaos</span>
							<span class="role-badge dps">DPS</span>
						</div>
					</div>
				</div>
				<!-- Stats (Right) -->
				<div style="flex: 1; min-width: 260px; max-width: 400px;">
					<div style="background: linear-gradient(135deg, #fffde7 60%, #e0f2f1 100%); border-radius: 18px; box-shadow: 0 4px 18px rgba(0,0,0,0.06); padding: 2.2rem 1.5rem; border: 1px solid var(--neutral-200); width: 100%;">
						<div class="stats-grid" style="margin-bottom: 1.5rem; grid-template-columns: 1fr 1fr;">
							<div class="stat-item"><div class="stat-label" style="color:#fbc02d; font-size:1.1rem;">Faction</div><div class="stat-value" style="font-size:1.25rem; font-weight:600; letter-spacing:1px; color:#222;">Avalon</div></div>
							<div class="stat-item"><div class="stat-label" style="color:#ff9800; font-size:1.1rem;">Role</div><div class="stat-value" style="font-size:1.25rem; font-weight:700; color:#8e24aa; letter-spacing:1px;">DPS</div></div>
						</div>
						<div class="stats-grid" style="grid-template-columns: 1fr 1fr; gap: 1.1rem;">
							<div class="stat-item"><div class="stat-label" style="color:#fbc02d;">HP</div><div class="stat-value" style="font-size:1.15rem; font-weight:600;">6,694</div></div>
							<div class="stat-item"><div class="stat-label" style="color:#ff9800;">Attack</div><div class="stat-value" style="font-size:1.15rem; font-weight:600;">1,088</div></div>
							<div class="stat-item"><div class="stat-label" style="color:#fbc02d;">Defense</div><div class="stat-value" style="font-size:1.15rem; font-weight:600;">442</div></div>
							<div class="stat-item"><div class="stat-label" style="color:#ff9800;">Energy Regen</div><div class="stat-value" style="font-size:1.15rem; font-weight:600;">0.25/s</div></div>
							<div class="stat-item"><div class="stat-label" style="color:#fbc02d;">Crit Rate</div><div class="stat-value" style="font-size:1.15rem; font-weight:600;">0%</div></div>
							<div class="stat-item"><div class="stat-label" style="color:#ff9800;">Crit Damage</div><div class="stat-value" style="font-size:1.15rem; font-weight:600;">50%</div></div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- Skills -->
		<section class="content-section">
			<h2 class="section-title">Skills</h2>
			
			<div class="skills-table-container">
				<table class="skills-table">
					<thead>
						<tr>
							<th>Skill Type</th>
							<th>Skill Name</th>
							<th>Description</th>
						</tr>
					</thead>					<tbody>
						<tr>
							<td><span class="skill-type normal-attack">Normal Attack</span></td>
							<td>
								<div class="skill-name">The More You Hit, The Richer</div>
								<div style="font-size: 0.8rem; color: var(--text-secondary);">Level: 10+4 • CD: 2.0s</div>
							</td>
							<td>
								<div class="skill-description">
									Deals chaos damage equal to <strong>120% of Attack</strong> to designated enemy unit
								</div>
							</td>
