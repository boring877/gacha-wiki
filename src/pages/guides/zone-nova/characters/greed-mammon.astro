>
	<Fragment slot="head">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
		<style>
			.back-button {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				background: var(--bg-primary);
				color: var(--text-primary);
				text-decoration: none;
				padding: 1rem 1.5rem;
				border-radius: 12px;
				border: 1px solid var(--amber-glow);
				font-family: 'Space Grotesk', sans-serif;
				font-weight: 600;
				font-size: 1rem;
				margin-bottom: 2rem;
				transition: all 0.3s ease;
				box-shadow: 0 4px 12px rgba(164, 120, 100, 0.2);
			}

			.back-button:hover {
				background: var(--amber-glow);
				color: var(--text-inverse);
				transform: translateY(-2px);
				box-shadow: 0 8px 20px rgba(164, 120, 100, 0.3);
			}

			.back-button:hover .back-arrow {
				transform: translateX(-3px);
			}

			.back-arrow {
				font-size: 1.2rem;
				transition: transform 0.3s ease;
			}

			.character-page {
				background: var(--bg-secondary);
				min-height: 100vh;
				padding: 2rem 0;
			}

			.character-container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			.character-header {
				background: linear-gradient(135deg, var(--bg-primary), var(--bg-secondary));
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 3rem;
				border: 1px solid var(--amber-glow);
				box-shadow: 0 12px 30px rgba(164, 120, 100, 0.1);
				text-align: center;
				transition: all 0.4s ease;
			}

			.character-header:hover {
				transform: translateY(-4px);
				box-shadow: 0 16px 40px rgba(164, 120, 100, 0.15);
			}

			.character-image {
				width: 300px;
				height: 300px;
				border-radius: 20px;
				object-fit: cover;
				margin: 0 auto 2rem auto;
				display: block;
				box-shadow: 0 12px 30px rgba(0, 172, 193, 0.3);
				transition: all 0.3s ease;
			}

			.character-image:hover {
				transform: scale(1.05);
				box-shadow: 0 16px 40px rgba(0, 172, 193, 0.4);
			}

			.character-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 3rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin: 0 0 1rem 0;
				animation: titleGlow 3s ease-in-out infinite alternate;
			}

			.character-subtitle {
				color: var(--text-secondary);
				font-size: 1.2rem;
				margin: 0;
				font-weight: 500;
			}

			.content-section {
				background: var(--bg-primary);
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 2rem;
				border: 1px solid var(--neutral-200);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.08);
				transition: all 0.4s ease;
				animation: sectionFadeIn 0.8s ease-out;
			}

			.content-section:hover {
				transform: translateY(-2px);
				box-shadow: 0 12px 35px rgba(164, 120, 100, 0.12);
				border-color: var(--teal-crystal);
			}

			.section-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 2rem;
				font-weight: 700;
				color: var(--text-primary);
				margin: 0 0 1.5rem 0;
				padding-bottom: 0.75rem;
				border-bottom: 2px solid var(--amber-glow);
				position: relative;
			}

			.section-title::after {
				content: '';
				position: absolute;
				bottom: -2px;
				left: 0;
				width: 60px;
				height: 2px;
				background: var(--teal-crystal);
			}

			.subsection-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.5rem;
				font-weight: 600;
				color: var(--text-primary);
				margin: 2rem 0 1rem 0;
				padding-left: 1rem;
				border-left: 4px solid var(--amber-glow);
			}

			.skill-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.3rem;
				font-weight: 600;
				color: var(--amber-glow);
				margin: 1.5rem 0 0.8rem 0;
			}

			.info-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.05), rgba(0, 172, 193, 0.05));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.info-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.info-card:hover::before {
				left: 100%;
			}

			.info-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.skill-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.08), rgba(0, 172, 193, 0.08));
				border: 1px solid var(--amber-glow);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
			}

			.skill-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.stats-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 1.5rem;
				margin: 1.5rem 0;
			}

			.stat-item {
				background: var(--bg-secondary);
				padding: 1.5rem;
				border-radius: 12px;
				border: 1px solid var(--neutral-200);
				transition: all 0.3s ease;
			}

			.stat-item:hover {
				border-color: var(--amber-glow);
				transform: translateY(-2px);
			}

			.stat-label {
				font-weight: 600;
				color: var(--amber-glow);
				margin-bottom: 0.5rem;
			}

			.stat-value {
				color: var(--text-primary);
				font-size: 1.1rem;
			}

			.priority-high {
				color: #dc3545;
				font-weight: 600;
			}

			.priority-medium {
				color: #ffc107;
				font-weight: 600;
			}

			.priority-low {
				color: #28a745;
				font-weight: 600;
			}

			.awakening-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.1), rgba(0, 172, 193, 0.1));
				border: 1px solid var(--amber-glow);
				border-radius: 12px;
				padding: 1.5rem;
				margin: 1rem 0;
			}

			.critical-awakening {
				background: linear-gradient(135deg, rgba(220, 53, 69, 0.1), rgba(255, 183, 77, 0.1));
				border-color: #dc3545;
			}

			.warning-box {
				background: linear-gradient(135deg, rgba(255, 193, 7, 0.1), rgba(255, 183, 77, 0.1));
				border: 1px solid #ffc107;
				border-radius: 12px;
				padding: 1.5rem;
				margin: 1.5rem 0;
			}

			.warning-box .warning-title {
				color: #ffc107;
				font-weight: 600;
				margin-bottom: 0.5rem;
			}

			.character-images {
				display: flex;
				gap: 2rem;
				align-items: flex-start;
				margin: 1.5rem 0;
				flex-wrap: wrap;
			}

			.character-art {
				flex: 1;
				min-width: 300px;
			}

			.character-card-art {
				flex: 1;
				min-width: 250px;
			}

			.character-art img,
			.character-card-art img {
				width: 100%;
				height: auto;
				border-radius: 12px;
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.3);
				transition: all 0.3s ease;
			}

			.character-art img:hover,
			.character-card-art img:hover {
				transform: scale(1.02);
				box-shadow: 0 12px 35px rgba(164, 120, 100, 0.4);
			}

			@keyframes titleGlow {
				0% {
					text-shadow: 0 0 10px rgba(255, 183, 77, 0.3);
				}
				100% {
					text-shadow: 0 0 20px rgba(255, 183, 77, 0.6);
				}
			}

			.video-container {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.05), rgba(0, 172, 193, 0.05));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
			}

			.video-wrapper {
				position: relative;
				padding-bottom: 56.25%;
				height: 0;
				overflow: hidden;
				border-radius: 12px;
			}

			.video-wrapper iframe {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
			}

			@keyframes sectionFadeIn {
				0% {
					opacity: 0;
					transform: translateY(20px);
				}
				100% {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@media (max-width: 768px) {
				.character-container {
					padding: 0 1rem;
				}

				.character-header,
				.content-section {
					padding: 2rem;
				}

				.character-title {
					font-size: 2.5rem;
				}

				.character-image {
					width: 250px;
					height: 250px;
				}

				.stats-grid {
					grid-template-columns: 1fr;
				}

				/* Memory Card mobile layout */
				.content-section div[style*="display: flex; gap: 2rem; align-items: flex-start"] {
					flex-direction: column !important;
					align-items: center !important;
				}

				.content-section img[alt="Greed Mammon Memory Card"] {
