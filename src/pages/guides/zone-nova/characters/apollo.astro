							</div>
						</div>
					</div>
				</div>			</section>

			<!-- Skills Section -->
			<section class="content-section">
				<h2 class="section-title">Skills</h2>

				<div class="skills-table-container">
					<table class="skills-table">
						<thead>
							<tr>
								<th>Skill Type</th>
								<th>Skill Name</th>
								<th>Description</th>
							</tr>
