---
import ZoneNovaLayout1 from '../../../../layouts/ZoneNovaLayout1.astro';
import FormattedDate from '../../../../components/FormattedDate.astro';
---

<ZoneNovaLayout1 
	title="Lancelot (Drowning Knight of the Lake) Character Guide - Zone Nova - GachaWiki" 
	description="Complete guide for Lancelot, the Drowning Knight of the Lake HP-scaling guardian tank in Zone Nova"
	gameTitle="Lancelot Character Information"
	showBreadcrumb={true}
