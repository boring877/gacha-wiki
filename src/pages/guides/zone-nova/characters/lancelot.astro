				border: 1px solid #f8bbd9;
			}

			@keyframes titleGlow {
				0% {
					text-shadow: 0 0 10px rgba(255, 183, 77, 0.3);
				}
				100% {
					text-shadow: 0 0 20px rgba(255, 183, 77, 0.6);
				}
			}

			@keyframes sectionFadeIn {
				0% {
					opacity: 0;
					transform: translateY(20px);
				}
				100% {
					opacity: 1;
					transform: translateY(0);
				}
			}

			.class-showcase {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.1), rgba(0, 172, 193, 0.1));
				border: 1px solid var(--amber-glow);
				border-radius: 15px;
				padding: 2rem;
				margin-bottom: 2rem;
				display: flex;
				align-items: center;
				gap: 1.5rem;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.class-showcase::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.class-showcase:hover::before {
				left: 100%;
			}

			.class-showcase:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.class-image {
				width: 64px;
				height: 64px;
				border-radius: 12px;
				border: 2px solid var(--amber-glow);
				flex-shrink: 0;
				transition: all 0.3s ease;
			}

			.class-showcase:hover .class-image {
				transform: scale(1.05);
				box-shadow: 0 4px 15px rgba(164, 120, 100, 0.3);
			}

			.class-info h3 {
				color: var(--amber-glow);
				margin: 0 0 0.5rem 0;
				font-size: 1.4rem;
				font-weight: 600;
				font-family: 'Space Grotesk', sans-serif;
			}

			.class-info p {
				color: var(--text-secondary);
				margin: 0;
				font-size: 1rem;
				line-height: 1.5;
			}

			@media (max-width: 768px) {
				.character-container {
					padding: 0 1rem;
				}
				
				.content-section {
					padding: 2rem;
				}
				
				.section-title {
					font-size: 1.8rem;
				}

				.character-title {
					font-size: 2.5rem;
