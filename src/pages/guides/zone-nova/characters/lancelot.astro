---
import ZoneNovaLayout1 from '../../../../layouts/ZoneNovaLayout1.astro';
import FormattedDate from '../../../../components/FormattedDate.astro';
---

<ZoneNovaLayout1 
	title="Lancelot (Drowning Knight of the Lake) Character Guide - Zone Nova - GachaWiki" 
	description="Complete guide for Lancelot, the Drowning Knight of the Lake HP-scaling guardian tank in Zone Nova"
	gameTitle="Lancelot Character Guide"
	showBreadcrumb={true}
	breadcrumbText="Characters"
>
	<Fragment slot="head">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
		<style>
			.back-button {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				background: var(--bg-primary);
				color: var(--text-primary);
				text-decoration: none;
				padding: 1rem 1.5rem;
				border-radius: 12px;
				border: 1px solid var(--amber-glow);
				font-family: 'Space Grotesk', sans-serif;
				font-weight: 600;
				font-size: 1rem;
				margin-bottom: 2rem;
				transition: all 0.3s ease;
				box-shadow: 0 4px 12px rgba(164, 120, 100, 0.2);
			}

			.back-button:hover {
				background: var(--amber-glow);
				color: var(--text-inverse);
				transform: translateY(-2px);
				box-shadow: 0 8px 20px rgba(164, 120, 100, 0.3);
			}

			.back-button:hover .back-arrow {
				transform: translateX(-3px);
			}

			.back-arrow {
				font-size: 1.2rem;
				transition: transform 0.3s ease;
			}

			.character-page {
				background: var(--bg-secondary);
				min-height: 100vh;
				padding: 2rem 0;
			}

			.character-container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			.character-header {
				background: linear-gradient(135deg, var(--bg-primary), var(--bg-secondary));
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 3rem;
				border: 1px solid var(--amber-glow);
				box-shadow: 0 12px 30px rgba(164, 120, 100, 0.1);
				text-align: center;
				transition: all 0.4s ease;
			}

			.character-header:hover {
				transform: translateY(-4px);
				box-shadow: 0 16px 40px rgba(164, 120, 100, 0.15);
			}

			.character-image {
				width: 300px;
				height: 300px;
				border-radius: 20px;
				object-fit: cover;
				margin: 0 auto 2rem auto;
				display: block;
				box-shadow: 0 12px 30px rgba(0, 172, 193, 0.3);
				transition: all 0.3s ease;
			}

			.character-image:hover {
				transform: scale(1.05);
				box-shadow: 0 16px 40px rgba(0, 172, 193, 0.4);
			}

			.character-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 3rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin: 0 0 1rem 0;
				animation: titleGlow 3s ease-in-out infinite alternate;
			}

			.character-subtitle {
				color: var(--text-secondary);
				font-size: 1.2rem;
				margin: 0;
				font-weight: 500;
			}

			.content-section {
				background: var(--bg-primary);
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 2rem;
				border: 1px solid var(--neutral-200);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.08);
				transition: all 0.4s ease;
				animation: sectionFadeIn 0.8s ease-out;
			}

			.content-section:hover {
				transform: translateY(-2px);
				box-shadow: 0 12px 35px rgba(164, 120, 100, 0.12);
				border-color: var(--teal-crystal);
			}

			.section-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 2rem;
				font-weight: 700;
				color: var(--text-primary);
				margin: 0 0 1.5rem 0;
				padding-bottom: 0.75rem;
				border-bottom: 2px solid var(--amber-glow);
				position: relative;
			}

			.section-title::after {
				content: '';
				position: absolute;
				bottom: -2px;
				left: 0;
				width: 60px;
				height: 2px;
				background: var(--teal-crystal);
			}

			.subsection-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.5rem;
				font-weight: 600;
				color: var(--text-primary);
				margin: 2rem 0 1rem 0;
				padding-left: 1rem;
				border-left: 4px solid var(--amber-glow);
			}

			.skill-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.3rem;
				font-weight: 600;
				color: var(--amber-glow);
				margin: 1.5rem 0 0.8rem 0;
			}

			.info-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.05), rgba(0, 172, 193, 0.05));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.info-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.info-card:hover::before {
				left: 100%;
			}

			.info-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.skill-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.08), rgba(0, 172, 193, 0.08));
				border: 1px solid var(--amber-glow);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
			}

			.skill-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.stats-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 1.5rem;
				margin: 1.5rem 0;
			}

			.stat-item {
				background: var(--bg-secondary);
				padding: 1.5rem;
				border-radius: 12px;
				border: 1px solid var(--neutral-200);
				transition: all 0.3s ease;
			}

			.stat-item:hover {
				border-color: var(--amber-glow);
				transform: translateY(-2px);
			}

			.stat-label {
				font-weight: 600;
				color: var(--amber-glow);
				margin-bottom: 0.5rem;
			}

			.stat-value {
				color: var(--text-primary);
				font-size: 1.1rem;
			}

			.priority-high {
				color: #dc3545;
				font-weight: 600;
			}

			.priority-medium {
				color: #ffc107;
				font-weight: 600;
			}

			.priority-low {
				color: #28a745;
				font-weight: 600;
			}

			.awakening-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.1), rgba(0, 172, 193, 0.1));
				border: 1px solid var(--amber-glow);
				border-radius: 12px;
				padding: 1.5rem;
				margin: 1rem 0;
			}

			.critical-awakening {
				background: linear-gradient(135deg, rgba(220, 53, 69, 0.1), rgba(255, 183, 77, 0.1));
				border-color: #dc3545;
			}

			.warning-box {
				background: linear-gradient(135deg, rgba(255, 193, 7, 0.1), rgba(255, 183, 77, 0.1));
				border: 1px solid #ffc107;
				border-radius: 12px;
				padding: 1.5rem;
				margin: 1.5rem 0;
			}

			.warning-box .warning-title {
				color: #ffc107;
				font-weight: 600;
				margin-bottom: 0.5rem;
			}

			.video-container {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.05), rgba(0, 172, 193, 0.05));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
			}

			.video-wrapper {
				position: relative;
				padding-bottom: 56.25%;
				height: 0;
				overflow: hidden;
				border-radius: 12px;
			}

			.video-wrapper iframe {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
			}

			@keyframes titleGlow {
				0% {
					text-shadow: 0 0 10px rgba(255, 183, 77, 0.3);
				}
				100% {
					text-shadow: 0 0 20px rgba(255, 183, 77, 0.6);
				}
			}

			@keyframes sectionFadeIn {
				0% {
					opacity: 0;
					transform: translateY(20px);
				}
				100% {
					opacity: 1;
					transform: translateY(0);
				}
			}

			.class-showcase {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.1), rgba(0, 172, 193, 0.1));
				border: 1px solid var(--amber-glow);
				border-radius: 15px;
				padding: 2rem;
				margin-bottom: 2rem;
				display: flex;
				align-items: center;
				gap: 1.5rem;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.class-showcase::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.class-showcase:hover::before {
				left: 100%;
			}

			.class-showcase:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.class-image {
				width: 64px;
				height: 64px;
				border-radius: 12px;
				border: 2px solid var(--amber-glow);
				flex-shrink: 0;
				transition: all 0.3s ease;
			}

			.class-showcase:hover .class-image {
				transform: scale(1.05);
				box-shadow: 0 4px 15px rgba(164, 120, 100, 0.3);
			}

			.class-info h3 {
				color: var(--amber-glow);
				margin: 0 0 0.5rem 0;
				font-size: 1.4rem;
				font-weight: 600;
				font-family: 'Space Grotesk', sans-serif;
			}

			.class-info p {
				color: var(--text-secondary);
				margin: 0;
				font-size: 1rem;
				line-height: 1.5;
			}

			@media (max-width: 768px) {
				.character-container {
					padding: 0 1rem;
				}

				.character-header,
				.content-section {
					padding: 2rem;
				}

				.character-title {
					font-size: 2.5rem;
				}

				.character-image {
					width: 250px;
					height: 250px;
				}

				.stats-grid {
					grid-template-columns: 1fr;
				}

				/* Memory Card mobile layout */
				.content-section div[style*="display: flex; gap: 2rem; align-items: flex-start"] {
					flex-direction: column !important;
					align-items: center !important;
				}

				.content-section img[alt="Lancelot Memory Card"] {
					width: 160px !important;
					height: 240px !important;
				}
			}
		</style>
	</Fragment>

	<div class="character-page">
		<div class="character-container">


			<!-- Character Header -->
			<header class="character-header">
				<!-- Character Image -->
				<img src="/images/characters/Lancelot0.jpg" alt="Lancelot - Drowning Knight of the Lake" class="character-image" loading="lazy" />
				
				<h1 class="character-title">Lancelot</h1>
				<p class="character-subtitle">Drowning Knight of the Lake</p>
				<p class="character-subtitle">SR • Holy • Guardian/Tank</p>
			</header>

			<!-- Character Overview -->
			<section class="content-section">
				<h2 class="section-title">Character Overview</h2>
				
				<!-- Class Showcase -->
				<div class="class-showcase">
					<img src="/images/characters/class/tank.jpg" alt="Tank Class" class="class-image">
					<div class="class-info">
						<h3>守护使 (Guardian)</h3>
					</div>
				</div>
				
				<div class="stats-grid">
					<div class="stat-item">
						<div class="stat-label">Faction</div>
						<div class="stat-value">Avalon</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Role</div>
						<div class="stat-value">Physical DPS</div>
					</div>
				</div>

				<h3 class="subsection-title">Base Stats at Level 80</h3>
				<div class="stats-grid">
					<div class="stat-item">
						<div class="stat-label">HP</div>
						<div class="stat-value">5,500</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Attack</div>
						<div class="stat-value">400</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Defense</div>
						<div class="stat-value">575</div>
					</div>
				</div>

				<div class="info-card">
					<p style="color: var(--text-primary); font-size: 1.1rem; line-height: 1.6; margin: 0;">
						Lancelot, known as the Drowning Knight of the Lake, is a powerful HP-scaling tank who excels at protecting the team through damage reduction and self-sustaining shields. Her unique kit revolves around HP-based damage and healing, making her nearly unkillable when properly built. She provides excellent team-wide damage reduction while maintaining strong survivability through her passive healing and shield generation.
					</p>
				</div>
			</section>

			<!-- Skills Section -->
			<section class="content-section">
				<h2 class="section-title">Skills</h2>

				<div class="skill-card">
					<h3 class="skill-title">🌊 Normal Attack: Lake Sword</h3>
					<p><strong>Level:</strong> 10+4 | <strong>CD:</strong> 2.0s</p>
					<p>Deals holy damage to designated enemy unit equal to <strong>12% of own maximum HP</strong></p>
				</div>

				<div class="skill-card">
					<h3 class="skill-title">⚡ Auto Skill: Lake Sacred Shield</h3>
					<p><strong>Level:</strong> 10+4 | <strong>Auto-trigger CD:</strong> 4.0s</p>
					<ul>
						<li>Adds a <strong>[Shield]</strong> equal to <strong>5.1% of max HP</strong> to self</li>
						<li><strong>[Shield]</strong> can stack up to <strong>30% of HP limit</strong></li>
						<li>Provides continuous defensive layering</li>
					</ul>
				</div>

				<div class="skill-card">
					<h3 class="skill-title">💥 Ultimate: Blooming Knight's Flower</h3>
					<p><strong>Level:</strong> 10+4 | <strong>CD:</strong> 3.0s | <strong>Energy Cost:</strong> 3</p>
					<ul>
						<li>Immediately moves in front of specified enemy unit</li>
						<li><strong>All team characters receive 24% less damage for 15 seconds</strong></li>
						<li>Provides crucial team-wide damage reduction</li>
					</ul>
				</div>

				<div class="skill-card">
					<h3 class="skill-title">👑 Passive: Lake Spirit's Blessing</h3>
					<p><strong>Level:</strong> 10+4</p>
					<ul>
						<li><strong>When HP drops below 50%</strong> after taking damage:</li>
						<li>Recover <strong>9.6% of maximum HP every 3 seconds</strong></li>
						<li>Effect lasts for <strong>15 seconds</strong></li>
						<li>Provides excellent sustain in critical moments</li>
					</ul>
				</div>
			</section>

			<!-- Team Composition Skill -->
			<section class="content-section">
				<h2 class="section-title">Team Composition Skill</h2>

				<div class="skill-card">
					<h3 class="skill-title">🏰 Combination Skill</h3>
					<p><strong>Level:</strong> 1</p>
					
					<div class="warning-box">
						<div class="warning-title">⭐ Activation Requirements</div>
						<p>Triggers when team contains <strong>2 [Avalon] characters</strong> OR <strong>2 [Holy] characters</strong></p>
					</div>

					<div style="margin: 1rem 0;">
						<p><strong>Effects:</strong></p>
						<ul>
							<li>Own maximum HP increased by <strong>10%</strong></li>
							<li>Defense increased by <strong>10%</strong></li>
						</ul>
					</div>

					<div class="info-card">
						<p style="color: var(--text-primary); font-size: 1rem; line-height: 1.6; margin: 0;">
							<strong>Why This Matters:</strong> This team skill enhances both her survivability and damage output since her abilities scale with HP. As an Avalon knight, pairing her with other Avalon or Holy characters significantly boosts her effectiveness while maintaining team synergy.
						</p>
					</div>
				</div>
			</section>

			<!-- Awakening Effects -->
			<section class="content-section">
				<h2 class="section-title">Awakening Effects</h2>

				<div class="awakening-card critical-awakening">
					<h3 class="skill-title">🌟 Awakening 1 (CRITICAL)</h3>
					<p>Defense increased by <strong>45%</strong></p>
					<p>Massive boost to survivability and provides minor scaling for some abilities</p>
				</div>

				<div class="awakening-card critical-awakening">
					<h3 class="skill-title">🌟 Awakening 2 (HIGHLY RECOMMENDED)</h3>
					<p>When attacked, if <strong>[the character]</strong> has a shield, damage received is reduced by <strong>10%</strong></p>
					<p>Synergizes perfectly with her auto-skill shield generation</p>
				</div>

				<div class="awakening-card">
					<h3 class="skill-title">Awakening 3</h3>
					<p><strong>[Skills]</strong> and <strong>[Normal Attack]</strong> level and level cap <strong>+4</strong></p>
					<p>Increases damage output and shield effectiveness</p>
				</div>

				<div class="awakening-card critical-awakening">
					<h3 class="skill-title">🌟 Awakening 4 (CRITICAL)</h3>
					<p>HP increased by <strong>30%</strong></p>
					<p>Significant boost to all HP-scaling abilities and survivability</p>
				</div>

				<div class="awakening-card">
					<h3 class="skill-title">Awakening 5</h3>
					<p><strong>[Ultimate]</strong> and <strong>[Passive]</strong> level and level cap <strong>+4</strong></p>
					<p>Enhances team protection and self-sustain capabilities</p>
				</div>

				<div class="awakening-card">
					<h3 class="skill-title">Awakening 6</h3>
					<p>Recovery amount from passive effect increased by <strong>100%</strong></p>
					<p>Doubles the healing from Lake Spirit's Blessing (9.6% → 19.2% HP recovery)</p>
				</div>
			</section>

			<!-- Recommended Builds -->
			<section class="content-section">
				<h2 class="section-title">Recommended Builds</h2>

				<h3 class="subsection-title">Rune Sets</h3>
				
				<div class="info-card">
					<h4 style="color: var(--amber-glow); margin: 0 0 1rem 0;">🌟 Primary Build (Balanced Defense)</h4>
					<ul>
						<li><strong>4-Piece 魂基 (Hun Ji):</strong> Defense +12%, Shield Effectiveness +20%</li>
						<li><strong>2-Piece 礼恩 (Li En):</strong> HP +8%</li>
					</ul>
				</div>

				<div class="info-card">
					<h4 style="color: var(--teal-crystal); margin: 0 0 1rem 0;">🔄 Alternative Build (HP Focus)</h4>
					<ul>
						<li><strong>4-Piece 礼恩 (Li En):</strong> HP +8%, After Ultimate: Take 5% less damage (10s)</li>
						<li><strong>2-Piece 魂基 (Hun Ji):</strong> Defense +12%</li>
					</ul>
				</div>

				<h3 class="subsection-title">Main Stats Priority</h3>
				<div class="stats-grid">
					<div class="stat-item">
						<div class="stat-label">Position 1</div>
						<div class="stat-value">HP (Fixed)</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 2</div>
						<div class="stat-value">ATK (Fixed)</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 3</div>
						<div class="stat-value">DEF (Fixed)</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 4</div>
						<div class="stat-value">HP%</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 5</div>
						<div class="stat-value">HP%</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 6</div>
						<div class="stat-value">HP%</div>
					</div>
				</div>

				<h3 class="subsection-title">Substat Priorities</h3>
				<div class="info-card">
					<ol style="color: var(--text-primary); font-size: 1.1rem; line-height: 1.6;">
						<li>HP%</li>
						<li>HP (Flat)</li>
						<li>Defense%</li>
						<li>Defense (Flat)</li>
					</ol>
					<p style="color: var(--text-secondary); margin-top: 1rem; font-style: italic;">
						<strong>Note:</strong> Since her abilities scale with HP (Passive, Normal Attack, Auto Skill), focus entirely on HP and defensive stats. Attack, Crit Rate, Crit Damage, and Elemental Damage are useless for her kit.
					</p>
				</div>
			</section>

			<!-- Memory Cards -->
			<section class="content-section">
				<h2 class="section-title">Memory Cards</h2>

				<div style="text-align: center; margin: 1.5rem 0;">
					<div style="max-width: 400px; margin: 0 auto;">
						<h4 style="color: var(--teal-crystal); margin: 0 0 1rem 0; text-align: center;">New Outfit Trial Penny Sister</h4>
						<img src="/images/characters/Lancelot-NewOutfitTrialPennySister.jpg" alt="New Outfit Trial Penny Sister Memory Card" loading="lazy" style="width: 100%; height: auto; border-radius: 12px; box-shadow: 0 8px 25px rgba(164, 120, 100, 0.3); transition: all 0.3s ease;" onmouseover="this.style.transform='scale(1.02)'; this.style.boxShadow='0 12px 35px rgba(164, 120, 100, 0.4)'" onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 8px 25px rgba(164, 120, 100, 0.3)'" />
					</div>
