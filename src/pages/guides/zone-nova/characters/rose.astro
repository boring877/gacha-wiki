								<td>
									<ul>
										<li><strong>Self ice damage increases by 20%</strong></li>
									</ul>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</section>			<!-- Awakening Effects -->
			<section class="content-section">
				<h2 class="section-title">Awakening Effects</h2>				<div class="skills-table-container">
					<table class="skills-table">						<thead>
							<tr>
								<th>Awakening</th>
								<th>Effect</th>
								<th>Notes</th>
