---
import ZoneNovaLayout1 from '../../../../layouts/ZoneNovaLayout1.astro';
import FormattedDate from '../../../../components/FormattedDate.astro';
import OptimizedImage from '../../../../components/OptimizedImage.astro';
---

<ZoneNovaLayout1 
	title="Yuis Character Guide - Zone Nova - GachaWiki" 
	description="Complete guide for Yuis (尤伊斯), the SSR Holy DPS specialist in Zone Nova"
	gameTitle="Yuis Character Information"
	showBreadcrumb={true}
	breadcrumbText="Characters"
>
	<Fragment slot="head">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
		<style>
			.back-button {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				background: var(--bg-primary);
				color: var(--text-primary);
				text-decoration: none;
				padding: 1rem 1.5rem;
				border-radius: 12px;
				border: 1px solid var(--amber-glow);
				font-family: 'Space Grotesk', sans-serif;
				font-weight: 600;
				font-size: 1rem;
				margin-bottom: 2rem;
				transition: all 0.3s ease;
				box-shadow: 0 4px 12px rgba(164, 120, 100, 0.2);
			}

			.back-button:hover {
				background: var(--amber-glow);
				color: var(--text-inverse);
				transform: translateY(-2px);
				box-shadow: 0 8px 20px rgba(164, 120, 100, 0.3);
			}

			.back-button:hover .back-arrow {
				transform: translateX(-3px);
			}

			.back-arrow {
				font-size: 1.2rem;
				transition: transform 0.3s ease;
			}

			.character-page {
				background: var(--bg-secondary);
				min-height: 100vh;
				padding: 2rem 0;
			}

			.character-container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			.character-header {
				background: linear-gradient(135deg, var(--bg-primary), var(--bg-secondary));
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 3rem;
				border: 1px solid var(--amber-glow);
				box-shadow: 0 12px 30px rgba(164, 120, 100, 0.1);
				text-align: center;
				transition: all 0.4s ease;
			}

			.character-header:hover {
				transform: translateY(-4px);
				box-shadow: 0 16px 40px rgba(164, 120, 100, 0.15);
			}

			.character-image {
				width: 300px;
				height: 300px;
				border-radius: 20px;
				object-fit: cover;
				margin: 0 auto 2rem auto;
				display: block;
				box-shadow: 0 12px 30px rgba(255, 215, 0, 0.3);
				transition: all 0.3s ease;
			}

			.character-image:hover {
				transform: scale(1.05);
				box-shadow: 0 16px 40px rgba(255, 215, 0, 0.4);
			}

			.character-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 3rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin: 0 0 1rem 0;
				animation: titleGlow 3s ease-in-out infinite alternate;
			}

			.character-subtitle {
				color: var(--text-secondary);
				font-size: 1.2rem;
				margin: 0;
				font-weight: 500;
			}

			.content-section {
				background: var(--bg-primary);
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 2rem;
				border: 1px solid var(--neutral-200);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.08);
				transition: all 0.4s ease;
				animation: sectionFadeIn 0.8s ease-out;
			}

			.content-section:hover {
				transform: translateY(-2px);
				box-shadow: 0 12px 35px rgba(164, 120, 100, 0.12);
				border-color: var(--teal-crystal);
			}

			.section-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 2rem;
				font-weight: 700;
				color: var(--text-primary);
				margin: 0 0 1.5rem 0;
				padding-bottom: 0.75rem;
				border-bottom: 2px solid var(--amber-glow);
				position: relative;
			}

			.section-title::after {
				content: '';
				position: absolute;
				bottom: -2px;
				left: 0;
				width: 60px;
				height: 2px;
				background: var(--teal-crystal);
			}

			.role-badge, .element-badge, .rarity-badge {
				display: inline-block;
				padding: 0.25rem 0.85rem;
				border-radius: 14px;
				font-size: 1rem;
				font-weight: 700;
				margin: 0 0.1rem;
				box-shadow: 0 1px 4px rgba(0,0,0,0.07);
				letter-spacing: 0.02em;
			}

			.rarity-badge.ssr { 
				background: #ffd700; 
				color: #222; 
				border: 1.5px solid #ffb300; 
			}			.element-badge.holy { 
				background: #ffd700; 
				color: #222; 
				border: 1.5px solid #ffb347; 
			}

			.role-badge.dps { 
				background: #ffb347; 
				color: #222; 
				border: 1.5px solid #ff9800; 
			}

			.badges-container {
				background: linear-gradient(135deg, #f8fafc 60%, #e0f7fa 100%);
				border-radius: 14px;
				box-shadow: 0 3px 15px rgba(0,0,0,0.08);
				padding: 1.2rem 1.8rem;
				border: 1px solid var(--neutral-200);
				margin-top: 1rem;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.badges-container::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.badges-container:hover::before {
				left: 100%;
			}			.badges-container:hover {
				transform: translateY(-2px);
				box-shadow: 0 6px 20px rgba(0,0,0,0.12);
				border-color: var(--amber-glow);
			}

			.skills-table, .awakening-table {
				width: 100%;
				border-collapse: separate;
				border-spacing: 0;
				border-radius: 12px;
				overflow: hidden;
			}			.skills-table th, .awakening-table th {
				background: var(--amber-glow);
				color: #222;
				padding: 1rem;
				text-align: left;
				font-weight: 700;
				border-bottom: 2px solid var(--neutral-200);
			}

			.skills-table td, .awakening-table td {
				padding: 1.2rem 1rem;
				border-bottom: 1px solid var(--neutral-200);
				vertical-align: top;
			}

			.skills-table tr:hover, .awakening-table tr:hover {
				background: rgba(164, 120, 100, 0.05);
			}

			.skills-table td:first-child {
				font-weight: 600;
				color: var(--text-primary);
			}

			.skills-table td:nth-child(2) {
				font-weight: 500;
			}

			.skills-table td:last-child {
				color: var(--text-secondary);
			}

			.skills-table ul {
				margin: 0;
				padding-left: 1.2rem;
			}

			.skills-table li {
				margin-bottom: 0.5rem;
			}

			.skills-table strong {
				color: var(--amber-glow);
			}

			.skills-table small {
				color: var(--text-secondary);
				font-size: 0.8rem;
			}

			.awakening-table td {
				font-size: 0.95rem;
			}

			.awakening-table strong {
				color: var(--amber-glow);
			}

			.awakening-table em {
				color: var(--teal-crystal);
				font-style: normal;
				font-weight: 600;
			}			.skills-table-container {
				overflow-x: auto;
				border-radius: 12px;
				box-shadow: 0 4px 12px rgba(164, 120, 100, 0.1);
			}

			.awakening-table-container {
				overflow-x: auto;
				border-radius: 12px;
				box-shadow: 0 4px 12px rgba(164, 120, 100, 0.1);
			}

			.skill-type {
				display: inline-block;
				padding: 0.4rem 0.8rem;
				border-radius: 8px;
				font-weight: 600;
				font-size: 0.85rem;
				text-align: center;
			}

			.skill-type.normal-attack {
				background: #e3f2fd;
				color: #1976d2;
				border: 1px solid #bbdefb;
			}

			.skill-type.auto-skill {
				background: #f3e5f5;
				color: #7b1fa2;
				border: 1px solid #ce93d8;
			}

			.skill-type.ultimate {
				background: #fff3e0;
				color: #f57c00;
				border: 1px solid #ffcc02;
			}

			.skill-type.passive {
				background: #e8f5e8;
				color: #388e3c;
				border: 1px solid #a5d6a7;
			}

			.skill-type.team-skill {
				background: #fce4ec;
				color: #c2185b;
				border: 1px solid #f8bbd9;
			}

			.subsection-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.5rem;
				font-weight: 600;
				color: var(--text-primary);
				margin: 2rem 0 1rem 0;
				padding-left: 1rem;
				border-left: 4px solid var(--amber-glow);
			}

			.skill-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.3rem;
				font-weight: 600;
				color: var(--amber-glow);
				margin: 1.5rem 0 0.8rem 0;
			}

			.info-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.05), rgba(0, 172, 193, 0.05));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.info-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.info-card:hover::before {
				left: 100%;
			}

			.info-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.skill-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.03), rgba(0, 172, 193, 0.03));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
			}

			.skill-card:hover {
				transform: translateY(-1px);
				box-shadow: 0 6px 20px rgba(164, 120, 100, 0.1);
				border-color: var(--amber-glow);
			}

			.awakening-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.08), rgba(0, 172, 193, 0.08));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 1.5rem;
				margin: 1rem 0;
				transition: all 0.3s ease;
				border-left: 4px solid var(--amber-glow);
			}

			.awakening-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 6px 20px rgba(164, 120, 100, 0.12);
				border-color: var(--teal-crystal);
			}

			.critical-awakening {
				border-left: 4px solid var(--rose-quartz);
				background: linear-gradient(135deg, rgba(231, 111, 81, 0.08), rgba(255, 183, 77, 0.08));
			}

			.stats-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
				gap: 1rem;
				margin: 1.5rem 0;
			}

			.stat-item {
				background: var(--bg-secondary);
				padding: 1rem;
				border-radius: 10px;
				text-align: center;
				border: 1px solid var(--neutral-200);
				transition: all 0.3s ease;
			}

			.stat-item:hover {
				transform: translateY(-2px);
				box-shadow: 0 4px 15px rgba(164, 120, 100, 0.1);
				border-color: var(--amber-glow);
			}

			.stat-label {
				color: var(--text-secondary);
				font-size: 0.9rem;
				margin-bottom: 0.5rem;
				font-weight: 500;
			}

			.stat-value {
				color: var(--text-primary);
				font-size: 1.1rem;
				font-weight: 600;
			}

			.warning-box {
				background: linear-gradient(135deg, rgba(255, 193, 7, 0.1), rgba(255, 193, 7, 0.05));
				border: 1px solid rgba(255, 193, 7, 0.3);
				border-radius: 10px;
				padding: 1.5rem;
				margin: 1rem 0;
			}

			.warning-title {
				color: #F59E0B;
				font-weight: 600;
				margin-bottom: 0.75rem;
				font-size: 1rem;
			}

			.warning-content p {
				margin: 0;
				color: var(--text-secondary);
				line-height: 1.6;
			}

			.memory-card-layout {
				display: flex;
				gap: 2rem;
				align-items: flex-start;
				margin-bottom: 2rem;
				flex-wrap: wrap;
			}

			@keyframes titleGlow {
				0% { filter: brightness(1); }
				100% { filter: brightness(1.2); }
			}

			@keyframes sectionFadeIn {
				0% {
					opacity: 0;
					transform: translateY(20px);
				}
				100% {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@media (max-width: 768px) {
				.character-container {
					padding: 0 1rem;
				}

				.character-header {
					padding: 2rem;
				}

				.character-title {
					font-size: 2.5rem;
				}

				.character-image {
					width: 250px;
					height: 250px;
				}

				.content-section {
					padding: 2rem;
				}

				.section-title {
					font-size: 1.6rem;
				}

				.stats-grid {
					grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
				}

				.memory-card-layout {
					flex-direction: column;
					align-items: center;
				}
			}
		</style>
	</Fragment>
	<div class="character-page">
		<div class="character-container">
			<!-- Character Header & Overview -->			<section class="content-section">
				<h2 class="section-title" style="font-size:2.1rem; margin-bottom:2.5rem; text-align:center;">Character Overview</h2>
				
				<div style="display: flex; gap: 2rem; align-items: flex-start; flex-wrap: wrap; margin-bottom: 2rem;">
					<!-- Hero Card (Left) -->
					<div style="flex: 1.5; min-width: 340px; max-width: 520px; display: flex; flex-direction: column; align-items: center;">
						<div style="background: linear-gradient(135deg, #f8fafc 60%, #e0f7fa 100%); border-radius: 18px; box-shadow: 0 4px 18px rgba(0,0,0,0.08); padding: 2.5rem 1.5rem 1.5rem 1.5rem; border: 1.5px solid var(--amber-glow); display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 420px; width: 100%;">
							<OptimizedImage 
          src="/images/characters/Yuis.jpg" 
          alt="Yuis" 
          width={340}
          height={340}
          class="character-image"
          priority={true}
        />
							<h1 class="character-title">Yuis</h1>
						</div>
						<!-- Badges in separate box with better styling -->
						<div class="badges-container" style="margin-top: 1.8rem;">
						<div style="display: flex; justify-content: center; gap: 0.7rem; flex-wrap: wrap;">
							<span class="rarity-badge ssr">SSR</span>
							<span class="element-badge holy">Holy</span>
							<span class="role-badge dps">DPS</span>
						</div>
						</div>
					</div>

					<!-- Stats (Right) -->
					<div style="flex: 1; min-width: 260px; max-width: 400px;">
						<div style="background: linear-gradient(135deg, #fffde7 60%, #e0f2f1 100%); border-radius: 18px; box-shadow: 0 4px 18px rgba(0,0,0,0.06); padding: 2.2rem 1.5rem; border: 1px solid var(--neutral-200); width: 100%;">
						<div class="stats-grid" style="margin-bottom: 1.5rem; grid-template-columns: 1fr 1fr;">
							<div class="stat-item"><div class="stat-label">Faction</div><div class="stat-value">Audis</div></div>
							<div class="stat-item"><div class="stat-label">Role</div><div class="stat-value" style="color:#d32f2f; font-weight:700; letter-spacing:1px;">DPS</div></div>
						</div>
						<div class="stats-grid" style="grid-template-columns: 1fr 1fr; gap: 1.1rem;">
							<div class="stat-item"><div class="stat-label">HP</div><div class="stat-value">8,033</div></div>
							<div class="stat-item"><div class="stat-label">Attack</div><div class="stat-value">1,305</div></div>
							<div class="stat-item"><div class="stat-label">Defense</div><div class="stat-value">530</div></div>
							<div class="stat-item"><div class="stat-label">Energy Recovery</div><div class="stat-value">0.25/s</div></div>
							<div class="stat-item"><div class="stat-label">Crit Rate</div><div class="stat-value">0%</div></div>
							<div class="stat-item"><div class="stat-label">Crit Damage</div><div class="stat-value">50%</div></div>
						</div>
						</div>
					</div>				</div>
			</section><!-- Skills Section -->
			<section class="content-section">
				<h2 class="section-title">Skills</h2>

				<div class="skills-table-container">
					<table class="skills-table">
					<thead>
						<tr>
							<th style="width: 25%;">Skill Type</th>
							<th style="width: 25%;">Skill Name</th>
							<th>Description</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td><span class="skill-type normal-attack">Normal Attack</span></td>
							<td>
								<div class="skill-name">Thunder Strike</div>
								<div style="font-size: 0.8rem; color: var(--text-secondary);">Level: 10+4 • CD: 2.0s</div>
							</td>
							<td>
								<div class="skill-description">
									Deals <strong>120% attack power</strong> as Holy damage to designated enemy unit
								</div>
							</td>
						</tr>

						<tr>
							<td><span class="skill-type auto-skill">Skill</span></td>
							<td>
								<div class="skill-name">Divine Thunder</div>
								<div style="font-size: 0.8rem; color: var(--text-secondary);">Level: 10+4 • CD: 5.0s</div>
							</td>
							<td>
								<div class="skill-description">
									Immediately grants 2 stacks of [Heaven's Punishment], launches 4 swords dealing <strong>720% attack power</strong> as Holy damage to current target
								</div>
							</td>
						</tr>

						<tr>
							<td><span class="skill-type ultimate">Ultimate</span></td>
							<td>
								<div class="skill-name">Absolute Heaven's Punishment</div>
								<div style="font-size: 0.8rem; color: var(--text-secondary);">Level: 10+4 • CD: 1.0s • Energy: 4</div>
							</td>
							<td>
								<div class="skill-description">
									<div style="margin-bottom: 1rem;"><strong>Basic Effect:</strong> Immediately grants 2 stacks of [Heaven's Punishment], launches 1 giant flying sword dealing <strong>720% attack power</strong> as Holy damage to current target</div>
									<div style="background: #fff8e1; padding: 1rem; border-radius: 8px; border-left: 4px solid var(--amber-glow);">
										<strong style="color: var(--amber-glow);">Enhanced Ultimate:</strong> Consumes all [Heaven's Punishment] stacks, locks onto current target and launches flying swords equal to stack count, each dealing <strong>1440% attack power</strong> as Holy damage. This damage has [Pursuit] properties and refreshes the enhanced ultimate duration when using enhanced ultimate to attack enemies.
									</div>
								</div>
							</td>
						</tr>

						<tr>
							<td><span class="skill-type passive">Passive</span></td>
							<td>
								<div class="skill-name">Heaven's Judgment</div>
								<div style="font-size: 0.8rem; color: var(--text-secondary);">Level: 10+4</div>
							</td>
							<td>
								<div class="skill-description">
									<ul style="margin: 0; padding-left: 1rem;">
										<li><strong>Ally Ultimate:</strong> When other allied units activate ultimate, Yuis gains 2 stacks of [Heaven's Punishment]</li>
										<li><strong>Ally Pursuit:</strong> When other allied units activate [Pursuit], Yuis gains 2 stacks of [Heaven's Punishment]</li>
										<li><strong>Enhanced Unlock:</strong> Upon reaching 16 stacks of [Heaven's Punishment], can release [Enhanced Ultimate]</li>
										<li><strong>Stack Management:</strong> When releasing [Enhanced Ultimate], no longer gains [Heaven's Punishment] stacks</li>
										<li><strong>Critical Amplification:</strong> After releasing [Enhanced Ultimate], crit rate increases by <strong>24%</strong> and crit damage increases by <strong>48%</strong> for 20 seconds</li>
									</ul>
								</div>
							</td>
						</tr>

						<tr>
							<td><span class="skill-type team-skill">Team Skill</span></td>
							<td>
								<div class="skill-name">Combination Skill</div>
								<div style="font-size: 0.8rem; color: var(--text-secondary);">Level: 1</div>
								<div style="font-size: 0.8rem; color: var(--amber-glow);">Requires: 2 [Audis] OR 2 [Holy] characters</div>
							</td>
							<td>
								<div class="skill-description">
									<ul style="margin: 0; padding-left: 1rem;">
										<li>Self attack power increases by <strong>10%</strong></li>
										<li>At battle start, every 500 attack power increases self crit damage by <strong>7.5%</strong>, maximum 6 times (<strong>45% max</strong>)</li>
									</ul>
								</div>
							</td>						</tr>
					</tbody>
					</table>
				</div>
				
				<div style="margin-top: 1.5rem; padding: 1rem; background: #f8f9fa; border-radius: 8px; border-left: 4px solid var(--amber-glow);">
