---
import ZoneNovaLayout1 from '../../../../layouts/ZoneNovaLayout1.astro';
import FormattedDate from '../../../../components/FormattedDate.astro';
---

<ZoneNovaLayout1 
	title="Yuis Character Guide - Zone Nova - GachaWiki" 
	description="Complete guide for Yuis, the SSR Holy Ranger specialist in Zone Nova"
	gameTitle="Yuis Character Guide"
	showBreadcrumb={true}
	breadcrumbText="Characters"
>
	<Fragment slot="head">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
		<style>
			.back-button {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				background: var(--bg-primary);
				color: var(--text-primary);
				text-decoration: none;
				padding: 1rem 1.5rem;
				border-radius: 12px;
				border: 1px solid var(--amber-glow);
				font-family: 'Space Grotesk', sans-serif;
				font-weight: 600;
				font-size: 1rem;
				margin-bottom: 2rem;
				transition: all 0.3s ease;
				box-shadow: 0 4px 12px rgba(164, 120, 100, 0.2);
			}

			.back-button:hover {
				background: var(--amber-glow);
				color: var(--text-inverse);
				transform: translateY(-2px);
				box-shadow: 0 8px 20px rgba(164, 120, 100, 0.3);
			}

			.back-button:hover .back-arrow {
				transform: translateX(-3px);
			}

			.back-arrow {
				font-size: 1.2rem;
				transition: transform 0.3s ease;
			}

			.character-page {
				background: var(--bg-secondary);
				min-height: 100vh;
				padding: 2rem 0;
			}

			.character-container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			.character-header {
				background: linear-gradient(135deg, var(--bg-primary), var(--bg-secondary));
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 3rem;
				border: 1px solid var(--amber-glow);
				box-shadow: 0 12px 30px rgba(164, 120, 100, 0.1);
				text-align: center;
				transition: all 0.4s ease;
			}

			.character-header:hover {
				transform: translateY(-4px);
				box-shadow: 0 16px 40px rgba(164, 120, 100, 0.15);
			}

			.character-image {
				width: 300px;
				height: 300px;
				border-radius: 20px;
				object-fit: cover;
				margin: 0 auto 2rem auto;
				display: block;
				box-shadow: 0 12px 30px rgba(255, 215, 0, 0.3);
				transition: all 0.3s ease;
			}

			.character-image:hover {
				transform: scale(1.05);
				box-shadow: 0 16px 40px rgba(255, 215, 0, 0.4);
			}

			.character-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 3rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin: 0 0 1rem 0;
				animation: titleGlow 3s ease-in-out infinite alternate;
			}

			.character-subtitle {
				color: var(--text-secondary);
				font-size: 1.2rem;
				margin: 0;
				font-weight: 500;
			}

			.content-section {
				background: var(--bg-primary);
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 2rem;
				border: 1px solid var(--neutral-200);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.08);
				transition: all 0.4s ease;
				animation: sectionFadeIn 0.8s ease-out;
			}

			.content-section:hover {
				transform: translateY(-2px);
				box-shadow: 0 12px 35px rgba(164, 120, 100, 0.12);
				border-color: var(--teal-crystal);
			}

			.section-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 2rem;
				font-weight: 700;
				color: var(--text-primary);
				margin: 0 0 1.5rem 0;
				padding-bottom: 0.75rem;
				border-bottom: 2px solid var(--amber-glow);
				position: relative;
			}

			.section-title::after {
				content: '';
				position: absolute;
				bottom: -2px;
				left: 0;
				width: 60px;
				height: 2px;
				background: var(--teal-crystal);
			}

			.subsection-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.5rem;
				font-weight: 600;
				color: var(--text-primary);
				margin: 2rem 0 1rem 0;
				padding-left: 1rem;
				border-left: 4px solid var(--amber-glow);
			}

			.skill-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.3rem;
				font-weight: 600;
				color: var(--amber-glow);
				margin: 1.5rem 0 0.8rem 0;
			}

			.info-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.05), rgba(0, 172, 193, 0.05));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.info-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.info-card:hover::before {
				left: 100%;
			}

			.info-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.skill-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.03), rgba(0, 172, 193, 0.03));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
			}

			.skill-card:hover {
				transform: translateY(-1px);
				box-shadow: 0 6px 20px rgba(164, 120, 100, 0.1);
				border-color: var(--amber-glow);
			}

			.awakening-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.08), rgba(0, 172, 193, 0.08));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 1.5rem;
				margin: 1rem 0;
				transition: all 0.3s ease;
				border-left: 4px solid var(--amber-glow);
			}

			.awakening-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 6px 20px rgba(164, 120, 100, 0.12);
				border-color: var(--teal-crystal);
			}

			.critical-awakening {
				border-left: 4px solid var(--rose-quartz);
				background: linear-gradient(135deg, rgba(231, 111, 81, 0.08), rgba(255, 183, 77, 0.08));
			}

			.stats-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
				gap: 1rem;
				margin: 1.5rem 0;
			}

			.stat-item {
				background: var(--bg-secondary);
				padding: 1rem;
				border-radius: 10px;
				text-align: center;
				border: 1px solid var(--neutral-200);
				transition: all 0.3s ease;
			}

			.stat-item:hover {
				transform: translateY(-2px);
				box-shadow: 0 4px 15px rgba(164, 120, 100, 0.1);
				border-color: var(--amber-glow);
			}

			.stat-label {
				color: var(--text-secondary);
				font-size: 0.9rem;
				margin-bottom: 0.5rem;
				font-weight: 500;
			}

			.stat-value {
				color: var(--text-primary);
				font-size: 1.1rem;
				font-weight: 600;
			}

			.warning-box {
				background: linear-gradient(135deg, rgba(255, 193, 7, 0.1), rgba(255, 193, 7, 0.05));
				border: 1px solid rgba(255, 193, 7, 0.3);
				border-radius: 10px;
				padding: 1.5rem;
				margin: 1rem 0;
			}

			.warning-title {
				color: #F59E0B;
				font-weight: 600;
				margin-bottom: 0.75rem;
				font-size: 1rem;
			}

			.warning-content p {
				margin: 0;
				color: var(--text-secondary);
				line-height: 1.6;
			}

			.memory-card-layout {
				display: flex;
				gap: 2rem;
				align-items: flex-start;
				margin-bottom: 2rem;
				flex-wrap: wrap;
			}

			@keyframes titleGlow {
				0% { filter: brightness(1); }
				100% { filter: brightness(1.2); }
			}

			@keyframes sectionFadeIn {
				0% {
					opacity: 0;
					transform: translateY(20px);
				}
				100% {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@media (max-width: 768px) {
				.character-container {
					padding: 0 1rem;
				}

				.character-header {
					padding: 2rem;
				}

				.character-title {
					font-size: 2.5rem;
				}

				.character-image {
					width: 250px;
					height: 250px;
				}

				.content-section {
					padding: 2rem;
				}

				.section-title {
					font-size: 1.6rem;
				}

				.stats-grid {
					grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
				}

				.memory-card-layout {
					flex-direction: column;
					align-items: center;
				}
			}
		</style>
	</Fragment>

	<div class="character-page">
		<div class="character-container">
			<!-- Back Button -->
			<a href="/guides/zone-nova/characters/" class="back-button">
				<span class="back-arrow">←</span>
				Back to Characters
			</a>

			<!-- Character Header -->
			<div class="character-header">
				<img src="/images/characters/Yuis.jpg" alt="Yuis" class="character-image" loading="lazy" />
				<h1 class="character-title">Yuis</h1>
				<p class="character-subtitle">SSR • Holy • Ranger • Pursuit Specialist</p>
			</div>

			<!-- Character Overview -->
			<section class="content-section">
				<h2 class="section-title">Character Overview</h2>
				
				<div class="stats-grid">
					<div class="stat-item">
						<div class="stat-label">Faction</div>
						<div class="stat-value">Audis (奥帝斯)</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Role</div>
						<div class="stat-value">DPS/Pursuit Specialist</div>
					</div>
				</div>

				<h3 class="subsection-title">Base Stats at Level 80</h3>
				<div class="stats-grid">
					<div class="stat-item">
						<div class="stat-label">HP</div>
						<div class="stat-value">8,033</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Attack</div>
						<div class="stat-value">1,305</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Defense</div>
						<div class="stat-value">530</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Energy Recovery</div>
						<div class="stat-value">0.25/s</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Crit Rate</div>
						<div class="stat-value">0%</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Crit Damage</div>
						<div class="stat-value">50%</div>
					</div>
				</div>

				<div class="info-card">
					<p style="color: var(--text-primary); font-size: 1.1rem; line-height: 1.6; margin: 0;">
						One of the [Mother's] dependents, Yuis from [Federation] is the highest-ranking judge, holding an important position in the [Federation] government. Due to her fair and impartial judgments, she earned the title of [God of Judgment]. Don't be deceived by her doll-like cute appearance - beneath that adorable exterior lies an iron-faced, impartial judge who embodies the [Federation's] judicial justice.
					</p>
				</div>

				<div class="info-card">
					<p style="color: var(--amber-glow); font-style: italic; margin: 0; font-weight: 500; font-size: 1rem;">
						"According to [Federation Law] Article 384 [Theft and Obscenity Crimes], your frivolous gaze and actions! You have violated the law!"
					</p>
				</div>
			</section>

			<!-- Skills Section -->
			<section class="content-section">
				<h2 class="section-title">Skills</h2>

				<div class="skill-card">
					<h3 class="skill-title">⚡ Must Kill: Absolute Heaven's Punishment</h3>
					<p><strong>Level:</strong> 10+4</p>
					<p><strong>CD:</strong> 1.0s | <strong>Energy Cost:</strong> 4</p>
					<p><strong>Basic Effect:</strong> Immediately grants 2 stacks of [Heaven's Punishment], launches 1 giant flying sword dealing <strong>720% attack power</strong> as Holy damage to current target.</p>
					
					<div class="warning-box">
						<div class="warning-title">🌟 Enhanced Must Kill</div>
						<div class="warning-content">
							<p>Consumes all [Heaven's Punishment] stacks, locks onto current target and launches flying swords equal to stack count, each dealing <strong>1440% attack power</strong> as Holy damage. This damage has [Pursuit] properties and refreshes the enhanced must kill duration when using enhanced must kill to attack enemies.</p>
						</div>
					</div>
				</div>

				<div class="skill-card">
					<h3 class="skill-title">⚡ Skill: Divine Thunder</h3>
					<p><strong>Level:</strong> 10+4</p>
					<p><strong>CD:</strong> 5.0s</p>
					<p><strong>Effect:</strong> Immediately grants 2 stacks of [Heaven's Punishment], launches 4 swords dealing <strong>720% attack power</strong> as Holy damage to current target.</p>
				</div>

				<div class="skill-card">
					<h3 class="skill-title">⚡ Normal Attack: Thunder Strike</h3>
					<p><strong>Level:</strong> 10+4</p>
					<p><strong>CD:</strong> 2.0s</p>
					<p><strong>Effect:</strong> Deals <strong>120% attack power</strong> as Holy damage to designated enemy unit.</p>
				</div>

				<div class="skill-card">
					<h3 class="skill-title">⚡ Passive: Heaven's Judgment</h3>
					<p><strong>Level:</strong> 10+4</p>
					<p><strong>Stack Generation & Enhanced Ultimate:</strong></p>
					<ul style="margin: 1rem 0; padding-left: 2rem;">
						<li><strong>Ally Must Kill:</strong> When other allied units activate must kill, Yuis gains 2 stacks of [Heaven's Punishment]</li>
						<li><strong>Ally Pursuit:</strong> When other allied units activate [Pursuit], Yuis gains 2 stacks of [Heaven's Punishment]</li>
						<li><strong>Enhanced Unlock:</strong> Upon reaching 16 stacks of [Heaven's Punishment], can release [Enhanced Must Kill]</li>
						<li><strong>Stack Management:</strong> When releasing [Enhanced Must Kill], no longer gains [Heaven's Punishment] stacks</li>
						<li><strong>Critical Amplification:</strong> After releasing [Enhanced Must Kill], crit rate increases by <strong>24%</strong> and crit damage increases by <strong>48%</strong> for 20 seconds</li>
					</ul>

					<div class="info-card">
						<p><strong>Heaven's Punishment Mastery:</strong> At maximum 16 stacks, Enhanced Must Kill fires 16 pursuit swords each dealing 1440% attack power, creating devastating burst potential that scales with team composition and pursuit synergy.</p>
					</div>
				</div>
			</section>

			<!-- Team Composition Skill -->
			<section class="content-section">
				<h2 class="section-title">Team Composition Skill</h2>
				
				<div class="skill-card">
					<h3 class="skill-title">🌟 Combination Skill</h3>
					<p><strong>Level:</strong> 1</p>
					
					<div class="warning-box">
						<div class="warning-title">🏺 Activation Requirements</div>
						<div class="warning-content">
							<p>Triggers when team contains <strong>2 [Audis] characters</strong> or <strong>2 [Holy] characters</strong></p>
						</div>
					</div>

					<p><strong>Effect 1:</strong> Self attack power increases by <strong>10%</strong></p>
					<p><strong>Effect 2:</strong> At battle start, every 500 attack power increases self crit damage by <strong>7.5%</strong>, maximum 6 times (<strong>45% max</strong>)</p>
				</div>
			</section>

			<!-- Awakening Effects -->
			<section class="content-section">
				<h2 class="section-title">Awakening Effects</h2>

				<div class="awakening-card critical-awakening">
					<h3 class="skill-title">🌟 Awakening 1 (BURST FOUNDATION)</h3>
					<p>At battle start, immediately gain <strong>16 stacks of [Heaven's Punishment]</strong>. [Enhanced Must Kill] energy consumption reduced by <strong>3</strong></p>
				</div>

				<div class="awakening-card critical-awakening">
					<h3 class="skill-title">🌟 Awakening 2 (PURSUIT SYNERGY)</h3>
					<p>After releasing Enhanced Must Kill, immediately gain <strong>4 stacks of [Heaven's Punishment]</strong> and increase pursuit damage by <strong>30%</strong> for 20 seconds</p>
				</div>

				<div class="awakening-card">
					<h3 class="skill-title">Awakening 3</h3>
					<p><strong>[Skill]</strong> and <strong>[Normal Attack]</strong> level cap increased by 4</p>
				</div>

				<div class="awakening-card critical-awakening">
					<h3 class="skill-title">🌟 Awakening 4 (ELEMENTAL MASTERY)</h3>
					<p>Holy damage increased by <strong>30%</strong></p>
				</div>

				<div class="awakening-card">
					<h3 class="skill-title">🌟 Awakening 5 (REQUIRED)</h3>
					<p><strong>[Must Kill]</strong> and <strong>[Passive]</strong> level cap increased by 4</p>
					<p><strong>Critical:</strong> Required for memory card access</p>
				</div>

				<div class="awakening-card">
					<h3 class="skill-title">🌟 Awakening 6 (PURSUIT MASTERY)</h3>
					<p>After Yuis deals pursuit damage to the same target <strong>12 times</strong>, additionally drops a giant sword dealing <strong>150% attack power</strong> as Holy damage. This damage counts as pursuit damage. Yuis's pursuit damage pierces <strong>20% elemental resistance</strong></p>
				</div>

				<div class="warning-box">
					<div class="warning-title">⚡ Pursuit Damage Mastery</div>
					<p>With key awakenings, Yuis becomes a pursuit damage powerhouse:</p>
					<ul style="margin: 0.5rem 0; padding-left: 1.5rem;">
						<li><strong>Enhanced Must Kill:</strong> 16 swords × 1440% attack power with pursuit properties</li>
						<li><strong>With Awakening 2:</strong> +30% pursuit damage amplification</li>
						<li><strong>With Awakening 4:</strong> +30% holy damage boost</li>
						<li><strong>With Awakening 6:</strong> Additional giant sword + 20% elemental penetration</li>
					</ul>
				</div>
			</section>

			<!-- Recommended Builds -->
			<section class="content-section">
				<h2 class="section-title">Recommended Builds</h2>

				<h3 class="subsection-title">Rune Sets</h3>
				
				<div class="info-card">
					<h4 style="color: var(--amber-glow); margin: 0 0 1rem 0;">🌟 Build Option 1</h4>
					<ul>
						<li><strong>2-Piece Alpha (阿尔法符):</strong> Attack +8%</li>
						<li><strong>2-Piece Epsilon (埃普西隆):</strong> Attack +8%</li>
						<li><strong>2-Piece [Flexible]:</strong> Choose based on needs (survivability, energy, etc.)</li>
					</ul>
					<p style="color: var(--text-secondary); margin-top: 1rem; font-style: italic;">Core focus: Double attack scaling for maximum burst damage. Last 2-piece set can be customized based on team needs or available runes.</p>
				</div>

				<div class="info-card">
					<h4 style="color: var(--teal-crystal); margin: 0 0 1rem 0;">🌟 Build Option 2</h4>
					<ul>
						<li><strong>4-Piece Alpha (阿尔法符):</strong> Attack Power +8% + Basic Attack Damage +30%</li>
						<li><strong>2-Piece Epsilon (埃普西隆):</strong> Attack +8%</li>
					</ul>
					<p style="color: var(--text-secondary); margin-top: 1rem; font-style: italic;">Enhanced basic attacks: Higher attack power plus significant basic attack damage bonus. Best for players with complete Alpha set.</p>
				</div>

				<h3 class="subsection-title">Main Stats</h3>
				<div class="stats-grid">
					<div class="stat-item">
						<div class="stat-label">Position 1</div>
						<div class="stat-value">HP (Fixed)</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 2</div>
						<div class="stat-label">ATK (Fixed)</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 3</div>
						<div class="stat-label">DEF (Fixed)</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 4</div>
						<div class="stat-label">ATK%</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 5</div>
						<div class="stat-label">🌟 Holy DMG% / ATK%</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 6</div>
						<div class="stat-label">ATK%</div>
					</div>
				</div>

				<h3 class="subsection-title">Substat Priorities</h3>
				<div class="info-card">
					<ol style="color: var(--text-primary); font-size: 1.1rem; line-height: 1.6;">
						<li>Attack% - Core scaling for all abilities and pursuit damage</li>
						<li>Crit Damage% - Synergizes with post-Enhanced Must Kill buff</li>
						<li>Crit Rate% - Builds toward awakening crit amplification</li>
						<li>Attack (Flat) - Secondary attack scaling</li>
						<li>HP% - Survivability for extended encounters</li>
					</ol>
					<p style="color: var(--text-secondary); margin-top: 1rem; font-style: italic;">
						<strong>Note:</strong> Focus on Attack% and Crit Damage% for maximum burst potential. Critical stats become crucial after Enhanced Must Kill activation for sustained damage.
					</p>
				</div>
			</section>

			<!-- Memory Card -->
			<section class="content-section">
				<h2 class="section-title">Memory Card: Frozen Heart</h2>
				
				<div class="memory-card-layout">
					<img src="/images/characters/Yuiscard.jpg" alt="Yuis Memory Card" style="width: 200px; height: 300px; border-radius: 15px; object-fit: cover; box-shadow: 0 8px 20px rgba(255, 215, 0, 0.3); transition: all 0.3s ease; flex-shrink: 0;" loading="lazy" />
					
					<div style="flex: 1; min-width: 300px;">
						<div class="info-card" style="margin: 0;">
							<h4 style="color: var(--amber-glow); margin: 0 0 1rem 0;">Level 80/80 Base Stats</h4>
							<div class="stats-grid">
								<div class="stat-item">
									<div class="stat-label">HP</div>
