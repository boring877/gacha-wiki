<script>
// Thunder King Flame Event Timer
document.addEventListener('DOMContentLoaded', function() {
	// Set end date for Thunder King Flame event: June 10, 2025 03:59 UTC+8
	const eventEnd = new Date('2025-06-10T03:59:00+08:00').getTime();

	function updateEventTimer() {
		const now = new Date().getTime();
		const timer = document.getElementById('eventTimer');
		
		if (timer) {
			const timeLeft = eventEnd - now;
			if (timeLeft > 0) {
				const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
				const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
				const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
				
				if (days > 0) {
					timer.textContent = `${days}d ${hours}h ${minutes}m left`;
				} else if (hours > 0) {
					timer.textContent = `${hours}h ${minutes}m left`;
				} else {
					timer.textContent = `${minutes}m left`;
				}
				
				// Add pulsing effect when less than 1 hour left
				if (timeLeft < 3600000) { // 1 hour in milliseconds
					timer.style.animation = 'pulse 1s infinite';
				}
			} else {
				timer.textContent = 'Event Ended';
				timer.style.opacity = '0.6';
				timer.style.color = 'var(--text-secondary)';
			}
		}
	}

	// Update immediately and then every minute
	updateEventTimer();
	setInterval(updateEventTimer, 60000);
});
</script> 