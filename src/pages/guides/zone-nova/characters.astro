		<script is:inline>
	document.addEventListener('DOMContentLoaded', function() {
		const table = document.querySelector('.character-table');
		const tbody = table.querySelector('tbody');
		const originalRows = Array.from(tbody.querySelectorAll('tr')).map(tr => tr.cloneNode(true));

		function updateRowNumbers() {
			Array.from(tbody.querySelectorAll('tr')).forEach((tr, idx) => {
				tr.children[0].innerText = idx + 1;
			});
		}

		// Element filter
		document.getElementById('element-filter').addEventListener('change', function() {
			const val = this.value;
			Array.from(tbody.querySelectorAll('tr')).forEach(tr => {
				const cell = tr.children[4];
				if (!val || (cell && cell.innerText.trim().toLowerCase() === val.toLowerCase())) {
					tr.style.display = '';
				} else {
					tr.style.display = 'none';
				}
			});
			updateRowNumbers();
		});

		// Rarity filter
		document.getElementById('rarity-filter').addEventListener('change', function() {
			const val = this.value;
			Array.from(tbody.querySelectorAll('tr')).forEach(tr => {
				const cell = tr.children[3];
			if (!val || (cell && cell.innerText.trim().toLowerCase() === val.toLowerCase())) {
				tr.style.display = '';
			} else {
				tr.style.display = 'none';
			}
		});
		updateRowNumbers();
	});

	// Role filter
	document.getElementById('role-filter').addEventListener('change', function() {
		const val = this.value;
		Array.from(tbody.querySelectorAll('tr')).forEach(tr => {
			const cell = tr.children[5]; // Role column
			if (!val || (cell && cell.innerText.trim().toLowerCase() === val.toLowerCase())) {
				tr.style.display = '';
			} else {
				tr.style.display = 'none';
			}
		});
		updateRowNumbers();
	});
	// Reset button - also clear active sort buttons
	document.getElementById('reset-table').addEventListener('click', function() {
		tbody.innerHTML = '';
		originalRows.forEach(tr => tbody.appendChild(tr.cloneNode(true)));
		updateRowNumbers();
		document.getElementById('element-filter').value = '';
		document.getElementById('rarity-filter').value = '';
		document.getElementById('role-filter').value = '';
		// Clear all active sort buttons
		document.querySelectorAll('.sort-btn').forEach(btn => {
			btn.classList.remove('active', 'asc', 'desc');
		});
	});	// Single-select sort buttons - 3-state: desc -> asc -> off
	document.querySelectorAll('.sort-btn').forEach((btn, idx) => {
		btn.addEventListener('click', function() {
			// Clear all other active buttons first
			document.querySelectorAll('.sort-btn').forEach(b => {
				if (b !== btn) {
					b.classList.remove('active', 'asc', 'desc');
				}
			});
			
			const sortKey = btn.getAttribute('data-sort');
			const colIdx = { hp: 6, attack: 7, defense: 8, speed: 9, critrate: 10, critdmg: 11 }[sortKey];
			
			// 3-state cycle: no state -> desc (highest first) -> asc (lowest first) -> back to no state
			if (!btn.classList.contains('active')) {
				// First click: activate with desc (highest first)
				btn.classList.add('active', 'desc');
				
				const rows = Array.from(tbody.querySelectorAll('tr')).filter(tr => tr.style.display !== 'none');
				rows.sort((a, b) => {
					const v1 = parseFloat(a.children[colIdx].innerText.trim());
					const v2 = parseFloat(b.children[colIdx].innerText.trim());
					return v2 - v1; // desc: highest first
				});
				rows.forEach(tr => tbody.appendChild(tr));
				
			} else if (btn.classList.contains('desc')) {
				// Second click: switch to asc (lowest first)
				btn.classList.remove('desc');
				btn.classList.add('asc');
				
				const rows = Array.from(tbody.querySelectorAll('tr')).filter(tr => tr.style.display !== 'none');
				rows.sort((a, b) => {
					const v1 = parseFloat(a.children[colIdx].innerText.trim());
					const v2 = parseFloat(b.children[colIdx].innerText.trim());
					return v1 - v2; // asc: lowest first
				});
				rows.forEach(tr => tbody.appendChild(tr));
				
			} else {
				// Third click: turn off sorting, restore original order
				btn.classList.remove('active', 'asc');
				
				// Restore original order by re-appending filtered rows in original sequence
				const visibleOriginalRows = originalRows.filter(tr => {
					const clone = tr.cloneNode(true);
					const elementFilter = document.getElementById('element-filter').value;
					const rarityFilter = document.getElementById('rarity-filter').value;
					const roleFilter = document.getElementById('role-filter').value;
					
					let matches = true;
					if (elementFilter) matches = matches && clone.children[4].innerText.trim() === elementFilter;
					if (rarityFilter) matches = matches && clone.children[3].innerText.trim() === rarityFilter;
					if (roleFilter) matches = matches && clone.children[5].innerText.trim() === roleFilter;
					
					return matches;
				});
				
				// Clear and re-add in original order
				tbody.innerHTML = '';
				visibleOriginalRows.forEach(tr => tbody.appendChild(tr.cloneNode(true)));
			}
			
			updateRowNumbers();
		});
	});

	tbody.querySelectorAll('tr').forEach(row => {
		row.style.cursor = 'pointer';
		row.addEventListener('click', function() {
			const name = row.querySelector('td:nth-child(3)').innerText.trim().replace(/\s+/g, '-').toLowerCase();
			window.location.href = `/guides/zone-nova/characters/${name}/`;
		});
	});
});
