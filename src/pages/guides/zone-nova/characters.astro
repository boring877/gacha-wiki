				font-weight: 600;
				font-size: 1rem;
				margin-bottom: 2rem;
				transition: all 0.3s ease;
				box-shadow: 0 4px 12px rgba(164, 120, 100, 0.2);
			}

			.back-button:hover {
				background: var(--amber-glow);
				color: white;
				transform: translateY(-2px);
				box-shadow: 0 8px 20px rgba(164, 120, 100, 0.3);
			}

			.back-button:hover .back-arrow {
				transform: translateX(-3px);
			}

			.back-arrow {
				font-size: 1.2rem;
				transition: transform 0.3s ease;
			}

			.content-section {
				background: rgba(240, 240, 240, 0.95);
				padding: 3rem;
				border-radius: 20px;
				margin-bottom: 3rem;
				border: 1px solid var(--amber-glow);
				box-shadow: 0 12px 30px rgba(164, 120, 100, 0.2);
				transition: all 0.4s ease;
				animation: sectionFadeIn 0.8s ease-out;
			}

			.content-section:hover {
				transform: translateY(-4px);
				box-shadow: 0 16px 40px rgba(164, 120, 100, 0.3);
				border-color: var(--teal-crystal);
			}
			
			.section-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 2.5rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin: 0 0 1.5rem 0;
				text-align: center;
				animation: titleGlow 3s ease-in-out infinite alternate;
			}

			.section-description {
				color: #666;
				font-size: 1.2rem;
				line-height: 1.7;
				margin-bottom: 2rem;
				text-align: center;
				max-width: 60rem;
				margin-left: auto;
				margin-right: auto;
			}

			/* Filter Controls */
			.filter-controls {
				display: flex;
				gap: 1rem;
				margin-bottom: 2rem;
				flex-wrap: wrap;
				align-items: center;
				justify-content: center;
			}

			.search-box {
				flex: 1;
				min-width: 250px;
				max-width: 400px;
				position: relative;
			}

			.search-input {
				width: 100%;
				padding: 1rem 1rem 1rem 3rem;
				border: 2px solid var(--neutral-200);
				border-radius: 12px;
				font-size: 1rem;
				font-family: 'Space Grotesk', sans-serif;
				background: var(--bg-primary);
				color: var(--text-primary);
				transition: all 0.3s ease;
			}

			.search-input:focus {
				outline: none;
				border-color: var(--amber-glow);
				box-shadow: 0 0 0 3px rgba(255, 183, 77, 0.1);
			}

			.search-icon {
				position: absolute;
				left: 1rem;
				top: 50%;
				transform: translateY(-50%);
				color: var(--text-secondary);
				font-size: 1.2rem;
			}

			.filter-group {
				display: flex;
				gap: 0.5rem;
				flex-wrap: wrap;
			}

			.filter-button {
				padding: 0.75rem 1.5rem;
				border: 2px solid var(--neutral-200);
				border-radius: 25px;
				background: var(--bg-primary);
				color: var(--text-secondary);
				font-family: 'Space Grotesk', sans-serif;
				font-weight: 600;
				font-size: 0.9rem;
				cursor: pointer;
				transition: all 0.3s ease;
				white-space: nowrap;
			}

			.filter-button:hover {
				border-color: var(--amber-glow);
				color: var(--text-primary);
				transform: translateY(-2px);
			}

			.filter-button.active {
				background: var(--amber-glow);
				border-color: var(--amber-glow);
				color: white;
				box-shadow: 0 4px 12px rgba(255, 183, 77, 0.3);
			}

			/* Character Grid */
			.character-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
				gap: 2rem;
				margin-top: 2rem;
			}
			
			.character-card {
				background: var(--bg-primary);
				border: 1px solid var(--mocha-mousse);
				border-radius: 16px;
				padding: 1.5rem;
				transition: all 0.4s ease;
				text-decoration: none;
				color: inherit;
				position: relative;
				overflow: hidden;
				animation: cardSlideUp 0.6s ease-out;
				height: fit-content;
				display: flex;
				flex-direction: column;
			}

			.character-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
				z-index: 1;
			}

			.character-card:hover::before {
				left: 100%;
			}

			.character-card > * {
				position: relative;
				z-index: 2;
			}
			
			.character-card:hover {
				transform: translateY(-8px);
				box-shadow: 0 20px 40px rgba(0, 172, 193, 0.3);
				border-color: var(--teal-crystal);
				background: var(--bg-secondary);
			}

			.character-card.hidden {
				display: none;
			}

			.character-header-section {
				display: flex;
				align-items: flex-start;
				gap: 1rem;
				margin-bottom: 1rem;
			}

			.character-profile-image {
				width: 60px;
				height: 60px;
				border-radius: 12px;
				object-fit: cover;
				flex-shrink: 0;
				border: 2px solid var(--amber-glow);
				transition: all 0.3s ease;
			}

			.character-card:hover .character-profile-image {
				border-color: var(--teal-crystal);
				transform: scale(1.05);
			}

			.character-class-image {
				width: 24px;
				height: 24px;
				border-radius: 6px;
				object-fit: cover;
				flex-shrink: 0;
				border: 1px solid var(--text-secondary);
				transition: all 0.3s ease;
				margin-top: 2px;
			}

			.character-card:hover .character-class-image {
				border-color: var(--amber-glow);
				transform: scale(1.1);
			}

			.character-info {
				flex: 1;
				min-width: 0;
			}
			
			.character-card h3 {
				color: var(--text-primary);
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.3rem;
				font-weight: 600;
				margin: 0 0 0.3rem 0;
				transition: all 0.3s ease;
			}

			.character-card:hover h3 {
				color: var(--amber-glow);
			}
			
			.character-meta {
				color: var(--text-secondary);
				font-size: 0.9rem;
				margin: 0;
				font-weight: 500;
				transition: color 0.3s ease;
			}

			.character-card:hover .character-meta {
				color: var(--teal-crystal);
			}
			
			.character-summary {
