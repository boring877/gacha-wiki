---
// Import your layout
import CharacterLayout from '../../../layouts/zone-nova/CharacterLayout.astro';

// Import character database components
import CharacterDatabaseFilterBar from '../../../components/zone-nova/CharacterDatabaseFilterBar.astro';
import CharacterDatabaseTable from '../../../components/zone-nova/CharacterDatabaseTable.astro';
import CharacterDatabaseMobileCards from '../../../components/zone-nova/CharacterDatabaseMobileCards.astro';
import Breadcrumb from '../../../components/zone-nova/Breadcrumb.astro';
---

<CharacterLayout
  title="Zone Nova Character Database - GachaWiki"
  description="Sortable and filterable character database for Zone Nova"
  gameTitle="Character Database"
  showBackButton={false}
>
  <!-- Breadcrumb Navigation -->
  <Breadcrumb
    items={[
      { name: 'Home', href: '/' },
      { name: 'Zone Nova', href: '/guides/zone-nova/' },
      { name: 'Characters' },
    ]}
  />

  <section class="page-flex">
    <div class="main-content-container">
      <div class="content-wrapper">
        <div
          style="text-align: center; margin: 1.5rem 0; padding: 1rem; background: linear-gradient(135deg, var(--bg-primary) 60%, var(--neutral-50) 100%); border-radius: 12px; border: 1px solid var(--amber-glow);"
        >
          <p style="color: var(--amber-glow); margin: 0; font-size: 1rem; font-weight: 600;">
            Character Database
          </p>
          <p
            style="color: var(--text-secondary); margin: 0.5rem 0 0 0; font-size: 0.9rem; font-style: italic;"
          >
            All stats shown at max level
          </p>
          <div
            style="display: flex; gap: 1rem; justify-content: center; margin-top: 1rem; flex-wrap: wrap;"
            class="character-nav-buttons"
          >
            <a
              href="/guides/zone-nova/character-comparison/"
              style="display: inline-block; padding: 0.75rem 1.5rem; background: linear-gradient(135deg, var(--amber-glow), #FF9800); color: white; text-decoration: none; border-radius: 10px; font-weight: 600; font-size: 0.95rem;"
            >
              Compare Stats (V1)
            </a>
            <a
              href="/guides/zone-nova/character-comparison-v2/"
              style="display: inline-block; padding: 0.75rem 1.5rem; background: linear-gradient(135deg, var(--teal-crystal), #00BCD4); color: white; text-decoration: none; border-radius: 10px; font-weight: 600; font-size: 0.95rem;"
            >
              Card Comparison (V2)
            </a>
            <a
              href="/guides/zone-nova/tier-list/"
              style="display: inline-block; padding: 0.75rem 1.5rem; background: linear-gradient(135deg, #e91e63, #f06292); color: white; text-decoration: none; border-radius: 10px; font-weight: 600; font-size: 0.95rem;"
            >
              Tier List
            </a>
            <a
              href="/guides/zone-nova/character-rankings/"
              style="display: inline-block; padding: 0.75rem 1.5rem; background: linear-gradient(135deg, #64b5f6, #42a5f5); color: white; text-decoration: none; border-radius: 10px; font-weight: 600; font-size: 0.95rem;"
            >
              Character Rankings
            </a>
            <a
              href="/guides/zone-nova/character-tags/"
              style="display: inline-block; padding: 0.75rem 1.5rem; background: linear-gradient(135deg, #9c27b0, #7b1fa2); color: white; text-decoration: none; border-radius: 10px; font-weight: 600; font-size: 0.95rem;"
            >
              Character Tag Selection
            </a>
          </div>
        </div>

        <!-- Character Database Components -->
        <CharacterDatabaseFilterBar />
        <CharacterDatabaseTable />
        <CharacterDatabaseMobileCards />
      </div>
    </div>
  </section>

  <!-- Hide navigation buttons on touch devices to save space -->
  <style>
    @media (hover: none) and (pointer: coarse) {
      .character-nav-buttons {
        display: none !important;
      }
    }
  </style>

  <!-- Import the database utilities -->
  <script>
    import { initializeCharacterDatabase } from '../../../data/zone-nova/character-database-utils.js';
    initializeCharacterDatabase();
  </script>
</CharacterLayout>
