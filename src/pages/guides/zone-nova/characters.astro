					.main-content-container {
				width: 100%;
				display: flex;
				justify-content: center;
				padding: 0 2rem;
			}			.content-wrapper {
				max-width: 1200px;
				width: 100%;
				margin: 0 auto;
			}/* Remove sidebar styles and add top-right filter bar styles */			.filter-bar {
				display: flex;
				justify-content: space-between;
				align-items: center;
				gap: 2rem;
				margin: 4rem auto 3rem auto;
				flex-wrap: nowrap;
				max-width: 100%;
				padding: 0 1rem;
				position: relative;
			}
			
			.filter-controls {
				display: flex;
				gap: 0.6rem;
				align-items: center;
				justify-content: center;
				flex-wrap: nowrap;
				flex: 0 0 auto;
			}
			
			.sort-controls {
				display: flex;
				gap: 0.6rem;
				align-items: center;
				justify-content: center;
				flex-wrap: nowrap;
				flex: 0 0 auto;
			}			.filter-select, .sort-btn {
				display: flex;
				align-items: center;
				justify-content: center;
				padding: 0.5rem 0.8rem;
				background: var(--bg-primary);
				color: var(--text-secondary);
				text-decoration: none;
				border-radius: 10px;
				border: 1px solid var(--mocha-mousse);
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
				font-size: 0.85rem;
				font-weight: 500;
				font-family: 'Space Grotesk', sans-serif;
				flex-shrink: 0;
				white-space: nowrap;
				cursor: pointer;
				appearance: none;
				position: relative;
				overflow: hidden;
				min-width: auto;
				text-align: center;
			}
			
			.filter-select::before, .sort-btn::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, 
					transparent, 
					rgba(255, 183, 77, 0.1), 
					transparent);
				transition: left 0.6s ease;
			}
			
			.filter-select:hover::before, .sort-btn:hover::before {
				left: 100%;
			}			.filter-select {
				position: relative;
				padding-right: 0.8rem;
			}.filter-select:hover, .sort-btn:hover {
				background: var(--bg-secondary);
				color: var(--text-primary);
				transform: translateY(-3px) scale(1.05);
				box-shadow: 
					0 8px 25px rgba(0, 0, 0, 0.15),
					0 0 0 1px rgba(255, 183, 77, 0.3);
				border-color: var(--amber-glow);
			}
			
			.filter-select:active, .sort-btn:active {
				transform: translateY(-1px) scale(1.02);
				transition: all 0.1s ease;
			}
			.filter-select:focus, .sort-btn:focus {
				outline: none;
				background: var(--bg-secondary);
				color: var(--text-primary);
				box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
				border-color: var(--amber-glow);			}			.sort-btn.active {
				background: var(--amber-glow);
				color: white;
				box-shadow: 0 4px 15px rgba(255, 183, 77, 0.4);
			}			.sort-btn.active.desc::after {
				content: ' ↑';
				font-weight: bold;
				margin-left: 0.25rem;
			}			.sort-btn.active.asc::after {
				content: ' ↓';
				font-weight: bold;
				margin-left: 0.25rem;
			}.reset-btn {
				display: flex;
				align-items: center;
				justify-content: center;
				padding: 0.5rem 0.8rem;
				background: linear-gradient(135deg, var(--amber-glow), rgba(255, 183, 77, 0.8));
				color: white;
				text-decoration: none;
				border-radius: 10px;
				border: 1px solid var(--amber-glow);
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
				font-size: 0.85rem;
				font-weight: 600;
				font-family: 'Space Grotesk', sans-serif;
				flex-shrink: 0;
				white-space: nowrap;
				cursor: pointer;
				box-shadow: 
					0 4px 15px rgba(255, 183, 77, 0.4),
					inset 0 1px 0 rgba(255, 255, 255, 0.2);
				position: relative;
				overflow: hidden;
				animation: resetPulse 3s ease-in-out infinite;
				min-width: auto;
				text-align: center;
			}
			
			.reset-btn::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, 
					transparent, 
					rgba(255, 255, 255, 0.2), 
					transparent);
				transition: left 0.6s ease;
			}
			
			.reset-btn:hover::before {
				left: 100%;
			}
			
			.reset-btn:hover {
				background: linear-gradient(135deg, var(--teal-crystal), rgba(0, 172, 193, 0.8));
				border-color: var(--teal-crystal);
				transform: translateY(-3px) scale(1.05);
				box-shadow: 
					0 8px 25px rgba(0, 172, 193, 0.4),
					inset 0 1px 0 rgba(255, 255, 255, 0.3);
				animation: none;
			}
			
			@keyframes resetPulse {
				0%, 100% {
					box-shadow: 
						0 4px 15px rgba(255, 183, 77, 0.4),
						inset 0 1px 0 rgba(255, 255, 255, 0.2);
				}
				50% {
					box-shadow: 
						0 6px 20px rgba(255, 183, 77, 0.6),
						inset 0 1px 0 rgba(255, 255, 255, 0.3),
						0 0 0 1px rgba(255, 183, 77, 0.3);
				}
			}			.character-table-container {
				overflow-x: auto;
				margin: 3rem auto;
				padding: 0 1rem;
				max-width: 100%;
			}
			table.character-table {
				width: 100%;
				border-collapse: separate;
				border-spacing: 0;
				background: var(--bg-primary);
				border-radius: 18px;
				box-shadow: 0 8px 32px rgba(0,0,0,0.10);
				font-family: 'Space Grotesk', sans-serif;
				overflow: hidden;
			}
			table.character-table th, table.character-table td {
				padding: 1rem 0.5rem;
				text-align: center;
				border-bottom: 1px solid var(--neutral-200);
				transition: background 0.2s;
			}			table.character-table th {
				background: var(--amber-glow);
				color: #222;
				font-weight: 800;
				font-size: 1.1rem;
				font-family: 'Space Grotesk', sans-serif;
				position: sticky;
				top: 0;
				z-index: 2;
				cursor: default;
				letter-spacing: 0.02em;
				border-bottom: 2px solid var(--neutral-200);
				padding: 1rem 0.8rem;
				transition: none;
			}
			table.character-table th:first-child {
				border-top-left-radius: 18px;
				padding-left: 1.2rem;
			}
			table.character-table th:last-child {
				border-top-right-radius: 18px;
				padding-right: 1.2rem;
			}
			table.character-table tr:nth-child(even) {
				background: rgba(245, 245, 255, 0.7);
			}			table.character-table tr:hover {
				background: linear-gradient(135deg, 
					rgba(255, 255, 255, 0.95) 0%, 
					rgba(240, 248, 255, 0.85) 30%,
					rgba(230, 240, 255, 0.9) 70%,
					rgba(255, 255, 255, 0.95) 100%);
				color: #333;
				box-shadow: 
					0 2px 20px rgba(0, 172, 193, 0.15),
					0 0 30px rgba(255, 183, 77, 0.1),
					inset 0 1px 0 rgba(255, 255, 255, 0.6);
				transform: translateY(-1px);
				position: relative;
				transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
			}
			
			table.character-table tr:hover::after {
				content: '';
				position: absolute;
				top: 50%;
				right: 20px;
				width: 4px;
				height: 4px;
				background: radial-gradient(circle, 
					rgba(255, 183, 77, 0.8) 0%, 
					rgba(255, 183, 77, 0.4) 50%, 
					transparent 100%);
				border-radius: 50%;
				animation: sparkle 2s ease-in-out infinite;
				pointer-events: none;
				z-index: 1;
			}
			
			@keyframes sparkle {
				0%, 100% {
					transform: translateY(-50%) scale(1);
					box-shadow: 
						0 0 6px rgba(255, 183, 77, 0.4),
						0 0 12px rgba(255, 183, 77, 0.2);
				}
				50% {
					transform: translateY(-50%) scale(1.5);
					box-shadow: 
						0 0 12px rgba(255, 183, 77, 0.6),
						0 0 24px rgba(255, 183, 77, 0.3),
						0 0 36px rgba(255, 183, 77, 0.1);
				}
			}
			.character-img {
				width: 48px;
				height: 48px;
				border-radius: 12px;
				object-fit: cover;
				border: 2px solid var(--amber-glow);
				box-shadow: 0 2px 8px rgba(0,0,0,0.08);
				background: #fff;
			}
			.role-badge, .element-badge, .rarity-badge {
				display: inline-block;
				padding: 0.25rem 0.85rem;
				border-radius: 14px;
				font-size: 1rem;
				font-weight: 700;
				margin: 0 0.1rem;
				box-shadow: 0 1px 4px rgba(0,0,0,0.07);
				letter-spacing: 0.02em;
			}
			.rarity-badge.ssr { background: #ffe066; color: #222; border: 1.5px solid #eecb4d; }
			.rarity-badge.sr { background: #7ecfff; color: #222; border: 1.5px solid #4dbfff; }
			.element-badge.fire { background: #ff6b6b; color: #fff; border: 1.5px solid #ff3b3b; }
			.element-badge.ice { background: #4dbfff; color: #fff; border: 1.5px solid #1e90ff; }
			.element-badge.wind { background: #4dffb8; color: #222; border: 1.5px solid #00e6a8; }
			.element-badge.holy { background: #ffe066; color: #222; border: 1.5px solid #ffd700; }
			.element-badge.chaos { background: #b266ff; color: #fff; border: 1.5px solid #7c3aed; }
			.role-badge.tank { background: #b0b0b0; color: #222; border: 1.5px solid #888; }
			.role-badge.dps { background: #ffb347; color: #222; border: 1.5px solid #ff9800; }
			.role-badge.buffer { background: #7ecfff; color: #222; border: 1.5px solid #4dbfff; }
			.role-badge.debuffer { background: #b266ff; color: #fff; border: 1.5px solid #7c3aed; }			.role-badge.healer { background: #a3ffb7; color: #222; border: 1.5px solid #00e676; }
			
			@media (max-width: 900px) {
				.page-flex { flex-direction: column; gap: 1.5rem; }
				.filter-bar { 
					flex-direction: column;
					gap: 0.8rem; 
					flex-wrap: wrap;
					padding: 0.4rem 0.5rem;
				}
				.filter-controls { 
					order: 1; 
					width: 100%;
					justify-content: center;
				}
				.sort-controls { 
					order: 3; 
					width: 100%;
					justify-content: center;
				}
				.filter-select, .sort-btn, .reset-btn { font-size: 0.92rem; min-width: 70px; height: 1.8rem; padding: 0.15rem 0.7rem; }
				table.character-table th, table.character-table td {
					font-size: 0.9rem;
					padding: 0.5rem 0.2rem;
				}
				.character-img { width: 36px; height: 36px; }
			}
		</style>
