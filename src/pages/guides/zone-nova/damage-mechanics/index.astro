---
import DamageMechanicsHubLayout from '../../../../layouts/zone-nova/DamageMechanicsHubLayout.astro';
import { damageMechanicsIndex, getFeaturedGuides, getNewGuides } from '../../../../data/zone-nova/damage-mechanics-index.js';
import '../../../../styles/games/zone-nova/zn-damage-mechanics-index.css';

export const prerender = true;

const { meta, heroSection, mechanicsCategories, quickReference, upcomingGuides } = damageMechanicsIndex;
---

<DamageMechanicsHubLayout 
  title={meta.title}
  description={meta.description}
  gameTitle="Damage Mechanics Hub"
>
  <!-- Main Categories -->
  <section class="mechanics-categories">
    {mechanicsCategories.map(category => (
      <div class="category-section">
        <div class="category-header">
          <h2 class="category-title">{category.title}</h2>
          <p class="category-description">{category.description}</p>
        </div>
        
        <div class="guides-grid">
          {category.guides.map(guide => (
            <a href={guide.url} class="guide-card-link">
              <article class="guide-card">
                <h3 class="guide-title">{guide.title}</h3>
                <p class="guide-description">{guide.description}</p>
              </article>
            </a>
          ))}
        </div>
      </div>
    ))}
  </section>
</DamageMechanicsHubLayout>

