---
import SurveyLandingLayout from '../../../../layouts/zone-nova/SurveyLandingLayout.astro';
import { getActiveSurveys } from '../../../../data/zone-nova/surveys.js';
import '../../../../styles/games/zone-nova/zn-surveys.css';

const activeSurveys = getActiveSurveys();
---

<SurveyLandingLayout
  title="Zone Nova Surveys - GachaWiki"
  description="Official Zone Nova player surveys and translations"
  gameTitle="Player Surveys"
>
  <section class="content-section">
    <h2 class="section-title">Available Surveys</h2>
    <p style="color: var(--text-secondary); margin: 0 0 1.5rem 0; font-style: italic;">
      These surveys are translations from in-game surveys.
    </p>

    <!-- Survey Links -->
    <div class="surveys-grid">
      {
        activeSurveys.map(survey => (
          <a href={survey.url} class="survey-card">
            <div class="survey-header">
              <span class="survey-icon">{survey.icon}</span>
              <div class="survey-info">
                <h3>{survey.title}</h3>
                <p class="survey-meta">{survey.meta}</p>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </section>
</SurveyLandingLayout>
