			}

			.content-section:hover {
				transform: translateY(-4px);
				box-shadow: 0 16px 40px rgba(164, 120, 100, 0.3);
				border-color: var(--teal-crystal);
			}
			
			.section-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 2.5rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin: 0 0 1.5rem 0;
				text-align: center;
				animation: titleGlow 3s ease-in-out infinite alternate;
			}

			.subsection-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.8rem;
				font-weight: 600;
				color: var(--text-primary);
				margin: 2rem 0 1rem 0;
				padding-left: 1rem;
				border-left: 4px solid var(--amber-glow);
			}

			.question-card {
				background: var(--bg-primary);
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.question-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
				z-index: 1;
			}

			.question-card:hover::before {
				left: 100%;
			}

			.question-card > * {
				position: relative;
				z-index: 2;
			}

			.question-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.question-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.2rem;
				font-weight: 600;
				color: var(--amber-glow);
				margin: 0 0 1rem 0;
			}

			.options-list {
				list-style: none;
				padding: 0;
				margin: 0;
			}

			.options-list li {
				padding: 0.5rem 0;
				color: var(--text-primary);
				font-size: 1rem;
				border-bottom: 1px solid var(--neutral-200);
				transition: all 0.3s ease;
			}

			.options-list li:last-child {
				border-bottom: none;
			}

			.options-list li:hover {
				color: var(--amber-glow);
				padding-left: 0.5rem;
			}

			.options-list li::before {
