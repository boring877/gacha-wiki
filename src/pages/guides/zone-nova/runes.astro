---
import ZoneNovaLayout from '../../../layouts/ZoneNovaLayout.astro';
import FormattedDate from '../../../components/FormattedDate.astro';
---

<ZoneNovaLayout 
	title="Zone Nova Rune Guides - GachaWiki" 
	description="Complete rune guides, builds, and optimization for Zone Nova"
	gameTitle="Rune System Guide"
	showBreadcrumb={true}
	breadcrumbText="Runes"
>
	<Fragment slot="head">
		<style>
			.back-button {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				background: var(--bg-primary);
				color: var(--text-primary);
				text-decoration: none;
				padding: 1rem 1.5rem;
				border-radius: 12px;
				border: 1px solid var(--amber-glow);
				font-family: 'Space Grotesk', sans-serif;
				font-weight: 600;
				font-size: 1rem;
				margin-bottom: 2rem;
				transition: all 0.3s ease;
				box-shadow: 0 4px 12px rgba(164, 120, 100, 0.2);
			}

			.back-button:hover {
				background: var(--amber-glow);
				color: white;
				transform: translateY(-2px);
				box-shadow: 0 8px 20px rgba(164, 120, 100, 0.3);
			}

			.back-button:hover .back-arrow {
				transform: translateX(-3px);
			}

			.back-arrow {
				font-size: 1.2rem;
				transition: transform 0.3s ease;
			}

			.content-section {
				background: rgba(240, 240, 240, 0.95);
				padding: 3rem;
				border-radius: 20px;
				margin-bottom: 3rem;
				border: 1px solid var(--amber-glow);
				box-shadow: 0 12px 30px rgba(164, 120, 100, 0.2);
				transition: all 0.4s ease;
				animation: sectionFadeIn 0.8s ease-out;
			}

			.content-section:hover {
				transform: translateY(-4px);
				box-shadow: 0 16px 40px rgba(164, 120, 100, 0.3);
				border-color: var(--teal-crystal);
			}
			
			.section-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 2.5rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin: 0 0 1.5rem 0;
				text-align: center;
				animation: titleGlow 3s ease-in-out infinite alternate;
			}

			.section-description {
				color: #666;
				font-size: 1.2rem;
				line-height: 1.7;
				margin-bottom: 2rem;
				text-align: center;
				max-width: 60rem;
				margin-left: auto;
				margin-right: auto;
			}

			.rune-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
				gap: 2rem;
				margin-top: 2rem;
			}
			
			.rune-card {
				background: var(--bg-primary);
				border: 1px solid var(--mocha-mousse);
				border-radius: 16px;
				padding: 2.5rem;
				transition: all 0.4s ease;
				position: relative;
				overflow: hidden;
				animation: cardSlideUp 0.6s ease-out;
			}

			.rune-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.rune-card:hover::before {
				left: 100%;
			}
			
			.rune-card:hover {
				transform: translateY(-8px) scale(1.02);
				box-shadow: 0 20px 40px rgba(0, 172, 193, 0.3);
				border-color: var(--teal-crystal);
				background: var(--bg-secondary);
			}
			
			.rune-card h3 {
				color: var(--text-primary);
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.6rem;
				font-weight: 600;
				margin: 0 0 1rem 0;
				transition: all 0.3s ease;
			}

			.rune-card:hover h3 {
				color: var(--amber-glow);
			}

			.rune-card p {
				color: var(--text-secondary);
				line-height: 1.6;
				margin-bottom: 1rem;
				transition: color 0.3s ease;
			}

			.rune-card:hover p {
				color: var(--text-primary);
			}

			.stat-list {
				list-style: none;
				padding: 0;
				margin: 0;
			}

			.stat-list li {
				color: var(--text-secondary);
				padding: 0.5rem 0;
				border-bottom: 1px solid rgba(164, 120, 100, 0.2);
				transition: color 0.3s ease;
			}

			.stat-list li:last-child {
				border-bottom: none;
			}

			.rune-card:hover .stat-list li {
				color: var(--text-primary);
			}

			.priority-number {
				color: var(--amber-glow);
				font-weight: 600;
				margin-right: 0.5rem;
			}

			@keyframes sectionFadeIn {
				0% {
					opacity: 0;
					transform: translateY(20px);
				}
				100% {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@keyframes cardSlideUp {
				0% {
					opacity: 0;
					transform: translateY(30px);
				}
				100% {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@media (max-width: 768px) {
				.content-section {
					padding: 2rem;
					margin-bottom: 2rem;
				}
				
				.section-title {
					font-size: 2rem;
				}

				.rune-grid {
					grid-template-columns: 1fr;
					gap: 1.5rem;
				}

				.rune-card {
					padding: 2rem;
				}
			}
		</style>
	</Fragment>

