---
import ZoneNovaLayout from '../../../layouts/ZoneNovaLayout.astro';
import FormattedDate from '../../../components/FormattedDate.astro';
import '../../../styles/Zonenova/zn-contributing.css';
---

<ZoneNovaLayout 
	title="Contributing - Zone Nova - GachaWiki" 
	description="Get in touch to help improve Zone Nova guides"
	gameTitle="Contributing"
>

	<!-- Contributing Section -->
	<section class="content-section">
		<h2 class="section-title">Get In Touch</h2>
		<div class="section-description">
			Want to help improve Zone Nova guides? Have suggestions, corrections, or new content? 
			Send me a message through any of these platforms!
		</div>
		
		<div class="contact-grid">
			<!-- YouTube Contact -->
			<div class="contact-card">
				<h3>YouTube</h3>
				<p>Comment on my videos or send a message directly through my channel</p>
				<a href="https://www.youtube.com/@GachaJunkie888" class="contact-button" target="_blank">
					Visit YouTube Channel
				</a>
			</div>

			<!-- GitHub Contact -->
			<div class="contact-card">
				<h3>GitHub</h3>
				<p>Create an issue or contribute directly to the project repository</p>
				<a href="https://github.com/boring877/gacha-wiki" class="contact-button" target="_blank">
					Visit GitHub Repository
				</a>
			</div>

			<!-- Discord Contact -->
			<div class="contact-card">
				<h3>Discord</h3>
				<p>Join our community server for real-time discussions and support</p>
				<a href="https://discord.com/invite/JKCNtkSGNE" class="contact-button" target="_blank">
					Join Discord Server
				</a>
			</div>
		</div>
	</section>

	<!-- Contribution Guidelines Section -->
	<section class="content-section">
		<h2 class="section-title">How to Contribute</h2>
		<div class="section-description">
			Multiple ways to help improve the Zone Nova wiki
		</div>
		
		<div class="contact-grid">
			<div class="contact-card">
				<h3>Report Issues</h3>
				<p>Found incorrect information, broken links, or missing content? Let us know!</p>
				<ul style="text-align: left; color: var(--text-secondary); line-height: 1.6;">
					<li>Character data corrections</li>
					<li>Update information</li>
					<li>Missing content suggestions</li>
				</ul>
			</div>

			<div class="contact-card">
				<h3>Submit Content</h3>
				<p>Share your knowledge and help expand our guides</p>
				<ul style="text-align: left; color: var(--text-secondary); line-height: 1.6;">
					<li>Character builds and strategies</li>
					<li>Event guides and tips</li>
					<li>New rift information</li>
				</ul>
			</div>

			<div class="contact-card">
				<h3>Technical Contributions</h3>
				<p>Help improve the website functionality and performance</p>
				<ul style="text-align: left; color: var(--text-secondary); line-height: 1.6;">
					<li>Bug fixes and improvements</li>
					<li>New features</li>
					<li>Performance optimizations</li>
				</ul>
			</div>
		</div>
	</section>

	<!-- Community Guidelines Section -->
	<section class="content-section">
		<h2 class="section-title">Community Guidelines</h2>
		<div class="section-description">
			Help us maintain a positive and helpful community
		</div>
		
		<div style="max-width: 800px; margin: 0 auto;">
			<div style="background: var(--bg-primary); border: 1px solid var(--neutral-200); border-radius: 12px; padding: 2rem;">
				<ul style="color: var(--text-secondary); line-height: 1.8; margin: 0; padding-left: 1.5rem;">
					<li><strong>Be respectful</strong> - Treat all community members with courtesy and respect</li>
					<li><strong>Stay on topic</strong> - Keep discussions focused on Zone Nova and related content</li>
					<li><strong>Verify information</strong> - Double-check facts before sharing to maintain accuracy</li>
					<li><strong>Help others</strong> - Share your knowledge and assist fellow players</li>
					<li><strong>Report issues</strong> - Let us know about problems so we can fix them quickly</li>
				</ul>
			</div>
		</div>
	</section>
</ZoneNovaLayout> 