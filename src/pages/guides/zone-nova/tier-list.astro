  <script
    define:vars={{
      ALL_TIER_LISTS,
      characterMap,
      TIER_DEFINITIONS,
      optimizedImagePaths: (() => {
        // Create optimized image mapping that uses the same public paths as ZNCharacterImage
        const paths = {};
        ZONE_NOVA_CHARACTERS.forEach(char => {
          // Extract filename from full path (same as ZNCharacterImage does)
          const filename = char.image.split('/').pop();
          // Use the public path that Astro's Image component generates
          // These are the same paths that ZNCharacterImage outputs after optimization
          paths[char.name] = `/images/games/zone-nova/characters/${filename}`;
        });
        return paths;
      })(),
    }}
