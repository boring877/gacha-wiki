---
import ZoneNovaLayout1 from '../../../../layouts/ZoneNovaLayout1.astro';
import FormattedDate from '../../../../components/FormattedDate.astro';
---

<ZoneNovaLayout1 
	title="June 17th Maintenance - Zone Nova Updates - GachaWiki" 
	description="Details of the June 17th maintenance."
	gameTitle="June 17th Maintenance"
	showBreadcrumb={true}
	breadcrumbText="June 17th Maintenance"
>
	<Fragment slot="head">
		<style>
			.back-button {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				background: var(--bg-primary);
				color: var(--text-primary);
				text-decoration: none;
				padding: 1rem 1.5rem;
				border-radius: 12px;
				border: 1px solid var(--amber-glow);
				font-family: 'Space Grotesk', sans-serif;
				font-weight: 600;
				font-size: 1rem;
				margin-bottom: 2rem;
				transition: all 0.3s ease;
				box-shadow: 0 4px 12px rgba(164, 120, 100, 0.2);
			}

			.back-button:hover {
				background: var(--amber-glow);
				color: white;
				transform: translateY(-2px);
				box-shadow: 0 8px 20px rgba(164, 120, 100, 0.3);
			}

			.announcement-header {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.1), rgba(0, 172, 193, 0.1));
				padding: 3rem;
				border-radius: 20px;
				margin-bottom: 3rem;
				border: 1px solid var(--amber-glow);
				text-align: center;
			}

			.announcement-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 3rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin: 0 0 1rem 0;
			}

			.announcement-date {
				color: var(--text-secondary);
				font-size: 1.2rem;
				margin: 0;
			}

			.content-section {
				background: rgba(240, 240, 240, 0.95);
				padding: 2.5rem;
				border-radius: 16px;
				margin-bottom: 2rem;
				border: 1px solid var(--mocha-mousse);
				box-shadow: 0 8px 24px rgba(164, 120, 100, 0.15);
			}

			.section-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.8rem;
				font-weight: 600;
				color: var(--text-primary);
				margin: 0 0 1.5rem 0;
				display: flex;
				align-items: center;
				gap: 0.75rem;
			}

			.maintenance-info {
				background: linear-gradient(135deg, rgba(0, 172, 193, 0.1), rgba(0, 172, 193, 0.05));
				border-left: 4px solid var(--teal-crystal);
			}

			.events-section {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.1), rgba(255, 183, 77, 0.05));
				border-left: 4px solid var(--amber-glow);
			}

			.gemstone-section {
				background: linear-gradient(135deg, rgba(147, 51, 234, 0.1), rgba(147, 51, 234, 0.05));
				border-left: 4px solid #9333ea;
			}

			.compensation-section {
				background: linear-gradient(135deg, rgba(107, 114, 128, 0.1), rgba(107, 114, 128, 0.05));
				border-left: 4px solid #6b7280;
			}

			ul {
				list-style-type: none;
				padding-left: 1rem;
			}

			li {
				margin-bottom: 1rem;
				line-height: 1.6;
				color: var(--text-secondary);
				display: flex;
				align-items: flex-start;
				gap: 0.75rem;
			}

			li::before {
				content: '⚡️';
				font-size: 1.2rem;
				line-height: 1.6;
				margin-top: -2px;
			}

			.event-duration {
				font-weight: 600;
				color: var(--teal-crystal);
			}

			.new-character-highlight {
				color: var(--amber-glow);
				font-weight: bold;
			}

			.gem-deal {
				color: #9333ea;
				font-weight: bold;
			}

			.compensation-item {
				color: #6b7280;
				font-weight: bold;
			}
		</style>
	</Fragment>

	<a href="/guides/zone-nova/updates" class="back-button">
		<span class="back-arrow">←</span> Back to Updates
	</a>

	<header class="announcement-header">
		<h1 class="announcement-title">June 17th, 2025 Maintenance</h1>
		<p class="announcement-date">
			Posted on <FormattedDate date={new Date('2025-06-17')} />
		</p>
	</header>

	<section class="content-section maintenance-info">
		<h2 class="section-title">
			<i class="fas fa-tools"></i>
			Maintenance Details
		</h2>
		<ul>
			<li>
				<strong>Maintenance Time:</strong> June 17, 2025, 14:00 - 16:00 (local server time)
			</li>
			<li>
				<strong>Details:</strong> During maintenance, captains will be unable to log in. Please prepare accordingly.
			</li>
		</ul>
	</section>

	<section class="content-section events-section">
		<h2 class="section-title">
			<i class="fas fa-star"></i>
			618 Carnival Special Event
		</h2>
		<ul>
			<li>
				<strong>Rewards:</strong> Energy Potion x5, Stamina Refill x15 (sent via in-game mail after maintenance)
			</li>
			<li>
				<strong>Eligibility:</strong> Captains who logged in before July 1, 2025, 23:59
			</li>
			<li>
				<strong>Starter Gift Pack:</strong> Available after maintenance; access via Shop → Featured → Starter Gift Pack
			</li>
		</ul>
	</section>

	<section class="content-section compensation-section">
		<h2 class="section-title">
			<i class="fas fa-coins"></i>
			Compensation Details
		</h2>
		<ul>
			<li>
				<strong>Maintenance Compensation:</strong> 300 Quartz
			</li>
			<li>
				<strong>Eligibility:</strong> Captains who logged in before July 1, 2025, 23:59
			</li>
			<li>
				<strong>Distribution:</strong> Sent via in-game mail after maintenance
			</li>
		</ul>
	</section>

</ZoneNovaLayout1>
