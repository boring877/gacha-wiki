---
// Homepage - Now modular and clean
import HomePageLayout from '../layouts/HomePageLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<HomePageLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <!-- Main Site Structured Data -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "GachaWiki",
      "url": "https://gachawiki.info",
      "description": "Comprehensive guides, character builds, and game strategies for popular gacha games like Zone Nova, Silver and Blood, Horizon Walker, Stella Sora, and Rebellion Gilgamesh. Complete wiki with character database, damage mechanics, and game strategies.",
      "publisher": {
        "@type": "Organization",
        "name": "GachaWiki",
        "url": "https://gachawiki.info",
        "sameAs": [
          "https://github.com/boring877/gacha-wiki",
          "https://www.youtube.com/@GachaJunkie888",
          "https://discord.gg/JKCNtkSGNE"
        ]
      },
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://gachawiki.info/guides/?search={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
  </script>

  <!-- Games Collection -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "ItemList",
      "name": "Gacha Games Wiki Collection",
      "description": "Complete wiki collection for popular gacha games",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "item": {
            "@type": "VideoGame",
            "name": "Zone Nova",
            "url": "https://gachawiki.info/guides/zone-nova/",
            "description": "Strategic gacha RPG with mythological characters and turn-based combat"
          }
        },
        {
          "@type": "ListItem",
          "position": 2,
          "item": {
            "@type": "VideoGame",
            "name": "Silver and Blood",
            "url": "https://gachawiki.info/guides/silver-and-blood/",
            "description": "Epic vampire gacha RPG featuring the struggle between immortal Bloodborn and the Tempus Church"
          }
        },
        {
          "@type": "ListItem",
          "position": 3,
          "item": {
            "@type": "VideoGame",
            "name": "Horizon Walker",
            "url": "https://gachawiki.info/guides/horizon-walker/",
            "description": "Nature-themed gacha RPG with exploration and elemental mechanics"
          }
        },
        {
          "@type": "ListItem",
          "position": 4,
          "item": {
            "@type": "VideoGame",
            "name": "Stella Sora",
            "url": "https://gachawiki.info/guides/stella-sora/",
            "description": "Fantasy gacha RPG set in the Nova Continent with exploration and character collection"
          }
        },
        {
          "@type": "ListItem",
          "position": 5,
          "item": {
            "@type": "VideoGame",
            "name": "Rebellion Gilgamesh",
            "url": "https://gachawiki.info/guides/rebellion-gilgamesh/",
            "description": "Adult fantasy gacha RPG with strategic combat and mythology-inspired characters"
          }
        }
      ]
    }
  </script>
</HomePageLayout>
