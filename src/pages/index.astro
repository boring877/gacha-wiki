		padding: 0 0.5rem !important;
	}

	/* Modal Mobile */
	#gamesModal div[style*="padding: 2rem;"] {
		padding: 1rem !important;
		margin: 1rem !important;
		max-height: 90vh !important;
	}

	/* Modal Header Mobile */
	#gamesModal h2 {
		font-size: 1.5rem !important;
	}

	/* Modal Games Grid Mobile */
	#gamesModal div[style*="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));"] {
		grid-template-columns: 1fr !important;
		gap: 1rem !important;
	}

	/* Modal Game Cards Mobile */
	#gamesModal div[style*="padding: 1.5rem;"] {
		padding: 1.25rem !important;
	}

	/* Modal Game Images Mobile */
	#gamesModal div[style*="height: 150px;"] {
		height: 120px !important;
	}
}

/* Extra Small Mobile (iPhone SE, etc.) */
@media (max-width: 480px) {
	main {
		padding: 5rem 0.75rem 1.5rem 0.75rem !important;
	}

	/* Very Small Screen Adjustments */
	h2 {
		font-size: 1.8rem !important;
	}

	/* Zone Nova Game Image - Smaller */
	div[style*="width: 10rem; height: 10rem;"] {
		width: 6rem !important;
		height: 6rem !important;
	}

	/* Zone Nova Title - Smaller */
	h3[style*="font-size: 2.5rem;"] {
		font-size: 1.6rem !important;
	}

	/* Active Events Grid - Single Column */
	div[style*="display: grid; grid-template-columns: 1fr 1fr 1fr;"] {
		grid-template-columns: 1fr !important;
		gap: 0.4rem !important;
	}

	/* Event Cards - Smaller Padding */
	div[style*="background: rgba(0, 172, 193, 0.15);"],
	div[style*="background: rgba(255, 183, 77, 0.15);"],
	div[style*="background: rgba(255, 77, 77, 0.15);"] {
		padding: 0.5rem !important;
	}

	/* Event Names - Smaller Font */
	div[style*="font-weight: 600; color: var(--text-primary); margin-bottom: 0.25rem;"] {
		font-size: 0.8rem !important;
	}

	/* Timer Font - Even Smaller */
	#riftTimer2, #riftTimer3, #thunderTimer {
		font-size: 0.7rem !important;
	}

	/* Action Button - Smaller */
	div[style*="background: var(--amber-glow); color: white; padding: 1rem 2rem;"] {
		padding: 0.75rem 1.25rem !important;
		font-size: 0.85rem !important;
	}

	/* Coming Soon Cards - More Compact */
	div[style*="padding: 2rem; border: 1px solid var(--mocha-mousse);"],
	div[style*="padding: 2rem; border: 1px solid var(--rose-quartz);"],
	div[style*="padding: 2rem; border: 1px solid var(--teal-crystal);"] {
		padding: 1.25rem !important;
	}

	/* Built By Text - Smaller */
	p[style*="font-size: clamp(1.5rem, 3vw, 2rem);"] {
		font-size: 1.1rem !important;
		line-height: 1.4 !important;
	}
}

/* Touch-friendly improvements */
@media (hover: none) and (pointer: coarse) {
	/* Remove hover effects on touch devices */
	div[onmouseover] {
		transition: none !important;
	}

	/* Increase tap targets */
	a, button, [onclick] {
		min-height: 44px !important;
		min-width: 44px !important;
		touch-action: manipulation;
	}

	/* Ensure buttons are easily tappable */
	div[style*="background: var(--amber-glow); color: white; padding:"] {
		min-height: 48px !important;
		display: flex !important;
		align-items: center !important;
		justify-content: center !important;
	}
}
</style>

<script>
// Modal functionality
document.addEventListener('DOMContentLoaded', function() {
	const browseBtn = document.getElementById('browseGamesBtn');
	const modal = document.getElementById('gamesModal');
	const closeBtn = document.getElementById('closeModal');
	
	browseBtn?.addEventListener('click', () => {
		if (modal) {
			modal.style.opacity = '1';
			modal.style.visibility = 'visible';
		}
	});
	
	closeBtn?.addEventListener('click', () => {
		if (modal) {
			modal.style.opacity = '0';
			modal.style.visibility = 'hidden';
		}
	});
	
	modal?.addEventListener('click', (e) => {
		if (e.target === modal) {
			modal.style.opacity = '0';
			modal.style.visibility = 'hidden';
		}
	});
});

// Simple Event Timers
document.addEventListener('DOMContentLoaded', function() {
	// Set end dates for events
	const rift2End = new Date('2025-06-10T23:59:59').getTime();
	const rift3End = new Date('2025-06-24T23:59:59').getTime();
	const thunderEnd = new Date('2025-06-10T03:59:00+08:00').getTime();

	function updateTimers() {
		const now = new Date().getTime();
		
		// Update Rift Tide II
		const timer2 = document.getElementById('riftTimer2');
		if (timer2) {
			const timeLeft2 = rift2End - now;
			if (timeLeft2 > 0) {
				const days2 = Math.floor(timeLeft2 / (1000 * 60 * 60 * 24));
				const hours2 = Math.floor((timeLeft2 % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
				timer2.textContent = `${days2}d ${hours2}h left`;
			} else {
				timer2.textContent = 'Event Ended';
				timer2.style.opacity = '0.6';
			}
		}
		
		// Update Rift Tide III
		const timer3 = document.getElementById('riftTimer3');
		if (timer3) {
			const timeLeft3 = rift3End - now;
			if (timeLeft3 > 0) {
				const days3 = Math.floor(timeLeft3 / (1000 * 60 * 60 * 24));
				const hours3 = Math.floor((timeLeft3 % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
				timer3.textContent = `${days3}d ${hours3}h left`;
			} else {
				timer3.textContent = 'Event Ended';
				timer3.style.opacity = '0.6';
			}
		}
		
		// Update Thunder King Flame
		const thunderTimer = document.getElementById('thunderTimer');
		if (thunderTimer) {
			const timeLeftThunder = thunderEnd - now;
			if (timeLeftThunder > 0) {
				const daysThunder = Math.floor(timeLeftThunder / (1000 * 60 * 60 * 24));
				const hoursThunder = Math.floor((timeLeftThunder % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
				thunderTimer.textContent = `${daysThunder}d ${hoursThunder}h left`;
			} else {
				thunderTimer.textContent = 'Event Ended';
				thunderTimer.style.opacity = '0.6';
			}
		}
	}

	// Update immediately and then every minute
	updateTimers();
	setInterval(updateTimers, 60000);
});

// Tab switching functionality
document.addEventListener('DOMContentLoaded', function() {
	const tabBtns = document.querySelectorAll('.tab-btn');
	const tabContents = document.querySelectorAll('.tab-content');
	
	tabBtns.forEach(btn => {
		btn.addEventListener('click', () => {
			const targetTab = btn.getAttribute('data-tab');
			
			// Remove active class from all tabs and contents
			tabBtns.forEach(b => {
				const button = b as HTMLElement;
				b.classList.remove('active');
				button.style.background = 'transparent';
				button.style.color = 'var(--text-secondary)';
				button.style.boxShadow = 'none';
			});
			
			tabContents.forEach(content => {
				const contentEl = content as HTMLElement;
				content.classList.remove('active');
				contentEl.style.display = 'none';
				contentEl.style.opacity = '0';
				contentEl.style.transform = 'translateY(20px)';
			});
			
			// Add active class to clicked tab
			const button = btn as HTMLElement;
			btn.classList.add('active');
			button.style.background = 'linear-gradient(135deg, var(--amber-glow), var(--teal-crystal))';
			button.style.color = 'white';
			button.style.boxShadow = '0 4px 12px rgba(164, 120, 100, 0.3)';
			
			// Show target content with animation
			const targetContent = document.getElementById(`${targetTab}-content`);
			if (targetContent) {
				const contentEl = targetContent as HTMLElement;
				targetContent.classList.add('active');
				contentEl.style.display = 'block';
				setTimeout(() => {
					contentEl.style.opacity = '1';
					contentEl.style.transform = 'translateY(0)';
				}, 10);
			}
		});
	});
});
</script>
