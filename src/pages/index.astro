<style>
/* Performance-optimized animations */
@keyframes fadeInScale {
	0% {
		opacity: 0;
		transform: scale(0.95) translateY(20px);
	}
	100% {
		opacity: 1;
		transform: scale(1) translateY(0);
	}
}

@keyframes titleGlow {
	0% {
		text-shadow: 0 0 10px rgba(255, 183, 77, 0.3);
		filter: brightness(1);
	}
	100% {
		text-shadow: 0 0 20px rgba(255, 183, 77, 0.6);
		filter: brightness(1.1);
	}
}

/* Optimized hover effects with GPU acceleration */
.title-hover {
	transition: transform 0.2s ease;
}

.title-hover:hover {
	transform: scale(1.02) translateZ(0);
}

.featured-card {
	transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.featured-card:hover {
	transform: translateY(-2px) translateZ(0);
	box-shadow: 0 15px 35px rgba(164, 120, 100, 0.3);
}

.action-button {
	transition: transform 0.2s ease, background-color 0.2s ease;
}

.action-button:hover {
	background-color: #e6a843 !important;
	transform: translateX(2px) translateZ(0);
}

.coming-soon-card {
	transition: transform 0.3s ease, opacity 0.3s ease;
}

.coming-soon-card:hover {
	opacity: 1 !important;
	transform: translateY(-2px) translateZ(0);
}

.modal-card {
	transition: transform 0.3s ease, border-color 0.3s ease;
}

.modal-card:hover {
	transform: translateY(-4px) translateZ(0);
	border-color: var(--teal-crystal) !important;
}

/* Fade-in animation for sections */
