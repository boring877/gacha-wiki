---
import HomeLayout from '../layouts/HomeLayout.astro';
import OptimizedImage from '../components/OptimizedImage.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<HomeLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<!-- Critical resource hints -->
	<link rel="preload" href="/images/zonenova.jpg" as="image" type="image/jpeg" />
	<link rel="dns-prefetch" href="https://fonts.googleapis.com" />
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	<!-- Performance hints -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="prefetch" href="/guides/zone-nova/" />
	
	<!-- Main Content Area -->
	<main style="max-width: 50rem; margin: 0 auto; padding: 8rem 2rem 4rem 2rem; min-height: 100vh; contain: layout style;">
		<!-- Games Section - Option 5: Featured Showcase Style -->
		<section style="margin-bottom: 6rem; contain: layout style;">
			<div style="text-align: center; margin-bottom: 3rem;">				<h2 style="font-family: 'Space Grotesk', sans-serif; font-size: clamp(2.5rem, 4vw, 3.5rem); font-weight: 700; color: var(--text-primary); background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; margin-bottom: 0.5rem; will-change: transform; transform: translateZ(0); contain: layout style paint;" class="title-hover">
					Game Wiki Library
				</h2>
			</div>

			<!-- Featured Game - Zone Nova -->
			<div style="margin-bottom: 3rem;">
				<div style="background: var(--bg-primary); border-radius: 20px; overflow: hidden; border: 1px solid var(--amber-glow); box-shadow: 0 12px 30px rgba(164, 120, 100, 0.2); will-change: transform, box-shadow; transform: translateZ(0); contain: layout style paint;" class="featured-card">
					<a href="/guides/zone-nova/" style="text-decoration: none; color: inherit; display: block;">
						
						<!-- Featured Header -->
						<div style="background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal)); padding: 1rem 2rem; text-align: center; min-height: 56px; display: flex; align-items: center; justify-content: center;">
							<span style="color: white; font-family: 'Space Grotesk', sans-serif; font-size: 0.9rem; font-weight: 600; display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
								<span style="font-size: 1.2rem;" aria-hidden="true">‚≠ê</span>
								FEATURED GAME
							</span>
						</div>

						<!-- Content Area -->
						<div style="padding: 2rem; display: flex; align-items: center; gap: 2rem; min-height: 220px;">
									<!-- Game Image -->
							<div style="flex-shrink: 0;">								<div style="width: 10rem; height: 10rem; border-radius: 16px; overflow: hidden; box-shadow: 0 8px 20px rgba(0, 172, 193, 0.3); position: relative; background: linear-gradient(135deg, rgba(0, 172, 193, 0.1), rgba(255, 183, 77, 0.1));">
									<!-- Fixed placeholder to prevent CLS -->
									<div style="width: 160px; height: 160px; background: linear-gradient(135deg, rgba(0, 172, 193, 0.1), rgba(255, 183, 77, 0.1)); position: absolute; top: 0; left: 0; border-radius: 16px;"></div>
									<OptimizedImage 
										src="/images/zonenova.jpg" 
										alt="Zone Nova" 
										width={160} 
										height={160}
										priority={true}
										useOptimized={false}
										style="width: 160px; height: 160px; object-fit: cover; position: relative; z-index: 1; border-radius: 16px;"
									/>
								</div>
							</div>							<!-- Game Info -->
							<div style="flex: 1; min-height: 180px;">
								<h3 style="font-family: 'Space Grotesk', sans-serif; font-size: 2.5rem; font-weight: 700; color: var(--text-primary); margin: 0 0 1rem 0; line-height: 1.2;">
									Zone Nova
								</h3>

								<!-- Active Events Section -->
