	main {
		padding: 6rem 1rem 2rem 1rem !important;
		max-width: 100% !important;
	}

	/* Reduce animations on mobile for better performance */
	.title-hover,
	.featured-card,
	.action-button,
	.coming-soon-card,
	.modal-card {
		transition: none;
		will-change: auto;
	}

	/* Touch-optimized hover states */
	@media (hover: none) {
		.title-hover:hover,
		.featured-card:hover,
		.action-button:hover,
		.coming-soon-card:hover,
		.modal-card:hover {
			transform: none;
			background-color: initial;
			opacity: initial;
			box-shadow: initial;
			border-color: initial;
		}
	}

