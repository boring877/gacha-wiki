---
import HomeLayout from '../layouts/HomeLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<HomeLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<!-- Main Content Area -->
	<main style="max-width: 50rem; margin: 0 auto; padding: 8rem 2rem 4rem 2rem; min-height: 100vh;">
		<!-- Games Section - Option 5: Featured Showcase Style -->
		<section style="margin-bottom: 6rem;">
			<div style="text-align: center; margin-bottom: 3rem;">
				<h2 style="font-family: 'Space Grotesk', sans-serif; font-size: clamp(2.5rem, 4vw, 3.5rem); font-weight: 700; color: var(--text-primary); background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; margin-bottom: 0.5rem; animation: titleGlow 3s ease-in-out infinite alternate, fadeInScale 1s ease-out;" onmouseover="this.style.transform='scale(1.05)'" onmouseout="this.style.transform='scale(1)'">
					Game Guide Library
				</h2>
			</div>

			<!-- Featured Game - Zone Nova -->
			<div style="margin-bottom: 3rem;">
				<div style="background: var(--bg-primary); border-radius: 20px; overflow: hidden; border: 1px solid var(--amber-glow); box-shadow: 0 12px 30px rgba(164, 120, 100, 0.2); transition: all 0.3s ease;" onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 15px 35px rgba(164, 120, 100, 0.3)'" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 12px 30px rgba(164, 120, 100, 0.2)'">
					<a href="/guides/zone-nova/" style="text-decoration: none; color: inherit; display: block;">
						
						<!-- Featured Header -->
						<div style="background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal)); padding: 1rem 2rem; text-align: center;">
							<span style="color: white; font-family: 'Space Grotesk', sans-serif; font-size: 0.9rem; font-weight: 600; display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
								<span style="font-size: 1.2rem;">‚≠ê</span>
								FEATURED GAME
							</span>
						</div>

						<!-- Content Area -->
						<div style="padding: 2rem; display: flex; align-items: center; gap: 2rem;">
							
							<!-- Game Image -->
							<div style="flex-shrink: 0;">
								<div style="width: 10rem; height: 10rem; border-radius: 16px; overflow: hidden; box-shadow: 0 8px 20px rgba(0, 172, 193, 0.3);">
									<img src="/images/zonenova.jpg" alt="Zone Nova" style="width: 100%; height: 100%; object-fit: cover;">
								</div>
							</div>

							<!-- Game Info -->
							<div style="flex: 1;">
								<h3 style="font-family: 'Space Grotesk', sans-serif; font-size: 2.5rem; font-weight: 700; color: var(--text-primary); margin: 0 0 1rem 0;">
									Zone Nova
								</h3>
								<p style="color: var(--text-secondary); font-size: 1.1rem; line-height: 1.6; margin: 0 0 1rem 0; max-width: 35rem;">
									Character guides, runes, events, and announcements.
								</p>

								<!-- Active Events Section -->
								<div style="background: linear-gradient(135deg, rgba(0, 172, 193, 0.1), rgba(255, 183, 77, 0.1)); border-radius: 12px; padding: 1rem; margin: 0 0 1rem 0; border-left: 4px solid var(--teal-crystal);">
									<div style="font-size: 0.9rem; font-weight: 600; color: var(--amber-glow); margin-bottom: 0.5rem;">üåÄ Active Events</div>
									<div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 0.75rem; font-size: 0.85rem;">
										<div style="background: rgba(0, 172, 193, 0.15); padding: 0.5rem; border-radius: 6px;">
											<div style="font-weight: 600; color: var(--text-primary); margin-bottom: 0.25rem;">Rift Tide II</div>
											<div id="riftTimer2" style="color: var(--teal-crystal); font-weight: 600; font-family: 'Courier New', monospace;">Loading...</div>
										</div>
										<div style="background: rgba(255, 183, 77, 0.15); padding: 0.5rem; border-radius: 6px;">
											<div style="font-weight: 600; color: var(--text-primary); margin-bottom: 0.25rem;">Rift Tide III</div>
											<div id="riftTimer3" style="color: var(--amber-glow); font-weight: 600; font-family: 'Courier New', monospace;">Loading...</div>
										</div>
										<div style="background: rgba(255, 77, 77, 0.15); padding: 0.5rem; border-radius: 6px;">
											<div style="font-weight: 600; color: var(--text-primary); margin-bottom: 0.25rem;">‚ö° Thunder King</div>
											<div id="thunderTimer" style="color: var(--rose-quartz); font-weight: 600; font-family: 'Courier New', monospace;">Loading...</div>
										</div>
									</div>
								</div>

								<p style="color: var(--amber-glow); font-size: 0.9rem; font-weight: 500; margin: 0 0 2rem 0;">
									Last updated: {new Date().toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
								</p>
								
								<!-- Action Button -->
								<div style="background: var(--amber-glow); color: white; padding: 1rem 2rem; border-radius: 25px; font-family: 'Space Grotesk', sans-serif; font-size: 1rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.75rem; transition: all 0.3s ease;" onmouseover="this.style.background='#e6a843'; this.style.transform='translateX(2px)'" onmouseout="this.style.background='var(--amber-glow)'; this.style.transform='translateX(0)'">
									Explore Zone Nova
									<span style="font-size: 1.25rem;">‚Üí</span>
								</div>
							</div>
						</div>
					</a>
				</div>
			</div>

			<!-- Other Games Section -->
			<div style="text-align: center; margin-bottom: 2rem;">
				<h3 style="font-family: 'Space Grotesk', sans-serif; font-size: 1.2rem; font-weight: 600; background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; margin: 0;">
					More Games Coming Soon
				</h3>
			</div>

			<!-- Coming Soon Grid -->
			<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem;">
				
				<!-- Coming Soon Card 1 -->
				<div style="background: var(--bg-primary); border-radius: 16px; padding: 2rem; border: 1px solid var(--mocha-mousse); text-align: center; opacity: 0.8; transition: all 0.3s ease;" onmouseover="this.style.opacity='1'; this.style.transform='translateY(-2px)'" onmouseout="this.style.opacity='0.8'; this.style.transform='translateY(0)'">
					<div style="width: 4rem; height: 4rem; border-radius: 12px; background: linear-gradient(135deg, var(--mocha-mousse), var(--amber-glow)); display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem auto;">
						<span style="font-size: 2rem;">üéÆ</span>
					</div>
					<h4 style="font-family: 'Space Grotesk', sans-serif; font-size: 1.3rem; font-weight: 600; color: var(--text-primary); margin: 0 0 0.75rem 0;">Coming Soon</h4>
					<div style="background: var(--mocha-mousse); color: white; padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.8rem; font-weight: 600; display: inline-block;">
						In Development
					</div>
				</div>

				<!-- Coming Soon Card 2 -->
				<div style="background: var(--bg-primary); border-radius: 16px; padding: 2rem; border: 1px solid var(--rose-quartz); text-align: center; opacity: 0.8; transition: all 0.3s ease;" onmouseover="this.style.opacity='1'; this.style.transform='translateY(-2px)'" onmouseout="this.style.opacity='0.8'; this.style.transform='translateY(0)'">
					<div style="width: 4rem; height: 4rem; border-radius: 12px; background: linear-gradient(135deg, var(--rose-quartz), var(--teal-crystal)); display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem auto;">
						<span style="font-size: 2rem;">‚è≥</span>
					</div>
					<h4 style="font-family: 'Space Grotesk', sans-serif; font-size: 1.3rem; font-weight: 600; color: var(--text-primary); margin: 0 0 0.75rem 0;">Coming Soon</h4>
					<div style="background: var(--rose-quartz); color: white; padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.8rem; font-weight: 600; display: inline-block;">
						Stay Tuned
					</div>
				</div>

				<!-- Coming Soon Card 3 -->
				<div style="background: var(--bg-primary); border-radius: 16px; padding: 2rem; border: 1px solid var(--teal-crystal); text-align: center; opacity: 0.8; transition: all 0.3s ease;" onmouseover="this.style.opacity='1'; this.style.transform='translateY(-2px)'" onmouseout="this.style.opacity='0.8'; this.style.transform='translateY(0)'">
					<div style="width: 4rem; height: 4rem; border-radius: 12px; background: linear-gradient(135deg, var(--teal-crystal), var(--amber-glow)); display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem auto;">
						<span style="font-size: 2rem;">üîÆ</span>
					</div>
					<h4 style="font-family: 'Space Grotesk', sans-serif; font-size: 1.3rem; font-weight: 600; color: var(--text-primary); margin: 0 0 0.75rem 0;">Coming Soon</h4>
					<div style="background: var(--teal-crystal); color: white; padding: 0.4rem 1rem; border-radius: 20px; font-size: 0.8rem; font-weight: 600; display: inline-block;">
						Future Release
					</div>
				</div>
			</div>
		</section>

		<!-- "Built by" Section -->
		<section style="text-align: center; margin-bottom: 6rem;">
			<div style="animation: fadeInUp 1s ease-out;">
				<p style="font-family: 'Space Grotesk', sans-serif; font-size: clamp(1.5rem, 3vw, 2rem); font-weight: 600; line-height: 1.4; max-width: 42rem; margin: 0 auto; background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; text-shadow: 0 0 30px rgba(255, 183, 77, 0.3); animation: glow 3s ease-in-out infinite alternate;">
					Built by someone who's spent way too much time on gacha games...
				</p>
			</div>
		</section>

		<!-- Floating Games Modal -->
		<div id="gamesModal" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); backdrop-filter: blur(10px); z-index: 1000; opacity: 0; visibility: hidden; transition: all 0.3s ease;">
			<div style="display: flex; align-items: center; justify-content: center; height: 100%; padding: 2rem;">
				<div style="background: var(--bg-primary); border-radius: 20px; padding: 2rem; max-width: 60rem; width: 100%; max-height: 80vh; overflow-y: auto; border: 1px solid var(--amber-glow); box-shadow: 0 20px 50px rgba(0,0,0,0.5);">
					
					<!-- Modal Header -->
					<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
						<h2 style="font-family: 'Space Grotesk', sans-serif; font-size: 2rem; font-weight: 700; color: var(--text-primary); margin: 0; background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
							Choose Your Game
						</h2>
						<button id="closeModal" style="background: none; border: none; color: var(--text-secondary); font-size: 2rem; cursor: pointer; padding: 0.5rem;" onmouseover="this.style.color='var(--rose-quartz)'" onmouseout="this.style.color='var(--text-secondary)'">
							√ó
						</button>
					</div>

					<!-- Games Grid -->
					<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1.5rem;">
						
						<!-- Zone Nova Card -->
						<div style="background: var(--bg-secondary); border-radius: 16px; padding: 1.5rem; border: 1px solid var(--amber-glow); transition: all 0.3s ease; cursor: pointer;" onmouseover="this.style.transform='translateY(-4px)'; this.style.borderColor='var(--teal-crystal)'" onmouseout="this.style.transform='translateY(0)'; this.style.borderColor='var(--amber-glow)'">
							<a href="/guides/zone-nova/" style="text-decoration: none; color: inherit;">
								<div style="width: 100%; height: 150px; border-radius: 12px; overflow: hidden; margin-bottom: 1rem; box-shadow: 0 0 20px rgba(0, 172, 193, 0.3);">
									<img src="/images/zonenova.jpg" alt="Zone NOVA" style="width: 100%; height: 100%; object-fit: cover;">
								</div>
								<h3 style="font-family: 'Space Grotesk', sans-serif; font-size: 1.5rem; font-weight: 700; color: var(--text-primary); margin: 0 0 0.5rem 0;">Zone Nova</h3>
								<p style="color: var(--text-secondary); font-size: 0.9rem; margin-bottom: 1rem;">Character guides, runes, events, and announcements</p>
								<div style="display: flex; gap: 0.5rem;">
									<span style="background: var(--amber-glow); color: white; padding: 4px 8px; border-radius: 8px; font-size: 0.7rem;">4 Sections</span>
									<span style="background: var(--teal-crystal); color: white; padding: 4px 8px; border-radius: 8px; font-size: 0.7rem;">Active</span>
								</div>
							</a>
						</div>

						<!-- Coming Soon Cards -->
						<div style="background: var(--bg-secondary); border-radius: 16px; padding: 1.5rem; border: 1px solid var(--mocha-mousse); transition: all 0.3s ease; opacity: 0.6;">
							<div style="width: 100%; height: 150px; border-radius: 12px; background: linear-gradient(135deg, var(--mocha-mousse), var(--amber-glow)); display: flex; align-items: center; justify-content: center; margin-bottom: 1rem;">
								<span style="font-size: 3rem;">üöß</span>
							</div>
							<h3 style="font-family: 'Space Grotesk', sans-serif; font-size: 1.5rem; font-weight: 700; color: var(--text-primary); margin: 0 0 0.5rem 0;">Coming Soon</h3>
							<p style="color: var(--text-secondary); font-size: 0.9rem; margin-bottom: 1rem;">More games in development</p>
							<span style="background: var(--mocha-mousse); color: white; padding: 4px 8px; border-radius: 8px; font-size: 0.7rem;">Soon‚Ñ¢</span>
						</div>

					</div>
				</div>
			</div>
		</div>

	</main>
</HomeLayout>

<style>
@keyframes pulse {
	0%, 100% { opacity: 1; transform: scale(1); }
	50% { opacity: 0.4; transform: scale(1.1); }
}

@keyframes fadeInUp {
	0% {
		opacity: 0;
		transform: translateY(30px);
	}
	100% {
		opacity: 1;
		transform: translateY(0);
	}
}

@keyframes fadeInScale {
	0% {
		opacity: 0;
		transform: scale(0.9) translateY(20px);
	}
	100% {
		opacity: 1;
		transform: scale(1) translateY(0);
	}
}

@keyframes titleGlow {
	0% {
		text-shadow: 
			0 0 10px rgba(255, 183, 77, 0.3),
			0 0 20px rgba(255, 183, 77, 0.2),
			0 0 30px rgba(0, 172, 193, 0.1);
		filter: brightness(1);
	}
	100% {
		text-shadow: 
			0 0 20px rgba(255, 183, 77, 0.6),
			0 0 30px rgba(255, 183, 77, 0.4),
			0 0 40px rgba(0, 172, 193, 0.3);
		filter: brightness(1.2);
	}
}

@keyframes glow {
	0% {
		text-shadow: 
			0 0 10px rgba(255, 183, 77, 0.3),
			0 0 20px rgba(255, 183, 77, 0.2),
			0 0 30px rgba(255, 183, 77, 0.1);
	}
	100% {
		text-shadow: 
			0 0 20px rgba(255, 183, 77, 0.6),
			0 0 30px rgba(255, 183, 77, 0.4),
			0 0 40px rgba(255, 183, 77, 0.2);
	}
}

.games-track::-webkit-scrollbar {
	display: none;
}

.game-card:hover {
	cursor: pointer;
}

@keyframes shimmer {
	0% { transform: translateX(-100%); }
	100% { transform: translateX(100%); }
}

.tab-content {
	display: none;
	opacity: 0;
	transform: translateY(20px);
}

.tab-content.active {
	display: block;
	opacity: 1;
	transform: translateY(0);
}

/* Mobile Responsive Design */
@media (max-width: 768px) {
	main {
		padding: 6rem 1rem 2rem 1rem !important;
		max-width: 100% !important;
	}

	/* Game Guide Library Title */
	h2 {
		font-size: clamp(2rem, 6vw, 2.5rem) !important;
		margin-bottom: 1rem !important;
	}

	/* Featured Zone Nova Section */
	.featured-game {
		margin-bottom: 2rem !important;
	}

	/* Zone Nova Card Mobile Layout */
	div[style*="padding: 2rem; display: flex; align-items: center; gap: 2rem;"] {
		flex-direction: column !important;
		text-align: center !important;
		gap: 1.5rem !important;
		padding: 1.5rem !important;
	}

	/* Game Image Mobile */
	div[style*="width: 10rem; height: 10rem;"] {
		width: 8rem !important;
		height: 8rem !important;
		margin: 0 auto !important;
	}

	/* Game Title Mobile */
	h3[style*="font-size: 2.5rem;"] {
		font-size: 2rem !important;
		margin-bottom: 1rem !important;
	}

