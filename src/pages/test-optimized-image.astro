---
// Test page for OptimizedImage component
import OptimizedImage from '../components/OptimizedImage.astro';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
  <head>
    <BaseHead title="OptimizedImage Test" description="Testing the OptimizedImage component" />
  </head>
  <body>
    <Header />
    <main>
      <div class="container">
        <h1>OptimizedImage Component Test</h1>
        
        <h2>Testing Lancelot Images</h2>
        
        <h3>Test 1: Using image identifier 'Lancelot0'</h3>
        <div class="test-case">
          <OptimizedImage 
            src="Lancelot0" 
            alt="Lancelot character image" 
            width={300} 
            height={400} 
          />
          <p>Image identifier: 'Lancelot0'</p>
        </div>

        <h3>Test 2: Using image identifier 'Lancelotcard'</h3>
        <div class="test-case">
          <OptimizedImage 
            src="Lancelotcard" 
            alt="Lancelot memory card" 
            width={300} 
            height={400} 
          />
          <p>Image identifier: 'Lancelotcard'</p>
        </div>

        <h3>Test 3: Using full path '/images/characters/Lancelot0.jpg'</h3>
        <div class="test-case">
          <OptimizedImage 
            src="/images/characters/Lancelot0.jpg" 
            alt="Lancelot character image (full path)" 
            width={300} 
            height={400} 
          />
          <p>Full path: '/images/characters/Lancelot0.jpg'</p>
        </div>

        <h3>Test 4: Using full path '/images/characters/Lancelotcard.jpg'</h3>
        <div class="test-case">
          <OptimizedImage 
            src="/images/characters/Lancelotcard.jpg" 
            alt="Lancelot memory card (full path)" 
            width={300} 
            height={400} 
          />
          <p>Full path: '/images/characters/Lancelotcard.jpg'</p>
        </div>

        <h3>Test 5: Testing broken image</h3>
        <div class="test-case">
          <OptimizedImage 
            src="NonExistentImage" 
            alt="This should not load" 
            width={300} 
            height={400} 
          />
          <p>Image identifier: 'NonExistentImage' (should not load)</p>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  .test-case {
    border: 1px solid #ccc;
    padding: 1rem;
    margin: 1rem 0;
    border-radius: 8px;
    background: #f9f9f9;
  }
  
  h1, h2, h3 {
    color: #333;
  }
  
  p {
    margin: 0.5rem 0;
    font-style: italic;
    color: #666;
  }
</style>
