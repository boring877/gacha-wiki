---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../../consts';
import FormattedDate from '../../../components/FormattedDate.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Zone Nova Maintenance & Announcements - GachaWiki" description="Latest patch notes, maintenance updates, and announcements for Zone Nova" />
		<style>
			main {
				width: 960px;
				margin: 0 auto;
				padding: 2rem 1rem;
			}
			
			.breadcrumb {
				margin-bottom: 2rem;
				color: rgb(var(--gray));
			}
			
			.breadcrumb a {
				color: #8B4513;
				text-decoration: none;
			}
			
			.breadcrumb a:hover {
				text-decoration: underline;
			}
			
			.page-header {
				text-align: center;
				margin-bottom: 3rem;
			}
			
			.page-title {
				font-size: 2.5rem;
				color: #8B4513;
				margin: 0 0 1rem 0;
			}
			
			.page-subtitle {
				font-size: 1.1rem;
				color: rgb(var(--gray));
				margin: 0;
			}
			
			.patch-list {
				display: flex;
				flex-direction: column;
				gap: 1.5rem;
			}
			
			.patch-card {
				background: rgba(255, 255, 255, 0.95);
				border: 2px solid #8B4513;
				border-radius: 12px;
				padding: 2rem;
				transition: 0.3s ease;
				text-decoration: none;
				color: inherit;
			}
			
			.patch-card.announcement {
				border-color: #8B4513;
			}
			
			.patch-card.announcement:hover {
				background-color: #8B4513;
			}
			
			.patch-card.announcement h2 {
				color: #8B4513;
			}
			
			.patch-card:hover {
				transform: translateY(-4px);
				box-shadow: 0 8px 24px rgba(139, 69, 19, 0.15);
				background-color: #8B4513;
				color: white;
			}
			
			.patch-card:hover h2,
			.patch-card:hover .patch-date,
			.patch-card:hover .patch-summary {
				color: white;
			}
			
			.patch-card h2 {
				color: #8B4513;
				font-size: 1.8rem;
				margin: 0 0 0.5rem 0;
				transition: 0.3s ease;
			}
			
			.patch-date {
				color: rgb(var(--gray));
				font-size: 1rem;
				margin: 0 0 1rem 0;
				transition: 0.3s ease;
			}
			
			.patch-summary {
				margin: 0;
				line-height: 1.5;
				transition: 0.3s ease;
			}
			
			.tag {
				display: inline-block;
				padding: 0.25rem 0.75rem;
				border-radius: 20px;
				font-size: 0.85rem;
				font-weight: bold;
				margin-left: 0.5rem;
			}
			
			.tag.maintenance {
				background-color: #8B4513;
				color: white;
			}
			
			.tag.announcement {
				background-color: #8B4513;
				color: white;
			}
			
			@media (max-width: 720px) {
				main {
					padding: 1rem;
				}
				
				.page-title {
					font-size: 2rem;
				}
				
				.patch-card {
					padding: 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<!-- Breadcrumb -->
			<nav class="breadcrumb">
				<a href="/blog/">Blog</a> ‚Üí 
				<a href="/blog/zone-nova/">Zone Nova</a> ‚Üí 
				Announcements & Maintenance 
			</nav>

			<!-- Page Header -->
			<header class="page-header">
				<h1 class="page-title">üîß Announcements & Maintenance</h1>
				<p class="page-subtitle">Stay updated with the latest Zone Nova updates, maintenance schedules, and important announcements</p>
			</header>

			<!-- Patch Notes List -->
			<div class="patch-list">
				<a href="/blog/zone-nova/announcements/idle-income-bugfix/" class="patch-card announcement">
					<h2>üõ†Ô∏è Idle Income System Bug Fix & Compensation <span class="tag announcement">ANNOUNCEMENT</span></h2>
					<p class="patch-date">May 29, 2025</p>
					<p class="patch-summary">
						Idle income system bug fix, abnormal Energy Supplement recovery, and compensation for all players (x5 Energy Supplement).
					</p>
				</a>
				<a href="/blog/zone-nova/announcements/500k-downloads/" class="patch-card announcement">
					<h2>üéâ 500,000 Downloads Milestone <span class="tag announcement">ANNOUNCEMENT</span></h2>
					<p class="patch-date">May 28, 2025</p>
					<p class="patch-summary">
						ZONE NOVA celebrates reaching 500,000 cross-platform downloads! Special celebration rewards 
						including Fantasy Color Cubes and Energy Supplements for all captains.
					</p>
				</a>
				<a href="/blog/zone-nova/maintenance/may-27-2025/" class="patch-card">
					<h2>üéÆ May 27 Maintenance <span class="tag maintenance">MAINTENANCE</span></h2>
					<p class="patch-date">May 27, 2025</p>
					<p class="patch-summary">
						New Empress Guinevere character, Thunder King event, and multiple limited-time activities! 
						Major update with new events, boss battles, and exclusive rewards.
					</p>
				</a>
				
