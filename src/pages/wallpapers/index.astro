---
// Wallpapers Landing Page - Simple page with MEGA folder link
import WallpapersLandingLayout from '../../layouts/wallpapers/Landing.astro';

// Page metadata
const title = 'Waifu Wallpapers | Game Wallpaper Collection | GachaWiki';
const description =
  'High-quality waifu wallpapers and character art from popular gacha games. Download beautiful character wallpapers and artwork for your devices.';
---

<WallpapersLandingLayout title={title} description={description}>
  <!-- Structured data for better SEO -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": "Waifu Wallpapers Collection",
      "description": "High-quality wallpaper collection from popular gacha games",
      "url": "https://gachawiki.info/wallpapers",
      "mainEntity": {
        "@type": "MediaObject",
        "name": "Gacha Game Wallpapers",
        "description": "Curated collection of high-quality character wallpapers",
        "contentUrl": "https://mega.nz/folder/lywBTCYJ#Pac3Xh7JIO0KZBY36l50Eg"
      },
      "publisher": {
        "@type": "Organization",
        "name": "GachaWiki",
        "url": "https://gachawiki.info"
      },
      "breadcrumb": {
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://gachawiki.info"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Wallpapers",
            "item": "https://gachawiki.info/wallpapers"
          }
        ]
      }
    }
  </script>
</WallpapersLandingLayout>
