const { characterData } = Astro.props;

// Character data validation
function validateCharacterSafely() {
  try {
    const validation = validateCharacterData(characterData);

    if (!validation.isValid) {
      console.error('Character data validation failed:', validation.errors);
      // In production, you might want to send this to a monitoring service
      return {
        isValid: false,
        errors: validation.errors,
        warnings: validation.warnings || [],
        characterData: characterData // Still use the data but log the issues
      };
    }

    // Additional validation for skill replacement relationships
    if (characterData.skills) {
      const replacementValidation = validateSkillReplacements(characterData.skills);
      if (!replacementValidation.isValid) {
        console.error('Skill replacement validation failed:', replacementValidation.errors);
        validation.warnings.push('Skill replacement relationships have issues');
      }
    }

    // Log warnings for monitoring
    if (validation.warnings && validation.warnings.length > 0) {
      console.warn('Character data validation warnings:', validation.warnings);
    }

    return {
      isValid: true,
      errors: [],
      warnings: validation.warnings || [],
      characterData: characterData
    };
  } catch (error) {
    console.error('Critical error in character validation:', error);
    return {
      isValid: false,
      errors: ['Critical validation error'],
      warnings: [],
      characterData: characterData
    };
  }
}

const validationResult = validateCharacterSafely();

