// Error boundary wrapper for highlighting process
function safeHighlightSkills() {
  try {
    // Validate character data first
    if (!characterData || typeof characterData !== 'object') {
      console.error('Invalid character data provided');
      return {
        highlightedSkills: null,
        highlightedTraits: null,
        highlightedWeaponSkills: null,
        errors: ['Invalid character data']
      };
    }

    // Apply keyword highlighting to skills and traits (using trusted content option)
    const highlightPatterns = (characterData as any).highlightPatterns || defaultHWHighlightPatterns;
    const highlightOptions = { isTrustedContent: true };

    let highlightedSkills: any = null;
    let highlightedTraits: any = null;
    let highlightedWeaponSkills: any = null;
    const errors: string[] = [];

    // Safe skill highlighting with error handling
    if (characterData.skills) {
      try {
        highlightedSkills = highlightAllSkills(characterData.skills, highlightPatterns, highlightOptions);
      } catch (error) {
        console.error('Error highlighting skills:', error);
        errors.push('Skill highlighting failed');
        // Fallback to raw skills without highlighting
        highlightedSkills = characterData.skills;
      }
    }

    // Safe trait highlighting with error handling
    if (characterData.uniqueTraits) {
      try {
        highlightedTraits = highlightUniqueTraits(characterData.uniqueTraits, highlightPatterns, highlightOptions);
      } catch (error) {
        console.error('Error highlighting traits:', error);
        errors.push('Trait highlighting failed');
        // Fallback to raw traits without highlighting
        highlightedTraits = characterData.uniqueTraits;
      }
    }

    // Safe weapon skill highlighting with error handling
    if (characterData.weapon?.uniqueSkills) {
      try {
        highlightedWeaponSkills = highlightWeaponSkills(characterData.weapon.uniqueSkills, highlightPatterns, highlightOptions);
      } catch (error) {
        console.error('Error highlighting weapon skills:', error);
        errors.push('Weapon skill highlighting failed');
        // Fallback to raw weapon skills without highlighting
        highlightedWeaponSkills = characterData.weapon.uniqueSkills;
      }
    }

    return {
      highlightedSkills,
      highlightedTraits,
      highlightedWeaponSkills,
      errors: errors.length > 0 ? errors : null
    };
  } catch (error) {
    console.error('Critical error in safeHighlightSkills:', error);
    return {
      highlightedSkills: characterData.skills || null,
      highlightedTraits: characterData.uniqueTraits || null,
      highlightedWeaponSkills: characterData.weapon?.uniqueSkills || null,
      errors: ['Critical highlighting error - using raw data']
    };
  }
}


// Safe HTML rendering wrapper
function safeRenderHtml(htmlContent, fallbackText = '') {
  try {
    const result = safeHtmlRenderer(htmlContent, fallbackText);

    // Log any validation errors for monitoring
    if (!result.isValid && result.errors.length > 0) {
      console.warn('HTML validation errors:', result.errors);
    }

    return result;
  } catch (error) {
    console.error('Error in safeRenderHtml:', error);
    return {
      content: fallbackText || (htmlContent ? String(htmlContent).replace(/<[^>]*>/g, '') : ''),
      isHtml: false,
      isValid: false
    };
  }
}

// Batch validate all HTML content at once for performance
function batchValidateAllHtmlContent() {
  try {
    const htmlContents = {};

    // Collect all HTML content that needs validation
    if (highlightedSkills) {
      Object.keys(highlightedSkills).forEach(key => {
        const skill = highlightedSkills[key];
        if (skill && skill.description) {
          htmlContents[`skill_${key}`] = skill.description;
        }
      });
    }

    if (highlightedTraits) {
      Object.keys(highlightedTraits).forEach(key => {
        const trait = highlightedTraits[key];
        if (trait && trait.description) {
          htmlContents[`trait_${key}`] = trait.description;
        }
      });
    }

    if (highlightedWeaponSkills) {
      Object.keys(highlightedWeaponSkills).forEach(key => {
        const skill = highlightedWeaponSkills[key];
        if (skill && skill.description) {
          htmlContents[`weapon_${key}`] = skill.description;
        }
      });
    }

    return batchValidateHtml(htmlContents);
  } catch (error) {
    console.error('Error in batch validation:', error);
    return { results: {}, hasErrors: true, overallValid: false };
  }
}

// Get character gift data
