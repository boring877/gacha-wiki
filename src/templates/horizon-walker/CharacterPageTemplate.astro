// Helper function to create character description from story
function getCharacterSummary(story: string | undefined): string {
  if (!story) return 'A skilled character ready to join the battle.';

  // Take first sentence or up to 150 characters, whichever comes first
  const firstSentence = story.split('.')[0];
  if (firstSentence.length <= 150) {
    return firstSentence + '.';
  }

  // If first sentence is too long, truncate to 150 chars at word boundary
  const truncated = story.substring(0, 150);
  const lastSpace = truncated.lastIndexOf(' ');
  return truncated.substring(0, lastSpace) + '...';
}

// Performance-optimized helper functions for skill replacement grouping
function groupSkillsByReplacement(skills: Record<string, any>) {
  const startTime = performance.now();

  const groups: Array<{
    type: 'trigger-group' | 'normal';
    data: any;
  }> = [];

  const processedSkills = new Set<string>();
  const skillMap = new Map(Object.entries(skills)); // Use Map for faster lookups

  // Pre-build skill replacement lookups for optimization
  const replacementMap = new Map();
  const triggerMap = new Map();

  // One-time pass to build lookup maps
  for (const [key, skill] of skillMap) {
    if (skill.isReplacementTrigger) {
      triggerMap.set(key, skill);
    }
    if (skill.replaces) {
      replacementMap.set(skill.replaces, key);
    }
  }

  // Process trigger skills first (more efficient than nested loops)
  for (const [triggerKey, triggerSkill] of triggerMap) {
    if (processedSkills.has(triggerKey)) continue;

    const triggerReplacements = triggerSkill.triggersReplacements || [];
    const replacementPairs: Array<{
      baseKey: string;
      baseSkill: any;
      replacementKey: any;
      replacementSkill: any;
    }> = [];

    // Optimized replacement pair lookup
    for (const baseSkillKey of triggerReplacements) {
      const baseSkill = skillMap.get(baseSkillKey);

      if (baseSkill && baseSkill.replacedBy) {
        const replacementKey = replacementMap.get(baseSkillKey) || baseSkill.replacedBy;
        const replacementSkill = skillMap.get(replacementKey);

        if (replacementSkill) {
          replacementPairs.push({
            baseKey: baseSkillKey,
            baseSkill,
            replacementKey,
            replacementSkill
          });

          processedSkills.add(baseSkillKey);
          processedSkills.add(replacementKey);
        }
      }
    }

    groups.push({
      type: 'trigger-group',
      data: {
        triggerKey,
        triggerSkill,
        replacementPairs
      }
    });

    processedSkills.add(triggerKey);
  }

  // Process remaining normal skills
  for (const [key, skill] of skillMap) {
    if (!processedSkills.has(key) &&
        !skill.replacedBy &&
        !skill.isReplacement &&
        !skill.replaces) {
      groups.push({
        type: 'normal',
        data: { key, skill }
      });
      processedSkills.add(key);
    }
  }

  const endTime = performance.now();
  const executionTime = endTime - startTime;

  // Performance monitoring
  if (executionTime > 5) { // 5ms threshold
    console.warn(`Skill grouping took ${executionTime.toFixed(2)}ms for ${skillMap.size} skills`);
  }

  return groups;
}

function getSkillCardClasses(skill: any, key: string, isBase: boolean = false, isReplacement: boolean = false, isTrigger: boolean = false) {
  const baseClasses = `skill-card ${key.replace(/([A-Z])/g, '-$1').toLowerCase()}`;
  const typeClasses = skill.type === 'Passive' ? 'passive-skill' : '';
  const replacementClasses = isBase ? 'skill-base' : isReplacement ? 'skill-replacement' : isTrigger ? 'skill-trigger' : '';

  return `${baseClasses} ${typeClasses} ${replacementClasses}`.trim();
}
