---
import ZoneNovaLayout1 from '../layouts/ZoneNovaLayout1.astro';
import FormattedDate from '../components/FormattedDate.astro';

// CHARACTER TEMPLATE - Zone Nova
// Replace all [PLACEHOLDER] values with character-specific information
// This template includes all standard sections with proper CSS classes
---

<ZoneNovaLayout1 
	title="[CHARACTER_NAME] Character Guide - Zone Nova - GachaWiki" 
	description="Complete guide for [CHARACTER_NAME], the [DESCRIPTION] in Zone Nova"
	gameTitle="[CHARACTER_NAME] Character Guide"
	showBreadcrumb={true}
	breadcrumbText="Characters"
>
	<Fragment slot="head">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
		<style>
			.back-button {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				background: var(--bg-primary);
				color: var(--text-primary);
				text-decoration: none;
				padding: 1rem 1.5rem;
				border-radius: 12px;
				border: 1px solid var(--amber-glow);
				font-family: 'Space Grotesk', sans-serif;
				font-weight: 600;
				font-size: 1rem;
				margin-bottom: 2rem;
				transition: all 0.3s ease;
				box-shadow: 0 4px 12px rgba(164, 120, 100, 0.2);
			}

			.back-button:hover {
				background: var(--amber-glow);
				color: var(--text-inverse);
				transform: translateY(-2px);
				box-shadow: 0 8px 20px rgba(164, 120, 100, 0.3);
			}

			.back-button:hover .back-arrow {
				transform: translateX(-3px);
			}

			.back-arrow {
				font-size: 1.2rem;
				transition: transform 0.3s ease;
			}

			.character-page {
				background: var(--bg-secondary);
				min-height: 100vh;
				padding: 2rem 0;
			}

			.character-container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			.character-header {
				background: linear-gradient(135deg, var(--bg-primary), var(--bg-secondary));
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 3rem;
				border: 1px solid var(--amber-glow);
				box-shadow: 0 12px 30px rgba(164, 120, 100, 0.1);
				text-align: center;
				transition: all 0.4s ease;
			}

			.character-header:hover {
				transform: translateY(-4px);
				box-shadow: 0 16px 40px rgba(164, 120, 100, 0.15);
			}

			.character-image {
				width: 300px;
				height: 300px;
				border-radius: 20px;
				object-fit: cover;
				margin: 0 auto 2rem auto;
				display: block;
				box-shadow: 0 12px 30px rgba(0, 172, 193, 0.3);
				transition: all 0.3s ease;
			}

			.character-image:hover {
				transform: scale(1.05);
				box-shadow: 0 16px 40px rgba(0, 172, 193, 0.4);
			}

			.character-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 3rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin: 0 0 1rem 0;
				animation: titleGlow 3s ease-in-out infinite alternate;
			}

			.character-subtitle {
				color: var(--text-secondary);
				font-size: 1.2rem;
				margin: 0;
				font-weight: 500;
			}

			.content-section {
				background: var(--bg-primary);
				border-radius: 20px;
				padding: 3rem;
				margin-bottom: 2rem;
				border: 1px solid var(--neutral-200);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.08);
				transition: all 0.4s ease;
				animation: sectionFadeIn 0.8s ease-out;
			}

			.content-section:hover {
				transform: translateY(-2px);
				box-shadow: 0 12px 35px rgba(164, 120, 100, 0.12);
				border-color: var(--teal-crystal);
			}

			.section-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 2rem;
				font-weight: 700;
				color: var(--text-primary);
				margin: 0 0 1.5rem 0;
				padding-bottom: 0.75rem;
				border-bottom: 2px solid var(--amber-glow);
				position: relative;
			}

			.section-title::after {
				content: '';
				position: absolute;
				bottom: -2px;
				left: 0;
				width: 60px;
				height: 2px;
				background: var(--teal-crystal);
			}

			.subsection-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.5rem;
				font-weight: 600;
				color: var(--text-primary);
				margin: 2rem 0 1rem 0;
				padding-left: 1rem;
				border-left: 4px solid var(--amber-glow);
			}

			.skill-title {
				font-family: 'Space Grotesk', sans-serif;
				font-size: 1.3rem;
				font-weight: 600;
				color: var(--amber-glow);
				margin: 1.5rem 0 0.8rem 0;
			}

			.info-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.05), rgba(0, 172, 193, 0.05));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}

			.info-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.1), transparent);
				transition: left 0.6s ease;
			}

			.info-card:hover::before {
				left: 100%;
			}

			.info-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.skill-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.08), rgba(0, 172, 193, 0.08));
				border: 1px solid var(--amber-glow);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
			}

			.skill-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.awakening-card {
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.05), rgba(0, 172, 193, 0.05));
				border: 1px solid var(--neutral-200);
				border-radius: 15px;
				padding: 2rem;
				margin: 1.5rem 0;
				transition: all 0.3s ease;
			}

			.awakening-card:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(164, 120, 100, 0.15);
				border-color: var(--teal-crystal);
			}

			.critical-awakening {
				border: 2px solid var(--amber-glow);
				background: linear-gradient(135deg, rgba(255, 183, 77, 0.1), rgba(0, 172, 193, 0.1));
			}

			.stats-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: 1.5rem;
				margin: 1.5rem 0;
			}

			.stat-item {
				background: var(--bg-secondary);
				border: 1px solid var(--neutral-200);
				border-radius: 12px;
				padding: 1.5rem;
				text-align: center;
				transition: all 0.3s ease;
			}

			.stat-item:hover {
				transform: translateY(-2px);
				box-shadow: 0 6px 20px rgba(164, 120, 100, 0.1);
				border-color: var(--amber-glow);
			}

			.stat-label {
				color: var(--amber-glow);
				font-family: 'Space Grotesk', sans-serif;
				font-weight: 600;
				font-size: 0.9rem;
				margin-bottom: 0.5rem;
				text-transform: uppercase;
				letter-spacing: 0.5px;
			}

			.stat-value {
				color: var(--text-primary);
				font-size: 1.4rem;
				font-weight: 700;
			}

			.warning-box {
				background: linear-gradient(135deg, rgba(220, 53, 69, 0.1), rgba(255, 193, 7, 0.1));
				border: 1px solid #ffc107;
				border-radius: 12px;
				padding: 1.5rem;
				margin: 1rem 0;
			}

			.warning-title {
				color: #ffc107;
				font-weight: 600;
				font-size: 1.1rem;
				margin-bottom: 0.5rem;
			}

			.priority-high {
				color: #dc3545;
				font-weight: 700;
			}

			.priority-medium {
				color: #ffc107;
				font-weight: 600;
			}

			.priority-low {
				color: #6c757d;
				font-weight: 500;
			}

			@keyframes titleGlow {
				0% { filter: brightness(1) drop-shadow(0 0 10px rgba(255, 183, 77, 0.3)); }
				100% { filter: brightness(1.2) drop-shadow(0 0 20px rgba(0, 172, 193, 0.4)); }
			}

			@keyframes sectionFadeIn {
				from { opacity: 0; transform: translateY(20px); }
				to { opacity: 1; transform: translateY(0); }
			}

			@media (max-width: 768px) {
				.character-container { padding: 0 1rem; }
				.character-header { padding: 2rem; }
				.character-title { font-size: 2rem; }
				.content-section { padding: 2rem; }
				.stats-grid { grid-template-columns: 1fr; }
			}
		</style>
	</Fragment>

	<div class="character-page">
		<div class="character-container">
			<a href="/guides/zone-nova/characters" class="back-button">
				<span class="back-arrow">←</span>
				<span>Back to Characters</span>
			</a>

			<!-- Character Header -->
			<header class="character-header">
				<img src="/images/characters/[CHARACTER_IMAGE].jpg" alt="[CHARACTER_NAME]" class="character-image" loading="eager" />
				<h1 class="character-title">[CHARACTER_NAME]</h1>
				<p class="character-subtitle">[RARITY] [ELEMENT] [CLASS] • [FACTION]</p>
			</header>

			<!-- Character Overview -->
			<section class="content-section">
				<h2 class="section-title">Character Overview</h2>

				<h3 class="subsection-title">Base Stats at Level 80</h3>
				<div class="stats-grid">
					<div class="stat-item">
						<div class="stat-label">HP</div>
						<div class="stat-value">[BASE_HP]</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Attack</div>
						<div class="stat-value">[BASE_ATTACK]</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Defense</div>
						<div class="stat-value">[BASE_DEFENSE]</div>
					</div>
				</div>

				<div class="info-card">
					<p><strong>[CHARACTER_NAME]</strong> is [CHARACTER_DESCRIPTION]. [UNIQUE_MECHANICS_EXPLANATION].</p>
				</div>
			</section>

			<!-- Skills -->
			<section class="content-section">
				<h2 class="section-title">Skills</h2>

				<div class="skill-card">
					<h3 class="skill-title">Normal Attack: [NORMAL_ATTACK_NAME]</h3>
					<p><strong>CD:</strong> [COOLDOWN]</p>
					<p>[NORMAL_ATTACK_DESCRIPTION]</p>
				</div>

				<div class="skill-card">
					<h3 class="skill-title">Auto Skill: [AUTO_SKILL_NAME]</h3>
					<p><strong>CD:</strong> [COOLDOWN]</p>
					<p>[AUTO_SKILL_DESCRIPTION]</p>
				</div>

				<div class="skill-card">
					<h3 class="skill-title">Ultimate: [ULTIMATE_NAME]</h3>
					<p><strong>CD:</strong> [COOLDOWN] | <strong>Energy Cost:</strong> [ENERGY_COST]</p>
					<p>[ULTIMATE_DESCRIPTION]</p>
				</div>

				<div class="skill-card">
					<h3 class="skill-title">Passive: [PASSIVE_NAME]</h3>
					<p>[PASSIVE_DESCRIPTION]</p>
				</div>
			</section>

			<!-- Team Composition Skill -->
			<section class="content-section">
				<h2 class="section-title">Team Composition Skill</h2>
				
				<div class="skill-card">
					<h3 class="skill-title">[EMOJI] Combination Skill</h3>
					<p><strong>Level:</strong> 1</p>
					
					<div class="warning-box">
						<div class="warning-title">⭐ Activation Requirements</div>
						<p>Triggers when team contains <strong>[TEAM_REQUIREMENT_1]</strong> OR <strong>[TEAM_REQUIREMENT_2]</strong></p>
					</div>

					<div style="margin: 1rem 0;">
						<p><strong>Effects:</strong></p>
						<ul>
							<li>[TEAM_EFFECT_1]</li>
							<li>[TEAM_EFFECT_2]</li>
						</ul>
					</div>

					<div class="info-card">
						<p style="color: var(--text-primary); font-size: 1rem; line-height: 1.6; margin: 0;">
							<strong>Why This Matters:</strong> [TEAM_SKILL_EXPLANATION]
						</p>
					</div>
				</div>
			</section>

			<!-- Awakening Effects -->
			<section class="content-section">
				<h2 class="section-title">Awakening Effects</h2>

				<div class="awakening-card">
					<h3 class="skill-title">Awakening 1</h3>
					<p>[AWAKENING_1_EFFECT]</p>
					<p>[AWAKENING_1_EXPLANATION]</p>
				</div>

				<div class="awakening-card [CRITICAL_CLASS_IF_NEEDED]">
					<h3 class="skill-title">[PRIORITY_EMOJI] Awakening 2 [PRIORITY_LABEL]</h3>
					<p>[AWAKENING_2_EFFECT]</p>
					<p>[AWAKENING_2_EXPLANATION]</p>
				</div>

				<div class="awakening-card">
					<h3 class="skill-title">Awakening 3</h3>
					<p>[AWAKENING_3_EFFECT]</p>
					<p>[AWAKENING_3_EXPLANATION]</p>
				</div>

				<div class="awakening-card [CRITICAL_CLASS_IF_NEEDED]">
					<h3 class="skill-title">[PRIORITY_EMOJI] Awakening 4 [PRIORITY_LABEL]</h3>
					<p>[AWAKENING_4_EFFECT]</p>
					<p>[AWAKENING_4_EXPLANATION]</p>
				</div>

				<div class="awakening-card">
					<h3 class="skill-title">Awakening 5</h3>
					<p>[AWAKENING_5_EFFECT]</p>
					<p>[AWAKENING_5_EXPLANATION]</p>
				</div>

				<div class="awakening-card [CRITICAL_CLASS_IF_NEEDED]">
					<h3 class="skill-title">[PRIORITY_EMOJI] Awakening 6 [PRIORITY_LABEL]</h3>
					<p>[AWAKENING_6_EFFECT]</p>
					<p>[AWAKENING_6_EXPLANATION]</p>
				</div>
			</section>

			<!-- Recommended Builds -->
			<section class="content-section">
				<h2 class="section-title">Recommended Builds</h2>

				<h3 class="subsection-title">Rune Sets</h3>
				
				<div class="info-card">
					<h4 style="color: var(--amber-glow); margin: 0 0 1rem 0;">🌟 Primary Build ([BUILD_1_NAME])</h4>
					<ul>
						<li><strong>[RUNE_SET_1]:</strong> [RUNE_SET_1_EFFECTS]</li>
						<li><strong>[RUNE_SET_2]:</strong> [RUNE_SET_2_EFFECTS]</li>
					</ul>
					<p style="color: var(--text-secondary); margin-top: 1rem; font-style: italic;">
						[BUILD_1_EXPLANATION]
					</p>
				</div>

				<div class="info-card">
					<h4 style="color: var(--teal-crystal); margin: 0 0 1rem 0;">🔄 Alternative Build ([BUILD_2_NAME])</h4>
					<ul>
						<li><strong>[RUNE_SET_3]:</strong> [RUNE_SET_3_EFFECTS]</li>
						<li><strong>[RUNE_SET_4]:</strong> [RUNE_SET_4_EFFECTS]</li>
					</ul>
					<p style="color: var(--text-secondary); margin-top: 1rem; font-style: italic;">
						[BUILD_2_EXPLANATION]
					</p>
				</div>

				<div class="info-card">
					<h4 style="color: var(--neutral-300); margin: 0 0 1rem 0;">⚖️ Balanced Build</h4>
					<ul>
						<li><strong>[RUNE_SET_5]:</strong> [RUNE_SET_5_EFFECTS]</li>
						<li><strong>[RUNE_SET_6]:</strong> [RUNE_SET_6_EFFECTS]</li>
					</ul>
					<p style="color: var(--text-secondary); margin-top: 1rem; font-style: italic;">
						[BUILD_3_EXPLANATION]
					</p>
				</div>

				<h3 class="subsection-title">Main Stats</h3>
				<div class="stats-grid">
					<div class="stat-item">
						<div class="stat-label">Position 1</div>
						<div class="stat-value">HP (Fixed)</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 2</div>
						<div class="stat-value">ATK (Fixed)</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 3</div>
						<div class="stat-value">DEF (Fixed)</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 4</div>
						<div class="stat-value">[MAIN_STAT_4]</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 5</div>
						<div class="stat-value">[MAIN_STAT_5]</div>
					</div>
					<div class="stat-item">
						<div class="stat-label">Position 6</div>
						<div class="stat-value">[MAIN_STAT_6]</div>
					</div>
				</div>

				<h3 class="subsection-title">Substat Priorities</h3>
				<div class="info-card">
					<ol style="color: var(--text-primary); font-size: 1.1rem; line-height: 1.6;">
						<li>[SUBSTAT_PRIORITY_1]</li>
						<li>[SUBSTAT_PRIORITY_2]</li>
						<li>[SUBSTAT_PRIORITY_3]</li>
						<li>[SUBSTAT_PRIORITY_4]</li>
						<li>[SUBSTAT_PRIORITY_5]</li>
					</ol>
					<p style="color: var(--text-secondary); margin-top: 1rem; font-style: italic;">
						<strong>Note:</strong> [SUBSTAT_EXPLANATION]
					</p>
				</div>
			</section>

			<!-- Memory Card -->
			<section class="content-section">
				<h2 class="section-title">Memory Card: [MEMORY_CARD_NAME]</h2>
				
				<div style="display: flex; gap: 2rem; align-items: flex-start; margin-bottom: 2rem; flex-wrap: wrap;">
					<img src="/images/characters/[MEMORY_CARD_IMAGE].jpg" alt="[CHARACTER_NAME] Card" style="width: 200px; height: 300px; border-radius: 15px; object-fit: cover; box-shadow: 0 8px 20px rgba(0, 172, 193, 0.3); transition: all 0.3s ease; flex-shrink: 0;" loading="lazy" />
					
					<div style="flex: 1; min-width: 300px;">
						<div class="info-card" style="margin: 0;">
							<h4 style="color: var(--amber-glow); margin: 0 0 1rem 0;">Level 80/80 Base Stats</h4>
							<div class="stats-grid">
								<div class="stat-item">
									<div class="stat-label">HP</div>
									<div class="stat-value">[MEMORY_HP]</div>
								</div>
								<div class="stat-item">
									<div class="stat-label">Attack</div>
									<div class="stat-value">[MEMORY_ATTACK]</div>
								</div>
								<div class="stat-item">
									<div class="stat-label">Defense</div>
									<div class="stat-value">[MEMORY_DEFENSE]</div>
								</div>
							</div>

							<h4 style="color: var(--teal-crystal); margin: 1.5rem 0 1rem 0;">Memory Effects</h4>
							<ul>
								<li>[MEMORY_EFFECT_1]</li>
								<li>[MEMORY_EFFECT_2]</li>
								<li>[MEMORY_EFFECT_3]</li>
								<li>[MEMORY_RARITY]</li>
							</ul>
							
							<p style="color: var(--text-secondary); margin-top: 1rem; font-style: italic;">
								[MEMORY_CARD_EXPLANATION]
							</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Usage Tips -->
			<section class="content-section">
				<h2 class="section-title">Usage Tips</h2>
				
				<h3 class="subsection-title">Strengths</h3>
				<div class="info-card">
					<ul style="color: var(--text-primary); font-size: 1.1rem; line-height: 1.6;">
						<li>[STRENGTH_1]</li>
						<li>[STRENGTH_2]</li>
						<li>[STRENGTH_3]</li>
						<li>[STRENGTH_4]</li>
						<li>[STRENGTH_5]</li>
					</ul>
				</div>

				<h3 class="subsection-title">Combat Strategy</h3>
				<div class="info-card">
					<ul style="color: var(--text-primary); font-size: 1.1rem; line-height: 1.6;">
						<li>[STRATEGY_1]</li>
						<li>[STRATEGY_2]</li>
						<li>[STRATEGY_3]</li>
						<li>[STRATEGY_4]</li>
						<li>[STRATEGY_5]</li>
					</ul>
				</div>

				<div class="warning-box">
					<div class="warning-title">[WARNING_TITLE]</div>
					<p>[WARNING_CONTENT]</p>
				</div>
			</section>

			<!-- Investment Priority -->
			<section class="content-section">
				<h2 class="section-title">Investment Priority</h2>
				
				<div class="warning-box">
					<div class="warning-title">⭐ [INVESTMENT_PRIORITY_LEVEL]</div>
					<p>[INVESTMENT_EXPLANATION]</p>
				</div>

				<h3 class="subsection-title">Awakening Priority</h3>
				<div class="critical-awakening" style="padding: 1.5rem; border-radius: 12px; margin: 1rem 0;">
					<h4 style="color: #dc3545; margin: 0 0 1rem 0;">[CRITICAL_AWAKENING_TITLE]</h4>
					<p>[CRITICAL_AWAKENING_EXPLANATION]</p>
					<ul>
						<li><strong>Without them:</strong> [WITHOUT_CRITICAL_AWAKENINGS]</li>
						<li><strong>With them:</strong> [WITH_CRITICAL_AWAKENINGS]</li>
					</ul>
