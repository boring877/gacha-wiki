---
import CharacterLayout from '../../layouts/silver-and-blood/CharacterLayout.astro';
import { gameInfo } from '../../data/silver-and-blood/characters.js';
import Breadcrumb from '../../components/silver-and-blood/Breadcrumb.astro';
import { Image } from 'astro:assets';
import { 
  highlightAllSkills, 
  highlightMechanics, 
  defaultSABHighlightPatterns 
} from '../../utils/silver-and-blood/skill-highlighting.js';

export interface Props {
  character: any; // The full character data object
}

const { character } = Astro.props;
const {
  name,
  title,
  subtitle,
  description,
  image,
  rarity,
  class: charClass,
  faction,
  equipmentType,
  moonPhase,
  attackType,
  stats,
  skills,
  tags,
} = character;

// Apply skill highlighting for better readability
const highlightedSkills = highlightAllSkills(skills, defaultSABHighlightPatterns);

// Pull authoritative text from the central gameInfo tables
const moonData = gameInfo.moonPhases.find(p => p.name === moonPhase);
const moonPhaseEffect = moonData ? `${moonData.name}: ${moonData.effect}` : null;

const attackData = gameInfo.attackTypes.find(a => a.name === attackType);
const attackTypeInfo = attackData ? `${attackData.name}: ${attackData.description}` : null;

const equipData = gameInfo.equipmentTypes.find(e => e.name === equipmentType);
const equipmentNote = equipData ? `${equipmentType} Equipment: ${equipData.description}` : null;

const classData = gameInfo.classes.find(c => c.name === charClass);
const classInfo = classData ? `${charClass}: ${classData.description}` : null;

// Find related characters (same class or faction)
const relatedCharacters = [];
// This would be populated from a characters database - for now we'll add a placeholder section
---

<CharacterLayout
  title={`${name} - Silver and Blood Character Guide`}
  description={`Complete ${name} character guide for Silver and Blood. ${rarity} ${charClass} with ${attackType} attacks. Stats, skills, and builds for ${name}.`}
  characterName={name}
  characterImage={image}
  character={character}
>
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "VideoGameCharacter",
      "name": "${name}",
      "description": "${description}",
      "image": "${image}",
      "isPartOf": {
        "@type": "VideoGame",
        "name": "Silver and Blood"
      },
      "additionalProperty": [
        {
          "@type": "PropertyValue",
          "name": "Class",
          "value": "${charClass}"
        },
        {
          "@type": "PropertyValue",
          "name": "Rarity",
          "value": "${rarity}"
        },
        {
          "@type": "PropertyValue",
          "name": "Faction",
          "value": "${faction}"
        },
        {
          "@type": "PropertyValue",
          "name": "Attack Type",
          "value": "${attackType}"
        },
        {
          "@type": "PropertyValue",
          "name": "Moon Phase",
          "value": "${moonPhase}"
        }
      ]
    }
  </script>

  <!-- Breadcrumb Navigation -->
  <Breadcrumb
    items={[
      { name: 'Home', href: '/' },
      { name: 'Silver and Blood', href: '/guides/silver-and-blood/' },
      { name: 'Characters', href: '/guides/silver-and-blood/characters/' },
      { name: name },
    ]}
  />

  <!-- Mobile navigation instruction at top of main content -->
  <div class="swipeable-indicator">Touch the sides to move between characters</div>

  <!-- Character Header & Overview -->
  <section class="content-section">
    <h2 class="section-title" style="margin-bottom:2.5rem; text-align:center;">
      Character Overview
    </h2>
    <div class="overview-flex" style="gap: 2.5rem;">
      <!-- Hero Card (Left) -->
      <div
        style="flex: 1.2; min-width: 340px; max-width: 420px; display: flex; flex-direction: column; align-items: center;"
      >
        <div
          style="background: var(--sab-character-info-bg); border-radius: 18px; box-shadow: 0 4px 18px rgba(0,0,0,0.15); padding: 2.5rem 1.5rem 1.5rem 1.5rem; border: 1.5px solid var(--sab-text-light); display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 420px; width: 100%;"
        >
          <Image
            src={image}
            alt={`${name} - ${rarity} ${charClass} character from Silver and Blood gacha game`}
            width={300}
            height={300}
            loading="lazy"
            class="character-portrait"
            style="margin-bottom: 1.5rem; margin-top: 0; width: 300px; height: 300px; object-fit: cover; border-radius: 16px; box-shadow: 0 6px 24px rgba(0,0,0,0.20); max-width: 100%; border: 2px solid var(--sab-text-light);"
          />
          <h1
            class="character-name"
            style="margin: 0; text-align:center; background: linear-gradient(135deg, var(--sab-light-red), var(--sab-calm-red)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; font-size: 2.2rem; font-weight: 700;"
          >
            {name}
          </h1>
          <p
            style="color: var(--sab-text-light); margin: 0.5rem 0 0 0; font-size: 1.1rem; text-align: center;"
          >
            {title}
          </p>
          <p
            style="color: var(--sab-text-medium); margin: 0.2rem 0 0 0; font-style: italic; text-align: center;"
          >
            {subtitle}
          </p>
        </div>

        <!-- Character Info -->
        <div
          style="margin-top: 1.8rem; background: var(--sab-character-info-bg); border-radius: 14px; box-shadow: 0 3px 15px rgba(0,0,0,0.15); padding: 1.5rem; border: 1px solid var(--sab-border-light); width: 100%;"
        >
          <div
            style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1rem;"
          >
            <div style="text-align: center;">
              <div
                style="color: var(--sab-text-light); margin-bottom: 0.5rem; font-weight: 600; font-size: 0.9rem;"
              >
                Class
              </div>
              <span class={`class-badge ${charClass.toLowerCase()}`}>{charClass}</span>
            </div>
            <div style="text-align: center;">
              <div
                style="color: var(--sab-text-light); margin-bottom: 0.5rem; font-weight: 600; font-size: 0.9rem;"
              >
                Rarity
              </div>
              <span class={`rarity-badge ${rarity.toLowerCase()}`}>{rarity}</span>
            </div>
            <div style="text-align: center;">
              <div
                style="color: var(--sab-text-light); margin-bottom: 0.5rem; font-weight: 600; font-size: 0.9rem;"
              >
                Faction
              </div>
              <span class={`faction-badge ${faction.toLowerCase()}`}>{faction}</span>
            </div>
            <div style="text-align: center;">
              <div
                style="color: var(--sab-text-light); margin-bottom: 0.5rem; font-weight: 600; font-size: 0.9rem;"
              >
                Equipment
              </div>
              <span class={`equipment-badge ${equipmentType.toLowerCase()}`}>{equipmentType}</span>
            </div>
          </div>
          <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
            <div style="text-align: center;">
              <div
                style="color: var(--sab-text-light); margin-bottom: 0.5rem; font-weight: 600; font-size: 0.9rem;"
              >
                Moon Phase
              </div>
              <span class={`moon-badge ${moonPhase.toLowerCase().replace(' ', '-')}`}
                >{moonPhase}</span
              >
            </div>
            <div style="text-align: center;">
              <div
                style="color: var(--sab-text-light); margin-bottom: 0.5rem; font-weight: 600; font-size: 0.9rem;"
              >
                Attack Type
              </div>
              <span class={`attack-badge ${attackType.toLowerCase().replace('.', '')}`}
                >{attackType}</span
              >
            </div>
          </div>

          <!-- Tags Badge Box -->
          {
            Array.isArray(tags) && tags.length > 0 && (
              <div
                class="badges-container"
                style="margin-top: 1.5rem; background: var(--sab-character-info-bg); border-radius: 14px; box-shadow: 0 3px 15px rgba(0,0,0,0.15); padding: 1rem 1.5rem; border: 1px solid var(--sab-border-light); transition: all 0.3s ease;"
              >
                <div style="display: flex; justify-content: center; gap: 0.6rem; flex-wrap: wrap;">
                  {tags.map(tag => (
                    <span
                      class={`tag-badge ${tag.toLowerCase().replaceAll(' ', '-').replaceAll('.', '').replaceAll('%', '')}`}
                    >
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            )
          }
        </div>
      </div>

      <!-- Complete Stats Box (Right) -->
      <div style="flex: 1.8;">
        <div
          style="background: var(--sab-rankings-bg); border-radius: 18px; box-shadow: 0 4px 18px rgba(0,0,0,0.15); padding: 2rem; border: 1px solid var(--sab-border-light); width: 100%;"
        >
          <!-- All Base Stats -->
          <h3
            style="color: var(--sab-text-light); margin: 0 0 1rem 0; text-align: center; font-size: 1.4rem; border-bottom: 2px solid var(--sab-calm-red); padding-bottom: 0.5rem;"
          >
            Complete Base Stats
          </h3>
          <p
            style="color: var(--sab-text-medium); margin: 0 0 1.5rem 0; text-align: center; font-size: 0.9rem; font-style: italic;"
          >
            Stats shown at Level 200 (current max level)
          </p>

          <!-- Core Combat Stats -->
          <h4 style="color: var(--sab-text-light); margin: 0 0 1rem 0; font-size: 1.1rem;">
            Core Combat Stats
          </h4>
          <div
            class="stats-grid"
            style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.8rem; margin-bottom: 1.5rem;"
          >
            <div
              class="stat-item"
              style="text-align:center; background: var(--sab-bg-dark); padding: 0.8rem; border-radius: 8px; border: 1px solid var(--sab-border-light);"
            >
              <div
                class="stat-label"
                style="color: var(--sab-text-light); margin-bottom: 0.3rem; font-weight: 600; font-size: 0.85rem;"
              >
                HP
              </div>
              <div
                class="stat-value"
                style="color: var(--sab-calm-red); font-weight: 700; font-size: 1rem;"
              >
                {stats.hp.toLocaleString()}
              </div>
            </div>
            <div
              class="stat-item"
              style="text-align:center; background: var(--sab-bg-dark); padding: 0.8rem; border-radius: 8px; border: 1px solid var(--sab-border-light);"
            >
              <div
                class="stat-label"
                style="color: var(--sab-text-light); margin-bottom: 0.3rem; font-weight: 600; font-size: 0.85rem;"
              >
                ATK
              </div>
              <div
                class="stat-value"
                style="color: var(--sab-calm-red); font-weight: 700; font-size: 1rem;"
              >
                {stats.atk.toLocaleString()}
              </div>
            </div>
            <div
              class="stat-item"
              style="text-align:center; background: var(--sab-bg-dark); padding: 0.8rem; border-radius: 8px; border: 1px solid var(--sab-border-light);"
            >
              <div
                class="stat-label"
                style="color: var(--sab-text-light); margin-bottom: 0.3rem; font-weight: 600; font-size: 0.85rem;"
              >
                P.DEF
              </div>
              <div
                class="stat-value"
                style="color: var(--sab-calm-red); font-weight: 700; font-size: 1rem;"
              >
                {stats.pDef.toLocaleString()}
              </div>
            </div>
            <div
              class="stat-item"
              style="text-align:center; background: var(--sab-bg-dark); padding: 0.8rem; border-radius: 8px; border: 1px solid var(--sab-border-light);"
            >
              <div
                class="stat-label"
                style="color: var(--sab-text-light); margin-bottom: 0.3rem; font-weight: 600; font-size: 0.85rem;"
              >
                M.DEF
              </div>
              <div
                class="stat-value"
                style="color: var(--sab-calm-red); font-weight: 700; font-size: 1rem;"
              >
                {stats.mDef.toLocaleString()}
              </div>
            </div>
          </div>

          <!-- Speed and Recovery Stats -->
          <h4 style="color: var(--sab-text-light); margin: 0 0 1rem 0; font-size: 1.1rem;">
            Speed & Recovery
          </h4>
          <div
            class="stats-grid"
            style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.8rem; margin-bottom: 1.5rem;"
          >
            <div
              class="stat-item"
              style="text-align:center; background: var(--sab-bg-dark); padding: 0.8rem; border-radius: 8px; border: 1px solid var(--sab-border-light);"
            >
              <div
                class="stat-label"
                style="color: var(--sab-text-light); margin-bottom: 0.3rem; font-weight: 600; font-size: 0.85rem;"
              >
                ATK SPD
              </div>
              <div
                class="stat-value"
                style="color: var(--sab-calm-red); font-weight: 700; font-size: 1rem;"
              >
                {stats.atkSpd}
              </div>
            </div>
            <div
              class="stat-item"
              style="text-align:center; background: var(--sab-bg-dark); padding: 0.8rem; border-radius: 8px; border: 1px solid var(--sab-border-light);"
            >
              <div
                class="stat-label"
                style="color: var(--sab-text-light); margin-bottom: 0.3rem; font-weight: 600; font-size: 0.85rem;"
              >
                Bloodsoul Recovery
              </div>
              <div
                class="stat-value"
                style="color: var(--sab-calm-red); font-weight: 700; font-size: 1rem;"
              >
                {stats.bloodsoulRecovery}
              </div>
            </div>
          </div>

          <!-- Critical Stats -->
          <h4 style="color: var(--sab-text-light); margin: 0 0 1rem 0; font-size: 1.1rem;">
            Critical Stats
          </h4>
          <div
            class="stats-grid"
            style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.8rem; margin-bottom: 1.5rem;"
          >
            <div
              class="stat-item"
              style="text-align:center; background: var(--sab-bg-dark); padding: 0.8rem; border-radius: 8px; border: 1px solid var(--sab-border-light);"
            >
              <div
                class="stat-label"
                style="color: var(--sab-text-light); margin-bottom: 0.3rem; font-weight: 600; font-size: 0.85rem;"
              >
                CRIT Rate
              </div>
              <div
                class="stat-value"
                style="color: var(--sab-calm-red); font-weight: 700; font-size: 1rem;"
              >
                {stats.critRate}%
              </div>
            </div>
            <div
              class="stat-item"
              style="text-align:center; background: var(--sab-bg-dark); padding: 0.8rem; border-radius: 8px; border: 1px solid var(--sab-border-light);"
            >
              <div
                class="stat-label"
                style="color: var(--sab-text-light); margin-bottom: 0.3rem; font-weight: 600; font-size: 0.85rem;"
              >
                CRIT DMG Increase
              </div>
              <div
                class="stat-value"
                style="color: var(--sab-calm-red); font-weight: 700; font-size: 1rem;"
              >
                {stats.critDmgIncrease}%
              </div>
            </div>
          </div>

          <!-- Damage Bonuses -->
          <h4 style="color: var(--sab-text-light); margin: 0 0 1rem 0; font-size: 1.1rem;">
            Damage Bonuses
          </h4>
          <div
            class="stats-grid"
            style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 0.8rem; margin-bottom: 1.5rem;"
          >
            <div
              class="stat-item"
              style="text-align:center; background: var(--sab-bg-dark); padding: 0.8rem; border-radius: 8px; border: 1px solid var(--sab-border-light);"
            >
              <div
                class="stat-label"
                style="color: var(--sab-text-light); margin-bottom: 0.3rem; font-weight: 600; font-size: 0.8rem;"
              >
                All DMG Bonus
              </div>
              <div
                class="stat-value"
                style="color: var(--sab-calm-red); font-weight: 700; font-size: 0.95rem;"
              >
                {stats.allDmgBonus}%
              </div>
            </div>
            <div
              class="stat-item"
              style="text-align:center; background: var(--sab-bg-dark); padding: 0.8rem; border-radius: 8px; border: 1px solid var(--sab-border-light);"
            >
              <div
                class="stat-label"
                style="color: var(--sab-text-light); margin-bottom: 0.3rem; font-weight: 600; font-size: 0.8rem;"
              >
                P.DMG Bonus
              </div>
              <div
                class="stat-value"
                style="color: var(--sab-calm-red); font-weight: 700; font-size: 0.95rem;"
              >
                {stats.pDmgBonus}%
              </div>
            </div>
            <div
              class="stat-item"
              style="text-align:center; background: var(--sab-bg-dark); padding: 0.8rem; border-radius: 8px; border: 1px solid var(--sab-border-light);"
            >
              <div
                class="stat-label"
                style="color: var(--sab-text-light); margin-bottom: 0.3rem; font-weight: 600; font-size: 0.8rem;"
              >
                M.DMG Bonus
              </div>
              <div
                class="stat-value"
                style="color: var(--sab-calm-red); font-weight: 700; font-size: 0.95rem;"
              >
                {stats.mDmgBonus}%
              </div>
            </div>
          </div>

          <!-- Special Stats -->
          <h4 style="color: var(--sab-text-light); margin: 0 0 1rem 0; font-size: 1.1rem;">
            Special Stats
          </h4>
          <div
            class="stats-grid"
            style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 0.8rem;"
          >
            <div
              class="stat-item"
              style="text-align:center; background: var(--sab-bg-dark); padding: 0.8rem; border-radius: 8px; border: 1px solid var(--sab-border-light);"
            >
              <div
                class="stat-label"
                style="color: var(--sab-text-light); margin-bottom: 0.3rem; font-weight: 600; font-size: 0.8rem;"
              >
                All DMG Reduction
              </div>
              <div
                class="stat-value"
                style="color: var(--sab-calm-red); font-weight: 700; font-size: 0.95rem;"
              >
                {stats.allDmgReduction}%
              </div>
            </div>
            <div
              class="stat-item"
              style="text-align:center; background: var(--sab-bg-dark); padding: 0.8rem; border-radius: 8px; border: 1px solid var(--sab-border-light);"
            >
              <div
                class="stat-label"
                style="color: var(--sab-text-light); margin-bottom: 0.3rem; font-weight: 600; font-size: 0.8rem;"
              >
                Healing Bonus
              </div>
              <div
                class="stat-value"
                style="color: var(--sab-calm-red); font-weight: 700; font-size: 0.95rem;"
              >
                {stats.receivedHealingBonus}%
              </div>
            </div>
            <div
              class="stat-item"
              style="text-align:center; background: var(--sab-bg-dark); padding: 0.8rem; border-radius: 8px; border: 1px solid var(--sab-border-light);"
            >
              <div
                class="stat-label"
                style="color: var(--sab-text-light); margin-bottom: 0.3rem; font-weight: 600; font-size: 0.8rem;"
              >
                Blood Power
              </div>
              <div
                class="stat-value"
                style="color: var(--sab-calm-red); font-weight: 700; font-size: 0.95rem;"
              >
                {stats.bloodPower.toLocaleString()}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="content-section">
    <h2 class="section-title">Skills</h2>

    {
      highlightedSkills.map((skill, index) => (
        <div
          class="skill-card"
          style={`background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%); border-radius: 12px; padding: 1.5rem; margin-bottom: 1rem; border-left: 4px solid ${skill.type === 'Ultimate' ? '#dc3545' : skill.type === 'Passive' ? '#32cd32' : skill.type === 'Special' ? '#ff8c00' : '#808080'}; transition: all 0.3s ease; box-shadow: 0 2px 8px rgba(0,0,0,0.1); border: 1px solid #3a3a3a;`}
        >
          <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 0.8rem; flex-wrap: wrap; gap: 0.5rem;">
            <h3 style="color: #c0c0c0; font-size: 1.3rem; font-weight: 700; margin: 0;">
              {skill.name}
            </h3>
            <div style="display:flex; align-items:center; gap:0.5rem;">
              <span class={`skill-badge ${skill.type.toLowerCase().replace(' ', '-')}`}>
                {skill.type}
              </span>
              {skill.type === 'Ultimate' && skill.cost && (
                <span style="color:#dc3545; font-size:0.95rem; font-weight:600;">
                  Cost: {skill.cost}
                </span>
              )}
            </div>
          </div>
          <p style="color: #e0e0e0; line-height: 1.6; margin: 0; font-size: 1rem;" set:html={skill.description}>
          </p>
        </div>
      ))
    }
  </section>

  <!-- Game Mechanics (canonical descriptions) -->
  {
    (moonPhaseEffect || attackTypeInfo || equipmentNote || classInfo) && (
      <section class="content-section">
        <h2 class="section-title">Game Mechanics</h2>

        {moonPhaseEffect && (
          <div
            class="skill-card"
            style="background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%); border-radius: 12px; padding: 1.5rem; margin-bottom: 1rem; border-left: 4px solid #c0c0c0; border: 1px solid #3a3a3a;"
          >
            <h4 style="color: #c0c0c0; font-size: 1.1rem; font-weight: 600; margin: 0 0 0.5rem 0;">
              Moon Phase Effect
            </h4>
            <p style="color: #e0e0e0; margin: 0; line-height: 1.5;">{moonPhaseEffect}</p>
          </div>
        )}

        {attackTypeInfo && (
          <div
            class="skill-card"
            style="background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%); border-radius: 12px; padding: 1.5rem; margin-bottom: 1rem; border-left: 4px solid #c0c0c0; border: 1px solid #3a3a3a;"
          >
            <h4 style="color: #c0c0c0; font-size: 1.1rem; font-weight: 600; margin: 0 0 0.5rem 0;">
              Attack Type
            </h4>
            <p style="color: #e0e0e0; margin: 0; line-height: 1.5;">{attackTypeInfo}</p>
          </div>
        )}

        {equipmentNote && (
          <div
            class="skill-card"
            style="background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%); border-radius: 12px; padding: 1.5rem; margin-bottom: 1rem; border-left: 4px solid #c0c0c0; border: 1px solid #3a3a3a;"
          >
            <h4 style="color: #c0c0c0; font-size: 1.1rem; font-weight: 600; margin: 0 0 0.5rem 0;">
              Equipment
            </h4>
            <p style="color: #e0e0e0; margin: 0; line-height: 1.5;">{equipmentNote}</p>
          </div>
        )}

        {classInfo && (
          <div
            class="skill-card"
            style="background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%); border-radius: 12px; padding: 1.5rem; margin-bottom: 1rem; border-left: 4px solid #c0c0c0; border: 1px solid #3a3a3a;"
          >
            <h4 style="color: #c0c0c0; font-size: 1.1rem; font-weight: 600; margin: 0 0 0.5rem 0;">
              Class
            </h4>
            <p style="color: #e0e0e0; margin: 0; line-height: 1.5;">{classInfo}</p>
          </div>
        )}
      </section>
    )
  }

