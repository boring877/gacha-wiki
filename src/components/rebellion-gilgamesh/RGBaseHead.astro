---
// Rebellion Gilgamesh BaseHead - Game-specific meta tags only
// Standard SEO tags (og:*, twitter:*, canonical) are handled by GameSEO
import { SITE_TITLE } from '../../consts';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = SITE_TITLE,
  description = 'Rebellion Gilgamesh Wiki - Adult Fantasy RPG Character Guide, Club Management & Strategy',
} = Astro.props;

const metaTitle = title === SITE_TITLE ? SITE_TITLE : `${title} | Rebellion Gilgamesh Wiki`;
const canonicalURL = new URL(Astro.url.pathname, Astro.site).href;
---

<!-- Essential Metadata Only -->
<meta charset="UTF-8" />

<!-- Favicon -->
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

<!-- Primary Meta Tags -->
<title>{metaTitle}</title>
<meta name="title" content={metaTitle} />
<meta name="description" content={description} />

<!-- Preconnect for external resources -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<!-- Rebellion Gilgamesh Specific Meta -->
<meta name="game:title" content="Rebellion Gilgamesh ルーレット契約" />
<meta name="game:genre" content="Adult RPG, Fantasy, Gacha, Club Management" />
<meta name="game:platform" content="Android, iOS, Web" />
<meta name="game:rating" content="Adults Only" />
<meta name="game:developer" content="Rebellion Gilgamesh Team" />
<meta name="game:publisher" content="Erolabs, DMM" />

<!-- Structured Data for Game -->
