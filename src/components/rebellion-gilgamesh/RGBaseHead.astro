---
import { SITE_TITLE } from '../../consts';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = SITE_TITLE,
  description = 'Rebellion Gilgamesh Wiki - Adult Fantasy RPG Character Guide, Club Management & Strategy',
  image = '/images/games/rebellion-gilgamesh/main-images/hero-banner.jpg',
} = Astro.props;

// Set meta tags
const metaTitle = title === SITE_TITLE ? SITE_TITLE : `${title} | Rebellion Gilgamesh Wiki`;
const metaDescription = description;
const metaImage = image;
const canonicalURL = new URL(Astro.url.pathname, Astro.site).href;
---

<!-- Meta Tags -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content={metaDescription} />
<meta
  name="keywords"
  content="Rebellion Gilgamesh, ルーレット契約, adult RPG, fantasy RPG, demon world, club management, character guide, gacha game, Rebellion Gilgamesh wiki, Rebellion Gilgamesh characters, Rebellion Gilgamesh download"
/>

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={metaTitle} />
<meta property="og:description" content={metaDescription} />
<meta property="og:image" content={metaImage} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content="Rebellion Gilgamesh Wiki" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={metaTitle} />
<meta property="twitter:description" content={metaDescription} />
<meta property="twitter:image" content={metaImage} />

<!-- Additional SEO Meta -->
<meta name="robots" content="index, follow" />
<meta name="language" content="English" />
<meta name="author" content="GachaWiki" />
<meta name="theme-color" content="#4c1d95" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Favicon -->
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
