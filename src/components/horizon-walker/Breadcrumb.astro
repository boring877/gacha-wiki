---
export interface Props {
  items: Array<{ name: string; href?: string }>;
}

const { items } = Astro.props;
---

<nav class="breadcrumb" aria-label="Breadcrumb navigation">
  <ol class="breadcrumb-list">
    {
      items.map((item, index) => (
        <li class="breadcrumb-item">
          {item.href ? (
            <a href={item.href} class="breadcrumb-link">
              {item.name}
            </a>
          ) : (
            <span class="breadcrumb-current" aria-current="page">
              {item.name}
            </span>
          )}
          {index < items.length - 1 && (
            <span class="breadcrumb-separator" aria-hidden="true">
              â†’
            </span>
          )}
        </li>
      ))
    }
  </ol>
</nav>

<style>
  .breadcrumb {
    margin-bottom: 2rem;
    /* Align with parent container */
    max-width: 75rem;
    margin-left: auto;
    margin-right: auto;
    padding-left: 2rem;
    padding-right: 2rem;
  }

  .breadcrumb-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 0.75rem;
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .breadcrumb-link {
    color: var(--hw-primary-warm);
    text-decoration: none;
    font-size: 0.9rem;
    opacity: 0.9;
    padding: 0.5rem 0.75rem;
    border-radius: 6px;
    min-height: 44px;
    display: flex;
    align-items: center;
    transition: all 0.2s ease;
    font-family:
      'Space Grotesk',
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      system-ui,
      sans-serif;
  }

  .breadcrumb-link:hover {
    background: rgba(232, 165, 71, 0.15);
    opacity: 1;
    color: var(--hw-primary-warm);
  }

  .breadcrumb-link:focus {
    outline: 2px solid var(--hw-primary-warm);
    outline-offset: 2px;
    opacity: 1;
  }

  .breadcrumb-link:active {
    background: rgba(232, 165, 71, 0.25);
  }

  .breadcrumb-current {
    color: #ffffff;
    font-size: 0.9rem;
    font-weight: 600;
    font-family:
      'Space Grotesk',
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      system-ui,
      sans-serif;
  }

  .breadcrumb-separator {
    color: #9a9a9a;
    font-size: 1rem;
    user-select: none;
    opacity: 0.8;
    font-weight: 600;
    padding: 0 0.25rem;
  }

  /* Mobile responsiveness - match HW layout breakpoints */
  @media (max-width: 768px) {
    .breadcrumb {
      padding-left: 1rem;
      padding-right: 1rem;
    }

    .breadcrumb-link {
      font-size: 0.85rem;
      padding: 0.6rem 0.75rem;
    }

    .breadcrumb-current {
      font-size: 0.85rem;
    }

    .breadcrumb-separator {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .breadcrumb {
      padding-left: 0.75rem;
      padding-right: 0.75rem;
    }

    .breadcrumb-list {
      gap: 0.5rem;
    }

    .breadcrumb-item {
      gap: 0.5rem;
    }

    .breadcrumb-link {
      font-size: 0.8rem;
      padding: 0.75rem 0.75rem;
    }

    .breadcrumb-current {
      font-size: 0.8rem;
    }

    .breadcrumb-separator {
      font-size: 0.85rem;
      padding: 0 0.2rem;
    }
  }
</style>
