---
import { gameInfo } from '../../data/horizon-walker/characters.js';

// Extract filter options from enhanced data structure
const { rarities, classes, elements, factions, tags } = gameInfo;
---

<!-- Enhanced filter bar using original CSS structure -->
<div class="filter-bar">
  <!-- Controls Section -->
  <div class="filter-controls-section">
    <!-- Reset Row -->
    <div class="filter-reset-row">
      <button type="button" id="reset-table" class="reset-button">
        Reset All
      </button>
    </div>

    <!-- Filters Left, Sorting Right -->
    <div class="filter-controls-row">
      <div class="filter-left-section">
        <div class="filter-section">
          <label class="filter-label" for="rarity-filter">Filter by Rarity</label>
          <select id="rarity-filter" class="filter-select" data-filter="rarity" style="touch-action: manipulation; min-height: 44px;">
            <option value="">All Rarities</option>
            {rarities.map(rarity => (
              <option value={rarity}>{rarity}</option>
            ))}
          </select>
        </div>
      </div>

      <div class="sort-right-section">
        <label class="filter-label">Sort by</label>
        <div class="sort-buttons-single-row">
          <button class="sort-btn sort-btn--compact" data-sort="cost" style="touch-action: manipulation;">
            Cost <span class="sort-indicator"></span>
          </button>
          <button class="sort-btn sort-btn--compact" data-sort="strength" style="touch-action: manipulation;">
            STR <span class="sort-indicator"></span>
          </button>
          <button class="sort-btn sort-btn--compact" data-sort="intelligence" style="touch-action: manipulation;">
            INT <span class="sort-indicator"></span>
          </button>
          <button class="sort-btn sort-btn--compact" data-sort="vitality" style="touch-action: manipulation;">
            VIT <span class="sort-indicator"></span>
          </button>
          <button class="sort-btn sort-btn--compact" data-sort="agility" style="touch-action: manipulation;">
            AGI <span class="sort-indicator"></span>
          </button>
          <button class="sort-btn sort-btn--compact" data-sort="technic" style="touch-action: manipulation;">
            TEC <span class="sort-indicator"></span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>


