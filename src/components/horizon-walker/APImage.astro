---
import { Image } from 'astro:assets';

// Import all AP guide images once
import img1 from '../../assets/images/games/horizon-walker/AP_recovery/img1.jpg';
import img2 from '../../assets/images/games/horizon-walker/AP_recovery/img2.jpg';
import img3 from '../../assets/images/games/horizon-walker/AP_recovery/img3.jpg';

// Centralized AP image mapping
const apImageMap = {
  'img1.jpg': img1,
  'img2.jpg': img2,
  'img3.jpg': img3,
  '../../assets/images/games/horizon-walker/AP_recovery/img1.jpg': img1,
  '../../assets/images/games/horizon-walker/AP_recovery/img2.jpg': img2,
  '../../assets/images/games/horizon-walker/AP_recovery/img3.jpg': img3,
};

export interface Props {
  imageName: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
  format?: 'webp' | 'jpg' | 'png';
  quality?: number;
}

const {
  imageName,
  alt,
  width = 600,
  height = 400,
  class: className,
  loading = 'lazy',
  format = 'webp',
  quality = 85,
} = Astro.props;

// Get the imported image object from the map
const imageSrc = apImageMap[imageName];
---

<Image
  src={imageSrc}
  alt={alt}
  width={width}
  height={height}
  class={className}
  loading={loading}
  format={format}
  quality={quality}
/>
