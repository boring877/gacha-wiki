export interface Props {
  imageName: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
  format?: 'webp' | 'jpg' | 'png';
  quality?: number;
}

const {
  imageName,
  alt,
  width = 64,
  height = 64,
  class: className,
  loading = 'lazy',
  format = 'webp',
  quality = 85,
} = Astro.props;

// Extract filename from path if needed
let imageKey = imageName;
if (imageName.includes('/')) {
  // Extract just the filename from the path
  imageKey = imageName.split('/').pop() || imageName;
}

// Get the imported image object from the map, fallback to Brilliant Gift Box if not found
const imageSrc = giftImageMap[imageKey] || giftImageMap['Brilliant_Gift_Box.jpg'];
---

<Image
  src={imageSrc}
  alt={alt}
  width={width}
  height={height}
  class={className}
  loading={loading}
  format={format}
  quality={quality}
/>
