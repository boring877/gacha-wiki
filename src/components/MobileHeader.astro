<div class="mobile-nav">
  <!-- Wiki Link (Left) -->
  <a href="/wikis" class="mobile-nav-link">Wiki Library</a>

  <!-- Main Menu Button (Right) -->
  <button id="hamburger" class="main-menu-btn" aria-label="Open Menu" aria-expanded="false">
    <span class="menu-text">Menu</span>
  </button>
</div>

<style>
  /* Colors are available via layout's index.css import */

  .mobile-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    position: relative;
    gap: 1rem; /* Add space between buttons */
    padding: 0 0.25rem; /* Add small padding for edge spacing */
  }

  /* Hide mobile nav only on true desktop devices (non-touch, larger screens) */
  @media (min-width: 1025px) and (hover: hover) and (pointer: fine) {
    .mobile-nav {
      display: none;
    }
  }

  .mobile-nav-link {
    flex: 1;
    text-align: center;
    max-width: 140px; /* Limit width for better touch targets */
  }

  .mobile-nav-link {
    color: var(--amber-glow);
    text-decoration: none;
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    touch-action: manipulation;
    min-height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 183, 77, 0.1);
    border: 1px solid transparent;
    font-family: var(--font-display);
    font-weight: 600;
    font-size: var(--text-sm);
    white-space: nowrap;
  }

  .main-menu-btn {
    color: var(--amber-glow);
    background: rgba(255, 183, 77, 0.1);
    border: 1px solid transparent;
    border-radius: 8px;
    cursor: pointer;
    padding: 0.5rem 0.75rem;
    touch-action: manipulation;
    min-height: 44px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: var(--font-display);
    font-weight: 600;
    font-size: var(--text-sm);
    white-space: nowrap;
    flex: 1;
    max-width: 140px; /* Match Wiki Library button width */
    /* Remove blue highlights */
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    outline: none;
  }

  .menu-text {
    display: block;
  }

  /* Visual feedback when menu is open */
  .main-menu-btn[aria-expanded='true'] {
    background: var(--amber-glow);
    color: white;
    border-color: var(--teal-crystal);
  }

  /* Landscape mode adjustments for better spacing */
  @media (max-height: 768px) and (orientation: landscape) and (hover: none) {
    .mobile-nav {
      gap: 1rem; /* Good spacing without being too big */
      padding: 0 0.5rem;
    }

    .mobile-nav-link,
    .main-menu-btn {
      padding: 0.4rem 0.8rem; /* Keep buttons reasonably sized */
      min-height: 40px;
      font-size: 0.8rem; /* Smaller font to not compete with main title */
      max-width: 120px; /* Keep them compact */
    }
  }

  /* Tablet mode adjustments (touch devices in portrait/landscape) */
  @media (min-width: 768px) and (max-width: 1024px) and (hover: none) {
    .mobile-nav {
      gap: 1.25rem; /* Reasonable spacing on tablets */
      padding: 0 0.75rem;
    }

    .mobile-nav-link,
    .main-menu-btn {
      padding: 0.5rem 1rem; /* Good touch targets but not oversized */
      min-height: 44px;
      font-size: 0.9rem; /* Keep secondary to main title */
      max-width: 140px; /* Reasonable size for tablets */
    }
  }

  /* Extra small mobile adjustments */
  @media (max-width: 480px) {
    .mobile-nav {
      gap: 0.75rem; /* Maintain good spacing on small screens */
      padding: 0 0.5rem; /* More padding on small screens */
    }

    .mobile-nav-link {
      padding: 0.375rem 0.5rem;
      min-height: 36px;
      font-size: 0.75rem;
      max-width: 120px; /* Smaller max width for small screens */
    }

    .main-menu-btn {
      padding: 0.375rem 0.5rem;
      min-height: 36px;
      font-size: 0.75rem;
      max-width: 120px; /* Smaller max width for small screens */
    }
  }

  /* Performance optimizations */
  @media (prefers-reduced-motion: reduce) {
    .mobile-nav-link,
    .main-menu-btn {
      animation: none;
      transition: none;
    }
  }
</style>
