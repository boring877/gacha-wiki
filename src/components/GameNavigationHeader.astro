---
import GameNavigationDesktop from './GameNavigationDesktop.astro';
import GameNavigationMobile from './GameNavigationMobile.astro';
import { type GameKey } from '../data/game-navigation';

interface Props {
  currentPath?: string;
  gameKey?: GameKey;
}

const { currentPath = '', gameKey } = Astro.props;
---

<!-- Desktop Navigation: Clean grid layout with dropdowns -->
<GameNavigationDesktop currentPath={currentPath} gameKey={gameKey} />

<!-- Mobile/Tablet Navigation: Touch-friendly with overlay -->
<GameNavigationMobile currentPath={currentPath} gameKey={gameKey} />
