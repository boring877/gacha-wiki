	"You make a difference just by being you! üå∫",
	"Tomorrow is a fresh start! üåÑ",
	"Remember to be kind to yourself today! üíö"
];

let currentMessageIndex = 0;

function showRandomPositiveMessage() {
	const messageElement = document.getElementById('positiveMessage');
	if (!messageElement) {
		console.log('Message element not found');
		return;
	}
	
	console.log('Showing positive message...');
	
	// Get next message (cycling through all messages)
	currentMessageIndex = (currentMessageIndex + 1) % positiveMessages.length;
	const newMessage = positiveMessages[currentMessageIndex];
	
	// Add click animation
	messageElement.style.transform = 'scale(0.95)';
	messageElement.style.opacity = '0.6';
	
	// Create sparkle effect
	createSparkles(messageElement);
	
	setTimeout(() => {
		// Change the message
		messageElement.textContent = newMessage;
		
		// Animate back to normal with a bounce
		messageElement.style.transform = 'scale(1.1)';
		messageElement.style.opacity = '1';
		messageElement.style.background = 'rgba(255, 183, 77, 0.2)';
		messageElement.style.color = 'var(--amber-glow)';
		
		setTimeout(() => {
			messageElement.style.transform = 'scale(1)';
			messageElement.style.background = 'transparent';
			messageElement.style.color = 'var(--text-inverse)';
		}, 300);
	}, 150);
}

function createSparkles(element: HTMLElement) {
	const rect = element.getBoundingClientRect();
	const sparkleCount = 6;
	
	for (let i = 0; i < sparkleCount; i++) {
		const sparkle = document.createElement('div');
		sparkle.innerHTML = '‚ú®';
		sparkle.style.position = 'fixed';
		sparkle.style.left = (rect.left + rect.width / 2) + 'px';
		sparkle.style.top = (rect.top + rect.height / 2) + 'px';
		sparkle.style.fontSize = '1rem';
		sparkle.style.pointerEvents = 'none';
		sparkle.style.zIndex = '9999';
		sparkle.style.transition = 'all 1s ease-out';
		
		document.body.appendChild(sparkle);
		
		// Animate sparkles outward
		setTimeout(() => {
			const angle = (i / sparkleCount) * 2 * Math.PI;
			const distance = 50 + Math.random() * 30;
			const x = Math.cos(angle) * distance;
			const y = Math.sin(angle) * distance;
			
			sparkle.style.transform = `translate(${x}px, ${y}px) scale(0)`;
			sparkle.style.opacity = '0';
		}, 50);
		
		// Remove sparkle after animation
		setTimeout(() => {
			if (sparkle.parentNode) {
				sparkle.parentNode.removeChild(sparkle);
			}
		}, 1100);
	}
}

// Initialize when DOM is loaded
document.addEventListener('DOMContentLoaded', function() {
	console.log('Footer script loaded');
	const messageElement = document.getElementById('positiveMessage');
	
	if (messageElement) {
		console.log('Adding click listener to positive message');
		
		// Add click event listener
		messageElement.addEventListener('click', function() {
			console.log('Message clicked!');
			showRandomPositiveMessage();
		});
		
		// Add a subtle pulse animation to hint it's clickable
		setInterval(() => {
			if (Math.random() < 0.1) { // 10% chance every interval
				messageElement.style.textShadow = '0 0 10px rgba(255, 183, 77, 0.5)';
				setTimeout(() => {
					messageElement.style.textShadow = 'none';
				}, 1000);
			}
		}, 3000);
	} else {
		console.log('Message element not found during initialization');
	}
});
</script>

