	"Tomorrow is a fresh start! üåÑ",
	"Remember to be kind to yourself today! üíö"
];

let currentMessageIndex = 0;

function showRandomPositiveMessage() {
	const messageElement = document.getElementById('positiveMessage');
	if (!messageElement) return;
	
	// Get next message (cycling through all messages)
	currentMessageIndex = (currentMessageIndex + 1) % positiveMessages.length;
	const newMessage = positiveMessages[currentMessageIndex];
	
	// Smoother fade out animation
	messageElement.style.transition = 'all 0.4s cubic-bezier(0.4, 0, 0.2, 1)';
	messageElement.style.transform = 'scale(0.96)';
	messageElement.style.opacity = '0.3';
	
	setTimeout(() => {
		// Change the message
		messageElement.textContent = newMessage;
		
		// Smoother fade in with bounce
		messageElement.style.transition = 'all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1)';
		messageElement.style.transform = 'scale(1.02)';
		messageElement.style.opacity = '1';
		messageElement.style.background = 'rgba(255, 183, 77, 0.15)';
		messageElement.style.color = 'var(--amber-glow)';
		
		setTimeout(() => {
			// Gentle settle animation
			messageElement.style.transition = 'all 0.5s ease-out';
			messageElement.style.transform = 'scale(1)';
			messageElement.style.background = 'rgba(255, 183, 77, 0.08)';
			messageElement.style.color = 'var(--text-inverse)';
			
			setTimeout(() => {
				// Final fade to transparent
				messageElement.style.transition = 'background 0.8s ease-out';
				messageElement.style.background = 'transparent';
			}, 400);
		}, 200);
	}, 200);
}

// Initialize when DOM is loaded
document.addEventListener('DOMContentLoaded', function() {
	const messageElement = document.getElementById('positiveMessage');
	
	if (messageElement) {
		// Add click event listener
		messageElement.addEventListener('click', function() {
			showRandomPositiveMessage();
		});
		
		// Add a subtle hint animation
		setInterval(() => {
			if (Math.random() < 0.1) { // 10% chance every 3 seconds
				messageElement.style.textShadow = '0 0 10px rgba(255, 183, 77, 0.5)';
				setTimeout(() => {
					messageElement.style.textShadow = 'none';
				}, 1000);
			}
		}, 3000);
	}
});
</script>

