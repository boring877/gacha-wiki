---
const today = new Date();
import packageInfo from '../../package.json';
import SocialLinks from './SocialLinks.astro';
const version = packageInfo.version;
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-content">
      <!-- Left Side: Version and License -->
      <div class="footer-left">
        <div class="version-license-row">
          <a
            href="https://github.com/boring877/gacha-wiki"
            target="_blank"
            rel="noopener noreferrer"
            class="version-link"
          >
            <div class="version-pill">
              v{version}
            </div>
          </a>
          <span class="license-text">
            Open source under <a href="/LICENSE" class="license-link">MIT License</a>
          </span>
        </div>
      </div>

      <!-- Center: Copyright -->
      <div class="footer-center">
        <p>© {today.getFullYear()} - I Hope You Have Wonderful Day ✨</p>
      </div>

      <!-- Right Side: Social Links -->
      <div class="footer-right">
        <SocialLinks />
      </div>
    </div>
  </div>
</footer>

<style>
  /* Footer Base Styles */
  .footer {
    background: linear-gradient(135deg, var(--bg-dark) 0%, #2a2a2a 50%, var(--bg-dark) 100%);
    backdrop-filter: blur(12px);
    border-top: 1px solid rgba(255, 183, 77, 0.3);
    margin-top: auto;
  }

  .footer-container {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0.75rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 1rem;
    padding: 1rem 0;
    min-height: 60px;
  }

  /* Footer Left: Version and License */
  .footer-left {
    display: flex;
    justify-content: flex-start;
  }

  /* Footer Center: Copyright */
  .footer-center {
    display: flex;
    justify-content: center;
  }

  .footer-center p {
    color: var(--text-inverse);
    font-size: 0.9rem;
    opacity: 0.9;
    font-weight: 500;
    margin: 0;
    line-height: 1.2;
  }

  /* Footer Right: Social Links */
  .footer-right {
    display: flex;
    justify-content: flex-end;
  }

  /* Version and License Row */
  .version-license-row {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .version-link {
    text-decoration: none;
    display: block;
    flex-shrink: 0;
  }

  .version-pill {
    background: var(--amber-glow);
    padding: 0.35rem 0.75rem;
    border-radius: 8px;
    font-family: 'Space Grotesk', sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--bg-dark);
    transition: all 0.3s ease;
    text-align: center;
    cursor: pointer;
    min-height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .version-pill:hover {
    background: rgba(255, 183, 77, 0.9);
    transform: translateY(-2px);
  }

  .license-text {
    color: var(--text-inverse);
    font-size: 0.75rem;
    opacity: 0.7;
    margin: 0;
    line-height: 1.3;
  }

  .license-link {
    color: var(--amber-glow);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .license-link:hover {
    color: rgba(255, 183, 77, 0.8);
  }

  /* Mobile Responsive Footer - Show simplified version */
  @media (max-width: 1024px) {
    .footer-container {
      padding: 0.5rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 0.75rem;
      padding: 0.75rem 0;
      min-height: auto;
    }

    /* Hide version and license on mobile */
    .footer-left {
      display: none;
    }

    /* Center align copyright and social links */
    .footer-center,
    .footer-right {
      justify-content: center;
    }

    .footer-center p {
      font-size: 0.8rem;
      margin-bottom: 0.5rem;
    }

    /* Adjust social links for mobile */
    .footer-social-links {
      gap: 0.5rem;
    }

    .footer-social-link {
      padding: 0.5rem;
      min-height: 40px;
      min-width: 40px;
    }

    .footer-rumble-text {
      font-size: 0.8rem;
      padding: 0.4rem 0.6rem;
    }
  }

  /* Touch Device Optimizations */
  @media (hover: none) and (pointer: coarse) {
    .version-pill {
      min-height: 48px;
      padding: 0.75rem 1.25rem;
    }

    /* Ensure footer is visible on touch devices */
    .footer {
      display: block;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .version-pill {
      transition: none;
    }
  }
</style>
