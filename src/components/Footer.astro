<style>
	/* Footer Base Styles */
	.footer {
		background: rgba(28, 28, 28, 0.95);
		backdrop-filter: blur(12px);
		border-top: 1px solid var(--amber-glow);
		box-shadow: 0 -4px 20px rgba(255, 183, 77, 0.2);
		margin-top: 5rem;
	}

	.footer-container {
		max-width: 72rem;
		margin: 0 auto;
		padding: 1rem;
	}

	.footer-content {
		position: relative;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 0.75rem;
		min-height: 120px;
	}
	/* Version Badge */
	.version-badge {
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: 0.75rem;
	}

	.version-link {
		text-decoration: none;
		display: block;
		flex-shrink: 0;
	}

	.version-pill {
		background: linear-gradient(135deg, var(--amber-glow), var(--teal-crystal));
		padding: 0.5rem 1rem;
		border-radius: 12px;
		font-family: 'Space Grotesk', sans-serif;
		font-size: 0.75rem;
		font-weight: 600;
		color: white;
		text-shadow: 0 1px 2px rgba(0,0,0,0.5);
		box-shadow: 0 2px 8px rgba(255, 183, 77, 0.3);
		transition: all 0.3s ease;
		text-align: center;
		cursor: pointer;
		min-height: 44px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.version-pill:hover {
		transform: scale(1.05);
		box-shadow: 0 4px 12px rgba(255, 183, 77, 0.5);
	}

	.license-notice {
		flex-shrink: 0;
	}

	.license-notice p {
		color: var(--text-inverse);
		font-size: 0.65rem;
		opacity: 0.6;
		margin: 0;
		line-height: 1.4;
		white-space: nowrap;
	}

	.license-link {
		color: var(--teal-crystal);
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.license-link:hover {
		color: var(--amber-glow);
	}

	/* Copyright */
	.copyright {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		flex-wrap: wrap;
		justify-content: center;
	}

	.copyright p {
		color: var(--text-inverse);
		font-size: 1rem;
		opacity: 0.9;
		font-weight: 500;
		margin: 0;
		line-height: 1.2;
	}
	.heart {
		color: var(--rose-quartz);
		font-size: 1.2rem;
		animation: heartbeat 3s infinite;
		filter: drop-shadow(0 0 4px rgba(233, 30, 99, 0.5));
		text-shadow: 0 0 8px rgba(233, 30, 99, 0.3);
		display: inline-flex;
		align-items: center;
		line-height: 1;
	}

	/* Decorative Line */
	.decorative-line {
		width: 60px;
		height: 2px;
		background: linear-gradient(to right, transparent, var(--amber-glow), transparent);
		opacity: 0.6;
		border-radius: 1px;
	}

	/* Positive Message */
	.positive-message {
		text-align: center;
		width: 100%;
		max-width: 400px;
	}	.message-text {
		color: var(--text-inverse);
		font-size: 0.9rem;
		opacity: 0.8;
		font-style: italic;
		font-weight: 400;
		cursor: pointer;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		padding: 0.75rem 1.5rem;
		border-radius: 20px;
		margin: 0;
		line-height: 1.4;
		min-height: 44px;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		touch-action: manipulation;
		user-select: none;
	}

	.message-text:hover {
		opacity: 1;
		background: rgba(255, 183, 77, 0.1);
		transform: scale(1.01);
	}

	.message-text:active {
		transform: scale(0.99);
		transition: all 0.15s ease-out;
	}

	/* Animations */
	@keyframes heartbeat {
		0%, 100% { 
			transform: scale(1); 
			filter: drop-shadow(0 0 4px rgba(233, 30, 99, 0.5));
		}
		14% { 
			transform: scale(1.15); 
			filter: drop-shadow(0 0 8px rgba(233, 30, 99, 0.8));
		}
		28% { 
			transform: scale(1); 
			filter: drop-shadow(0 0 4px rgba(233, 30, 99, 0.5));
		}
		42% { 
			transform: scale(1.15); 
			filter: drop-shadow(0 0 8px rgba(233, 30, 99, 0.8));
		}
		70% { 
			transform: scale(1); 
			filter: drop-shadow(0 0 4px rgba(233, 30, 99, 0.5));
		}
	}
	/* Tablet Responsive */
	@media (max-width: 768px) {
		.footer-container {
			padding: 1.5rem 1rem;
		}

		.footer-content {
			gap: 1rem;
			min-height: auto;
			padding: 1rem 0;
		}

		.version-badge {
			position: static;
			transform: none;
			order: -1;
			flex-direction: column;
			align-items: center;
			gap: 0.5rem;
			margin-bottom: 0.5rem;
		}

		.version-pill {
			font-size: 0.8rem;
			padding: 0.6rem 1.2rem;
		}

		.license-notice {
			text-align: center;
		}

		.license-notice p {
			font-size: 0.7rem;
			white-space: normal;
		}

		.copyright {
			font-size: 0.9rem;
			gap: 0.4rem;
		}

		.copyright p {
			font-size: 0.9rem;
		}

		.decorative-line {
			width: 50px;
		}

		.message-text {
			font-size: 0.85rem;
			padding: 0.8rem 1.2rem;
		}
	}

	/* Mobile Responsive */
	@media (max-width: 480px) {
		.footer-container {
			padding: 1.25rem 0.75rem;
		}

		.footer-content {
			gap: 0.8rem;
		}

		.version-badge {
			margin-bottom: 0.25rem;
			gap: 0.4rem;
		}

		.version-pill {
			font-size: 0.75rem;
			padding: 0.5rem 1rem;
		}

		.license-notice p {
			font-size: 0.65rem;
		}

		.copyright {
			gap: 0.3rem;
		}

		.copyright p {
			font-size: 0.85rem;
		}

		.heart {
			font-size: 1.1rem;
		}

		.decorative-line {
			width: 40px;
			height: 1px;
		}

		.message-text {
			font-size: 0.8rem;
			padding: 0.7rem 1rem;
			line-height: 1.3;
		}
	}

	/* Touch Device Optimizations */
	@media (hover: none) and (pointer: coarse) {
		.version-pill {
			min-height: 48px;
			padding: 0.75rem 1.25rem;
		}

		.message-text {
			min-height: 48px;
			padding: 1rem 1.5rem;
		}

		.message-text:hover {
			transform: none;
		}
	}

	/* Reduced Motion */
	@media (prefers-reduced-motion: reduce) {
		.heart {
			animation: none;
		}
		
		.version-pill,
		.message-text {
			transition: none;
		}
		
		.message-text:hover {
			transform: none;
		}
	}
</style>

