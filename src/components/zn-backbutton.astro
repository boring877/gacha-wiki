---
// Zone Nova Back Button Component
export interface Props {
	href: string;
	text?: string;
	className?: string;
}

const { 
	href, 
	text = 'Back', 
	className = '' 
} = Astro.props;
---

<div class={`zn-back-button-container ${className}`}>
	<a href={href} class="zn-back-button">
		<span class="zn-back-arrow">‚Üê</span>
		<span class="zn-back-text">{text}</span>
	</a>
</div>

<style>
	.zn-back-button-container {
		margin-bottom: 2rem;
		display: flex;
		justify-content: flex-start;
	}

	.zn-back-button {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		background: var(--bg-primary); /* Dark background for contrast */
		color: var(--amber-glow);
		text-decoration: none;
		border: 2px solid var(--amber-glow);
		padding: 1rem 1.5rem;
		border-radius: 12px;
		font-family: var(--font-display);
		font-weight: 600;
		font-size: var(--text-base);
		transition: all 0.3s ease;
		box-shadow: 0 4px 16px rgba(255, 183, 77, 0.3);
		position: relative;
		overflow: hidden;
	}

	.zn-back-button::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.3), transparent);
		transition: left 0.5s ease;
	}

	.zn-back-button:hover {
		background: var(--amber-glow);
		color: var(--bg-primary); /* Dark text on bright background */
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(255, 183, 77, 0.5);
		border-color: var(--amber-glow);
	}

	.zn-back-button:hover::before {
		left: 100%;
	}

	.zn-back-button:hover .zn-back-arrow {
		transform: translateX(-3px);
	}

	.zn-back-arrow {
		font-size: 1.25rem;
		transition: transform 0.3s ease;
		font-weight: 700;
	}

	.zn-back-text {
		font-weight: 600;
		letter-spacing: 0.02em;
	}

	/* Mobile optimizations */
	@media (max-width: 768px) {
		.zn-back-button {
			padding: 0.875rem 1.25rem;
			font-size: var(--text-sm);
		}

		.zn-back-arrow {
			font-size: 1.1rem;
		}
	}

	/* Performance optimizations */
	@media (prefers-reduced-motion: reduce) {
		.zn-back-button {
			transition: none;
			transform: none;
		}
		
		.zn-back-button:hover {
			transform: none;
		}
		
		.zn-back-button::before,
		.zn-back-arrow {
			transition: none;
		}
	}
</style> 