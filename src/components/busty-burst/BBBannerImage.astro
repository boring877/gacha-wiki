---
import { Image } from 'astro:assets';

// Import banner images
import bannerVernFestival from '../../assets/images/games/Busty_Burst/Banner_Img/banner-vern-founding-festival.jpg';
import bannerShatyChapter6 from '../../assets/images/games/Busty_Burst/Banner_Img/banner-shaty-chapter-6.jpg';
import bannerHolyNightCookies from '../../assets/images/games/Busty_Burst/Banner_Img/banner-holy-night-cookies.jpg';
import bannerNewYear2025_1 from '../../assets/images/games/Busty_Burst/Banner_Img/banner-new-year-2025-1.png';
import bannerNewYear2025_2 from '../../assets/images/games/Busty_Burst/Banner_Img/banner-new-year-2025-2.png';
import bannerNewYear2025_3 from '../../assets/images/games/Busty_Burst/Banner_Img/banner-new-year-2025-3.png';
import bannerSeason1Lorelia from '../../assets/images/games/Busty_Burst/Banner_Img/banner-season-1-lorelia.jpg';
import bannerBeautyWitchPartyPeople from '../../assets/images/games/Busty_Burst/Banner_Img/banner-beauty-witch-party-people.png';
import bannerOctoOctoBeachPanic from '../../assets/images/games/Busty_Burst/Banner_Img/banner-octo-octo-beach-panic.png';
import bannerInfiniteSubjugationPastel from '../../assets/images/games/Busty_Burst/Banner_Img/Summon_musou_2_804x434.png';
import bannerBladeOfJudgment from '../../assets/images/games/Busty_Burst/Banner_Img/Summon_event3_804x434.png';

// Image mapping by banner ID
const bannerImages: Record<string, ImageMetadata> = {
  'vern-founding-festival': bannerVernFestival,
  'shaty-chapter-6': bannerShatyChapter6,
  'holy-night-cookies': bannerHolyNightCookies,
  'new-year-2025-1': bannerNewYear2025_1,
  'new-year-2025-2': bannerNewYear2025_2,
  'new-year-2025-3': bannerNewYear2025_3,
  'season-1-lorelia': bannerSeason1Lorelia,
  'beauty-witch-party-people': bannerBeautyWitchPartyPeople,
  'octo-octo-beach-panic': bannerOctoOctoBeachPanic,
  'infinite-subjugation-pastel': bannerInfiniteSubjugationPastel,
  'blade-of-judgment': bannerBladeOfJudgment,
};

export interface Props {
  bannerId: string;
  alt: string;
  width?: number;
  height?: number;
}

const { bannerId, alt, width = 400, height = 225 } = Astro.props;

const imageSrc = bannerImages[bannerId];

// Get original image dimensions
const originalWidth = imageSrc?.width || width;
const originalHeight = imageSrc?.height || height;
---

{
  imageSrc && (
    <div class="bb-banner-image">
      <Image
        src={imageSrc}
        alt={alt}
        width={originalWidth}
        height={originalHeight}
        quality={90}
        class="bb-banner-image__img"
        loading="lazy"
      />
    </div>
  )
}

<style>
  .bb-banner-image {
    border-radius: 12px;
    overflow: hidden;
    flex-shrink: 0;
    border: 3px solid var(--bb-primary);
  }

  .bb-banner-image__img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: inherit;
  }
</style>
