export interface Props {
  fileName: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
  format?: 'webp' | 'jpg' | 'png';
  quality?: number;
}

const {
  fileName,
  alt,
  width = 140,
  height = 140,
  class: className,
  loading = 'lazy',
  format = 'jpg',
  quality = 85,
} = Astro.props;

// Map file names to imported image modules
const imageMap = {
  'Artemis.jpg': ArtemisImg,
  'Artia.jpg': ArtiaImg,
  'Bianca.jpg': BiancaImg,
  'Elegant_Portrait_Shamshel.jpg': Elegant_Portrait_ShamshelImg,
  'Estiriel.jpg': EstirielImg,
  'Festive_Attire_Estiriel.jpg': Festive_Attire_EstirielImg,
  'Festival_Empress_Shamshel.jpg': Festival_Empress_ShamshelImg,
  'Festive_Costume_Natasha.jpg': Festive_Costume_NatashaImg,
  'Frey.jpg': FreyImg,
  'Gemini.jpg': GeminiImg,
  'Hildis.jpg': HildisImg,
  'Hisara.jpg': HisaraImg,
  'Liesel.jpg': Lie_Img,
  'Luca.jpg': LucaImg,
  'Magical Princess Luceria.jpg': Magical_Princess_LuceriaImg,
  'Marina.jpg': MarinaImg,
  'Meinias.jpg': MeiniasImg,
  'Messenge_of_Stone_soldiers_Nerys.jpg': Messenge_of_Stone_soldiers_NerysImg,
  'Nora.jpg': NoraImg,
  'Pious_Healer_Ishtovia.jpg': Pious_Healer_IshtoviaImg,
  'Soltina.jpg': SoltinaImg,
  'Stenlina.jpg': StenlinaImg,
  'Swift-Chant_Sorceress_Sobrina.jpg': Swift_Chant_Sorceress_SobrinaImg,
  'Teresia.jpg': TeresiaImg,
  'The_Dark_Knight.jpg': The_Dark_KnightImg,
  'Trance_Dancer_Messeria.jpg': Trance_Dancer_MesseriaImg,
  'Venus.jpg': VenusImg,
  'Yu_Lima_Elka.jpg': Yu_Lima_ElkaImg,
  'Natasha.jpg': NatashaImg,
  'Shaty.png': ShatyImg,
  'Mischievous_Mermaid_Princess_Lorelia.jpg': Mischievous_Mermaid_Princess_LoreliaImg,
  'Elegant_Portrait_Aysis.jpg': Elegant_Portrait_AysisImg,
  'Holy_Night_Succubus_Yu_Rima_Elca.jpg': Holy_Night_Succubus_Yu_Rima_ElcaImg,
  'Queen_of_Pies_and_Cookies_Aphrodia.jpg': Queen_of_Pies_and_Cookies_AphrodiaImg,
  'Magical_Holy_Night_Festival_Kaguya.jpg': Magical_Holy_Night_Festival_KaguyaImg,
};

// Get the image module based on the fileName
const imageModule = imageMap[fileName] || EstirielImg; // Default to Estiriel if not found
---

<!-- Character image wrapper with proper styling -->
<div class={`paladin-image-wrapper ${className || ''}`}>
  <Image
    src={imageModule}
    alt={alt}
    width={width}
    height={height}
    loading={loading}
    format={format}
    quality={quality}
    class="paladin-image"
    style="object-fit: cover; border-radius: 6px; border: 2px solid var(--bb-border-light);"
  />
</div>

<style>
  .paladin-image-wrapper {
    display: inline-block;
    overflow: hidden;
  }

  .paladin-image {
    transition: none; /* No animations as requested */
  }

  /* Ensure images maintain aspect ratio */
  .paladin-image-wrapper {
    width: 100%;
    height: 100%;
  }
</style>
