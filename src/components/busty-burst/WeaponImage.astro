import GoldenWyvernGrenadeImg from '../../assets/images/games/Busty_Burst/WPImg/Golden_wyvern_grenade.png';

// Items
import AncientArtifactImg from '../../assets/images/games/Busty_Burst/WPImg/Ancient_Artifact.jpg';

export interface Props {
  fileName: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
}

const { fileName, alt, width = 80, height = 80, class: className, loading = 'lazy' } = Astro.props;

// Map file names to imported image modules
const imageMap: Record<string, ImageMetadata> = {
  // Hero/Evil God Series
  'Cursed_Demon_Axe.png': CursedDemonAxeImg,
  'Sacred_Banishment_Sword.png': SacredBanishmentSwordImg,
  'Heroic_Holy_Lance.png': HeroicHolyLanceImg,
  "Master's_Staff.png": MastersStaffImg,
  'War_Hammer.png': WarHammerImg,
  "Saint's_Staff.png": SaintsStaffImg,
  'Azure_Sky_Bow.png': AzureSkyBowImg,
  'Thunder_Arrow.png': ThunderArrowImg,
  'Twin_Star_Shuriken.png': TwinStarShurikenImg,
  'Cosmic_Crystal.png': CosmicCrystalImg,
  // Annihilation Series
  'Sword_of_annihilation.png': SwordOfAnnihilationImg,
  'Ringblade_of_Annihilation.png': RingbladeOfAnnihilationImg,
  'Spear_of_extermination.png': SpearOfExterminationImg,
  'Wand_of_annihilation.png': WandOfAnnihilationImg,
  'Gauntlet_of_Annihilation.png': GauntletOfAnnihilationImg,
  'Staff_of_annihilation.png': StaffOfAnnihilationImg,
  'Crowwbow_of_annihilation.png': CrossbowOfAnnihilationImg,
  'Bullet_of_annihilation.png': BulletOfAnnihilationImg,
  'Axe_of_annihilation.png': AxeOfAnnihilationImg,
  'Magic_Grenade_of_annihilation.png': MagicGrenadeOfAnnihilationImg,
  // Dragon Series
  'Dragoncleaver_axe.png': DragoncleaverAxeImg,
  'Dragonflame_sword.png': DragonflameSwordImg,
  'Dragonclaw_spear.png': DragonclawSpearImg,
  'Dragontail_staff.png': DragontailStaffImg,
  'Dragoneye_Hammer.png': DragoneyeHammerImg,
  'Dragonmind_grimoire.png': DragonmindGrimoireImg,
  'Dragonwind_bow.png': DragonwindBowImg,
  'Dragonpierce_arrow.png': DragonpierceArrowImg,
  'Dragonfang_dagger.png': DragonfangDaggerImg,
  'Dragonburst_grenade.png': DragonburstGrenadeImg,
  // Golden Wyvern Series
  'Golden_wyvern_greatsword.png': GoldenWyvernGreatswordImg,
  'Golden_Wyvern_Chakram.png': GoldenWyvernChakramImg,
  'Golden_wyvern_lance.png': GoldenWyvernLanceImg,
  'Golden_wyvern_staff.png': GoldenWyvernStaffImg,
  'Golden_wyvern_gauntlets.png': GoldenWyvernGauntletsImg,
  'Golden_wyvern_rod.png': GoldenWyvernRodImg,
  'Golden_wyvern_longbow.png': GoldenWyvernLongbowImg,
  'Golden_wyvern_arrow.png': GoldenWyvernArrowImg,
  'Golden_wyvern_dagger.png': GoldenWyvernDaggerImg,
  'Golden_wyvern_grenade.png': GoldenWyvernGrenadeImg,
  // Items
  'Ancient_Artifact.jpg': AncientArtifactImg,
};

// Get the image module based on the fileName
const imageModule = imageMap[fileName];
---

{
  imageModule && (
    <div class={`weapon-image-wrapper ${className || ''}`}>
      <Image
        src={imageModule}
        alt={alt}
        width={width}
        height={height}
        loading={loading}
        class="weapon-image"
      />
    </div>
  )
}

<style>
  .weapon-image-wrapper {
    display: inline-block;
    overflow: hidden;
  }

  .weapon-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
</style>
