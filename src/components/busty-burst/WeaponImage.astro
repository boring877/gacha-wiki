// Golden Wyvern Series
import GoldenWyvernGreatswordImg from '../../assets/images/games/Busty_Burst/WPImg/Golden_wyvern_greatsword.png';
import GoldenWyvernChakramImg from '../../assets/images/games/Busty_Burst/WPImg/Golden_Wyvern_Chakram.png';
import GoldenWyvernLanceImg from '../../assets/images/games/Busty_Burst/WPImg/Golden_wyvern_lance.png';
import GoldenWyvernStaffImg from '../../assets/images/games/Busty_Burst/WPImg/Golden_wyvern_staff.png';
import GoldenWyvernGauntletsImg from '../../assets/images/games/Busty_Burst/WPImg/Golden_wyvern_gauntlets.png';
import GoldenWyvernRodImg from '../../assets/images/games/Busty_Burst/WPImg/Golden_wyvern_rod.png';
import GoldenWyvernLongbowImg from '../../assets/images/games/Busty_Burst/WPImg/Golden_wyvern_longbow.png';
import GoldenWyvernArrowImg from '../../assets/images/games/Busty_Burst/WPImg/Golden_wyvern_arrow.png';
