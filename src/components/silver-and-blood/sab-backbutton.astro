---
export interface Props {
  href: string;
  text?: string;
  className?: string;
}

const { href, text = 'Back to Character List', className = '' } = Astro.props;
---

<div class={`sab-back-button-container ${className}`}>
  <a href={href} class="sab-back-button">
    <span class="sab-back-arrow">‚Üê</span>
    <span class="sab-back-text">{text}</span>
  </a>
</div>

<style>
  .sab-back-button-container {
    margin-bottom: 2rem;
    display: flex;
    justify-content: flex-start;
  }

  .sab-back-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: #1a1a1a;
    color: var(--sab-light-blue);
    text-decoration: none;
    border: 2px solid var(--sab-light-blue);
    padding: 1rem 1.5rem;
    border-radius: 12px;
    font-family: var(--font-display);
    font-weight: 600;
    font-size: var(--text-base);
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(139, 173, 255, 0.35);
    position: relative;
    overflow: hidden;
  }

  .sab-back-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(139, 173, 255, 0.3), transparent);
    transition: left 0.5s ease;
  }

  .sab-back-button:hover {
    background: var(--sab-light-blue);
    color: #1a1a1a;
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(139, 173, 255, 0.5);
    border-color: var(--sab-light-blue);
  }

  .sab-back-button:hover::before {
    left: 100%;
  }

  .sab-back-button:hover .sab-back-arrow {
    transform: translateX(-3px);
  }

  .sab-back-arrow {
    font-size: 1.25rem;
    transition: transform 0.3s ease;
    font-weight: 700;
  }

  .sab-back-text {
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  @media (max-width: 768px) {
    .sab-back-button {
      padding: 0.875rem 1.25rem;
      font-size: var(--text-sm);
    }
    .sab-back-arrow {
      font-size: 1.1rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .sab-back-button,
    .sab-back-button:hover,
    .sab-back-button::before,
    .sab-back-arrow {
      transition: none;
      transform: none;
    }
  }
</style>
