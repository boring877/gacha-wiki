---
// Silver and Blood Quick Navigation Component - Main Wrapper
import SilverAndBloodQuickNavDesktop from './SilverAndBloodQuickNavDesktop.astro';
import SilverAndBloodQuickNavMobile from './SilverAndBloodQuickNavMobile.astro';

export interface Props {
	currentPath?: string;
}

const { currentPath = '' } = Astro.props;

// Check if we're on the main Silver and Blood landing page
const isLandingPage = currentPath === '/guides/silver-and-blood/' || currentPath === '/guides/silver-and-blood';
---

<!-- Silver and Blood Quick Navigation - Responsive Wrapper -->
{!isLandingPage && <SilverAndBloodQuickNavDesktop currentPath={currentPath} />}
{!isLandingPage && <SilverAndBloodQuickNavMobile currentPath={currentPath} />}