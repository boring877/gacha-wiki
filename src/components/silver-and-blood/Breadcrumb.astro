---
export interface Props {
  items: Array<{
    name: string;
    href?: string;
  }>;
}

const { items } = Astro.props;
---

<nav class="breadcrumb" aria-label="Breadcrumb">
  <ol class="breadcrumb-list">
    {
      items.map((item, index) => (
        <li class="breadcrumb-item">
          {item.href ? (
            <a href={item.href} class="breadcrumb-link">
              {item.name}
            </a>
          ) : (
            <span class="breadcrumb-current" aria-current="page">
              {item.name}
            </span>
          )}
          {index < items.length - 1 && (
            <span class="breadcrumb-separator" aria-hidden="true">
              â€º
            </span>
          )}
        </li>
      ))
    }
  </ol>
</nav>

<style>
  .breadcrumb {
    margin-bottom: 2rem;
  }

  .breadcrumb-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 0.5rem;
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .breadcrumb-link {
    color: #d4b5b5;
    text-decoration: none;
    font-size: 0.9rem;
    opacity: 0.9;
  }

  .breadcrumb-current {
    color: #ffffff;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .breadcrumb-separator {
    color: #9a9a9a;
    font-size: 0.9rem;
    user-select: none;
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .breadcrumb-list {
      font-size: 0.8rem;
    }
  }
</style>
