---
/**
 * Stella Sora Shop Event Banner Image Component
 * Handles shop event banner images for the index page from BG_Shop directory
 */

import { Image } from 'astro:assets';

// Import shop event banner images from BG_Shop directory
import aFinaleEchoingBanner from '../../assets/images/games/stella-sora/EventShop/BG_Shop/Finale_Echoing.jpg';
import theGhostShipBanner from '../../assets/images/games/stella-sora/EventShop/BG_Shop/Ghost_Ship.jpg';
import guildSweetGuildBanner from '../../assets/images/games/stella-sora/EventShop/BG_Shop/Guild_Sweet.jpg';

// Shop event banner image mapping
const shopEventBannerMap = {
  // Use the actual event IDs from the data files
  'a-finale-echoing': aFinaleEchoingBanner,
  'the-ghost-ship-haunts-the-deep': theGhostShipBanner,
  'guild-sweet-guild': guildSweetGuildBanner,
};

const {
  imageName,
  alt = 'Shop Event Banner Image',
  class: className = '',
  loading = 'lazy',
  format = 'webp',
  quality = 95,
  width = 500,
  height = 500,
  sizes = '(max-width: 480px) 100vw, (max-width: 768px) 90vw, 800px',
} = Astro.props;

// Get the imported image object from the map
const imageSrc = shopEventBannerMap[imageName] || guildSweetGuildBanner;
---

<div class={`ss-shop-event-banner-image ${className}`}>
  <picture>
    <source srcset={imageSrc.src} type="image/webp" sizes={sizes} />
    <Image
      src={imageSrc}
      alt={alt}
      width={width}
      height={height}
      loading={loading}
      format={format}
      quality={quality}
      sizes={sizes}
      style="object-fit: cover; border-radius: 8px; width: 100%; height: auto;"
    />
  </picture>
</div>
