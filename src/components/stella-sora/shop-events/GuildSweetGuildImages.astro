import bg1event from '../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/2_guild_bg1.jpg';

// Image mapping object for easy access
const imageMap = {
  '2_guild_glass_marble.jpg': glassMarble,
  '2_guild_fist_of_courage.jpg': fistOfCourage,
  '2_guild_fist_of_courage_melody.jpg': fistOfCourageMelody,
  '2_guild_guild_sweet_guild.jpg': guildSweetGuild,
  '2_Colossus_Core.jpg': colossusCore,
  '2_guild_cerulean_ticket.jpg': ceruleanTicket,
  '1_Sprout_Ticket.jpg': sproutTicket,
  '2_guild_star_emblem_polisher.jpg': starEmblemPolisher,
  '2_guild_reflective_photo_capturer.jpg': reflectivePhotoCapturer,
  '2_guild_moonlit_companion.jpg': moonlitCompanion,
  '2_Blossom_Porcelain_cup.jpg': blossomPorcelainCup,
  '2_guild_count_gift.jpg': countsGift,
  '2_Demon_Bee_Game_Cartridge.jpg': demonBeeGameCartridge,
  '2_Frenzied_Waltz_Essence.jpg': frenziedWaltzEssence,
  '2_Monolith_Stairs_Pass.jpg': monolithStairsPass,
  '2_guild_trekkers_handwritten_encyclopedia.jpg': trekkersHandwrittenEncyclopedia,
  '2_Starlit_Colored_Glass.jpg': starlitColoredGlass,
  '2_guild_count_cellaring.jpg': countsCellaring,
  '2_Barrage_Game_Cartridge.jpg': barrageGameCartridge,
  '2_Phantom_Step_Remnant.jpg': phantomStepRemnant,
  '2_Novice_Trekker_promotion_box.jpg': noviceTrekkerPromotionBox,
  '2_Beginner_Cartridge_box.jpg': beginnerCartridgeBox,
  '2_Novice_Disc_Promotion_Box.jpg': noviceDiscPromotionBox,
  '2_guild_dorra.jpg': dorra,
  '2_guild_bg1.jpg': bg1event,
};

// Props interface
interface Props {
  imageName: string | any;
  alt?: string;
  className?: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
}

const {
  imageName,
  alt = '',
  className = '',
  width = undefined,
  height = undefined,
  loading = 'lazy',
} = Astro.props;

// Handle both string names and image objects
let imageSrc = null;

if (typeof imageName === 'string') {
  // If it's a string, try to get it from the mapping
  imageSrc = imageMap[imageName];
} else if (imageName && typeof imageName === 'object') {
  // If it's already an image object, use it directly
  imageSrc = imageName;
}

// If image not found, use a placeholder or fallback
if (!imageSrc) {
  const nameStr = typeof imageName === 'string' ? imageName : 'unknown';
  console.warn(`Image "${nameStr}" not found in Guild Sweet Guild image mapping`);
}
---

{
  imageSrc ? (
    <img
      src={imageSrc}
      alt={alt || imageName.replace(/_/g, ' ').replace('.jpg', '').replace('.png', '')}
      class={className}
      width={width}
      height={height}
      loading={loading}
      decoding="async"
    />
  ) : (
    <div class={`image-placeholder ${className}`} style={`width: ${width}px; height: ${height}px;`}>
      <span>Image not found: {imageName}</span>
    </div>
  )
}
