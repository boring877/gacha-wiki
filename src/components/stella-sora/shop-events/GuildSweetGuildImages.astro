import frenziedWaltzEssence from '../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/Frenzied_Waltz_Essence.jpg';
import monolithStairsPass from '../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/Monolith_Stairs_Pass.jpg';
import trekkersHandwrittenEncyclopedia from "../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/Trekker's_Handwritten_Encyclopedia.jpg";
import starlitColoredGlass from '../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/Starlit_Colored_Glass.jpg';
import countsCellaring from "../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/Count's_Cellaring.jpg";
import barrageGameCartridge from '../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/Barrage_Game_Cartridge.jpg';
import phantomStepRemnant from '../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/Phantom_Step_Remnant.jpg';
import noviceTrekkerPromotionBox from '../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/Novice_Trekker_promotion_box.jpg';
import beginnerCartridgeBox from '../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/Beginner_Cartridge_box.jpg';
import noviceDiscPromotionBox from '../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/Novice_Disc_Promotion_Box.jpg';
import dorra from '../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/Dorra.jpg';
import bg1event from '../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/BG1.jpg';
import gem from '../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/Gem.jpg';
import chessPieceOfSkill from '../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/chess_piece_of_skill.png';

// Clean, unified image mapping for Guild Sweet Guild - supports both original filenames and semantic camelCase keys
const imageMap = {
  // Original filenames from data (with .jpg extension)
  'Fist_of_Courage.jpg': fistOfCourage,
  'Fist_of_Courage_Melody.jpg': fistOfCourageMelody,
  'Guild_Sweet_Guild.jpg': guildSweetGuild,
  'Colossus_Core.jpg': colossusCore,
  'Cerulean_Ticket.jpg': ceruleanTicket,
  'Sprout_Ticket.jpg': sproutTicket,
  'Monolith_Stairs_Pass.jpg': monolithStairsPass,
  'Star_Emblem_Polisher.jpg': starEmblemPolisher,
  'Reflective_Photo_Capturer.jpg': reflectivePhotoCapturer,
  'Moonlit_Companion.jpg': moonlitCompanion,
  'Blossom_Porcelain_cup.jpg': blossomPorcelainCup,
  "Count's_Gift.jpg": countsGift,
  'Demon_Bee_Game_Cartridge.jpg': demonBeeGameCartridge,
  'Frenzied_Waltz_Essence.jpg': frenziedWaltzEssence,
  "Trekker's_Handwritten_Encyclopedia.jpg": trekkersHandwrittenEncyclopedia,
  'Starlit_Colored_Glass.jpg': starlitColoredGlass,
  "Count's_Cellaring.jpg": countsCellaring,
  'Barrage_Game_Cartridge.jpg': barrageGameCartridge,
  'Phantom_Step_Remnant.jpg': phantomStepRemnant,
  'Novice_Trekker_promotion_box.jpg': noviceTrekkerPromotionBox,
  'Beginner_Cartridge_box.jpg': beginnerCartridgeBox,
  'Novice_Disc_Promotion_Box.jpg': noviceDiscPromotionBox,
  'Dorra.jpg': dorra,
  'BG1.jpg': bg1event,
  'Gem.jpg': gem,
  'Glass_Marble.jpg': glassMarble,
  'chess_piece_of_skill.png': chessPieceOfSkill,

  // Quest reward variations (only for special cases with "Guild" suffix or different naming)
  'Sprout Ticket Guild': sproutTicket,
  "Count's Cellaring Guild": countsCellaring,
  'Barrage Game Cartridge Guild': barrageGameCartridge,
  'Chess Piece of Skill': chessPieceOfSkill, // Direct mapping for PNG file
  'Blossom Porcelain Cup': blossomPorcelainCup, // Direct mapping for case-sensitive filename
};

// Props interface
interface Props {
  imageName: string;
  alt?: string;
  class?: string;
  className?: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
  format?: 'webp' | 'jpg' | 'png';
  quality?: number;
}

const {
  imageName,
  alt = '',
  class: classNameFromClass,
  className,
  width = 500,
  height = 500,
  loading = 'lazy',
  format = 'webp',
  quality = 100,
} = Astro.props;

// Use either className or class (for backwards compatibility)
const finalClassName = className || classNameFromClass || '';

// Get the image module based on the imageName - use filename fallback like other components
const filename = imageName.split('/').pop() || 'Glass_Marble.jpg';
const convertedFilenameJpg = filename.replace(/ /g, '_') + '.jpg';
const convertedFilenamePng = filename.replace(/ /g, '_') + '.png';
const imageModule =
  imageMap[imageName] ||
  imageMap[convertedFilenameJpg] ||
  imageMap[convertedFilenamePng] ||
  imageMap[filename + '.jpg'] ||
  imageMap[filename + '.png'] ||
  glassMarble;
---

<!-- Use Astro's Image component for optimization -->
<Image
  src={imageModule}
  alt={alt || imageName.replace(/_/g, ' ').replace('.jpg', '').replace('.png', '')}
  width={width}
  height={height}
  class={finalClassName}
  loading={loading}
  format={format}
  quality={quality}
/>
