// Import all images for Guild Sweet Guild event
import glassMarble from '../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/Glass_Marble.jpg';
import fistOfCourage from '../../../assets/images/games/stella-sora/EventShop/Guild_sweet_guild/Fist_of_Courage.jpg';
