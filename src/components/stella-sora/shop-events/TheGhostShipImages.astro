  '3_count_s_cellaring.png': countsCellaring,
  '3_barrage_game_cartridge.png': barrageGameCartridge,
  '3_duloos_soul_remnant.png': duloosSoulRemnant,
  '1_Dorra.jpg': dorra,
  '3_Bottled_vigor_soda.png': bottledVigorSoda,
  '3_Canned_vigor_soda.png': cannedVigorSoda,
  '3_Novice_disc_promotion_box.png': noviceDiscPromotionBox,
  '3_Novice_trekker_promotion_box.png': noviceTrekkerPromotionBox,
  '3_Premium_disc_promotion_box.png': premiumDiscPromotionBox,
  '3_Premium_trekker_promotion_box.png': premiumTrekkerPromotionBox,
  '1_Premium_Cartridge_Box.jpg': premiumCartridgeBox,
  '1_Beginner_Cartridge_Box.jpg': beginnerCartridgeBox,
  '3_bg1event.jpg': bg1event,
};

// Props interface
interface Props {
  imageName: string | any;
  alt?: string;
  className?: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
}

const {
  imageName,
  alt = '',
  className = '',
  width = undefined,
  height = undefined,
  loading = 'lazy',
} = Astro.props;

// Handle both string names and image objects
let imageSrc = null;

if (typeof imageName === 'string') {
  // If it's a string, try to get it from the mapping
  imageSrc = imageMap[imageName];
} else if (imageName && typeof imageName === 'object') {
  // If it's already an image object, use it directly
  imageSrc = imageName;
}

// If image not found, use a placeholder or fallback
if (!imageSrc) {
  const nameStr = typeof imageName === 'string' ? imageName : 'unknown';
  console.warn(`Image "${nameStr}" not found in The Ghost Ship Haunts the Deep image mapping`);
}
---

{
  imageSrc ? (
    <img
      src={imageSrc}
      alt={alt || imageName.replace(/_/g, ' ').replace('.jpg', '').replace('.png', '')}
      class={className}
      width={width}
      height={height}
      loading={loading}
      decoding="async"
    />
  ) : (
    <div class={`image-placeholder ${className}`} style={`width: ${width}px; height: ${height}px;`}>
      <span>Image not found: {imageName}</span>
    </div>
  )
}
