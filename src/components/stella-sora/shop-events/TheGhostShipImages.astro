// Image mapping object for easy access
const imageMap = {
  '3_Squid_rice_cracker.png': squidRiceCracker,
  '3_Summer_sanctuary.png': summerSanctuary,
  '3_Summer_sanctuary_melodypng.png': summerSanctuaryMelody,
  '3_Daring_Adventure!_The_Ghost_Ship_Haunts_the_Deep.png': daringAdventure,
  '3_radiant_feather_crown.png': radiantFeatherCrown,
  '3_Star_emblem_polisher.png': starEmblemPolisher,
  '3_cerulean_ticket.png': ceruleanTicket,
  '1_Sprout_Ticket.jpg': sproutTicket,
  '3_exquisite_blower.png': exquisiteBlower,
  '3_chilling_wind_spinner.png': chillingWindSpinner,
  '3_moonlit_companion.png': moonlitCompanion,
  '3_count_s_cellaring.png': countsGift,
  '3_demon_bee_game_cartridge.png': demonBeeGameCartridge,
  '3_duloos_essence.png': duloosEssence,
  '3_monolith_stairs_pass.png': monolithStairsPass,
  '3_trekkers_handwritten_encyclopedia.png': trekkersHandwrittenEncyclopedia,
