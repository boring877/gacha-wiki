const guildRewardMap = {
  'Sprout Ticket': guild2_guild_sprout_ticket,
  Dorra: guild2_guild_dorra,
  'Beginner Cartridge Box': guild2_Beginner_Cartridge_box,
  'Novice Trekker promotion box': guild2_Novice_Trekker_promotion_box,
  'Novice Disc Promotion Box': guild2_Novice_Disc_Promotion_Box,
  'Barrage Game Cartridge': guild2_Barrage_Game_Cartridge,
  'Demon Bee Game Cartridge': guild2_Demon_Bee_Game_Cartridge,
  'Monolith Stairs Pass': guild2_Monolith_Stairs_Pass,
  'Phantom Step Remnant': guild2_Phantom_Step_Remnant,
  'Starlit Colored Glass': guild2_Starlit_Colored_Glass,
  'Blossom Porcelain cup': guild2_Blossom_Porcelain_cup,
  'Colossus Core': guild2_Colossus_Core,
  'Frenzied Waltz Essence': guild2_Frenzied_Waltz_Essence,
  Gem: guild2_Gem,
  'Glass marble': guild2_guild_glass_marble,
  'Guild Sweet Guild': guild2_guild_guild_sweet_guild,
  'Moonlit Companion': guild2_guild_moonlit_companion,
  'Reflective Photo Capturer': guild2_guild_reflective_photo_capturer,
  'Star Emblem Polisher': guild2_guild_star_emblem_polisher,
  'Trekkers Handwritten Encyclopedia': guild2_guild_trekkers_handwritten_encyclopedia,
  'Count S Gift': guild2_guild_count_gift,
  'Count S Cellaring': guild2_guild_count_cellaring,
  'Fist of Courage': guild2_guild_fist_of_courage,
  'Fist of Courage Melody': guild2_guild_fist_of_courage_melody,
  'Cerulean Ticket': guild2_guild_cerulean_ticket,
} as const;

export interface Props {
  rewardName: string;
}

const { rewardName } = Astro.props;

// Get the image for this reward or fallback to Guild Dorra
const rewardImage = guildRewardMap[rewardName as keyof typeof guildRewardMap] || guild2_guild_dorra;
const imageSrc = rewardImage.src;
---

<img
  src={imageSrc}
  alt={rewardName}
  width="80"
  height="80"
  loading="lazy"
  style="object-fit: cover; width: 80px; height: 80px;"
/>
