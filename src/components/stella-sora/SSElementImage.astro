---
// Stella Sora Element Image Component
import { Image } from 'astro:assets';

// Import all Stella Sora element images once
import aquaImage from '../../assets/images/games/stella-sora/element/Aqua.jpg';
import ignisImage from '../../assets/images/games/stella-sora/element/Ignis.jpg';
import luxImage from '../../assets/images/games/stella-sora/element/Lux.jpg';
import umbraImage from '../../assets/images/games/stella-sora/element/Umbra.jpg';
import ventusImage from '../../assets/images/games/stella-sora/element/Ventus.jpg';

// Centralized element image mapping
const elementImageMap = {
  Aqua: aquaImage,
  Ignis: ignisImage,
  Lux: luxImage,
  Umbra: umbraImage,
  Ventus: ventusImage,
};

export interface Props {
  elementName: string;
  alt?: string;
  class?: string;
  width?: number;
  height?: number;
}

const { elementName, alt, class: className = '', width = 32, height = 32 } = Astro.props;

// Get the imported image object from the map
const imageSrc = elementImageMap[elementName] || elementImageMap['Aqua']; // Keep Aqua as fallback for safety
---

<Image
  src={imageSrc}
  alt={alt || elementName}
  width={width}
  height={height}
  class={`${className} element-img-fill`}
  loading="lazy"
  format="webp"
  quality={95}
/>
