---
// Stella Sora Element Image Component
import { Image } from 'astro:assets';

// Import all Stella Sora element images (better cut versions)
import aquaImage from '../../assets/images/games/stella-sora/elements/aqua.png';
import ignisImage from '../../assets/images/games/stella-sora/elements/ignis.png';
import terraImage from '../../assets/images/games/stella-sora/elements/terra.png';
import ventusImage from '../../assets/images/games/stella-sora/elements/ventus.png';
import luxImage from '../../assets/images/games/stella-sora/elements/lux.png';
import umbraImage from '../../assets/images/games/stella-sora/elements/umbra.png';
import nonElementImage from '../../assets/images/games/stella-sora/elements/none.png';

// Centralized element image mapping
const elementImageMap = {
  Aqua: aquaImage,
  Ignis: ignisImage,
  Lux: luxImage,
  Terra: terraImage,
  Umbra: umbraImage,
  Ventus: ventusImage,
  None: nonElementImage,
};

export interface Props {
  elementName: string;
  alt?: string;
  class?: string;
  width?: number;
  height?: number;
}

const { elementName, alt, class: className = '', width = 32, height = 32 } = Astro.props;

// Get the imported image object from the map
const imageSrc = elementImageMap[elementName] || elementImageMap['Aqua']; // Keep Aqua as fallback for safety
---

<Image
  src={imageSrc}
  alt={alt || elementName}
  width={width}
  height={height}
  class={`${className} element-img-fill`}
  loading="lazy"
  format="webp"
  quality={95}
/>
