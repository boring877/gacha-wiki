---
// Stella Sora Element Image Component
import { Image } from 'astro:assets';

// Import all Stella Sora element images once
import aquaImage from '../../assets/images/games/stella-sora/element/Aqua.jpg';

// Centralized element image mapping
const elementImageMap = {
  Aqua: aquaImage,
};

export interface Props {
  elementName: string;
  alt?: string;
  class?: string;
  width?: number;
  height?: number;
}

const { elementName, alt, class: className = '', width = 40, height = 40 } = Astro.props;

// Get the imported image object from the map
const imageSrc = elementImageMap[elementName] || elementImageMap['Aqua'];
---

<Image
  src={imageSrc}
  alt={alt || elementName}
  width={width}
  height={height}
  class={`${className} element-img-fill`}
  loading="lazy"
  format="webp"
  quality={95}
/>

<style>
  .element-img-fill {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
  }
</style>
