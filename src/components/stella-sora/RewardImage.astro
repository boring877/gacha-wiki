---
// Unified reward image component that delegates to event-specific components
import FinaleEchoingRewardImages from './reward-images/FinaleEchoingRewardImages.astro';
import GuildSweetGuildRewardImages from './reward-images/GuildSweetGuildRewardImages.astro';
import GhostShipRewardImages from './reward-images/GhostShipRewardImages.astro';

export interface Props {
  rewardName: string;
  eventId: string;
}

const { rewardName, eventId } = Astro.props;
---

<div class="reward-image">
  {eventId === 'a-finale-echoing' && <FinaleEchoingRewardImages rewardName={rewardName} />}
  {eventId === 'guild-sweet-guild' && <GuildSweetGuildRewardImages rewardName={rewardName} />}
  {
    eventId === 'the-ghost-ship-haunts-the-deep' && (
      <GhostShipRewardImages rewardName={rewardName} />
    )
  }
  {
    !['a-finale-echoing', 'guild-sweet-guild', 'the-ghost-ship-haunts-the-deep'].includes(
      eventId
    ) && <FinaleEchoingRewardImages rewardName={rewardName} />
  }
</div>
