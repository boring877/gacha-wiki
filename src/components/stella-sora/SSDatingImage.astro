  imageName,
  alt,
  class: className = '',
  width = 512,
  height = 512,
  loading = 'lazy',
  format = 'webp',
  quality = 90,
} = Astro.props;

// Normalize image name - add .png if missing
let imageKey = imageName;
if (!imageKey.endsWith('.png')) {
  imageKey = `${imageKey}.png`;
}

const imageSrc = datingImageMap[imageKey] || datingImageMap['amber-event-0.png'];
---

