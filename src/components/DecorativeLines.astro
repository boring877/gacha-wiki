---
// Decorative Lines Component
// Reusable 3-line decoration using the design palette colors
export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<div class={`decorative-lines ${className}`}>
  <div class="decorative-lines__line decorative-lines__line--amber"></div>
  <div class="decorative-lines__line decorative-lines__line--teal"></div>
  <div class="decorative-lines__line decorative-lines__line--rose"></div>
</div>

<style>
  /* Decorative Lines Component - Unique Scoped Styles */
  .decorative-lines {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
    position: relative;
  }

  .decorative-lines__line {
    height: 2px;
    border-radius: 1px;
  }

  .decorative-lines__line--amber {
    width: 3rem;
    background: var(--amber-glow);
  }

  .decorative-lines__line--teal {
    width: 2rem;
    background: var(--teal-crystal);
  }

  .decorative-lines__line--rose {
    width: 1rem;
    background: var(--rose-quartz);
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .decorative-lines {
      gap: 0.75rem;
      margin-top: 1.5rem;
    }

    .decorative-lines__line {
      height: 3px; /* Slightly thicker on mobile for better visibility */
    }

    .decorative-lines__line--amber {
      width: 2.5rem;
    }

    .decorative-lines__line--teal {
      width: 1.75rem;
    }

    .decorative-lines__line--rose {
      width: 1rem;
    }
  }

  /* Extra small mobile */
  @media (max-width: 480px) {
    .decorative-lines {
      gap: 0.5rem;
      margin-top: 1rem;
    }

    .decorative-lines__line--amber {
      width: 2rem;
    }

    .decorative-lines__line--teal {
      width: 1.5rem;
    }

    .decorative-lines__line--rose {
      width: 0.75rem;
    }
  }
</style>
