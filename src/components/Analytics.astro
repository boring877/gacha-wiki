// Google Analytics component for GA4 integration
// Temporarily always load GA for testing
const gaId = 'G-LZV7DF140B'; // Hardcoded for testing
const isDev = import.meta.env.DEV;
---

{gaId && <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`} />}
{
  gaId && (
    <script is:inline>{`
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', '${gaId}');
  `}</script>
  )
}
