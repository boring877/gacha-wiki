---
import { SITE } from '../consts';
import packageInfo from '../../package.json';
const version = packageInfo.version;
---

<div id="mobileMenu" class="mobile-menu">
  <div class="mobile-menu-overlay"></div>
  <div class="mobile-menu-drawer">
    <div class="drawer-header">
      <h2 class="drawer-title">Menu</h2>
      <button id="closeMenu" class="close-menu-btn" aria-label="Close Menu">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
          ></path>
        </svg>
      </button>
    </div>

    <div class="drawer-content">
      <nav class="mobile-nav-links">
        <a href="/" class="mobile-nav-link">
          <span>Home</span>
          <svg class="nav-arrow" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"></path>
          </svg>
        </a>
        <a href="/wikis" class="mobile-nav-link">
          <span>Wiki Library</span>
          <svg class="nav-arrow" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"></path>
          </svg>
        </a>
        <a href="/clock" class="mobile-nav-link">
          <span>Gacha Clock</span>
          <svg class="nav-arrow" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"></path>
          </svg>
        </a>
        <a href="/wallpapers" class="mobile-nav-link">
          <span>Waifu Wallpapers</span>
          <svg class="nav-arrow" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"></path>
          </svg>
        </a>
        <a href="/about" class="mobile-nav-link">
          <span>About</span>
          <svg class="nav-arrow" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"></path>
          </svg>
        </a>
      </nav>

      <div class="drawer-divider"></div>

      <div class="mobile-social-section">
        <h3 class="social-title">Social</h3>
        <div class="mobile-social-links">
          <a href={SITE.SOCIAL.GITHUB} class="mobile-social-link" aria-label="Github">
