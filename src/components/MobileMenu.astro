            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M20.222 0c1.406 0 2.54 1.137 2.607 2.475V24l-2.677-2.273-1.47-1.338-1.604-1.398.67 2.205H3.71c-1.402 0-2.54-1.065-2.54-2.476V2.48C1.17 1.142 2.31.003 3.715.003h16.5L20.222 0zm-6.118 5.683h-.03l-.202.2c2.073.6 3.076 1.537 3.076 1.537-1.336-.668-2.54-1.002-3.744-1.137-.87-.135-1.74-.064-2.475 0h-.2c-.47 0-1.47.2-2.81.735-.467.203-.735.336-.735.336s1.002-1.002 3.21-1.537l-.135-.135s-1.672-.064-3.477 1.27c0 0-1.805 3.144-1.805 7.02 0 0 1 1.74 3.743 1.806 0 0 .4-.533.805-1.002-1.54-.4-2.172-1.27-2.172-1.27s.135.095.335.2h.06c.03 0 .044.015.06.03v.006c.016.016.03.03.06.03.33.136.66.27.93.4.466.202 1.065.403 1.8.536.93.135 1.996.2 3.21 0 .6-.135 1.2-.267 1.8-.535.39-.2.87-.4 1.397-.737 0 0-.6.936-2.205 1.337.33.466.795 1 .795 1 2.744-.06 3.81-1.8 3.87-1.726 0-3.87-1.815-7.02-1.815-7.02-1.635-1.214-3.165-1.26-3.435-1.26l.056-.02zm.168 4.413c.703 0 1.27.6 1.27 1.335 0 .74-.57 1.34-1.27 1.34-.7 0-1.27-.6-1.27-1.34.002-.74.573-1.338 1.27-1.335zm-4.64 0c.7 0 1.266.6 1.266 1.335 0 .74-.57 1.34-1.27 1.34-.7 0-1.27-.6-1.27-1.34 0-.74.57-1.335 1.27-1.335z"
              ></path>
            </svg>
            <span>Discord</span>
          </a>
          <a href={SITE.SOCIAL.X} class="mobile-social-link" aria-label="X">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
              ></path>
            </svg>
            <span>X (Twitter)</span>
          </a>
          <a href={SITE.SOCIAL.RUMBLE} class="mobile-social-link" aria-label="Rumble">
            <div
              style="width: 20px; height: 20px; border: 2px solid currentColor; border-radius: 4px; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 12px; color: currentColor;"
            >
              R
            </div>
            <span>Rumble</span>
          </a>
        </div>
      </div>

      <div class="drawer-divider"></div>

      <!-- Version and License Info -->
      <div class="mobile-footer-info">
        <a
          href="https://github.com/boring877/gacha-wiki"
          target="_blank"
          rel="noopener noreferrer"
          class="mobile-version-link"
        >
          <span class="mobile-version-pill">v{version}</span>
        </a>
        <p class="mobile-license-text">
          Open source under <a href="/LICENSE" class="mobile-license-link">MIT License</a>
        </p>
      </div>
    </div>
  </div>
</div>

<style>
  /* Mobile Menu - Slide-in Drawer Style */
  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    height: 100dvh;
    z-index: var(--z-modal);
    opacity: 0;
    visibility: hidden;
    overscroll-behavior: contain;
    /* Remove blue highlights and selections */
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

  .mobile-menu.active {
    opacity: 1;
    visibility: visible;
  }

  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    height: 100dvh;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(8px);
    cursor: pointer;
    z-index: var(--z-modal);
  }

  .mobile-menu-drawer {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    height: 100dvh;
    background: rgba(28, 28, 28, 0.98);
    backdrop-filter: blur(30px);
    border: none;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    z-index: var(--z-modal);
    /* Hide scrollbar */
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE and Edge */
    /* Keep smooth momentum scrolling on touch devices */
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth; /* Smooth scrolling for all modern browsers */
    overscroll-behavior: contain; /* Prevent scroll chaining on all devices */
  }

  /* Hide scrollbar for WebKit browsers */
  .mobile-menu-drawer::-webkit-scrollbar {
    display: none;
  }

  .mobile-menu.active .mobile-menu-drawer {
    /* No transform needed - appears instantly */
  }

  .drawer-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 2rem 2rem 1.5rem 2rem;
    border-bottom: 1px solid rgba(255, 183, 77, 0.1);
    min-height: 90px;
  }

  .drawer-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--amber-glow);
    margin: 0;
  }

  .close-menu-btn {
    background: rgba(255, 183, 77, 0.1);
    border: 1px solid rgba(255, 183, 77, 0.3);
    border-radius: 8px;
    color: var(--amber-glow);
    cursor: pointer;
    padding: 0.5rem;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    touch-action: manipulation;
    /* Remove blue highlights */
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    outline: none;
  }

  .drawer-content {
    flex: 1;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center; /* Center content for full-screen experience */
  }

  .mobile-nav-links {
    display: grid;
    grid-template-columns: 1fr; /* Default: single column for mobile portrait */
    gap: 1rem;
    margin-bottom: 3rem;
    max-width: 800px; /* Larger max width for better tablet experience */
    margin-left: auto;
    margin-right: auto;
    width: 100%;
    padding: 0 1rem; /* Add horizontal padding */
  }

  .mobile-nav-link {
    color: var(--text-inverse);
    text-decoration: none;
    font-size: 1rem; /* More reasonable font size */
    font-weight: 500;
    padding: 0.8rem 1.2rem; /* More compact padding */
    border-radius: 12px; /* Smaller border radius */
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    display: flex;
    align-items: center;
    gap: 0.8rem; /* Less gap between icon and text */
    touch-action: manipulation;
    position: relative;
    min-height: 48px; /* Smaller but still touch-friendly */
    /* Remove blue highlights */
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    outline: none;
  }

  .mobile-nav-link span {
    flex: 1;
  }

  .nav-arrow {
    width: 16px;
    height: 16px;
    opacity: 0.4;
    margin-left: auto;
  }

  .mobile-nav-link svg:first-child {
    width: 20px;
    height: 20px;
    opacity: 0.7;
  }

  .drawer-divider {
    height: 1px;
    background: linear-gradient(to right, transparent, rgba(255, 183, 77, 0.2), transparent);
    margin: 1rem 0 1.5rem 0;
  }

  .mobile-social-section {
    margin-top: auto;
    max-width: 800px; /* Match navigation section */
    margin-left: auto;
    margin-right: auto;
    width: 100%;
    padding: 0 1rem; /* Match navigation section padding */
  }

  .social-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 0.9rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 1rem 0;
  }

  .mobile-social-links {
    display: grid;
    grid-template-columns: 1fr; /* Default: single column */
    gap: 0.5rem;
  }

  .mobile-social-link {
    color: var(--text-inverse);
    text-decoration: none;
    padding: 0.875rem 1rem;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.9rem;
    font-weight: 500;
    touch-action: manipulation;
    /* Remove blue highlights */
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    outline: none;
  }

  .mobile-social-link svg {
    width: 18px;
    height: 18px;
    opacity: 0.7;
  }

  /* Mobile Footer Info */
  .mobile-footer-info {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .mobile-version-link {
    text-decoration: none;
  }

  .mobile-version-pill {
    background: var(--amber-glow);
    padding: 0.3rem 0.6rem;
    border-radius: 6px;
    font-family: 'Space Grotesk', sans-serif;
    font-size: 0.7rem;
    font-weight: 600;
    color: var(--bg-dark);
    display: inline-block;
  }

  .mobile-license-text {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.65rem;
    text-align: center;
    margin: 0;
    line-height: 1.3;
  }

  .mobile-license-link {
    color: var(--amber-glow);
    text-decoration: none;
  }

  /* Mobile Landscape - 2 columns for better use of horizontal space */
  @media screen and (max-height: 768px) and (orientation: landscape) {
    .mobile-nav-links {
      grid-template-columns: 1fr 1fr; /* 2 columns in landscape */
      gap: 1rem;
      max-width: 700px;
      padding: 0 1.5rem;
    }

    .drawer-content {
      padding: 1rem 1.5rem;
    }

    .mobile-nav-link {
      padding: 0.7rem 1rem;
      font-size: 0.95rem;
      min-height: 44px;
    }

    .mobile-social-section {
      padding: 0 1.5rem; /* Match navigation padding in landscape */
    }

    .mobile-social-links {
      grid-template-columns: 1fr 1fr; /* 2 columns in landscape */
      gap: 0.5rem;
    }
  }

  /* Tablet Portrait - 2 columns */
  @media screen and (min-width: 768px) and (max-width: 1024px) and (orientation: portrait) {
    .mobile-nav-links {
      grid-template-columns: 1fr 1fr; /* 2 columns on tablet portrait */
      gap: 1.2rem;
      max-width: 600px;
      padding: 0 1.5rem;
    }

    .mobile-nav-link {
      padding: 0.9rem 1.3rem;
      font-size: 1rem;
      min-height: 48px;
    }
  }

  /* Tablet Landscape - 2 columns with more spacing */
  @media screen and (min-width: 768px) and (max-width: 1024px) and (orientation: landscape) {
    .mobile-nav-links {
      grid-template-columns: 1fr 1fr; /* 2 columns on tablet landscape */
      gap: 1.5rem;
      max-width: 700px;
      padding: 0 2rem;
    }

    .drawer-content {
      padding: 1.5rem 2rem;
    }

    .mobile-nav-link {
      padding: 0.8rem 1.2rem;
      font-size: 1rem;
      min-height: 46px;
    }

    .mobile-social-section {
      padding: 0 2rem; /* Match navigation padding in tablet landscape */
    }

    .mobile-social-links {
      grid-template-columns: 1fr 1fr; /* 2 columns in tablet landscape */
      gap: 0.75rem;
    }
  }

  /* Small Mobile adjustments */
  @media screen and (max-width: 480px) {
    .mobile-nav-links {
      grid-template-columns: 1fr; /* Single column on small screens */
      padding: 0 1rem;
      gap: 0.8rem;
    }

    .drawer-header {
      padding: 1.5rem 1.5rem 1rem 1.5rem;
    }

    .drawer-title {
      font-size: 1.3rem;
    }

    .drawer-content {
      padding: 1.5rem;
    }

    .mobile-nav-link {
      padding: 1.2rem 1.5rem;
      font-size: 1rem;
      min-height: 50px;
    }

    .mobile-social-link {
      padding: 0.8rem 1rem;
      font-size: 0.9rem;
    }
  }

  /* Short screens */
  @media screen and (max-height: 600px) {
    .drawer-header {
      min-height: 60px;
      padding: 1rem 1.5rem 0.75rem 1.5rem;
    }

    .drawer-title {
      font-size: 1.3rem;
    }

    .drawer-content {
      padding: 1rem 1.5rem 1.5rem 1.5rem;
    }

    .mobile-nav-links {
      gap: 0.4rem;
      margin-bottom: 1.5rem;
    }

    .mobile-nav-link {
      padding: 0.75rem 1rem;
    }

    .mobile-social-links {
      gap: 0.4rem;
    }

    .mobile-social-link {
      padding: 0.6rem 0.875rem;
    }
  }

  /* Very short screens (landscape phones) */
  @media screen and (max-height: 450px) {
    .drawer-header {
      min-height: 50px;
      padding: 0.75rem 1.25rem 0.5rem 1.25rem;
    }

    .drawer-title {
      font-size: 1.2rem;
    }

    .drawer-content {
      padding: 0.75rem 1.25rem 1.25rem 1.25rem;
    }

    .mobile-nav-links {
      gap: 0.3rem;
      margin-bottom: 1rem;
    }

    .mobile-nav-link {
      padding: 0.6rem 0.875rem;
      font-size: 0.9rem;
    }

    .mobile-social-links {
      gap: 0.3rem;
    }

    .mobile-social-link {
      padding: 0.5rem 0.75rem;
      font-size: 0.8rem;
    }

    .drawer-divider {
      margin: 0.75rem 0 1rem 0;
    }
  }
</style>
