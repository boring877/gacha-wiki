<style>
    /* Colors are available via layout's index.css import */

    .mobile-menu {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: rgba(28, 28, 28, 0.98);
        backdrop-filter: blur(20px);
        z-index: 999;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease, visibility 0.3s ease;
        will-change: opacity, visibility;
        overscroll-behavior: contain;
    }

    .mobile-menu.active {
        display: flex;
        opacity: 1;
        visibility: visible;
    }

    .mobile-menu-content {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        align-items: center;
        position: relative;
    }

    .close-menu-btn {
        position: absolute;
        top: -3rem;
        right: 0;
        background: transparent;
        border: none;
        color: var(--amber-glow);
        cursor: pointer;
        padding: 0.5rem;
        border-radius: 0.5rem;
        transition: background-color 0.2s ease, transform 0.2s ease;
        min-height: 44px;
        min-width: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .close-menu-btn:hover {
        background: var(--rose-quartz);
        transform: scale(1.1);
    }

    .mobile-nav-links {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        align-items: center;
    }

    .mobile-social-links {
        display: flex;
        flex-direction: row;
        gap: 1.5rem;
        align-items: center;
        justify-content: center;
        margin-top: 1rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(255, 183, 77, 0.3);
    }

    .mobile-nav-link {
        color: var(--amber-glow);
        text-decoration: none;
        font-size: 1.5rem;
        font-weight: 600;
        padding: 1rem 2rem;
        border-radius: 12px;
        transition: background-color 0.2s ease, color 0.2s ease, transform 0.2s ease;
        min-height: 48px;
        min-width: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        touch-action: manipulation;
        will-change: transform, background-color;
    }

    .mobile-social-link {
        color: var(--amber-glow);
        text-decoration: none;
        padding: 1rem;
        border-radius: 12px;
        transition: background-color 0.2s ease, color 0.2s ease, transform 0.2s ease;
        min-height: 48px;
        min-width: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        touch-action: manipulation;
        will-change: transform, background-color;
    }

    .mobile-social-link svg {
        transition: transform 0.2s ease;
    }

    @media (hover: hover) and (pointer: fine) {
        .mobile-nav-link:hover {
            background: var(--rose-quartz);
            color: var(--text-inverse);
            transform: translateY(-2px);
        }

        .mobile-social-link:hover {
            background: var(--rose-quartz);
            color: var(--text-inverse);
            transform: translateY(-2px);
        }

        .mobile-social-link:hover svg {
            transform: scale(1.1);
        }
    }
</style>
