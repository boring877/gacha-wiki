        </div>
      </div>

      <div class="drawer-divider"></div>

      <!-- Version and License Info -->
      <div class="mobile-footer-info">
        <a
          href="https://github.com/boring877/gacha-wiki"
          target="_blank"
          rel="noopener noreferrer"
          class="mobile-version-link"
        >
          <span class="mobile-version-pill">v{version}</span>
        </a>
        <p class="mobile-license-text">
          Open source under <a href="/LICENSE" class="mobile-license-link">MIT License</a>
        </p>
      </div>
    </div>
  </div>
</div>

<style>
  /* Mobile Menu - Slide-in Drawer Style */
  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    height: 100dvh;
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.3s ease,
      visibility 0.3s ease;
    overscroll-behavior: contain;
    /* Remove blue highlights and selections */
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

  .mobile-menu.active {
    opacity: 1;
    visibility: visible;
  }

  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    height: 100dvh;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(8px);
    cursor: pointer;
    transition: background 0.3s ease;
    z-index: 9999;
  }

  .mobile-menu-drawer {
    position: fixed;
    top: 0;
    left: -320px;
    width: 320px;
    height: 100vh;
    height: 100dvh;
    background: rgba(28, 28, 28, 0.98);
    backdrop-filter: blur(30px);
    border-right: 1px solid rgba(255, 183, 77, 0.2);
    transition: left 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    box-shadow: 4px 0 30px rgba(0, 0, 0, 0.3);
    z-index: 10000;
    /* Ensure it's always on top and visible */
    transform: translateZ(0);
  }

  .mobile-menu.active .mobile-menu-drawer {
    left: 0;
  }

  .drawer-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 1.5rem 1rem 1.5rem;
    border-bottom: 1px solid rgba(255, 183, 77, 0.1);
    min-height: 80px;
  }

  .drawer-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--amber-glow);
    margin: 0;
  }

  .close-menu-btn {
    background: rgba(255, 183, 77, 0.1);
    border: 1px solid rgba(255, 183, 77, 0.3);
    border-radius: 8px;
    color: var(--amber-glow);
    cursor: pointer;
    padding: 0.5rem;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    touch-action: manipulation;
    /* Remove blue highlights */
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    outline: none;
  }

  .close-menu-btn:hover,
  .close-menu-btn:active {
    background: var(--amber-glow);
    color: var(--text-inverse);
    transform: scale(1.05);
  }

  .drawer-content {
    flex: 1;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
  }

  .mobile-nav-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .mobile-nav-link {
    color: var(--text-inverse);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    padding: 1rem 1.25rem;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    touch-action: manipulation;
    position: relative;
    /* Remove blue highlights */
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    outline: none;
  }

  .mobile-nav-link span {
    flex: 1;
  }

  .nav-arrow {
    width: 16px;
    height: 16px;
    opacity: 0.4;
    transition: all 0.3s ease;
    margin-left: auto;
  }

  .mobile-nav-link:hover,
  .mobile-nav-link:active {
    background: rgba(255, 183, 77, 0.1);
    border-color: rgba(255, 183, 77, 0.3);
    color: var(--amber-glow);
    transform: translateX(8px);
  }

  .mobile-nav-link:hover .nav-arrow {
    opacity: 1;
    transform: translateX(4px);
  }

  .mobile-nav-link svg:first-child {
    width: 20px;
    height: 20px;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .mobile-nav-link:hover svg:first-child {
    opacity: 1;
  }

  .drawer-divider {
    height: 1px;
    background: linear-gradient(to right, transparent, rgba(255, 183, 77, 0.2), transparent);
    margin: 1rem 0 1.5rem 0;
  }

  .mobile-social-section {
    margin-top: auto;
  }

  .social-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 0.9rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 1rem 0;
  }

  .mobile-social-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .mobile-social-link {
    color: var(--text-inverse);
    text-decoration: none;
    padding: 0.875rem 1rem;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.9rem;
    font-weight: 500;
    touch-action: manipulation;
    /* Remove blue highlights */
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    outline: none;
  }

  .mobile-social-link:hover,
  .mobile-social-link:active {
    background: rgba(255, 183, 77, 0.08);
    border-color: rgba(255, 183, 77, 0.2);
    color: var(--amber-glow);
    transform: translateX(4px);
  }

  .mobile-social-link svg {
    width: 18px;
    height: 18px;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .mobile-social-link:hover svg {
    opacity: 1;
  }

  /* Mobile Footer Info */
  .mobile-footer-info {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .mobile-version-link {
    text-decoration: none;
  }

  .mobile-version-pill {
    background: var(--amber-glow);
    padding: 0.3rem 0.6rem;
    border-radius: 6px;
    font-family: 'Space Grotesk', sans-serif;
    font-size: 0.7rem;
    font-weight: 600;
    color: var(--bg-dark);
    transition: all 0.2s ease;
    display: inline-block;
  }

  .mobile-version-pill:hover {
    background: rgba(255, 183, 77, 0.9);
    transform: translateY(-1px);
  }

  .mobile-license-text {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.65rem;
    text-align: center;
    margin: 0;
    line-height: 1.3;
  }

  .mobile-license-link {
    color: var(--amber-glow);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .mobile-license-link:hover {
    color: rgba(255, 183, 77, 0.8);
  }

  /* Mobile Responsive */
  @media screen and (max-width: 380px) {
    .mobile-menu-drawer {
      width: 280px;
      left: -280px;
    }

    .drawer-header {
      padding: 1.25rem 1.25rem 1rem 1.25rem;
    }

    .drawer-title {
      font-size: 1.3rem;
    }

    .drawer-content {
      padding: 1.25rem;
    }

    .mobile-nav-link {
      padding: 0.875rem 1rem;
      font-size: 0.95rem;
    }

    .mobile-social-link {
      padding: 0.75rem 0.875rem;
      font-size: 0.85rem;
    }
  }

  /* Short screens */
  @media screen and (max-height: 600px) {
    .drawer-header {
      min-height: 60px;
      padding: 1rem 1.5rem 0.75rem 1.5rem;
    }

    .drawer-title {
      font-size: 1.3rem;
    }

    .drawer-content {
      padding: 1rem 1.5rem 1.5rem 1.5rem;
    }

    .mobile-nav-links {
      gap: 0.4rem;
      margin-bottom: 1.5rem;
    }

    .mobile-nav-link {
      padding: 0.75rem 1rem;
    }

    .mobile-social-links {
      gap: 0.4rem;
    }

    .mobile-social-link {
      padding: 0.6rem 0.875rem;
    }
  }

  /* Very short screens (landscape phones) */
  @media screen and (max-height: 450px) {
    .drawer-header {
      min-height: 50px;
      padding: 0.75rem 1.25rem 0.5rem 1.25rem;
    }

    .drawer-title {
      font-size: 1.2rem;
    }

    .drawer-content {
      padding: 0.75rem 1.25rem 1.25rem 1.25rem;
    }

    .mobile-nav-links {
      gap: 0.3rem;
      margin-bottom: 1rem;
    }

    .mobile-nav-link {
      padding: 0.6rem 0.875rem;
      font-size: 0.9rem;
    }

    .mobile-social-links {
      gap: 0.3rem;
    }

    .mobile-social-link {
      padding: 0.5rem 0.75rem;
      font-size: 0.8rem;
    }

    .drawer-divider {
      margin: 0.75rem 0 1rem 0;
    }
  }
</style>
