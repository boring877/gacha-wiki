<style>
	@import '/src/styles/colors.css';
	
	/* Header Variables */
	.header {
		--header-height: 72px;
		--mobile-header-height: 64px;
	}
	
	/* Header Container */
	.header {
		background: rgba(28, 28, 28, 0.95);
		backdrop-filter: blur(12px);
		border-bottom: 1px solid var(--amber-glow);
		box-shadow: 0 4px 20px rgba(255, 183, 77, 0.2);
		padding: 1rem 0;
		position: sticky;
		top: 0;
		z-index: 100;
		min-height: var(--header-height);
	}

	.nav-container {
		max-width: 72rem;
		margin: 0 auto;
	}

	.header-content {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 0 2rem;
		min-height: 40px;
	}

	/* Logo */
	.logo {
		display: flex;
		align-items: center;
		flex-shrink: 0;
	}

	.logo-link {
		color: var(--amber-glow);
		text-decoration: none;
		padding: 0.5rem 1rem;
		border-radius: 0.75rem;
		font-size: 1.5rem;
		transition: all 0.2s ease;
		display: flex;
		align-items: center;
	}

	/* Desktop Navigation */
	.desktop-nav {
		display: flex;
		align-items: center;
		gap: 1.5rem;
		margin: 0 auto;
	}

	.nav-link {
		color: var(--amber-glow);
		text-decoration: none;
		padding: 0.5rem 1rem;
		border-radius: 0.75rem;
		font-weight: 500;
		font-size: 1.1rem;
		transition: all 0.2s ease;
	}

	/* Desktop Social Links */
	.desktop-social {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.social-link {
		color: var(--amber-glow);
		padding: 0.5rem;
		border-radius: 0.75rem;
		transition: all 0.2s ease;
		display: flex;
		align-items: center;
		justify-content: center;
		min-width: 44px;
		min-height: 44px;
	}	/* Mobile Menu Button */
	.mobile-menu-btn {
		display: none;
		background: transparent;
		color: var(--amber-glow);
		border: 2px solid var(--amber-glow);
		padding: 0.75rem 1.25rem;
		border-radius: 8px;
		font-weight: 600;
		font-size: 1rem;
		cursor: pointer;
		transition: all 0.3s ease;
		z-index: 1001;
		position: relative;
		min-height: 44px;
		min-width: 80px;
	}

	.mobile-menu-btn:hover {
		background: var(--amber-glow);
		color: #1c1c1c;
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(255, 183, 77, 0.3);
	}

	.mobile-menu-btn.active {
		background: var(--rose-quartz);
		color: #1c1c1c;
		border-color: var(--rose-quartz);
	}	/* Mobile Menu Overlay - Debug version */
	.mobile-menu {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100vh;
		background: linear-gradient(135deg, rgba(28, 28, 28, 0.98) 0%, rgba(42, 42, 42, 0.98) 100%);
		backdrop-filter: blur(20px);
		border: 1px solid rgba(255, 183, 77, 0.2);
		z-index: 1000;
		display: none;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 1.5rem;
		padding: 2rem;
		opacity: 0;
		visibility: hidden;
		transition: all 0.3s ease-out;
		transform: translateY(-20px);
	}
	.mobile-menu.active {
		display: flex !important;
		opacity: 1 !important;
		visibility: visible !important;
		transform: translateY(0) !important;
	}

	/* Mobile Close Button */
	.mobile-close-btn {
		position: absolute;
		top: 2rem;
		right: 2rem;
		background: transparent;
		border: 2px solid var(--amber-glow);
		color: var(--amber-glow);
		border-radius: 50%;
		width: 50px;
		height: 50px;
		display: flex;
		align-items: center;
		justify-content: center;
		cursor: pointer;
		transition: all 0.3s ease;
		z-index: 1001;
	}
	.mobile-close-btn:hover {
		background: var(--amber-glow);
		color: #1c1c1c;
		transform: rotate(90deg);
	}

	/* Mobile Menu Content Container */
	.mobile-menu-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1.5rem;
		max-width: 320px;
		width: 100%;	}
	
	.mobile-nav-link {
		color: var(--amber-glow);
		text-decoration: none;
		font-size: 1.5rem;
		font-weight: 600;
		padding: 1rem 2rem;
		border: 2px solid var(--amber-glow);
		border-radius: 12px;
		background: rgba(255, 183, 77, 0.1);
		transition: all 0.3s ease;
		min-width: 280px;
		text-align: center;
		backdrop-filter: blur(10px);
		position: relative;
		overflow: hidden;
	}

	.mobile-nav-link::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 183, 77, 0.3), transparent);
		transition: left 0.5s;
	}

	.mobile-nav-link:hover::before {
		left: 100%;
	}

	.mobile-social {
		display: flex;
		gap: 1.5rem;
		margin-top: 2rem;
		flex-wrap: wrap;
		justify-content: center;
	}

	.mobile-social .social-link {
		border: 2px solid var(--amber-glow);
		border-radius: 50%;
		width: 60px;
		height: 60px;
		background: rgba(255, 183, 77, 0.1);
		backdrop-filter: blur(10px);
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
	}

	.mobile-social .social-link::before {
		content: '';
		position: absolute;
		top: 50%;
		left: 50%;
		width: 0;
		height: 0;
		background: var(--amber-glow);
		border-radius: 50%;
		transition: all 0.3s ease;
		transform: translate(-50%, -50%);
		z-index: -1;
	}

	.mobile-social .social-link:hover::before {
		width: 100%;
		height: 100%;
	}

	/* Hover Effects */
	@media (hover: hover) and (pointer: fine) {
		.logo-link:hover,
		.nav-link:hover,
		.social-link:hover {
			background: var(--rose-quartz);
			color: var(--text-inverse);
			transform: translateY(-2px);
		}
		.mobile-nav-link:hover,
		.mobile-social .social-link:hover {
			background: var(--amber-glow);
			color: #1c1c1c;
			transform: translateY(-2px);
			box-shadow: 0 8px 20px rgba(255, 183, 77, 0.3);
		}
	}
	/* Mobile Responsive */
	@media (max-width: 768px) {
		.header {
			min-height: var(--mobile-header-height);
			padding: 0.75rem 0;
		}

		.header-content {
			padding: 0 1rem;
			min-height: 48px;
		}

		.logo-link {
			font-size: 1.25rem;
			padding: 0.75rem 1rem;
		}

		/* Hide desktop nav and social on mobile */
		.desktop-nav,
		.desktop-social {
			display: none;
		}

		.mobile-menu-btn {
			display: block;
		}
	}
	@media (max-width: 480px) {
		.header {
			padding: 0.5rem 0;
		}

		.header-content {
			padding: 0 0.75rem;
			min-height: 44px;
		}

		.logo-link {
			font-size: 1.1rem;
			padding: 0.5rem 0.75rem;
		}

		.mobile-menu-btn {
			padding: 0.5rem 1rem;
			font-size: 0.9rem;
			min-width: 70px;
		}

		.mobile-nav-link {
			font-size: 1.25rem;
			padding: 0.875rem 1.5rem;
			min-width: 260px;
		}

		.mobile-social .social-link {
			width: 50px;
			height: 50px;
		}
	}
	/* Focus States */
	.logo-link:focus-visible,
	.nav-link:focus-visible,
	.social-link:focus-visible,
	.mobile-nav-link:focus-visible,
	.mobile-menu-btn:focus-visible {
		outline: 2px solid var(--amber-glow);
		outline-offset: 2px;
	}

	/* Reduced Motion */
	@media (prefers-reduced-motion: reduce) {
		* {
			transition: none !important;
			animation: none !important;
		}
	}
</style>

