---
// Zone Nova Quick Navigation Component - Main Wrapper
import ZoneNovaQuickNavDesktop from './ZoneNovaQuickNavDesktop.astro';
import ZoneNovaQuickNavMobile from './ZoneNovaQuickNavMobile.astro';

export interface Props {
	currentPath?: string;
}

const { currentPath = '' } = Astro.props;

// Check if we're on the main Zone Nova landing page
const isLandingPage = currentPath === '/guides/zone-nova/' || currentPath === '/guides/zone-nova';
---

<!-- Zone Nova Quick Navigation - Responsive Wrapper -->
{!isLandingPage && <ZoneNovaQuickNavDesktop currentPath={currentPath} />}
{!isLandingPage && <ZoneNovaQuickNavMobile currentPath={currentPath} />}