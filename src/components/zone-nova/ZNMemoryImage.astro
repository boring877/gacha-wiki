  'Yuiscard.jpg': YuiCardImg,
};

interface Props {
  imageName: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
  format?: 'webp' | 'avif' | 'jpg' | 'png';
  quality?: number;
}

const {
  imageName,
  alt,
  width = 200,
  height = 300,
  class: className = '',
  loading = 'lazy',
  format = 'webp',
  quality = 85,
} = Astro.props;

// Get the memory image from the imported assets
// Handle both with and without extension
let imageKey = imageName;
if (!imageKey.includes('.')) {
  imageKey = `${imageKey}.jpg`;
}
const imageSrc = memoryImageMap[imageKey] || memoryImageMap['Afroditecard.jpg'];
---

<Image
  src={imageSrc}
  alt={alt}
  width={width}
  height={height}
  class={className}
  loading={loading}
  format={format}
  quality={quality}
/>
