// Create a mapping of character slugs to their full data
const CHARACTER_DATA_MAP = {
  'afrodite': afroditeData,
  'anubis': anubisData,
  'apollo': apolloData,
  'artemis': artemisData,
  'arthur': arthurData,
  'athena': athenaData,
  'bastet': bastetData,
