---
export interface Props {
  items: Array<{
    name: string;
    href?: string;
  }>;
}

const { items } = Astro.props;
---

<nav class="breadcrumb" aria-label="Breadcrumb">
  <ol class="breadcrumb-list">
    {
      items.map((item, index) => (
        <li class="breadcrumb-item">
          {item.href ? (
            <a href={item.href} class="breadcrumb-link">
              {item.name}
            </a>
          ) : (
            <span class="breadcrumb-current" aria-current="page">
              {item.name}
            </span>
          )}
          {index < items.length - 1 && (
            <span class="breadcrumb-separator" aria-hidden="true">
              â€º
            </span>
          )}
        </li>
      ))
    }
  </ol>
</nav>

<style>
  .breadcrumb {
    margin-bottom: 2rem;
    /* Align with parent container */
    max-width: 75rem;
    margin-left: auto;
    margin-right: auto;
    padding-left: 2rem;
    padding-right: 2rem;
  }

  .breadcrumb-list {
    display: flex;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
    color: var(--text-secondary);
    font-size: 0.9rem;
    flex-wrap: wrap;
    align-items: center;
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .breadcrumb-link {
    color: #ffd54f;
    text-decoration: none;
    opacity: 0.9;
  }

  .breadcrumb-current {
    color: #ffffff;
    font-weight: 600;
  }

  .breadcrumb-separator {
    color: #b0b0b0;
    user-select: none;
    opacity: 0.7;
  }

  /* Mobile responsiveness - match Zone Nova layout breakpoints */
  @media (max-width: 768px) {
    .breadcrumb {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }

  @media (max-width: 480px) {
    .breadcrumb {
      padding-left: 0.5rem;
      padding-right: 0.5rem;
    }

    .breadcrumb-list {
      font-size: 0.8rem;
      gap: 0.3rem;
    }

    .breadcrumb-item {
      gap: 0.3rem;
    }
  }
</style>
