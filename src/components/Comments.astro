---
export interface Props {
  category?: string;
  categoryId?: string;
  mapping?: 'url' | 'pathname' | 'title';
  theme?:
    | 'light'
    | 'dark'
    | 'preferred_color_scheme'
    | 'transparent_dark'
    | 'noborder_light'
    | 'noborder_dark';
  lang?: string;
  loading?: 'lazy' | 'eager';
  reactionsEnabled?: boolean;
  emitMetadata?: boolean;
}

const {
  category = 'General',
  categoryId = 'DIC_kwDOOx85584CuX53',
  mapping = 'pathname',
  theme = 'preferred_color_scheme',
  lang = 'en',
  loading = 'lazy',
  reactionsEnabled = true,
  emitMetadata = false,
} = Astro.props;

const repo = 'boring877/gacha-wiki';
const repoId = 'R_kgDOOx855w';
---

<section class="comments-section">
  <div class="comments-container">
    <h2 class="comments-title">Community Discussion</h2>
    <p class="comments-subtitle">
      Share your thoughts, strategies, and ask questions below. Sign in with GitHub to join the
      conversation.
    </p>

    <div class="giscus-wrapper" id="giscus-container">
      <script
        src="https://giscus.app/client.js"
        data-repo={repo}
        data-repo-id={repoId}
        data-category={category}
        data-category-id={categoryId}
        data-mapping={mapping}
        data-strict="0"
        data-reactions-enabled={reactionsEnabled ? '1' : '0'}
        data-emit-metadata={emitMetadata ? '1' : '0'}
        data-input-position="top"
        data-theme={theme}
        data-lang={lang}
        data-loading={loading}
        crossorigin="anonymous"
        async
        onerror="handleGiscusError()"></script>

      <div class="giscus-fallback" id="giscus-fallback" style="display: none;">
        <div class="fallback-content">
          <h3>Comments Unavailable</h3>
          <p>
            Comments are temporarily unavailable. You can still participate by visiting our <a
              href={`https://github.com/${repo}/discussions`}
              target="_blank"
              rel="noopener noreferrer">GitHub Discussions</a
            > directly.
          </p>
          <button onclick="retryGiscus()" class="retry-button">Try Again</button>
        </div>
      </div>
    </div>

    <script>
      function handleGiscusError() {
        console.warn('Giscus failed to load, showing fallback');
        setTimeout(() => {
          const container = document.getElementById('giscus-container');
          const fallback = document.getElementById('giscus-fallback');
          if (container && fallback && !container.querySelector('.giscus')) {
            fallback.style.display = 'block';
          }
        }, 5000);
      }

      function retryGiscus() {
        const fallback = document.getElementById('giscus-fallback');
        if (fallback) {
          fallback.style.display = 'none';
        }
        location.reload();
      }

      // Check if Giscus loaded successfully after 10 seconds
      setTimeout(() => {
        const container = document.getElementById('giscus-container');
        const fallback = document.getElementById('giscus-fallback');
        if (container && fallback && !container.querySelector('.giscus')) {
          console.warn('Giscus did not load within 10 seconds, showing fallback');
          fallback.style.display = 'block';
        }
      }, 10000);
    </script>
  </div>
</section>

<style>
  .comments-section {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border, #e2e8f0);
  }

  .comments-container {
    max-width: 100%;
    margin: 0 auto;
  }

  .comments-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text-primary, #1a202c);
    margin-bottom: 0.5rem;
  }

  .comments-subtitle {
    font-size: 0.875rem;
    color: var(--color-text-secondary, #4a5568);
    margin-bottom: 1.5rem;
    line-height: 1.5;
  }

  .giscus-wrapper {
    min-height: 200px;
  }

  .giscus-fallback {
    padding: 2rem;
    text-align: center;
    background: var(--color-bg-secondary, #f7fafc);
    border: 2px dashed var(--color-border, #e2e8f0);
    border-radius: 8px;
    margin: 1rem 0;
  }

  .fallback-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary, #2d3748);
    margin-bottom: 0.75rem;
  }

  .fallback-content p {
    color: var(--color-text-secondary, #4a5568);
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .fallback-content a {
    color: var(--color-primary, #3182ce);
    text-decoration: underline;
    font-weight: 500;
  }

  .fallback-content a:hover {
    color: var(--color-primary-dark, #2c5aa0);
  }

  .retry-button {
    background: var(--color-primary, #3182ce);
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    cursor: pointer;
    font-size: 0.875rem;
    font-weight: 500;
    transition: background-color 0.2s;
  }

  .retry-button:hover {
    background: var(--color-primary-dark, #2c5aa0);
  }

  @media (max-width: 768px) {
    .comments-section {
      margin-top: 3rem;
      padding-top: 1.5rem;
    }

    .comments-title {
      font-size: 1.25rem;
    }

    .comments-subtitle {
      font-size: 0.8125rem;
    }
  }
</style>
