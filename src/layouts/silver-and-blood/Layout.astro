      rel="preload"
      href="/images/games/silver-and-blood/main-images/silver-and-blood-main.jpg"
      as="image"
    />

    <!-- Preload critical CSS files for instant page transitions -->
    <link
      rel="preload"
      href="/src/styles/games/silver-and-blood/sab-character-comparison-v2.css"
      as="style"
    />
    <link
      rel="preload"
      href="/src/styles/games/silver-and-blood/sab-character-rankings.css"
      as="style"
    />
    <link rel="preload" href="/src/styles/games/silver-and-blood/sab-tier-list.css" as="style" />

    <slot name="head" />
  </head>
  <body class="sab-body">
    <CustomScrollbar />
    <!-- Background layers for visual depth similar to landing page -->
    <div class="bg-layer bg-primary"></div>
    <div class="bg-layer bg-accent-1"></div>
    <div class="bg-layer bg-accent-2"></div>
    <div class="bg-layer bg-accent-3"></div>

    <div class="sab-content">
      <Header />
      <GameNavigationHeader currentPath={Astro.url.pathname} gameKey="silver-and-blood" />
      <MobileMenu />

      <div class="sab-container">
        <main class="sab-main">
          <!-- Silver and Blood Hero Section -->
          {
            (heroVideo || heroImage) && gameTitle && (
              <section class="hero-section">
                {/* Hero Media Container */}
                <div class="hero-image-wrapper">
                  <div class="hero-image-container">
                    {heroImage && (
                      <Image
                        src={heroImage}
                        alt={gameTitle}
                        class="hero-image"
                        width={1200}
                        height={400}
                        loading="eager"
                        decoding="async"
                      />
                    )}
                    {/* Overlay Gradient */}
                    <div class="hero-overlay" />
                  </div>
                </div>

                {/* Game Title */}
                <h1 class="hero-title">{gameTitle}</h1>
                {/* Decorative Elements */}
                <DecorativeLines />
              </section>
            )
          }
          <!-- Title Only Section (when no hero media) -->
          {
            !heroVideo && !heroImage && gameTitle && (
              <section class="title-only-section">
                <h1 class="title-only-heading">{gameTitle}</h1>

                <DecorativeLines />
              </section>
            )
          }

          <!-- Content Area -->
          <div class="content-area">
            <slot />
          </div>
        </main>
      </div>

      <Footer />
    </div>
  </body>
</html>
