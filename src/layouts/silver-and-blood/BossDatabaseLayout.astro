---
import SilverAndBloodLayout from './Layout.astro';

export interface Props {
  title: string;
  description: string;
  gameTitle: string;
}

const { title, description, gameTitle } = Astro.props;
---

<SilverAndBloodLayout title={title} description={description} gameTitle={gameTitle}>
  <main class="boss-database-main">
    <slot />
  </main>
</SilverAndBloodLayout>

<style>
  .boss-database-main {
    min-height: 100vh;
    padding: 2rem 0;
  }

  @media (max-width: 768px) {
    .boss-database-main {
      padding: 1rem 0;
    }
  }
</style>
