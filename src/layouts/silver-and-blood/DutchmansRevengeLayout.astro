---
import SABBaseHead from '../../components/silver-and-blood/SABBaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import MobileMenu from '../../components/MobileMenu.astro';
import GameNavigationHeader from '../../components/GameNavigationHeader.astro';
import DecorativeLines from '../../components/DecorativeLines.astro';
import GameSEO from '../../components/GameSEO.astro';
import CustomScrollbar from '../../components/CustomScrollbar.astro';
import Breadcrumb from '../../components/silver-and-blood/Breadcrumb.astro';

// Import only essential CSS files
import '../../styles/games/silver-and-blood/sab-colors.css';
import '../../styles/global.css';
import '../../styles/typography.css';
import '../../styles/games/silver-and-blood/sab-layout.css';
import '../../styles/games/silver-and-blood/sab-badge-colours.css';
import '../../styles/games/silver-and-blood/sab-dutchmans-revenge.css';

export interface Props {
  title: string;
  description?: string;
  gameTitle?: string;
  data: any;
}

const { title, description, gameTitle, data } = Astro.props;
const { meta, intro, gameplayMechanics, chapterGuides, events } = data;
---

<html lang="en">
  <head>
    <SABBaseHead title={title} description={description || ''} />
    <GameSEO gameKey="silver-and-blood" title={title} description={description} />
  </head>
  <body class="sab-body">
    <CustomScrollbar />
    <!-- Background layers for visual depth -->
    <div class="bg-layer sab-bg-primary"></div>
    <div class="bg-layer sab-bg-accent-1"></div>
    <div class="bg-layer sab-bg-accent-2"></div>
    <div class="bg-layer sab-bg-accent-3"></div>

    <div class="sab-content">
      <Header />
      <GameNavigationHeader currentPath={Astro.url.pathname} gameKey="silver-and-blood" />
      <MobileMenu />

      <div class="sab-container">
        <main class="silver-and-blood-main" id="main-content">
          <!-- Title Section -->
          {
            gameTitle && (
              <section class="title-only-section">
                <h1 class="title-only-heading">{gameTitle}</h1>
                <DecorativeLines />
              </section>
            )
          }

          <!-- Breadcrumb Navigation -->
          <Breadcrumb
            autoGenerate={true}
            gameKey="silver-and-blood"
            showBackButton={true}
          />

          <!-- Content -->
          <div class="content-area">
            <div class="dutchmans-revenge-container">
              <div class="intro-section">
                <p>{intro.text}</p>
              </div>

              <div class="section">
                <h2 class="section-title">Gameplay Mechanics</h2>

                <div class="mechanic-card">
                  <h4>{gameplayMechanics.infiltration.title}</h4>
                  <ul>
                    {gameplayMechanics.infiltration.mechanics.map(mechanic => <li>{mechanic}</li>)}
                  </ul>
                </div>

                <div class="mechanic-card">
                  <h4>{gameplayMechanics.reset.title}</h4>
                  <ul>
                    {gameplayMechanics.reset.mechanics.map(mechanic => <li>{mechanic}</li>)}
                  </ul>
                </div>

                <div class="reward-highlight">
                  <h4>{gameplayMechanics.artifactReward.title}</h4>
                  <p>{gameplayMechanics.artifactReward.description}</p>
                </div>
              </div>

              {
                chapterGuides && chapterGuides.length > 0 && (
                  <div class="section">
                    <h2 class="section-title">Video Guides</h2>
                    <p class="credit-text">Dutchman's Revenge - Game Story</p>
                    <p class="credit-text">
                      Credit to{' '}
                      <a
                        href="https://www.youtube.com/@neevee_o7/playlists"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="credit-link"
                      >
                        Neevee and Jamie
                      </a>
                    </p>
                    <div class="chapter-guides">
                      {chapterGuides.map(guide => {
                        // Enhanced URL validation for security
                        const isValidYouTubeUrl = (() => {
                          if (!guide.url || typeof guide.url !== 'string') return false;

                          try {
                            const url = new URL(guide.url);
                            const allowedDomains = [
                              'www.youtube.com',
                              'youtube.com',
                              'youtu.be',
                              'm.youtube.com',
                            ];

                            return (
                              url.protocol === 'https:' &&
                              allowedDomains.includes(url.hostname) &&
                              guide.url.length < 500
                            ); // Prevent extremely long URLs
                          } catch {
                            return false;
                          }
                        })();

                        return (
                          <div class="chapter-guide-item">
                            <h4>{guide.name}</h4>
                            {isValidYouTubeUrl ? (
                              <a
                                href={guide.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="guide-link"
                              >
                                Watch on YouTube
                              </a>
                            ) : (
                              <span class="guide-link-disabled">Invalid YouTube URL</span>
                            )}
                          </div>
                        );
                      })}
                    </div>
                  </div>
                )
              }

              {
                events && events.whispersOfYesterday && (
                  <div class="section">
                    <h2 class="section-title">{events.whispersOfYesterday.title}</h2>
                    <p class="credit-text">{events.whispersOfYesterday.subtitle}</p>

                    <div class="chapter-guides">
                      {events.whispersOfYesterday.guides.map(guide => {
                        // Enhanced URL validation for security - same as chapter guides
                        const isValidYouTubeUrl = (() => {
                          if (!guide.url || typeof guide.url !== 'string') return false;

                          try {
                            const url = new URL(guide.url);
                            const allowedDomains = [
                              'www.youtube.com',
                              'youtube.com',
                              'youtu.be',
                              'm.youtube.com',
                            ];

                            return (
                              url.protocol === 'https:' &&
                              allowedDomains.includes(url.hostname) &&
                              guide.url.length < 500
                            ); // Prevent extremely long URLs
                          } catch {
                            return false;
                          }
                        })();

                        return (
                          <div class="chapter-guide-item">
                            <h4>{guide.name}</h4>
                            {isValidYouTubeUrl ? (
                              <a
                                href={guide.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="guide-link"
                              >
                                Watch on YouTube
                              </a>
                            ) : (
                              <span class="guide-link-disabled">Invalid YouTube URL</span>
                            )}
                          </div>
                        );
                      })}
                    </div>
                  </div>
                )
              }
            </div>
          </div>
        </main>
      </div>

      <Footer />
    </div>
  </body>
</html>
