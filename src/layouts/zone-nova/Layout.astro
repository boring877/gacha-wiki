    <link rel="preload" href="/images/games/zone-nova/characters/Nini.jpg" as="image" />
    <link rel="preload" href="/images/games/zone-nova/characters/Odin.jpg" as="image" />
    <link rel="preload" href="/images/games/zone-nova/characters/penny.jpg" as="image" />
