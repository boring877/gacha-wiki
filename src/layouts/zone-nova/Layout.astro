    <link rel="preload" href="/images/games/zone-nova/characters/belphegar.jpg" as="image" />

    <!-- Preload key Zone Nova assets -->
    <link rel="preload" href="/images/games/zone-nova/zonenova.jpg" as="image" />

    <!-- Preload key rune images for instant loading -->
    <link rel="preload" href="/images/games/zone-nova/runes/Alpha.jpg" as="image" />
    <link rel="preload" href="/images/games/zone-nova/runes/Beth.jpg" as="image" />
    <link rel="preload" href="/images/games/zone-nova/runes/Daleth.jpg" as="image" />
    <link rel="preload" href="/images/games/zone-nova/runes/Epsilon.jpg" as="image" />
