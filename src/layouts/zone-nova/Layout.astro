    <link rel="preload" href="/images/games/zone-nova/characters/Lyra.jpg" as="image" />
    <link rel="preload" href="/images/games/zone-nova/characters/Merlin.jpg" as="image" />
    <link rel="preload" href="/images/games/zone-nova/characters/Mordred.jpg" as="image" />
