---
import ZNBaseHead from '../../components/zone-nova/ZNBaseHead.astro';
import GameSEO from '../../components/GameSEO.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import GameNavigationHeader from '../../components/GameNavigationHeader.astro';
import MobileMenu from '../../components/MobileMenu.astro';
import DecorativeLines from '../../components/DecorativeLines.astro';
import CustomScrollbar from '../../components/CustomScrollbar.astro';
import Breadcrumb from '../../components/zone-nova/Breadcrumb.astro';

// Import CSS files properly
import '../../styles/games/zone-nova/zn-colors.css';
import '../../styles/global.css';
import '../../styles/typography.css';
import '../../styles/games/zone-nova/zn-layout.css';
import '../../styles/games/zone-nova/zn-badge-colour.css';
import '../../styles/games/zone-nova/zn-character-comparison-v2.css';

export interface Props {
  title: string;
  description: string;
  gameTitle?: string;
}

const { title, description, gameTitle = 'Character Comparison Tool V2' } = Astro.props;
---

<html lang="en">
  <head>
    <ZNBaseHead title={title} description={description || ''} />
    <GameSEO
      gameKey="zone-nova"
      title={title}
      description={description}
      additionalKeywords={[
        'zone nova character comparison',
        'zone nova character compare',
        'zone nova vs character',
        'zone nova character stats',
        'character comparison tool',
        'zone nova character analysis',
        'compare zone nova characters',
        'zone nova character differences',
        'character comparison guide',
        'zone nova character picker',
        'best zone nova characters',
        'zone nova character tier compare',
      ]}
    />
    <slot name="head" />
  </head>
  <body class="zone-nova-body zn-layout-override comparison-v2-dark">
    <CustomScrollbar />
    <!-- Background layers for visual depth similar to other ZN pages -->
    <div class="bg-layer bg-primary"></div>
    <div class="bg-layer bg-accent-1"></div>
    <div class="bg-layer bg-accent-2"></div>
    <div class="bg-layer bg-accent-3"></div>

    <div class="zone-nova-content">
      <Header />
      <GameNavigationHeader currentPath={Astro.url.pathname} gameKey="zone-nova" />
      <MobileMenu />

      <div class="zone-nova-container">
        <main class="zone-nova-main">
          <!-- Title Only Section -->
          <section class="title-only-section">
            <h1 class="title-only-heading">
              {gameTitle}
            </h1>

            <DecorativeLines />
          </section>

          <!-- Breadcrumb Navigation -->
          <Breadcrumb
            autoGenerate={true}
            gameKey="zone-nova"
            showBackButton={true}
          />

          <!-- Content Area -->
          <div class="content-area">
            <slot />
          </div>
        </main>
      </div>

      <Footer />
    </div>
  </body>
</html>
