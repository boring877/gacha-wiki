---
import SSBaseHead from '../../components/stella-sora/SSBaseHead.astro';
import GameSEO from '../../components/GameSEO.astro';
import CharacterSEO from '../../components/CharacterSEO.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import GameNavigationHeader from '../../components/GameNavigationHeader.astro';
import MobileMenu from '../../components/MobileMenu.astro';
import DecorativeLines from '../../components/DecorativeLines.astro';
import { Image } from 'astro:assets';
import CustomScrollbar from '../../components/CustomScrollbar.astro';
import Breadcrumb from '../../components/stella-sora/SSBreadcrumb.astro';

// Import CSS files for individual character pages only
import '../../styles/games/stella-sora/ss-colors.css';
import '../../styles/global.css';
import '../../styles/typography.css';
import '../../styles/games/stella-sora/ss-layout.css';
import '../../styles/games/stella-sora/ss-badge-colours.css';
import '../../styles/games/stella-sora/ss-character-individual.css';

export interface Props {
  title: string;
  description?: string;
  gameTitle?: string;
  heroImage?: string;
  character?: any; // For CharacterSEO component
}

const { title, description, gameTitle, heroImage, character } = Astro.props;
---

<html lang="en">
  <head>
    <SSBaseHead title={title} description={description || ''} />
    {
      character ? (
        <CharacterSEO
          gameKey="stella-sora"
          character={character}
          customTitle={title}
          customDescription={description}
        />
      ) : (
        <GameSEO gameKey="stella-sora" title={title} description={description} />
      )
    }

    <slot name="head" />
  </head>
  <body class="stella-sora-body">
    <CustomScrollbar />
    <!-- Background layers for visual depth similar to landing page -->
    <div class="bg-layer"></div>

    <div class="stella-sora-content">
      <Header />
      <GameNavigationHeader currentPath={Astro.url.pathname} gameKey="stella-sora" />
      <MobileMenu />

      <div class="stella-sora-container character-page-layout">
        <!-- Main Content Area -->
        <main class="stella-sora-main character-main-content">
          <!-- Hero Section -->
          {
            heroImage && gameTitle && (
              <section class="hero-section">
                <div class="hero-image-wrapper">
                  <div class="hero-image-container">
                    <Image
                      src={heroImage}
                      alt={gameTitle}
                      class="hero-image"
                      loading="eager"
                      decoding="async"
                      width={1200}
                      height={400}
                    />
                    <div class="hero-overlay" />
                  </div>
                </div>

                <h1 class="hero-title">{gameTitle}</h1>

                <DecorativeLines />
              </section>
            )
          }

          <!-- Title Only Section (when no hero image) -->
          {
            !heroImage && gameTitle && (
              <section class="title-only-section">
                <h1 class="title-only-heading">{gameTitle}</h1>

                <DecorativeLines />
              </section>
            )
          }

          <!-- Breadcrumb Navigation -->
          <Breadcrumb autoGenerate={true} gameKey="stella-sora" showBackButton={true} />

          <!-- Content Area -->
          <div class="content-area">
            <slot />
          </div>
        </main>
      </div>

      <Footer />
    </div>
  </body>
</html>
