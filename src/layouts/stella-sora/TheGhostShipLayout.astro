---
// The Ghost Ship Haunts the Deep Event Specific Layout

import SSBaseHead from '../../components/stella-sora/SSBaseHead.astro';
import GameSEO from '../../components/GameSEO.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import GameNavigationHeader from '../../components/GameNavigationHeader.astro';
import MobileMenu from '../../components/MobileMenu.astro';
import DecorativeLines from '../../components/DecorativeLines.astro';
import CustomScrollbar from '../../components/CustomScrollbar.astro';
import Breadcrumb from '../../components/stella-sora/SSBreadcrumb.astro';
import TheGhostShipImages from '../../components/stella-sora/shop-events/TheGhostShipImages.astro';
import { generateBackNavigation } from '../../utils/breadcrumb-generator.js';
import type { BackNavigation } from '../../utils/breadcrumb-generator.js';

export interface Props {
  title: string;
  description?: string;
  gameTitle?: string;
  endDate?: string;
  currency?: {
    name: string;
    icon?: string;
  };
}

const { title, description, gameTitle, endDate, currency } = Astro.props;

const backNavigation: BackNavigation | null = generateBackNavigation(Astro.url.pathname, {
  gameKey: 'stella-sora',
});

// Import base CSS files
import '../../styles/global.css';
import '../../styles/typography.css';
import '../../styles/games/stella-sora/ss-colors.css';
import '../../styles/games/stella-sora/ss-layout.css';

// Import unified and event-specific CSS
import '../../styles/games/stella-sora/shop-events.css';
import '../../styles/games/stella-sora/events/the-ghost-ship-haunts-the-deep.css';
---

<html lang="en">
  <head>
    <SSBaseHead title={title} description={description} />
    <GameSEO gameKey="stella-sora" title={title} description={description} />
    <slot name="head" />
  </head>
  <body class="stella-sora-body ss-shop-event-individual-body">
    <CustomScrollbar />

    <!-- Background layers for visual depth -->
    <div class="bg-layer ss-bg-primary"></div>
    <div class="bg-layer ss-bg-accent-1"></div>
    <div class="bg-layer ss-bg-accent-2"></div>
    <div class="bg-layer ss-bg-accent-3"></div>

    <div class="stella-sora-content ss-shop-event-individual-content">
      <Header />
      <GameNavigationHeader currentPath={Astro.url.pathname} gameKey="stella-sora" />
      <MobileMenu />

      <div class="stella-sora-container ss-shop-event-individual-container">
        <main class="stella-sora-main ss-shop-event-individual-main">
          <!-- Title Section -->
          <section class="title-only-section">
            <h1 class="title-only-heading">{gameTitle}</h1>
            <DecorativeLines />
          </section>

          <!-- Event Status Bar -->
          {
            endDate && (
              <section class="event-status-bar">
                <div class="event-timer">
                  <span class="timer-label">Event Ends:</span>
                  <span class="timer-date">{endDate}</span>
                </div>
                {currency && (
                  <div class="event-currency">
                    <span class="currency-label">Currency:</span>
                    <span class="currency-name">{currency.name}</span>
                    {currency.icon && (
                      <TheGhostShipImages
                        imageName={currency.icon}
                        alt={currency.name}
                        width={20}
                        height={20}
                      />
                    )}
                  </div>
                )}
              </section>
            )
          }

          <!-- Breadcrumb Navigation -->
          <Breadcrumb autoGenerate={true} gameKey="stella-sora" showBackButton={true} />

          <!-- Content Area -->
          <div class="content-area ss-shop-event-individual-content-area">
            <slot />
          </div>
        </main>
      </div>

      <Footer />
    </div>
  </body>
</html>
