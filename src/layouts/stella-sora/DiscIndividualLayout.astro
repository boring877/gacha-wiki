---
// Stella Sora Individual Disc Layout
// Layout for individual disc pages

import SSBaseHead from '../../components/stella-sora/SSBaseHead.astro';
import GameSEO from '../../components/GameSEO.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import GameNavigationHeader from '../../components/GameNavigationHeader.astro';
import MobileMenu from '../../components/MobileMenu.astro';
import DecorativeLines from '../../components/DecorativeLines.astro';
import CustomScrollbar from '../../components/CustomScrollbar.astro';
import Breadcrumb from '../../components/stella-sora/SSBreadcrumb.astro';

// Import CSS files
import '../../styles/global.css';
import '../../styles/typography.css';
import '../../styles/games/stella-sora/ss-colors.css';
import '../../styles/games/stella-sora/ss-layout.css';
import '../../styles/games/stella-sora/ss-discs.css';
import '../../styles/games/stella-sora/ss-badge-colours.css';

export interface Props {
  title: string;
  description: string;
  discName?: string;
  showBackButton?: boolean;
}

const { title, description, discName, showBackButton = true } = Astro.props;
---

<html lang="en">
  <head>
    <SSBaseHead title={title} description={description || ''} />
    <GameSEO gameKey="stella-sora" title={title} description={description} />
    <slot name="head" />
  </head>
  <body class="stella-sora-body">
    <CustomScrollbar />

    <!-- Background layers for visual depth -->
    <div class="bg-layer ss-bg-primary"></div>
    <div class="bg-layer ss-bg-accent-1"></div>
    <div class="bg-layer ss-bg-accent-2"></div>
    <div class="bg-layer ss-bg-accent-3"></div>

    <div class="stella-sora-content">
      <Header />
      <GameNavigationHeader currentPath={Astro.url.pathname} gameKey="stella-sora" />
      <MobileMenu />

      <div class="stella-sora-container">
        <main class="stella-sora-main">
          <!-- Title Section -->
          {
            discName && (
              <section class="title-only-section">
                <h1 class="title-only-heading">{discName}</h1>
                <DecorativeLines />
              </section>
            )
          }

          <!-- Breadcrumb Navigation -->
          <Breadcrumb autoGenerate={true} gameKey="stella-sora" showBackButton={showBackButton} />

          <!-- Content Area -->
          <div class="content-area">
            <slot />
          </div>
        </main>
      </div>

      <Footer />
    </div>

    <script>
      // Basic functionality for individual disc pages
      document.addEventListener('DOMContentLoaded', function () {
        // No animations or effects as per requirements
      });
    </script>
  </body>
</html>
